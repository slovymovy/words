                {
                    "sense_id": "189d61a4-570b-3f43-9e06-42a305ccf4e3",
                    "sense_definition": "Podejmować działanie, którego wynik jest niepewny i może przynieść negatywne skutki, ale też szansę na sukces.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "action_uncertainty",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Kto nie <w>ryzykuje</w>, ten nie pije szampana.",
                            "target_lang_translations": {
                                "ru": "Кто не <w>рискует</w>, тот не пьет шампанского."
                            }
                        },
                        {
                            "text": "Czasami trzeba <w>zaryzykować</w>, żeby spełnić swoje marzenia.",
                            "target_lang_translations": {
                                "ru": "Иногда нужно <w>рискнуть</w>, чтобы осуществить свои мечты."
                            }
                        }
                    ],
                    "synonyms": [
                        "podejmować ryzyko",
                        "odważyć się"
                    ],
                    "common_phrases": [
                        "kto nie ryzykuje",
                        "warto ryzykować",
                        "dużo ryzykować"
                    ],
                    "target_lang_definitions": {
                        "ru": "Предпринимать действие, результат которого неопределен, но дает шанс на успех."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "рисковать",
                                "target_lang_sense_clarification": "идти на риск"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "9ef2804a-31f3-3343-8ced-f84d465d4ca8",
                    "sense_definition": "Narażać kogoś lub coś cennego (np. życie, zdrowie, pieniądze) na niebezpieczeństwo lub utratę.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "expose_to_danger",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Strażak <w>ryzykował</w> własne życie, aby wynieść dziecko z płonącego domu.",
                            "target_lang_translations": {
                                "ru": "Пожарный <w>рисковал</w> собственной жизнью, чтобы вынести ребенка из горящего дома."
                            }
                        },
                        {
                            "text": "Nie chcę <w>ryzykować</w> wszystkich moich oszczędności na giełdzie.",
                            "target_lang_translations": {
                                "ru": "Я не хочу <w>рисковать</w> всеми своими сбережениями на бирже."
                            }
                        }
                    ],
                    "common_phrases": [
                        "ryzykować życie",
                        "ryzykować zdrowie",
                        "ryzykować karierę",
                        "ryzykować głową"
                    ],
                    "target_lang_definitions": {
                        "ru": "Подвергать кого-то или что-то ценное (жизнь, деньги) опасности или утрате."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "рисковать",
