                            },
                            {
                                "target_lang_word": "unbridle",
                                "target_lang_sense_clarification": "figurative: to free from restraint"
                            },
                            {
                                "target_lang_word": "let loose",
                                "target_lang_sense_clarification": "to allow to go free or unchecked"
