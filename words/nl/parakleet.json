{
    "word_family": [
        "parakletisch"
    ],
    "entries": [
        {
            "pos": "name",
            "senses": [
                {
                    "sense_id": "47b7c97b-9be8-3539-93e4-d27f7607a8df",
                    "sense_definition": "De Heilige Geest, beschouwd als trooster, pleitbezorger en bemiddelaar zoals beloofd door Christus.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "deity_or_religious_name",
                    "examples": [
                        {
                            "text": "De discipelen wachtten in Jeruzalem op de komst van de <w>Parakleet</w>.",
                            "target_lang_translations": {
                                "ru": "Ученики ждали в Иерусалиме пришествия <w>Параклита</w>."
                            }
                        },
                        {
                            "text": "In het gebed vroegen de gelovigen om de leiding van de <w>Parakleet</w>.",
                            "target_lang_translations": {
                                "ru": "В молитве верующие просили водительства <w>Параклита</w>."
                            }
                        }
                    ],
                    "synonyms": [
                        "vertrooster"
                    ],
                    "common_phrases": [
                        "de beloofde Parakleet"
                    ],
                    "target_lang_definitions": {
                        "ru": "Святой Дух, почитаемый как утешитель, заступник и посредник, обещанный Христом."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "Параклит",
                                "target_lang_sense_clarification": "богословский термин"
                            },
                            {
                                "target_lang_word": "Утешитель",
                                "target_lang_sense_clarification": "библейский эпитет Святого Духа"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "4c5d7799-8408-3e71-bd09-668512885e76",
                    "sense_definition": "Een heilig figuur of verlosser die mensen uit onderdrukking of nood zal redden.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "redder",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Het volk verlangde naar een <w>parakleet</w> die hen zou bevrijden van de tirannie.",
                            "target_lang_translations": {
                                "ru": "Народ жаждал <w>заступника</w>, который освободил бы их от тирании."
                            }
                        },
                        {
                            "text": "Hij werd door zijn volgelingen gezien als een politieke <w>parakleet</w>.",
                            "target_lang_translations": {
                                "ru": "Последователи видели в нем политического <w>заступника</w>."
                            }
                        }
                    ],
                    "synonyms": [
                        "messias",
                        "verlosser"
                    ],
                    "target_lang_definitions": {
                        "ru": "Святая фигура или спаситель, который избавит людей от угнетения или нужды."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "заступник",
                                "target_lang_sense_clarification": "защитник, покровитель"
                            },
                            {
                                "target_lang_word": "спаситель",
                                "target_lang_sense_clarification": "избавитель"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "a106d1ce-3af5-3d56-a4c2-fc2dd5c5263f",
                    "sense_definition": "Iemand die anderen troost en bijstaat in moeilijke tijden.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "trooster",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Zij was voor hem een ware <w>parakleet</w> tijdens zijn diepe verdriet.",
                            "target_lang_translations": {
                                "ru": "Она была для него истинным <w>утешителем</w> во время его глубокой скорби."
                            }
                        },
                        {
                            "text": "Hij zocht tevergeefs naar een menselijke <w>parakleet</w> om zijn zorgen mee te delen.",
                            "target_lang_translations": {
                                "ru": "Он тщетно искал человека-<w>утешителя</w>, с которым мог бы разделить свои заботы."
                            }
                        }
                    ],
                    "synonyms": [
                        "vertrooster"
                    ],
                    "target_lang_definitions": {
                        "ru": "Тот, кто утешает и поддерживает других в трудные времена."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "утешитель",
                                "target_lang_sense_clarification": "человек, приносящий утешение"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}