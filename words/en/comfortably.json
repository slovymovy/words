                    "frequency": "High",
                    "semantic_group_id": "physical_ease",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Please sit <w>comfortably</w> in the chair while you wait.",
                            "target_lang_translations": {
                                "ru": "Пожалуйста, устройтесь <w>удобно</w> в кресле, пока ждете."
                            }
                        },
                        {
                            "text": "The cat slept <w>comfortably</w> on the soft blanket.",
                            "target_lang_translations": {
                                "ru": "Кошка <w>с комфортом</w> спала на мягком одеяле."
                            }
                        }
                    ],
                    "antonyms": [
                        "uncomfortably"
                    ],
                    "common_phrases": [
                        "sit comfortably",
                        "sleep comfortably",
                        "live comfortably"
                    ],
                    "target_lang_definitions": {
