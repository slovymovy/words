    "entries": [
        {
            "pos": "adverb",
            "senses": [
                {
                    "sense_id": "ec93272e-285b-3dc8-9cd9-f6de0e9b5ba6",
                    "sense_definition": "Очень громко и звучно, подобно грому (обычно о голосе); наречие к слову <w>громогласный</w>.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Командир <громогласно> отдал приказ своим солдатам строиться.",
                            "target_lang_translations": {
                                "en": "The commander <thunderously> gave the order for his soldiers to fall in."
                            }
                        },
                        {
                            "text": "Ведущий <громогласно> объявил победителя конкурса на весь зал.",
                            "target_lang_translations": {
                                "en": "The presenter <loudly> announced the competition winner to the entire hall."
                            }
                        }
                    ],
                    "antonyms": [
                        "тихо",
                        "шёпотом"
                    ],
                    "common_phrases": [
                        "громогласно рассмеяться",
                        "громогласно крикнуть",
                        "громогласно приветствовать"
                    ],
                    "target_lang_definitions": {
                        "en": "Very loudly and resonantly, usually referring to a voice; in a booming manner."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "thunderously",
                                "target_lang_sense_clarification": "referring to a very loud, resonant sound"
                            },
                            {
                                "target_lang_word": "loudly",
                                "target_lang_sense_clarification": "with high volume"
                            },
                            {
                                "target_lang_word": "stentoriously",
                                "target_lang_sense_clarification": "in a very loud and powerful voice"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "0561398b-2c94-3439-a82f-7fa78fa03ec6",
                    "sense_definition": "Открыто, публично, во всеуслышание; так, чтобы всем стало известно.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Политик <громогласно> пообещал снизить налоги в следующем году.",
                            "target_lang_translations": {
                                "en": "The politician <publicly> promised to lower taxes next year."
                            }
                        },
                        {
                            "text": "Они <громогласно> заявили о своих правах перед зданием суда.",
                            "target_lang_translations": {
                                "en": "They <vociferously> declared their rights in front of the courthouse."
                            }
                        }
                    ],
                    "synonyms": [
                        "открыто"
                    ],
                    "antonyms": [
                        "тайно",
                        "скрытно"
                    ],
                    "common_phrases": [
                        "громогласно заявить",
                        "громогласно объявить",
                        "громогласно пообещать"
                    ],
                    "target_lang_definitions": {
                        "en": "Openly, publicly, or for all to hear; in a manner intended to be widely known."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "publicly",
                                "target_lang_sense_clarification": "in an open manner for everyone to know"
                            },
                            {
                                "target_lang_word": "vociferously",
                                "target_lang_sense_clarification": "loudly and with force, often regarding opinions or demands"
                            },
                            {
                                "target_lang_word": "openly",
                                "target_lang_sense_clarification": "without concealment"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}