{
    "word_family": [
        "hysteria",
        "hysterical",
        "hysterics"
    ],
    "entries": [
        {
            "pos": "adverb",
            "senses": [
                {
                    "sense_id": "a7564d14-940e-3609-ac9e-1ecf1a89bfa2",
                    "sense_definition": "In a state of extreme, uncontrolled emotion, often involving crying, screaming, or panic.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "emotional_state",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The child began crying <w>hysterically</w> when he could not find his mother in the store.",
                            "target_lang_translations": {
                                "ru": "Ребенок начал <w>истерически</w> плакать, когда не смог найти маму в магазине."
                            }
                        },
                        {
                            "text": "She ran out of the house screaming <w>hysterically</w> after seeing the spider.",
                            "target_lang_translations": {
                                "ru": "Она выбежала из дома, <w>истерически</w> крича, после того как увидела паука."
                            }
                        }
                    ],
                    "synonyms": [
                        "frantically",
                        "uncontrollably",
                        "wildly"
                    ],
                    "antonyms": [
                        "calmly",
                        "composedly"
                    ],
                    "common_phrases": [
                        "crying hysterically",
                        "screaming hysterically",
                        "laughing hysterically"
                    ],
                    "target_lang_definitions": {
                        "ru": "В состоянии крайнего эмоционального возбуждения, часто сопровождающегося криками, плачем или паникой."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "истерически",
                                "target_lang_sense_clarification": "неконтролируемо, с сильными эмоциями"
                            },
                            {
                                "target_lang_word": "истерично",
                                "target_lang_sense_clarification": "в истеричной манере"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "a80c73f1-fb79-3e1a-b637-5679fe73e7c5",
                    "sense_definition": "Used to emphasize that something is extremely funny.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "humor",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The comedian told a <w>hysterically</w> funny story that had the whole audience laughing.",
                            "target_lang_translations": {
                                "ru": "Комик рассказал <w>истерически</w> смешную историю, над которой смеялся весь зал."
                            }
                        },
                        {
                            "text": "We watched a <w>hysterically</w> amusing video on the internet yesterday.",
                            "target_lang_translations": {
                                "ru": "Вчера мы посмотрели в интернете <w>истерически</w> забавное видео."
                            }
                        }
                    ],
                    "synonyms": [
                        "hilariously",
                        "uproariously"
                    ],
                    "common_phrases": [
                        "hysterically funny"
                    ],
                    "target_lang_definitions": {
                        "ru": "Используется для усиления значения, чтобы подчеркнуть, что что-то является невероятно смешным."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "истерически",
                                "target_lang_sense_clarification": "невероятно (обычно в сочетании со словом «смешно»)"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}