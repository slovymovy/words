    "entries": [
        {
            "pos": "adverb",
            "senses": [
                {
                    "sense_id": "0c1cf175-ccb8-3dbd-951f-c9e9b9417633",
                    "sense_definition": "Терпимо, снисходительно, без суровости и придирок; благожелательно по отношению к кому-либо или чему-либо.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "tolerance",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Учитель <w>лояльно</w> отнёсся к тому, что ученик забыл дома тетрадь.",
                            "target_lang_translations": {
                                "en": "The teacher reacted <w>leniently</w> to the fact that the student forgot his notebook at home."
                            }
                        },
                        {
                            "text": "Мы стараемся <w>лояльно</w> оценивать работу новых сотрудников в первый месяц.",
                            "target_lang_translations": {
                                "en": "We try to evaluate the work of new employees <w>leniently</w> during the first month."
                            }
                        }
                    ],
                    "synonyms": [
                        "терпимо",
                        "снисходительно",
                        "благожелательно",
                        "мягко"
                    ],
                    "antonyms": [
                        "строго",
                        "нетерпимо",
                        "жестко",
                        "требовательно"
                    ],
                    "common_phrases": [
                        "относиться лояльно",
                        "настроен лояльно",
                        "судить лояльно"
                    ],
                    "target_lang_definitions": {
                        "en": "Tolerantly, leniently, without severity or nitpicking; benevolently towards someone or something."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "leniently",
                                "target_lang_sense_clarification": "without strictness or severity"
                            },
                            {
                                "target_lang_word": "tolerantly",
                                "target_lang_sense_clarification": "with acceptance and patience"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "7b8eacfa-4df0-3e0c-b7e1-e22d858b6543",
                    "sense_definition": "В соответствии с требованиями законности, верно и преданно по отношению к действующей власти, организации или руководству.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "fidelity",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Дипломат вёл себя исключительно <w>лояльно</w> по отношению к правительству своей страны.",
                            "target_lang_translations": {
                                "en": "The diplomat behaved exceptionally <w>loyally</w> toward his country's government."
                            }
                        },
                        {
                            "text": "Даже в трудной ситуации персонал действовал <w>лояльно</w> и поддерживал решения директора.",
                            "target_lang_translations": {
                                "en": "Even in a difficult situation, the staff acted <w>loyally</w> and supported the director's decisions."
                            }
                        }
                    ],
                    "synonyms": [
                        "верно",
                        "преданно",
                        "законопослушно"
                    ],
                    "antonyms": [
                        "враждебно",
                        "нелояльно",
                        "оппозиционно"
                    ],
                    "common_phrases": [
                        "вести себя лояльно",
                        "поступать лояльно"
                    ],
                    "target_lang_definitions": {
                        "en": "In accordance with legal requirements, faithfully and devotedly towards the ruling power, organization, or leadership."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "loyally",
                                "target_lang_sense_clarification": "showing firm and constant support"
                            },
                            {
                                "target_lang_word": "faithfully",
                                "target_lang_sense_clarification": "in a loyal and devoted manner"
                            }
                        ]
                    }
                }
            ]
        },
