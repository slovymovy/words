    "entries": [
        {
            "pos": "adverb",
            "senses": [
                {
                    "sense_id": "2da625db-9b62-3d43-84bc-cc99ddd03fec",
                    "sense_definition": "In a way that shows you are sad or sorry about something.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "She looked <w>regretfully</w> at the old photographs before putting them away.",
                            "target_lang_translations": {
                                "ru": "Она <w>с сожалением</w> посмотрела на старые фотографии, прежде чем убрать их."
                            }
                        },
                        {
                            "text": "He smiled <w>regretfully</w> and said he could not stay for dinner.",
                            "target_lang_translations": {
                                "ru": "Он <w>с сожалением</w> улыбнулся и сказал, что не может остаться на ужин."
                            }
                        }
                    ],
                    "synonyms": [
                        "sorrowfully",
                        "ruefully",
                        "sadly"
                    ],
                    "antonyms": [
                        "happily",
                        "gladly"
                    ],
                    "common_phrases": [
                        "smile regretfully",
                        "look regretfully",
                        "sigh regretfully"
                    ],
                    "target_lang_definitions": {
                        "ru": "С чувством грусти или сожаления о чем-либо."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "с сожалением",
                                "target_lang_sense_clarification": "испытывая чувство жалости"
                            },
                            {
                                "target_lang_word": "печально",
                                "target_lang_sense_clarification": "с грустью"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "c4290417-8292-3bfd-90ab-9a3fdd25709f",
                    "sense_definition": "Used to say that you are sorry that something is true or has happened; unfortunately.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "<w>Regretfully</w>, we must inform you that your application was not successful.",
                            "target_lang_translations": {
                                "ru": "<w>К сожалению</w>, мы должны сообщить вам, что ваша заявка не была принята."
                            }
                        },
                        {
                            "text": "We have <w>regretfully</w> decided to cancel the summer festival this year.",
                            "target_lang_translations": {
                                "ru": "Мы <w>с сожалением</w> решили отменить летний фестиваль в этом году."
                            }
                        }
                    ],
                    "synonyms": [
                        "unfortunately",
                        "regrettably",
                        "sadly",
                        "alas"
                    ],
                    "antonyms": [
                        "fortunately",
                        "luckily",
                        "happily"
                    ],
                    "common_phrases": [
                        "regretfully inform",
                        "regretfully decline",
                        "regretfully announce"
                    ],
                    "target_lang_definitions": {
                        "ru": "Используется для выражения сожаления по поводу того, что что-то является правдой или произошло; к сожалению."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "к сожалению",
                                "target_lang_sense_clarification": "вводное слово"
                            },
                            {
                                "target_lang_word": "с сожалением",
                                "target_lang_sense_clarification": "при сообщении неприятных новостей"
                            }
                        ]
                    }
                }
            ]
        }
    ]
