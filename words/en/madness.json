                    "sense_id": "ef361824-835b-36bb-a554-5392b7947ced",
                    "sense_definition": "The state of having a serious mental illness.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The story describes the king's slow descent into <w>madness</w>.",
                            "target_lang_translations": {
                                "ru": "История описывает медленное погружение короля в <w>безумие</w>."
                            }
                        },
                        {
                            "text": "Doctors tried to treat his <w>madness</w> with various medicines.",
                            "target_lang_translations": {
                                "ru": "Врачи пытались лечить его <w>сумасшествие</w> различными лекарствами."
                            }
                        }
                    ],
                    "synonyms": [
                        "insanity",
                        "mental illness",
                        "lunacy",
                        "derangement",
                        "craziness"
                    ],
                    "antonyms": [
                        "sanity"
                    ],
                    "common_phrases": [
                        "descent into madness",
                        "brink of madness"
                    ],
                    "target_lang_definitions": {
                        "ru": "Состояние, характеризующееся серьезным психическим расстройством."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "сумасшествие",
                                "target_lang_sense_clarification": "психическая болезнь, потеря рассудка"
                            },
                            {
                                "target_lang_word": "безумие",
                                "target_lang_sense_clarification": "тяжелое психическое расстройство"
                            },
                            {
                                "target_lang_word": "помешательство",
                                "target_lang_sense_clarification": "умопомешательство, потеря рассудка"
                            }
                        ]
