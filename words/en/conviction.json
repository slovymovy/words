    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "8be3efc2-660f-3a17-baf9-1fc9933a7c76",
                    "sense_definition": "A formal declaration by a court of law that someone is guilty of a criminal offense.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The lawyer fought hard to overturn the wrongful <w>conviction</w> of his client.",
                            "target_lang_translations": {
                                "ru": "Адвокат упорно боролся за отмену неправомерного <w>осуждения</w> своего клиента."
                            }
                        },
                        {
                            "text": "He had a previous <w>conviction</w> for theft before he was arrested again.",
                            "target_lang_translations": {
                                "ru": "У него уже была <w>судимость</w> за кражу до того, как его снова арестовали."
                            }
                        }
                    ],
                    "antonyms": [
                        "acquittal",
                        "exoneration"
                    ],
                    "common_phrases": [
                        "criminal conviction",
                        "previous conviction",
                        "wrongful conviction",
                        "summary conviction"
                    ],
                    "target_lang_definitions": {
                        "ru": "Официальное решение суда о том, что кто-либо виновен в совершении уголовного преступления."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "осуждение",
                                "target_lang_sense_clarification": "признание виновным"
                            },
                            {
                                "target_lang_word": "судимость",
                                "target_lang_sense_clarification": "факт осуждения в прошлом"
                            },
                            {
                                "target_lang_word": "обвинительный приговор",
                                "target_lang_sense_clarification": "решение суда"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "ecd2eeb1-b850-38bd-82cf-4d967e05981f",
                    "sense_definition": "A firmly held belief or opinion.",
                    "learner_level": "C1",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "It is my strong <w>conviction</w> that every child deserves a good education.",
                            "target_lang_translations": {
                                "ru": "Это моё твёрдое <w>убеждение</w>, что каждый ребёнок заслуживает хорошего образования."
                            }
                        },
                        {
                            "text": "She held to her religious <w>conviction</w> despite the criticism from her peers.",
                            "target_lang_translations": {
                                "ru": "Она придерживалась своих религиозных <w>убеждений</w>, несмотря на критику со стороны сверстников."
                            }
                        }
                    ],
                    "synonyms": [
                        "belief",
                        "opinion",
                        "view",
                        "principle",
                        "persuasion"
                    ],
                    "antonyms": [
                        "doubt",
                        "skepticism"
                    ],
                    "common_phrases": [
                        "strong conviction",
                        "religious conviction",
                        "political conviction",
                        "personal conviction"
                    ],
                    "target_lang_definitions": {
                        "ru": "Твёрдое мнение или вера во что-либо."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "убеждение",
                                "target_lang_sense_clarification": "твёрдое мнение"
                            },
                            {
                                "target_lang_word": "взгляд",
                                "target_lang_sense_clarification": "точка зрения"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "9593f8fe-85f9-35a3-8a5f-a1458492a219",
                    "sense_definition": "The quality of showing that one is firmly convinced of what one believes or says.",
                    "learner_level": "C2",
                    "frequency": "Middle",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "He spoke with such <w>conviction</w> that the audience immediately trusted him.",
                            "target_lang_translations": {
                                "ru": "Он говорил с такой <w>убеждённостью</w>, что аудитория сразу поверила ему."
                            }
                        },
                        {
                            "text": "Her voice seemed to lack <w>conviction</w> when she denied the accusations.",
                            "target_lang_translations": {
                                "ru": "В её голосе, казалось, не хватало <w>уверенности</w>, когда она отрицала обвинения."
                            }
                        }
                    ],
                    "synonyms": [
                        "certainty",
                        "confidence",
                        "assurance",
                        "certitude"
                    ],
                    "antonyms": [
                        "uncertainty",
                        "doubt",
                        "hesitation"
                    ],
                    "common_phrases": [
                        "speak with conviction",
                        "lack conviction",
                        "carry conviction",
                        "great conviction"
                    ],
                    "target_lang_definitions": {
                        "ru": "Качество, показывающее твёрдую уверенность человека в том, что он говорит или во что верит."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "убеждённость",
                                "target_lang_sense_clarification": "состояние уверенности"
                            },
                            {
                                "target_lang_word": "уверенность",
                                "target_lang_sense_clarification": "отсутствие сомнений"
                            }
                        ]
                    }
                }
            ]
        }
    ]
