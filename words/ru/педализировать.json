    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "d3c7a4f6-a8bf-3097-a4cc-2aca2353697a",
                    "sense_definition": "Использовать педаль или педали при игре на музыкальном инструменте или управлении механизмом.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Пианист должен уметь грамотно <педализировать>, чтобы мелодия звучала связно и выразительно.",
                            "target_lang_translations": {
                                "en": "A pianist must know how to <pedal> correctly so that the melody sounds coherent and expressive."
                            }
                        },
                        {
                            "text": "При подъёме в гору велосипедисту приходится интенсивно <педализировать>, чтобы сохранить скорость.",
                            "target_lang_translations": {
                                "en": "When going uphill, a cyclist has to <pedal> intensively to maintain speed."
                            }
                        }
                    ],
                    "common_phrases": [
                        "педализировать при игре",
                        "активно педализировать"
                    ],
                    "target_lang_definitions": {
                        "en": "To use a pedal or pedals when playing a musical instrument or operating a mechanism."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "pedal",
                                "target_lang_sense_clarification": "action"
                            },
                            {
                                "target_lang_word": "use the pedals",
                                "target_lang_sense_clarification": "phrase"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "e2e5406e-4dc1-3164-9130-128b3fe8cea1",
                    "sense_definition": "Намеренно подчёркивать, выдвигать на первый план какую-либо тему, вопрос или деталь, акцентировать на этом внимание.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Журналисты начали активно <педализировать> этот скандал, чтобы привлечь внимание общественности.",
                            "target_lang_translations": {
                                "en": "Journalists began to actively <play up> this scandal to attract public attention."
                            }
                        },
                        {
                            "text": "В ходе переговоров дипломаты старались не <педализировать> существующие разногласия.",
                            "target_lang_translations": {
                                "en": "During the negotiations, the diplomats tried not to <emphasize> existing disagreements."
                            }
                        }
                    ],
                    "synonyms": [
                        "акцентировать",
                        "подчёркивать",
                        "выделять",
                        "утрировать"
                    ],
                    "antonyms": [
                        "замалчивать",
                        "сглаживать",
                        "затушёвывать"
                    ],
                    "common_phrases": [
                        "педализировать тему",
                        "педализировать вопрос",
                        "педализировать проблему"
                    ],
                    "target_lang_definitions": {
                        "en": "To intentionally emphasize, highlight, or bring a specific topic or detail to the forefront."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "emphasize",
                                "target_lang_sense_clarification": "stress importance"
                            },
                            {
                                "target_lang_word": "play up",
                                "target_lang_sense_clarification": "exaggerate or highlight"
                            },
                            {
                                "target_lang_word": "harp on",
                                "target_lang_sense_clarification": "dwell on tediously"
                            },
                            {
                                "target_lang_word": "highlight",
                                "target_lang_sense_clarification": "draw attention to"
                            }
                        ]
                    }
                }
            ]
        }
    ]
