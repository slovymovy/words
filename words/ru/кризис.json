    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "e7ee97b9-7167-32a8-84dd-f8f3ee38b899",
                    "sense_definition": "Серьёзное нарушение в экономической или политической деятельности; резкий упадок, нехватка средств или товаров.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Страна переживает глубокий экономический <w>кризис</w>.",
                            "target_lang_translations": {
                                "en": "The country is experiencing a deep economic <w>crisis</w>."
                            }
                        },
                        {
                            "text": "Многие компании закрылись, когда начался финансовый <w>кризис</w>.",
                            "target_lang_translations": {
                                "en": "Many companies closed when the financial <w>crisis</w> began."
                            }
                        }
                    ],
                    "synonyms": [
                        "разорение"
                    ],
                    "antonyms": [
                        "процветание",
                        "бум"
                    ],
                    "common_phrases": [
                        "экономический кризис",
                        "финансовый кризис",
                        "выйти из кризиса",
                        "политический кризис"
                    ],
                    "target_lang_definitions": {
                        "en": "A serious disruption in economic or political activity; a sharp decline, shortage of funds or goods."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "crisis",
                                "target_lang_sense_clarification": "economic or political"
                            },
                            {
                                "target_lang_word": "downturn",
                                "target_lang_sense_clarification": "economic decline"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "5e892714-c6ff-3ae8-954c-896c2f660d8d",
                    "sense_definition": "Резкий, крутой перелом в чём-либо; тяжёлое переходное состояние.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "У него наступил <w>кризис</w> среднего возраста.",
                            "target_lang_translations": {
                                "en": "He hit a mid-life <w>crisis</w>."
                            }
                        },
                        {
                            "text": "Писатель долго не мог работать, у него был творческий <w>кризис</w>.",
                            "target_lang_translations": {
                                "en": "The writer could not work for a long time; he had a creative <w>crisis</w>."
                            }
                        }
                    ],
                    "synonyms": [
                        "обострение",
                        "беда"
                    ],
                    "common_phrases": [
                        "кризис среднего возраста",
                        "творческий кризис",
                        "душевный кризис",
                        "кризис жанра"
                    ],
                    "target_lang_definitions": {
                        "en": "A sharp, steep turning point in something; a difficult transitional state."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "crisis",
                                "target_lang_sense_clarification": "personal or psychological"
                            },
                            {
                                "target_lang_word": "turning point",
                                "target_lang_sense_clarification": "decisive change"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "61bc7210-6d22-3236-b26f-46061b4a5883",
                    "sense_definition": "Решающий момент в течении болезни, после которого наступает резкое улучшение или ухудшение.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Врач сказал, что <w>кризис</w> миновал, и пациент скоро поправится.",
                            "target_lang_translations": {
                                "en": "The doctor said that the <w>crisis</w> had passed, and the patient would recover soon."
                            }
                        },
                        {
                            "text": "Ночью у больного случился <w>кризис</w>, и температура резко упала.",
                            "target_lang_translations": {
                                "en": "At night the patient had a <w>crisis</w>, and the temperature dropped sharply."
                            }
                        }
                    ],
                    "antonyms": [
                        "лизис"
                    ],
                    "common_phrases": [
                        "кризис миновал"
                    ],
                    "target_lang_definitions": {
