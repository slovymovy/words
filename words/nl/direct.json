            "senses": [
                {
                    "sense_id": "9dacb83b-95b7-3437-b04a-c6df551b748c",
                    "sense_definition": "Zonder te wachten; op dit eigenste moment.",
                    "learner_level": "A2",
                    "frequency": "High",
                    "semantic_group_id": "time_immediate",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Je moet <w>direct</w> naar huis komen omdat het eten klaar is.",
                            "target_lang_translations": {
                                "ru": "Ты должен <w>сразу</w> идти домой, потому что еда готова."
                            }
                        },
                        {
                            "text": "Toen hij het goede nieuws hoorde, belde hij <w>direct</w> zijn moeder.",
                            "target_lang_translations": {
                                "ru": "Услышав хорошие новости, он <w>сразу</w> позвонил маме."
                            }
                        }
                    ],
                    "synonyms": [
                        "meteen",
                        "onmiddellijk",
                        "ogenblikkelijk",
                        "op stel en sprong"
                    ],
                    "common_phrases": [
                        "kom direct",
                        "direct na aankomst",
                        "ga direct"
                    ],
                    "target_lang_definitions": {
                        "ru": "Без ожидания; прямо сейчас, в этот самый момент."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "сразу",
                                "target_lang_sense_clarification": "в тот же момент"
                            },
                            {
                                "target_lang_word": "немедленно",
                                "target_lang_sense_clarification": "безотлагательно"
                            }
                        ]
                    }
                }
            ]
        },
        {
