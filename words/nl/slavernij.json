            "senses": [
                {
                    "sense_id": "a94bae7d-7b28-3b7f-b536-a596cab37327",
                    "sense_definition": "Een toestand waarin de ene mens eigendom is van de ander en voor diegene onbetaald werk moet verrichten.",
                    "learner_level": "B1",
                    "frequency": "Middle",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "De afschaffing van de <w>slavernij</w> heeft veel voeten in de aarde gehad.",
                            "target_lang_translations": {
                                "en": "The abolition of <w>slavery</w> was a long and difficult process."
                            }
                        },
                        {
                            "text": "In de negentiende eeuw werd de <w>slavernij</w> in de meeste landen officieel verboden.",
                            "target_lang_translations": {
                                "en": "In the nineteenth century, <w>slavery</w> was officially banned in most countries."
                            }
                        }
                    ],
                    "synonyms": [
                        "knechtschap"
                    ],
                    "antonyms": [
                        "vrijheid"
                    ],
                    "common_phrases": [
                        "afschaffing van de slavernij",
                        "in slavernij leven",
                        "moderne slavernij"
                    ],
                    "target_lang_definitions": {
                        "en": "A state in which one person is owned by another and forced to perform unpaid work."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "slavery",
                                "target_lang_sense_clarification": "owning humans as property"
                            },
                            {
                                "target_lang_word": "servitude",
                                "target_lang_sense_clarification": "forced labor"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "2282d984-8be0-3b84-b9da-15b210eae51f",
                    "sense_definition": "Een toestand van zware onderdrukking, afhankelijkheid of onvrijheid.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Hij beschouwde zijn verslaving aan gokken als een vorm van <w>slavernij</w>.",
                            "target_lang_translations": {
                                "en": "He considered his gambling addiction a form of <w>slavery</w>."
                            }
                        },
                        {
                            "text": "Het volk kwam in opstand tegen de politieke <w>slavernij</w> van het dictatoriale regime.",
                            "target_lang_translations": {
                                "en": "The people rose up against the political <w>slavery</w> of the dictatorial regime."
                            }
                        }
                    ],
                    "synonyms": [
                        "onderdrukking",
                        "juk"
                    ],
                    "antonyms": [
                        "vrijheid",
                        "onafhankelijkheid"
                    ],
                    "common_phrases": [
                        "geestelijke slavernij"
                    ],
                    "target_lang_definitions": {
                        "en": "A state of severe oppression, dependency, or lack of freedom."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "slavery",
                                "target_lang_sense_clarification": "figurative oppression"
                            },
                            {
                                "target_lang_word": "bondage",
                                "target_lang_sense_clarification": "state of subjugation"
                            }
                        ]
                    }
                }
