    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "8954896f-6e92-3709-ac4e-dc8ec641274f",
                    "sense_definition": "A particular organized system of faith and worship, such as Christianity, Islam, or Buddhism.",
                    "learner_level": "A2",
                    "frequency": "High",
                    "semantic_group_id": "1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Islam is a major <w>religion</w> in many parts of the world.",
                            "target_lang_translations": {
                                "ru": "Ислам — одна из основных мировых <w>религий</w> во многих частях света."
                            }
                        },
                        {
                            "text": "We studied several world <w>religions</w> in our history class.",
                            "target_lang_translations": {
                                "ru": "Мы изучали несколько мировых <w>религий</w> на уроке истории."
                            }
                        }
                    ],
                    "synonyms": [
                        "faith"
                    ],
                    "common_phrases": [
                        "world religions",
                        "major religion",
                        "new religion"
                    ],
                    "target_lang_definitions": {
                        "ru": "Определенная организованная система верований и поклонения, такая как христианство, ислам или буддизм."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "религия",
                                "target_lang_sense_clarification": "система верований"
                            },
                            {
                                "target_lang_word": "вероисповедание",
                                "target_lang_sense_clarification": "конфессия"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "dca7130d-5ee7-3815-add2-90baf68a15ff",
                    "sense_definition": "Belief in a spiritual or metaphysical reality, often including at least one deity, accompanied by practices or rituals.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "My brother tends to value <w>religion</w> more than politics.",
                            "target_lang_translations": {
                                "ru": "Мой брат склонен ценить <w>религию</w> больше, чем политику."
                            }
                        },
                        {
                            "text": "Freedom of <w>religion</w> is protected by the constitution.",
                            "target_lang_translations": {
                                "ru": "Свобода <w>вероисповедания</w> защищена конституцией."
                            }
                        }
                    ],
                    "synonyms": [
                        "faith",
                        "belief",
                        "theism"
                    ],
                    "antonyms": [
                        "atheism",
                        "unbelief",
                        "irreligion",
                        "nonbelief"
                    ],
                    "common_phrases": [
                        "freedom of religion",
                        "philosophy of religion",
                        "practice religion"
                    ],
                    "target_lang_definitions": {
                        "ru": "Вера в духовную или метафизическую реальность, часто включающая по крайней мере одно божество, сопровождаемая практиками или ритуалами."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "вера",
                                "target_lang_sense_clarification": "убежденность"
                            },
                            {
                                "target_lang_word": "религия",
                                "target_lang_sense_clarification": "духовная практика"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "f51c1e6c-c3ad-3b17-b4d7-fd6afc27b664",
                    "sense_definition": "Any activity, interest, or practice to which someone is seriously and strictly devoted.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "For many dedicated fans, football has become a <w>religion</w>.",
                            "target_lang_translations": {
                                "ru": "Для многих преданных фанатов футбол стал <w>религией</w>."
                            }
                        },
                        {
                            "text": "She follows her daily fitness routine with the devotion of a <w>religion</w>.",
                            "target_lang_translations": {
                                "ru": "Она следует своему ежедневному фитнес-режиму с преданностью, присущей <w>религии</w>."
                            }
                        }
                    ],
                    "common_phrases": [
                        "make a religion of"
                    ],
                    "traits": [
                        {
                            "trait_type": "colloquial",
                            "comment": "metaphorical usage"
                        }
                    ],
                    "target_lang_definitions": {
                        "ru": "Любая деятельность, интерес или практика, которым человек предан серьезно и безоговорочно."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "религия",
                                "target_lang_sense_clarification": "переносное значение"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "e999d674-87c7-3bab-970f-555ff4004b04",
                    "sense_definition": "To engage in religious practice or to interpret something through a religious lens.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The sociologist described the community's rituals as a way of <w>religioning</w> their daily lives.",
                            "target_lang_translations": {
                                "ru": "Социолог описал ритуалы общины как способ <w>придания религиозного характера</w> их повседневной жизни."
                            }
                        },
                        {
                            "text": "Some scholars argue that <w>religioning</w> can connect displaced people with their heritage.",
                            "target_lang_translations": {
                                "ru": "Некоторые ученые утверждают, что <w>обращение к религии</w> может связать перемещенных лиц с их наследием."
                            }
                        }
                    ],
                    "traits": [
                        {
                            "trait_type": "dated",
                            "comment": "rare or academic"
                        }
                    ],
                    "target_lang_definitions": {
                        "ru": "Заниматься религиозной практикой или интерпретировать что-либо через призму религии."
                    },
                    "translations": {
