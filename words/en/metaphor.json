    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "d195bb79-a63d-3cf8-acd1-10a4615fca3d",
                    "sense_definition": "A word or phrase that describes a person or object by referring to something else that has similar characteristics, without using \"like\" or \"as\".",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Calling the world a stage is a famous <w>metaphor</w> used by Shakespeare."
                        },
                        {
                            "text": "He used a sports <w>metaphor</w> to explain the business strategy to his team."
                        }
                    ],
                    "synonyms": [
                        "analogy",
                        "figure of speech",
                        "image"
                    ],
                    "antonyms": [
                        "simile"
                    ],
                    "common_phrases": [
                        "mixed metaphor",
                        "extended metaphor",
                        "use a metaphor"
                    ]
                },
                {
                    "sense_id": "64fcd399-4263-3a36-ad9c-b129e28f2b4a",
                    "sense_definition": "The use of words or phrases to describe something by referring to something else, invoking an implicit similarity between them.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Her writing style is rich in <w>metaphor</w> and vivid imagery."
                        },
                        {
                            "text": "The politician relied on <w>metaphor</w> to make his complex ideas easier to understand."
                        }
                    ],
                    "synonyms": [
                        "figurative language",
                        "imagery",
                        "symbolism"
                    ],
                    "antonyms": [
                        "literalness"
                    ]
                },
                {
                    "sense_id": "0fbd01f9-652e-3755-b946-5bc5244e4cb3",
                    "sense_definition": "The use of a familiar real-world object or concept to represent a computer function or interface element to help users understand it.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The desktop <w>metaphor</w> allows users to manage files as if they were documents on a physical desk."
                        },
                        {
                            "text": "Early operating systems adopted the wastebasket <w>metaphor</w> for deleting files."
                        }
                    ],
                    "common_phrases": [
                        "desktop metaphor"
                    ]
                }
            ]
        },
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "49d63dc5-7973-3d77-a334-7da6daef197e",
                    "sense_definition": "To describe something using a metaphor.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The author <w>metaphored</w> the struggle as a steep mountain climb."
                        },
                        {
                            "text": "She <w>metaphored</w> her emotions into a stormy sea in her latest poem."
                        }
                    ]
                }
            ]
        }
    ]
}