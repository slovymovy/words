    "entries": [
        {
            "pos": "adverb",
            "senses": [
                {
                    "sense_id": "62187aef-cdec-324e-8169-dd1d08422161",
                    "sense_definition": "In a kind, caring, or generous manner; out of kindness.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "manner",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "He <w>kindly</w> offered to drive us to the train station.",
                            "target_lang_translations": {
                                "ru": "Он <w>любезно</w> предложил подвезти нас до вокзала."
                            }
                        },
                        {
                            "text": "The nurse spoke <w>kindly</w> to the patient to calm him down.",
                            "target_lang_translations": {
                                "ru": "Медсестра <w>доброжелательно</w> поговорила с пациентом, чтобы успокоить его."
                            }
                        }
                    ],
                    "synonyms": [
                        "thoughtfully",
                        "generously",
                        "warmly",
                        "benevolently"
                    ],
                    "antonyms": [
                        "cruel",
                        "hardhearted",
                        "hardhearted",
                        "mean",
                        "stern"
                    ],
                    "common_phrases": [
                        "speak kindly",
                        "treat kindly",
                        "act kindly"
                    ],
                    "target_lang_definitions": {
                        "ru": "С добротой, заботой или щедростью; из вежливости."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "любезно",
                                "target_lang_sense_clarification": "вежливо, услужливо"
                            },
                            {
                                "target_lang_word": "доброжелательно",
                                "target_lang_sense_clarification": "с добрыми намерениями"
                            },
                            {
                                "target_lang_word": "ласково",
                                "target_lang_sense_clarification": "нежно, мягко"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "a0b6b6ad-0f63-37b4-9226-360da9cd582b",
                    "sense_definition": "Used to make a polite request or command.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "request",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Would you <w>kindly</w> close the door behind you?",
                            "target_lang_translations": {
                                "ru": "<w>Будьте добры</w>, закройте за собой дверь?"
                            }
                        },
                        {
                            "text": "Guests are <w>kindly</w> requested to refrain from smoking inside.",
                            "target_lang_translations": {
                                "ru": "Гостей <w>убедительно</w> просят воздержаться от курения в помещении."
                            }
                        }
                    ],
                    "synonyms": [
                        "please"
                    ],
                    "common_phrases": [
                        "kindly request",
                        "kindly inform",
                        "kindly ask"
                    ],
                    "traits": [
                        {
                            "trait_type": "form",
                            "comment": "formal"
                        }
                    ],
                    "target_lang_definitions": {
                        "ru": "Используется для выражения вежливой просьбы или приказа."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "будьте добры",
                                "target_lang_sense_clarification": "фраза вежливости"
                            },
                            {
                                "target_lang_word": "любезно",
                                "target_lang_sense_clarification": "в официальных просьбах"
                            },
                            {
                                "target_lang_word": "пожалуйста",
                                "target_lang_sense_clarification": "общее слово вежливости"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "8d06c34e-403e-327b-9cb5-236bb5c7d785",
                    "sense_definition": "Used in negative constructions to indicate that someone does not accept, like, or tolerate something.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "acceptance",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The manager does not take <w>kindly</w> to employees arriving late.",
                            "target_lang_translations": {
                                "ru": "Менеджер не относится <w>благосклонно</w> к сотрудникам, которые опаздывают."
                            }
                        },
                        {
                            "text": "Local residents did not take <w>kindly</w> to the construction noise.",
                            "target_lang_translations": {
                                "ru": "Местные жители не отнеслись <w>одобрительно</w> к шуму от стройки."
                            }
                        }
                    ],
                    "common_phrases": [
                        "not take kindly to"
                    ],
                    "target_lang_definitions": {
                        "ru": "Используется в отрицательных конструкциях, означая неприятие или неодобрение чего-либо."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "благосклонно",
                                "target_lang_sense_clarification": "положительно"
                            },
                            {
                                "target_lang_word": "одобрительно",
                                "target_lang_sense_clarification": "с согласием"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "6a2401f3-d913-3336-acac-8dc02746892b",
                    "sense_definition": "In a favourable or lucky way; to one's advantage.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "manner",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The ball bounced <w>kindly</w> for the striker, allowing him to score easily.",
                            "target_lang_translations": {
                                "ru": "Мяч <w>удачно</w> отскочил к нападающему, позволив ему легко забить гол."
                            }
                        },
                        {
                            "text": "History has not always looked <w>kindly</w> on such decisions.",
                            "target_lang_translations": {
                                "ru": "История не всегда смотрела <w>благосклонно</w> на такие решения."
                            }
                        }
                    ],
                    "synonyms": [
                        "favourably"
                    ],
                    "antonyms": [
                        "hardhearted"
                    ],
                    "common_phrases": [
                        "look kindly upon"
                    ],
                    "target_lang_definitions": {
                        "ru": "Благоприятным или удачным образом; к чьей-либо выгоде."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "удачно",
                                "target_lang_sense_clarification": "везуче"
                            },
                            {
                                "target_lang_word": "благосклонно",
                                "target_lang_sense_clarification": "о судьбе или истории"
