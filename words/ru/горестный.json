    "entries": [
        {
            "pos": "adjective",
            "senses": [
                {
                    "sense_id": "0e4bbbf7-79df-30f0-a20e-4a90ceb39bd0",
                    "sense_definition": "Исполненный горя, выражающий глубокую печаль или скорбь.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "sadness_feeling",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Он выглядел <w>горестным</w> и потерянным в этом большом пустом помещении.",
                            "target_lang_translations": {
                                "en": "He looked <w>sorrowful</w> and lost in this large empty room."
                            }
                        },
                        {
                            "text": "Старик издал тяжёлый <w>горестный</w> вздох и опустил голову.",
                            "target_lang_translations": {
                                "en": "The old man let out a heavy, <w>mournful</w> sigh and lowered his head."
                            }
                        }
                    ],
                    "synonyms": [
                        "печальный",
                        "скорбный",
                        "удручённый",
                        "унылый",
                        "подавленный"
                    ],
                    "antonyms": [
                        "радостный",
                        "весёлый"
                    ],
                    "common_phrases": [
                        "горестный вид",
                        "горестный взгляд",
                        "горестный вздох"
                    ],
                    "target_lang_definitions": {
                        "en": "Filled with grief, expressing deep sadness or sorrow."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "sorrowful",
                                "target_lang_sense_clarification": "full of or showing sorrow"
                            },
                            {
                                "target_lang_word": "mournful",
                                "target_lang_sense_clarification": "feeling or expressing sorrow or grief, often in appearance or sound"
                            },
                            {
                                "target_lang_word": "woeful",
                                "target_lang_sense_clarification": "expressive of misery or deep sadness"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "d35d0759-09c4-39ca-8029-a7e43f316640",
                    "sense_definition": "Вызывающий чувство горечи и сожаления; тягостный или бедственный (о событиях, обстоятельствах).",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "sadness_causing",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Это была <w>горестная</w> ошибка, которую уже невозможно исправить.",
                            "target_lang_translations": {
                                "en": "It was a <w>grievous</w> mistake that could no longer be fixed."
                            }
                        },
                        {
                            "text": "Семья получила <w>горестную</w> весть о гибели корабля.",
                            "target_lang_translations": {
                                "en": "The family received the <w>sorrowful</w> news about the ship's sinking."
                            }
                        }
                    ],
                    "synonyms": [
                        "печальный",
                        "скорбный"
                    ],
                    "antonyms": [
                        "счастливый",
                        "благополучный"
                    ],
                    "common_phrases": [
                        "горестная судьба",
                        "горестное событие",
                        "горестная весть",
                        "горестная ошибка"
                    ],
                    "target_lang_definitions": {
                        "en": "Causing a feeling of bitterness and regret; burdensome or disastrous (regarding events or circumstances)."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "grievous",
                                "target_lang_sense_clarification": "very severe, serious, or painful (often used with mistakes or losses)"
                            },
                            {
                                "target_lang_word": "lamentable",
                                "target_lang_sense_clarification": "regrettable; unfortunate"
                            },
                            {
                                "target_lang_word": "bitter",
                                "target_lang_sense_clarification": "hard to bear; causing pain or regret"
                            }
                        ]
                    }
                }
            ]
