    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "6f601b72-e401-3d22-b077-20d24a9a92fe",
                    "sense_definition": "Упорно требовать исполнения чего-либо, добиваться своего",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Я буду <w>настаивать</w> на своём решении до самого конца.",
                            "target_lang_translations": {
                                "en": "I will <w>insist</w> on my decision until the very end."
                            }
                        },
                        {
                            "text": "Врач стал <w>настаивать</w> на немедленной госпитализации пациента.",
                            "target_lang_translations": {
                                "en": "The doctor began to <w>insist</w> on the patient's immediate hospitalization."
                            }
                        }
                    ],
                    "synonyms": [
                        "требовать"
                    ],
                    "antonyms": [
                        "сдаваться"
                    ],
                    "common_phrases": [
                        "настаивать на своём",
                        "настаивать на встрече",
                        "настаивать на ответе"
                    ],
                    "target_lang_definitions": {
                        "en": "To persistently demand that something be done or to strive to achieve one's goal"
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "insist",
                                "target_lang_sense_clarification": "on an action or demand"
                            },
                            {
                                "target_lang_word": "press",
                                "target_lang_sense_clarification": "for something (e.g. an answer)"
                            },
                            {
                                "target_lang_word": "demand",
                                "target_lang_sense_clarification": "firmly"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "0f2a4f60-135e-3df7-8c3a-79a9885338a7",
                    "sense_definition": "Упорно придерживаться своего мнения, утверждая, что оно верно",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Свидетель продолжал <w>настаивать</w> на том, что видел подозреваемого в парке.",
                            "target_lang_translations": {
                                "en": "The witness continued to <w>insist</w> that he saw the suspect in the park."
                            }
                        },
                        {
                            "text": "Мы не будем <w>настаивать</w> на своей правоте, если факты говорят об обратном.",
                            "target_lang_translations": {
                                "en": "We will not <w>insist</w> on being right if the facts indicate otherwise."
                            }
                        }
                    ],
                    "synonyms": [
                        "утверждать"
                    ],
                    "antonyms": [
                        "отступаться"
                    ],
                    "common_phrases": [
                        "настаивать на правоте",
                        "настаивать на том что"
                    ],
                    "target_lang_definitions": {
                        "en": "To stubbornly stick to one's opinion, asserting that it is correct"
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "insist",
                                "target_lang_sense_clarification": "on a fact or opinion"
                            },
                            {
                                "target_lang_word": "maintain",
                                "target_lang_sense_clarification": "an opinion or claim"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "ef2cc498-ec21-3d67-a163-e919e2cea53b",
                    "sense_definition": "Приготавливать настойку или другой напиток, выдерживая что-либо в жидкости",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "2",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Лекарственные травы нужно <w>настаивать</w> в тёмном месте две недели.",
                            "target_lang_translations": {
                                "en": "Medicinal herbs need to <w>infuse</w> in a dark place for two weeks."
                            }
                        },
                        {
                            "text": "Бабушка любила <w>настаивать</w> чай с мятой и лимоном для аромата.",
                            "target_lang_translations": {
                                "en": "Grandma loved to <w>steep</w> tea with mint and lemon for the aroma."
                            }
                        }
                    ],
                    "synonyms": [
                        "заваривать"
                    ],
                    "common_phrases": [
                        "настаивать на спирту",
                        "настаивать чай",
                        "настаивать травы"
                    ],
                    "target_lang_definitions": {
                        "en": "To prepare a tincture or beverage by letting ingredients soak in a liquid"
                    },
                    "translations": {
