    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "ad5f89cc-8992-3cc3-bf55-f84ab612501a",
                    "sense_definition": "The state of being banished from one's home or country.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "state_of_banishment",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "After the coup, the president was forced into <w>exile</w>.",
                            "target_lang_translations": {
                                "ru": "После государственного переворота президент был вынужден отправиться в <w>изгнание</w>."
                            }
                        },
                        {
                            "text": "He spent ten years in <w>exile</w> before returning home.",
                            "target_lang_translations": {
                                "ru": "Он провёл десять лет в <w>изгнании</w>, прежде чем вернуться домой."
                            }
                        }
                    ],
                    "synonyms": [
                        "banishment"
                    ],
                    "common_phrases": [
                        "in exile",
                        "forced into exile",
                        "political exile",
                        "live in exile"
                    ],
                    "target_lang_definitions": {
                        "ru": "Состояние изгнания или принудительного нахождения вдали от родины"
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "изгнание",
                                "target_lang_sense_clarification": "состояние пребывания на чужбине"
                            },
                            {
                                "target_lang_word": "ссылка",
                                "target_lang_sense_clarification": "наказание в виде насильственного переселения"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "c8afd4a1-b0cd-3946-a7e5-53809830a285",
                    "sense_definition": "Someone who is banished from his home or country.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "person_banished",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The famous writer lived as an <w>exile</w> in Paris.",
                            "target_lang_translations": {
                                "ru": "Знаменитый писатель жил в Париже как <w>изгнанник</w>."
                            }
                        },
                        {
                            "text": "Many political <w>exiles</w> hope to return to their homeland one day.",
                            "target_lang_translations": {
                                "ru": "Многие политические <w>изгнанники</w> надеются однажды вернуться на родину."
                            }
                        }
                    ],
                    "synonyms": [
                        "expatriate",
                        "émigré"
                    ],
                    "common_phrases": [
                        "political exile",
                        "fellow exile"
                    ],
                    "target_lang_definitions": {
                        "ru": "Человек, изгнанный из своего дома или страны"
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "изгнанник",
                                "target_lang_sense_clarification": "человек, вынужденный покинуть родину"
                            },
                            {
                                "target_lang_word": "ссыльный",
                                "target_lang_sense_clarification": "человек, отбывающий наказание в ссылке"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "6d8207ee-3383-3d46-b2db-83d4d676048e",
                    "sense_definition": "To send someone or something into exile.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The king decided to <w>exile</w> his brother for treason.",
                            "target_lang_translations": {
                                "ru": "Король решил <w>изгнать</w> своего брата за государственную измену."
                            }
                        },
                        {
                            "text": "They were <w>exiled</w> from the country for their beliefs.",
                            "target_lang_translations": {
                                "ru": "Их <w>изгнали</w> из страны за их убеждения."
                            }
                        }
                    ],
                    "synonyms": [
                        "banish",
                        "expatriate#Verb"
                    ],
                    "common_phrases": [
                        "be exiled",
                        "exile someone"
                    ],
                    "target_lang_definitions": {
                        "ru": "Отправлять кого-либо в изгнание или ссылку"
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "изгонять",
                                "target_lang_sense_clarification": "подвергать изгнанию, выдворять"
                            },
                            {
                                "target_lang_word": "сослать",
                                "target_lang_sense_clarification": "отправить в ссылку в качестве наказания"
                            },
                            {
                                "target_lang_word": "высылать",
                                "target_lang_sense_clarification": "депортировать, официально удалять за пределы страны"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}