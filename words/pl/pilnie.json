    "entries": [
        {
            "pos": "adverb",
            "senses": [
                {
                    "sense_id": "b23e636f-cb55-3cea-b7bb-a602ce191548",
                    "sense_definition": "W sposób wymagający natychmiastowego działania ze względu na upływający czas lub ważność sprawy.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Lekarz jest <pilnie> potrzebny na oddziale ratunkowym.",
                            "target_lang_translations": {
                                "ru": "В отделении неотложной помощи <w>срочно</w> нужен врач."
                            }
                        },
                        {
                            "text": "Muszę <pilnie> skontaktować się z rodzicami w bardzo ważnej sprawie.",
                            "target_lang_translations": {
                                "ru": "Мне нужно <w>срочно</w> связаться с родителями по очень важному делу."
                            }
                        }
                    ],
                    "synonyms": [
                        "natychmiast",
                        "niezwłocznie",
                        "bezzwłocznie",
                        "jak najszybciej",
                        "na gwałt",
                        "od ręki",
                        "bez zwłoki"
                    ],
                    "common_phrases": [
                        "pilnie potrzebny",
                        "pilnie poszukiwany",
                        "pilnie sprzedam"
                    ],
                    "target_lang_definitions": {
                        "ru": "Образом, требующим немедленных действий из-за нехватки времени или важности дела."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "срочно",
                                "target_lang_sense_clarification": "безотлагательно"
                            },
                            {
                                "target_lang_word": "неотложно",
                                "target_lang_sense_clarification": "без промедления"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "5075c71b-ccfb-3ce4-9780-fdfd3830dce1",
                    "sense_definition": "Z dużym zaangażowaniem, starannością i pracowitością.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Marta <pilnie> przygotowywała się do egzaminu końcowego przez cały tydzień.",
                            "target_lang_translations": {
                                "ru": "Марта всю неделю <w>усердно</w> готовилась к выпускному экзамену."
                            }
                        },
                        {
                            "text": "Wszyscy pracownicy <pilnie> wykonywali swoje zadania, aby zadowolić klienta.",
                            "target_lang_translations": {
                                "ru": "Все сотрудники <w>старательно</w> выполняли свои задачи, чтобы удовлетворить клиента."
                            }
                        }
                    ],
                    "synonyms": [
                        "pracowicie",
                        "gorliwie",
                        "niestrudzenie"
                    ],
                    "common_phrases": [
                        "pilnie się uczyć",
                        "pilnie pracować",
                        "pilnie notować"
                    ],
                    "target_lang_definitions": {
                        "ru": "С большим усердием, старанием и трудолюбием."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "усердно",
                                "target_lang_sense_clarification": "с большим старанием"
                            },
                            {
                                "target_lang_word": "прилежно",
                                "target_lang_sense_clarification": "добросовестно, старательно (часто об учебе)"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "b1971258-3210-35eb-bcab-aab377d2ae33",
                    "sense_definition": "Z wielkim skupieniem, uwagą i czujnością.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Ochroniarz <pilnie> obserwował tłum wchodzący na stadion sportowy.",
                            "target_lang_translations": {
                                "ru": "Охранник <w>пристально</w> наблюдал за толпой, входящей на спортивный стадион."
                            }
                        },
                        {
                            "text": "Dzieci <pilnie> słuchały opowieści dziadka o dawnych czasach.",
                            "target_lang_translations": {
                                "ru": "Дети <w>внимательно</w> слушали рассказы дедушки о былых временах."
                            }
                        }
                    ],
                    "synonyms": [
                        "uważnie",
                        "bacznie",
                        "czujnie"
                    ],
                    "common_phrases": [
                        "pilnie obserwować",
                        "pilnie śledzić",
                        "pilnie słuchać"
                    ],
                    "target_lang_definitions": {
                        "ru": "С большой сосредоточенностью, вниманием и бдительностью."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "внимательно",
                                "target_lang_sense_clarification": "сосредоточенно"
                            },
                            {
                                "target_lang_word": "пристально",
                                "target_lang_sense_clarification": "не отрывая глаз, бдительно"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}