                    "common_phrases": [
                        "said shortly",
                        "answered shortly",
                        "spoke shortly"
                    ],
                    "target_lang_definitions": {
                        "ru": "Раздражённо, нетерпеливо или резко."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "резко",
