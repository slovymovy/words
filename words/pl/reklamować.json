                {
                    "sense_id": "d78f20ef-c04c-3cfe-aa24-34dbca328a2d",
                    "sense_definition": "Informować o towarach lub usługach, zachwalać je i sugerować ich kupno w celu zwiększenia sprzedaży.",
                    "learner_level": "A2",
                    "frequency": "High",
                    "semantic_group_id": "advertising",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Wiele firm wydaje ogromne pieniądze, aby <w>reklamować</w> swoje produkty w telewizji.",
                            "target_lang_translations": {
                                "ru": "Многие фирмы тратят огромные деньги, чтобы <w>рекламировать</w> свои продукты по телевидению."
                            }
                        },
                        {
                            "text": "W radiu często <w>reklamują</w> nowe leki na przeziębienie.",
                            "target_lang_translations": {
                                "ru": "По радио часто <w>рекламируют</w> новые лекарства от простуды."
                            }
                        }
                    ],
                    "synonyms": [
                        "zgłaszać reklamację",
                        "zgłaszać reklamację"
                    ],
                    "common_phrases": [
                        "reklamować produkt",
                        "reklamować usługi",
                        "reklamować w telewizji",
                        "reklamować w internecie"
                    ],
                    "target_lang_definitions": {
                        "ru": "Информировать о товарах или услугах, расхваливать их и предлагать купить с целью увеличения продаж."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "рекламировать",
                                "target_lang_sense_clarification": "продвигать товар или услугу"
                            },
                            {
                                "target_lang_word": "давать рекламу",
                                "target_lang_sense_clarification": "размещать объявления"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "8a463d32-38d6-30c2-a957-d8355e64d718",
                    "sense_definition": "Zgłaszać sprzedawcy wadę zakupionego towaru lub usługi, żądając naprawy, wymiany lub zwrotu pieniędzy.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "complaint",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Muszę iść do sklepu <w>reklamować</w> buty, które rozkleiły się po tygodniu.",
                            "target_lang_translations": {
                                "ru": "Мне нужно пойти в магазин <w>подать рекламацию</w> на ботинки, которые расклеились через неделю."
                            }
                        },
                        {
                            "text": "Klient ma prawo <w>reklamować</w> wadliwy towar w ciągu dwóch lat od zakupu.",
                            "target_lang_translations": {
                                "ru": "Клиент имеет право <w>предъявить претензию</w> на бракованный товар в течение двух лет с момента покупки."
                            }
                        }
                    ],
                    "synonyms": [
                        "zgłaszać reklamację",
                        "zgłaszać reklamację"
                    ],
                    "common_phrases": [
                        "reklamować buty",
                        "reklamować wadliwy towar",
                        "reklamować usługę",
                        "iść reklamować"
                    ],
                    "target_lang_definitions": {
                        "ru": "Сообщать продавцу о дефекте купленного товара или услуги, требуя ремонта, замены или возврата денег."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "подавать рекламацию",
                                "target_lang_sense_clarification": "официальная жалоба на качество"
                            },
                            {
                                "target_lang_word": "предъявлять претензию",
                                "target_lang_sense_clarification": "требовать устранения недостатков"
                            },
                            {
                                "target_lang_word": "возвращать по браку",
                                "target_lang_sense_clarification": "сдавать дефектный товар"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "773f71c6-9645-3ec4-b8b4-63e4689a39fc",
                    "sense_definition": "Chwalić samego siebie, swoje umiejętności lub własną działalność, aby zyskać uznanie lub klientów (używane z zaimkiem „się”).",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "self_promotion",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Jako początkujący grafik musisz się <w>reklamować</w> w mediach społecznościowych.",
                            "target_lang_translations": {
                                "ru": "Как начинающий график, ты должен <w>рекламировать себя</w> в социальных сетях."
                            }
                        },
                        {
                            "text": "On nie lubi się <w>reklamować</w>, woli, gdy jego praca mówi sama za siebie.",
                            "target_lang_translations": {
                                "ru": "Он не любит <w>рекламировать себя</w>, предпочитая, чтобы его работа говорила сама за себя."
                            }
                        }
                    ],
                    "synonyms": [
                        "zgłaszać reklamację",
                        "zgłaszać reklamację"
                    ],
                    "common_phrases": [
                        "reklamować się w sieci",
                        "reklamować się jako ekspert",
                        "dobrze się reklamować"
                    ],
                    "target_lang_definitions": {
                        "ru": "Хвалить самого себя, свои навыки или деятельность для привлечения внимания или клиентов."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "рекламировать себя",
                                "target_lang_sense_clarification": "заниматься саморекламой"
                            },
                            {
                                "target_lang_word": "продвигать себя",
                                "target_lang_sense_clarification": "маркетинг личности"
                            }
                        ]
                    }
                }
            ]
        }
    ]
