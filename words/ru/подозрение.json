    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "0917b1c8-2f8c-3086-a492-78bdb975f91d",
                    "sense_definition": "Предположение о виновности кого-либо в чём-то плохом или сомнение в честности и правильности чьих-либо поступков.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Его странное поведение сразу вызвало <w>подозрение</w> у сотрудников охраны.",
                            "target_lang_translations": {
                                "en": "His strange behavior immediately aroused <w>suspicion</w> among the security staff."
                            }
                        },
                        {
                            "text": "Этот человек находится под <w>подозрением</w> в совершении кражи.",
                            "target_lang_translations": {
                                "en": "This person is under <w>suspicion</w> of committing theft."
                            }
                        }
                    ],
                    "synonyms": [
                        "недоверие",
                        "сомнение"
                    ],
                    "antonyms": [
                        "доверие"
                    ],
                    "common_phrases": [
                        "вызвать подозрение",
                        "под подозрением",
                        "смотреть с подозрением",
                        "снять подозрения"
                    ],
                    "target_lang_definitions": {
                        "en": "A feeling or belief that someone has committed a crime or done something wrong, or a lack of trust in someone's honesty."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "suspicion",
                                "target_lang_sense_clarification": "belief of guilt or wrongness"
                            },
                            {
                                "target_lang_word": "distrust",
                                "target_lang_sense_clarification": "lack of trust"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "60433449-be07-3337-ac07-1908553f8a6c",
                    "sense_definition": "Предположение о возможности возникновения или наличии чего-либо (часто болезни, опасности или чего-то нежелательного).",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "2",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Врач направил пациента на обследование, так как есть <w>подозрение</w> на пневмонию.",
                            "target_lang_translations": {
                                "en": "The doctor sent the patient for an examination because there is a <w>suspicion</w> of pneumonia."
                            }
                        },
                        {
                            "text": "У меня закралось смутное <w>подозрение</w>, что мы заблудились в лесу.",
                            "target_lang_translations": {
                                "en": "I had a vague <w>suspicion</w> that we got lost in the forest."
                            }
                        }
                    ],
                    "synonyms": [
                        "предположение",
                        "догадка"
                    ],
                    "common_phrases": [
                        "подозрение на",
                        "подтвердить подозрение",
                        "смутное подозрение",
                        "закралось подозрение"
                    ],
                    "target_lang_definitions": {
                        "en": "A belief or idea that something is likely to be true or present, often regarding an illness, danger, or undesirable event."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "suspicion",
                                "target_lang_sense_clarification": "belief that something exists or is true"
                            },
                            {
                                "target_lang_word": "hunch",
                                "target_lang_sense_clarification": "intuitive guess or feeling"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}