            "pos": "noun",
            "senses": [
                {
                    "sense_id": "6879ee91-2618-363e-864d-ddc7ea945711",
                    "sense_definition": "Stan psychiczny charakteryzujący się brakiem skupienia, chaosem myślowym i trudnością w koncentracji uwagi na jednej rzeczy.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "mental_state",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Przez chwilowe <w>rozkojarzenie</w> zapomniałem zabrać dokumenty z biura.",
                            "target_lang_translations": {
                                "ru": "Из-за минутной <w>рассеянности</w> я забыл забрать документы из офиса."
                            }
                        },
                        {
                            "text": "Jej <w>rozkojarzenie</w> wynikało z ogromnego zmęczenia i stresu w pracy.",
                            "target_lang_translations": {
                                "ru": "Её <w>рассеянность</w> была следствием огромной усталости и стресса на работе."
                            }
                        }
                    ],
                    "synonyms": [
                        "roztargnienie",
                        "roztrzepanie",
                        "nieuwaga"
                    ],
                    "antonyms": [
                        "skupienie",
                        "koncentracja"
                    ],
                    "common_phrases": [
                        "chwilowe rozkojarzenie",
                        "kompletne rozkojarzenie",
                        "czuć rozkojarzenie"
                    ],
                    "target_lang_definitions": {
                        "ru": "Психическое состояние, характеризующееся отсутствием сосредоточенности, хаосом в мыслях и трудностью концентрации внимания."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "рассеянность",
                                "target_lang_sense_clarification": "состояние невнимательности"
                            },
                            {
                                "target_lang_word": "рассредоточенность",
                                "target_lang_sense_clarification": "отсутствие фокуса"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "a7ed8134-361f-3898-86dd-726141e09211",
                    "sense_definition": "Rzeczownik odczasownikowy od <w>rozkojarzyć</w>: czynność polegająca na dekoncentrowaniu kogoś lub wprowadzaniu chaosu w czyjeś myśli.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Celowe <w>rozkojarzenie</w> przeciwnika jest niesportowym zachowaniem.",
                            "target_lang_translations": {
                                "ru": "Намеренная <w>деконцентрация</w> противника является неспортивным поведением."
                            }
                        },
                        {
                            "text": "Ciągły hałas powodował <w>rozkojarzenie</w> uwagi wszystkich uczniów w klasie.",
                            "target_lang_translations": {
                                "ru": "Постоянный шум вызывал <w>рассеивание</w> внимания всех учеников в классе."
                            }
                        }
                    ],
                    "traits": [
                        {
                            "trait_type": "form",
                            "comment": "verbal noun"
                        }
                    ],
                    "target_lang_definitions": {
                        "ru": "Действие, заключающееся в нарушении чьей-либо концентрации или внесении хаоса в чьи-либо мысли."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "деконцентрация",
                                "target_lang_sense_clarification": "нарушение внимания"
                            },
                            {
                                "target_lang_word": "рассредоточение",
                                "target_lang_sense_clarification": "процесс лишения собранности"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "805e1b30-47b2-3170-8c7a-810bf3e8cb0d",
                    "sense_definition": "Poważne zaburzenie toku myślenia, polegające na braku logicznych powiązań między wątkami, często występujące w chorobach psychicznych.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "mental_state",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Lekarz stwierdził u pacjenta silne <w>rozkojarzenie</w> myślowe utrudniające komunikację.",
                            "target_lang_translations": {
                                "ru": "Врач констатировал у пациента сильную <w>разорванность</w> мышления, затрудняющую общение."
                            }
                        },
                        {
                            "text": "Choroba postępowała, powodując coraz głębsze <w>rozkojarzenie</w> i utratę kontaktu z rzeczywistością.",
                            "target_lang_translations": {
                                "ru": "Болезнь прогрессировала, вызывая всё более глубокую <w>бессвязность</w> и потерю контакта с реальностью."
                            }
                        }
                    ],
                    "synonyms": [
                        "inkoherencja"
                    ],
                    "common_phrases": [
                        "rozkojarzenie myślowe"
                    ],
                    "target_lang_definitions": {
                        "ru": "Серьезное нарушение мыслительного процесса, характеризующееся отсутствием логических связей между темами, часто встречающееся при психических заболеваниях."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "разорванность",
                                "target_lang_sense_clarification": "психиатрический термин"
                            },
                            {
                                "target_lang_word": "бессвязность",
                                "target_lang_sense_clarification": "отсутствие логики"
                            }
                        ]
                    }
                }
            ]
        }
