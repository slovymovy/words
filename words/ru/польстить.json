        "улестить"
    ],
    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "4eed5a9d-cb41-30df-9937-6fef2912cc6f",
                    "sense_definition": "Лицемерно похвалить кого-либо, сказать приятное с целью угодить или извлечь выгоду.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "social_interaction",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Он решил <польстить> начальнику, чтобы получить отгул.",
                            "target_lang_translations": {
                                "en": "He decided to <butter up> the boss to get time off."
                            }
                        },
                        {
                            "text": "Ты пытаешься мне <польстить>, но я не верю твоим словам.",
                            "target_lang_translations": {
                                "en": "You are trying to <flatter> me, but I don't believe your words."
                            }
                        }
                    ],
                    "synonyms": [
                        "подлизаться"
                    ],
                    "antonyms": [
                        "раскритиковать"
                    ],
                    "common_phrases": [
                        "грубо польстить",
                        "польстить начальству"
                    ],
                    "target_lang_definitions": {
                        "en": "To praise someone insincerely or say pleasant things in order to please them or gain an advantage."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "flatter",
                                "target_lang_sense_clarification": "to praise insincerely"
                            },
                            {
                                "target_lang_word": "butter up",
                                "target_lang_sense_clarification": "informal; to praise someone to get something"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "b0c62bc0-f252-378d-98a8-ba0d545f5b63",
                    "sense_definition": "Доставить удовольствие или удовлетворение, особенно чувству собственного достоинства.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "emotions",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Это приглашение очень <польстило> её самолюбию.",
                            "target_lang_translations": {
                                "en": "This invitation greatly <flattered> her vanity."
                            }
                        },
                        {
                            "text": "Ему <польстило>, что его узнали в такой большой компании.",
                            "target_lang_translations": {
                                "en": "It <flattered> him that he was recognized in such a large group."
                            }
                        }
                    ],
                    "synonyms": [
                        "порадовать",
                        "удовлетворить"
                    ],
                    "antonyms": [
                        "уязвить",
                        "задеть",
                        "обидеть"
                    ],
                    "common_phrases": [
                        "польстить самолюбию",
                        "польстить тщеславию"
                    ],
                    "target_lang_definitions": {
                        "en": "To give pleasure or satisfaction, especially to one's sense of dignity or vanity."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "flatter",
                                "target_lang_sense_clarification": "to please one's ego or vanity"
                            },
                            {
                                "target_lang_word": "gratify",
                                "target_lang_sense_clarification": "to satisfy a feeling or desire"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}