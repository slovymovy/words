    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "cc0e0bd3-18a9-30f6-9950-d56a1f411831",
                    "sense_definition": "A person who criticizes or humiliates others, often publicly, to make them feel ashamed.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The online <shamer> attacked the celebrity for her clothing choices.",
                            "target_lang_translations": {
                                "ru": "Онлайн-<шеймер> напал на знаменитость из-за её выбора одежды."
                            }
                        },
                        {
                            "text": "He did not want to be a <shamer> of people who were already struggling.",
                            "target_lang_translations": {
                                "ru": "Он не хотел быть <порицателем> людей, которым и так приходилось нелегко."
                            }
                        }
                    ],
                    "synonyms": [
                        "critic",
                        "accuser"
                    ],
                    "antonyms": [
                        "supporter",
                        "praiser"
                    ],
                    "common_phrases": [
                        "body shamer",
                        "public shamer",
                        "online shamer"
                    ],
                    "target_lang_definitions": {
                        "ru": "Человек, который критикует или унижает других, часто публично, чтобы заставить их чувствовать стыд."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "шеймер",
                                "target_lang_sense_clarification": "человек, который стыдит или травит других (часто в интернете)"
                            },
                            {
                                "target_lang_word": "порицатель",
                                "target_lang_sense_clarification": "тот, кто выражает неодобрение или осуждение"
                            },
                            {
                                "target_lang_word": "обличитель",
                                "target_lang_sense_clarification": "тот, кто публично разоблачает чьи-то недостатки"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "50835c6f-181b-39c5-8d42-66fbd9ce16cd",
                    "sense_definition": "Something that causes a feeling of shame or disgrace.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "His ragged clothes were <shamers> that he tried to hide from the wealthy guests.",
                            "target_lang_translations": {
                                "ru": "Его лохмотья были <источником стыда>, который он пытался скрыть от богатых гостей."
                            }
                        },
                        {
                            "text": "These old debts are <shamers> of his family's reputation.",
                            "target_lang_translations": {
                                "ru": "Эти старые долги являются <позором> для репутации его семьи."
                            }
                        }
                    ],
                    "synonyms": [
                        "disgrace",
                        "humiliation"
                    ],
                    "antonyms": [
                        "honor",
                        "pride"
                    ],
                    "target_lang_definitions": {
                        "ru": "Что-то, что вызывает чувство стыда или позора."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "источник стыда",
                                "target_lang_sense_clarification": "причина чувства неловкости"
                            },
                            {
                                "target_lang_word": "позор",
                                "target_lang_sense_clarification": "бесчестье или унизительное положение"
                            }
                        ]
                    }
                }
            ]
        }
    ]
