            "pos": "noun",
            "senses": [
                {
                    "sense_id": "f3afd175-c484-3343-8963-0372fca3c435",
                    "sense_definition": "Ссора с криками, шумом и руганью",
                    "learner_level": "A2",
                    "frequency": "High",
                    "semantic_group_id": "quarrel",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Мы не хотим устраивать <w>скандал</w> на улице.",
                            "target_lang_translations": {
                                "en": "We don't want to make a <w>scene</w> in the street."
                            }
                        },
                        {
                            "text": "Вчера у соседей был громкий семейный <w>скандал</w>.",
                            "target_lang_translations": {
                                "en": "Yesterday the neighbors had a loud family <w>row</w>."
                            }
                        }
                    ],
                    "synonyms": [
                        "конфуз"
                    ],
                    "common_phrases": [
                        "устроить скандал",
                        "закатить скандал",
                        "семейный скандал",
                        "громкий скандал"
                    ],
                    "target_lang_definitions": {
                        "en": "A noisy argument, quarrel, or public display of anger involving shouting."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "row",
                                "target_lang_sense_clarification": "a noisy argument or quarrel"
                            },
                            {
                                "target_lang_word": "scene",
                                "target_lang_sense_clarification": "a public display of anger or emotion"
                            },
                            {
                                "target_lang_word": "fracas",
                                "target_lang_sense_clarification": "a noisy disturbance or quarrel"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "e4e3d622-a04c-304f-8715-4bc305ac5422",
                    "sense_definition": "Событие или поступок, получившие широкую огласку и позорящие участников",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "public_event",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Этот финансовый <w>скандал</w> обсуждала вся страна.",
                            "target_lang_translations": {
                                "en": "The whole country discussed this financial <w>scandal</w>."
                            }
                        },
                        {
                            "text": "Коррупционные <w>скандалы</w> часто случаются в политике.",
                            "target_lang_translations": {
                                "en": "Corruption <w>scandals</w> often happen in politics."
                            }
                        }
                    ],
                    "common_phrases": [
                        "политический скандал",
                        "центр скандала",
                        "разразился скандал"
                    ],
                    "target_lang_definitions": {
                        "en": "An event or action that receives wide publicity and disgraces the participants."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "scandal",
                                "target_lang_sense_clarification": "an event causing public outrage and reputation damage"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "07496d05-8b0b-38d5-b803-df2a6e4172f8",
                    "sense_definition": "Чувство возмущения или недовольства",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "К великому <w>скандалу</w> публики, представление было отменено.",
                            "target_lang_translations": {
                                "en": "To the great <w>scandal</w> of the public, the performance was cancelled."
                            }
                        },
                        {
                            "text": "Его дерзкое поведение послужило причиной большого <w>скандала</w>.",
                            "target_lang_translations": {
                                "en": "His insolent behavior was the cause of great <w>outrage</w>."
                            }
                        }
                    ],
                    "traits": [
                        {
                            "trait_type": "archaic",
                            "comment": ""
                        }
                    ],
                    "target_lang_definitions": {
                        "en": "A feeling of shock, indignation, or offense caused by a shameful action."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "outrage",
                                "target_lang_sense_clarification": "strong moral indignation"
                            },
                            {
                                "target_lang_word": "scandal",
                                "target_lang_sense_clarification": "discredit or offense (archaic/literary)"
                            }
                        ]
                    }
                }
            ]
        }
    ]
