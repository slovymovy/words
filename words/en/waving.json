    ],
    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "ebb0dd9d-aa9d-3f99-b34e-814d855d6069",
                    "sense_definition": "Present participle and gerund of <w>wave</w>.",
                    "learner_level": "A1",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "She is standing on the platform and <w>waving</w> at the departing train.",
                            "target_lang_translations": {
                                "ru": "Она стоит на платформе и <w>машет</w> уходящему поезду."
                            }
                        },
                        {
                            "text": "He left the room without <w>waving</w> goodbye to his friends.",
                            "target_lang_translations": {
                                "ru": "Он вышел из комнаты, не <w>помахав</w> друзьям на прощание."
                            }
                        }
                    ],
                    "common_phrases": [
                        "waving at someone",
                        "waving goodbye",
                        "waving a flag",
                        "waving hand"
                    ],
                    "traits": [
                        {
                            "trait_type": "form",
                            "comment": "present participle"
                        }
                    ],
                    "target_lang_definitions": {
                        "ru": "Причастие настоящего времени и герундий от глагола wave (махать)."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "махать",
                                "target_lang_sense_clarification": "двигать рукой в знак приветствия или сигнала"
                            },
                            {
                                "target_lang_word": "развеваться",
                                "target_lang_sense_clarification": "колебаться на ветру (о флаге, волосах)"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "03373581-c07d-3dad-8246-7b56ea9bad1e",
                    "sense_definition": "The act of moving arms or hands repeatedly to signal or greet.",
                    "learner_level": "B1",
                    "frequency": "Middle",
                    "semantic_group_id": "motion_action",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "His frantic <w>waving</w> finally attracted the attention of the lifeguard.",
                            "target_lang_translations": {
                                "ru": "Его отчаянное <w>размахивание</w> руками наконец привлекло внимание спасателя."
                            }
                        },
                        {
                            "text": "We could see the enthusiastic <w>waving</w> of the fans in the stadium.",
                            "target_lang_translations": {
                                "ru": "Мы видели восторженное <w>махание</w> болельщиков на стадионе."
                            }
                        }
                    ],
                    "synonyms": [
                        "gesturing",
                        "signaling"
                    ],
                    "common_phrases": [
                        "frantic waving",
                        "waving of hands",
                        "enthusiastic waving"
                    ],
                    "target_lang_definitions": {
                        "ru": "Действие, заключающееся в ритмичном движении руками для приветствия или подачи сигнала."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "махание",
                                "target_lang_sense_clarification": "процесс движения рукой"
                            },
                            {
                                "target_lang_word": "размахивание",
                                "target_lang_sense_clarification": "энергичное движение руками"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "63f5d60d-2c0d-3d0a-ab13-8ee247df6122",
                    "sense_definition": "The movement of an object swaying back and forth.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "motion_action",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The gentle <w>waving</w> of the wheat fields was mesmerizing to watch.",
                            "target_lang_translations": {
                                "ru": "За легким <w>колыханием</w> пшеничных полей было завораживающе наблюдать."
                            }
                        },
                        {
                            "text": "Strong winds caused the violent <w>waving</w> of the tree branches.",
                            "target_lang_translations": {
                                "ru": "Сильный ветер вызвал неистовое <w>раскачивание</w> ветвей деревьев."
                            }
                        }
                    ],
                    "synonyms": [
                        "fluttering",
                        "undulation",
                        "swaying"
                    ],
                    "antonyms": [
                        "stillness"
                    ],
                    "common_phrases": [
                        "gentle waving",
                        "waving in the wind",
                        "rhythmic waving"
                    ],
                    "target_lang_definitions": {
                        "ru": "Движение предмета, качающегося из стороны в сторону."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "колыхание",
                                "target_lang_sense_clarification": "плавное движение (травы, ткани)"
                            },
                            {
                                "target_lang_word": "раскачивание",
                                "target_lang_sense_clarification": "движение из стороны в сторону"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}