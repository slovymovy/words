    ],
    "entries": [
        {
            "pos": "adverb",
            "senses": [
                {
                    "sense_id": "e1819ea1-88d8-3dff-9a38-1833e5bb1c50",
                    "sense_definition": "Так, что заставляет поверить в истинность чего-либо; доказательно и обоснованно.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "convincingly",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Адвокат говорил настолько <w>убедительно</w>, что судья согласился с его доводами.",
                            "target_lang_translations": {
                                "en": "The lawyer spoke so <w>convincingly</w> that the judge agreed with his arguments."
                            }
                        },
                        {
                            "text": "Эта теория звучит <w>убедительно</w>, но требует дополнительных доказательств.",
                            "target_lang_translations": {
                                "en": "This theory sounds <w>convincing</w>, but requires additional proof."
                            }
                        }
                    ],
                    "synonyms": [
                        "доказательно",
                        "аргументированно",
                        "обоснованно"
                    ],
                    "antonyms": [
                        "неубедительно",
                        "бездоказательно",
                        "голословно"
                    ],
                    "common_phrases": [
                        "звучать убедительно",
                        "выглядеть убедительно",
                        "говорить убедительно",
                        "весьма убедительно"
                    ],
                    "target_lang_definitions": {
                        "en": "In a way that makes one believe in the truth of something; supported by evidence and reason."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "convincingly",
                                "target_lang_sense_clarification": "causing someone to believe that something is true or real"
                            },
                            {
                                "target_lang_word": "persuasively",
                                "target_lang_sense_clarification": "in a manner that influences someone to do or believe something"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "3f7ccc7c-28d0-32c4-80d1-06376d7ead5f",
                    "sense_definition": "Настойчиво, с большой просьбой или требованием (обычно используется с глаголами просьбы или совета).",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "earnestly",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Я вас <w>убедительно</w> прошу не опаздывать на завтрашнее собрание.",
                            "target_lang_translations": {
                                "en": "I <w>earnestly</w> ask you not to be late for tomorrow's meeting."
                            }
                        },
                        {
                            "text": "Врач <w>убедительно</w> советовал пациенту больше отдыхать и гулять на свежем воздухе.",
                            "target_lang_translations": {
                                "en": "The doctor <w>strongly</w> advised the patient to rest more and walk in the fresh air."
                            }
                        }
                    ],
                    "synonyms": [
                        "настоятельно",
                        "настойчиво"
                    ],
                    "common_phrases": [
                        "убедительно просить",
                        "убедительно рекомендовать",
                        "убедительно советовать"
                    ],
                    "target_lang_definitions": {
                        "en": "Insistently, with a strong request or demand (usually used with verbs of request or advice)."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "strongly",
                                "target_lang_sense_clarification": "used to emphasize a recommendation or request"
                            },
                            {
                                "target_lang_word": "earnestly",
                                "target_lang_sense_clarification": "with sincere and intense conviction"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}