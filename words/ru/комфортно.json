    "entries": [
        {
            "pos": "adverb",
            "senses": [
                {
                    "sense_id": "0b33682d-4278-3f43-91c6-b5d2eab38a9b",
                    "sense_definition": "О состоянии удобства, уюта и душевного спокойствия (обычно выступает в роли сказуемого в безличных предложениях).",
                    "learner_level": "A2",
                    "frequency": "High",
                    "semantic_group_id": "state_of_comfort",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "В этом старом кресле мне очень <комфортно> читать книги.",
                            "target_lang_translations": {
                                "en": "I am very <comfortable> reading books in this old armchair."
                            }
                        },
                        {
                            "text": "Нам здесь <комфортно>, и мы не хотим никуда уходить.",
                            "target_lang_translations": {
                                "en": "We are <comfortable> here, and we don't want to leave."
                            }
                        }
                    ],
                    "synonyms": [
                        "удо́бно"
                    ],
                    "common_phrases": [
                        "мне комфортно",
                        "здесь комфортно",
                        "стало комфортно"
                    ],
                    "target_lang_definitions": {
                        "en": "Refers to a state of convenience, coziness, and peace of mind (usually used as a predicate in impersonal sentences)."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "comfortable",
                                "target_lang_sense_clarification": "feeling physical or mental ease"
                            },
                            {
                                "target_lang_word": "at ease",
                                "target_lang_sense_clarification": "mental state of comfort"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "f3743274-29a7-3b7e-be88-2b6896971ddc",
                    "sense_definition": "С удобством, ощущая или создавая уют и покой.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "manner_of_comfort",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Пассажиры могут <комфортно> разместиться в просторном салоне автомобиля.",
                            "target_lang_translations": {
                                "en": "Passengers can fit <comfortably> in the spacious cabin of the car."
                            }
                        },
                        {
                            "text": "Она всегда старается одеваться <комфортно>, чтобы ничто не стесняло движений.",
                            "target_lang_translations": {
                                "en": "She always tries to dress <comfortably> so that nothing restricts her movements."
                            }
                        }
                    ],
                    "synonyms": [
                        "удо́бно",
                        "комфорта́бельно"
                    ],
                    "common_phrases": [
                        "жить комфортно",
                        "сидеть комфортно",
                        "чувствовать себя комфортно"
                    ],
                    "target_lang_definitions": {
                        "en": "With convenience, feeling or creating coziness and peace."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "comfortably",
                                "target_lang_sense_clarification": "in a comfortable manner"
                            }
                        ]
                    }
                }
            ]
        }
    ]
