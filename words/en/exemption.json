{
    "word_family": [
        "exempt"
    ],
    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "f4993cd6-983f-361e-86d6-2e325fef8576",
                    "sense_definition": "The state of being free from an obligation, duty, rule, or liability that applies to others.",
                    "learner_level": "C1",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Because of his age, he was granted an <w>exemption</w> from military service.",
                            "target_lang_translations": {
                                "ru": "Из-за возраста он получил <w>освобождение</w> от военной службы."
                            }
                        },
                        {
                            "text": "You must provide a doctor's note to receive a medical <w>exemption</w> from the physical test.",
                            "target_lang_translations": {
                                "ru": "Вы должны предоставить справку от врача, чтобы получить медицинское <w>освобождение</w> от теста по физподготовке."
                            }
                        }
                    ],
                    "synonyms": [
                        "immunity",
                        "dispensation",
                        "free pass"
                    ],
                    "common_phrases": [
                        "grant an exemption",
                        "seek an exemption",
                        "medical exemption",
                        "religious exemption"
                    ],
                    "target_lang_definitions": {
                        "ru": "Состояние освобождения от обязательств, долга, правил или ответственности, которые распространяются на других."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "освобождение",
                                "target_lang_sense_clarification": "от обязанностей или службы"
                            },
                            {
                                "target_lang_word": "иммунитет",
                                "target_lang_sense_clarification": "юридическая неприкосновенность"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "6d2cfdfe-dc60-3328-8122-dd1c6b878551",
                    "sense_definition": "A specific amount of income or money that is not subject to taxation, reducing the total tax bill.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The government increased the personal <w>exemption</w> for families with children this year.",
                            "target_lang_translations": {
                                "ru": "В этом году правительство увеличило размер личного <w>налогового вычета</w> для семей с детьми."
                            }
                        },
                        {
                            "text": "Small businesses often qualify for a tax <w>exemption</w> on certain equipment purchases.",
                            "target_lang_translations": {
                                "ru": "Малый бизнес часто имеет право на налоговую <w>льготу</w> при покупке определенного оборудования."
                            }
                        }
                    ],
                    "common_phrases": [
                        "tax exemption",
                        "personal exemption",
                        "claim an exemption"
                    ],
                    "target_lang_definitions": {
                        "ru": "Определенная сумма дохода, не подлежащая налогообложению, что уменьшает общую сумму налога."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "льгота",
                                "target_lang_sense_clarification": "налоговая"
                            },
                            {
                                "target_lang_word": "налоговый вычет",
                                "target_lang_sense_clarification": "сумма, не облагаемая налогом"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}