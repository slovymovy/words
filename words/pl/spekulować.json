{
    "word_family": [
        "spekulacja",
        "spekulant",
        "spekulacyjny",
        "spekulatywny"
    ],
    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "dcde843a-f96d-398b-8b0f-a969b158b8b9",
                    "sense_definition": "Zastanawiać się nad czymś, tworzyć domysły i teorie, nie mając na nie pewnych dowodów.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "thinking",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Dziennikarze od tygodni <w>spekulują</w> na temat wyniku nadchodzących wyborów.",
                            "target_lang_translations": {
                                "ru": "Журналисты уже несколько недель <w>строят догадки</w> о результатах предстоящих выборов."
                            }
                        },
                        {
                            "text": "Możemy tylko <w>spekulować</w>, co tak naprawdę wydarzyło się za zamkniętymi drzwiami.",
                            "target_lang_translations": {
                                "ru": "Мы можем только <w>гадать</w>, что на самом деле произошло за закрытыми дверями."
                            }
                        }
                    ],
                    "synonyms": [
                        "snuć domysły",
                        "zachodzić w głowę"
                    ],
                    "common_phrases": [
                        "spekulować na temat",
                        "ciągle spekulować"
                    ],
                    "target_lang_definitions": {
                        "ru": "Размышлять о чем-либо, строить догадки и теории, не имея на то твердых доказательств."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "строить догадки",
                                "target_lang_sense_clarification": "делать предположения"
                            },
                            {
                                "target_lang_word": "гадать",
                                "target_lang_sense_clarification": "пытаться угадать, не зная точно"
                            },
                            {
                                "target_lang_word": "теоретизировать",
                                "target_lang_sense_clarification": "рассуждать отвлеченно"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "bda1ac70-ac60-33aa-8e99-d7ba689450d8",
                    "sense_definition": "Kupować i sprzedawać towary, waluty lub papiery wartościowe, licząc na szybki zysk wynikający ze zmiany ich cen.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "finance",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Wielu inwestorów <w>spekuluje</w> na giełdzie, podejmując bardzo duże ryzyko finansowe.",
                            "target_lang_translations": {
                                "ru": "Многие инвесторы <w>спекулируют</w> на бирже, идя на очень большой финансовый риск."
                            }
                        },
                        {
                            "text": "Mój znajomy <w>spekulował</w> walutami i stracił większość swoich oszczędności.",
                            "target_lang_translations": {
                                "ru": "Мой знакомый <w>спекулировал</w> валютой и потерял большую часть своих сбережений."
                            }
                        }
                    ],
                    "common_phrases": [
                        "spekulować na giełdzie",
                        "spekulować walutą",
                        "spekulować akcjami"
                    ],
                    "target_lang_definitions": {
                        "ru": "Покупать и продавать товары, валюту или ценные бумаги в расчете на быструю прибыль от изменения их цен."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "спекулировать",
                                "target_lang_sense_clarification": "заниматься перепродажей ради наживы"
                            },
                            {
                                "target_lang_word": "играть на бирже",
                                "target_lang_sense_clarification": "торговать ценными бумагами"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "50360da9-fa68-3c24-868c-b07133db25f6",
                    "sense_definition": "Wykorzystywać pewne okoliczności, czyjeś emocje lub nieszczęście do osiągnięcia własnych korzyści.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "manipulation",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Nieetyczni politycy często <w>spekulują</w> na ludzkim strachu, aby zdobyć poparcie.",
                            "target_lang_translations": {
                                "ru": "Неэтичные политики часто <w>спекулируют</w> на человеческом страхе, чтобы получить поддержку."
                            }
                        },
                        {
                            "text": "Autor artykułu <w>spekuluje</w> na taniej sensacji, zamiast przedstawić rzetelne fakty.",
                            "target_lang_translations": {
                                "ru": "Автор статьи <w>спекулирует</w> на дешевой сенсации вместо того, чтобы представить достоверные факты."
                            }
                        }
                    ],
                    "synonyms": [
                        "kombinować"
                    ],
                    "common_phrases": [
                        "spekulować uczuciami"
                    ],
                    "target_lang_definitions": {
                        "ru": "Использовать определенные обстоятельства, чьи-то эмоции или несчастье для достижения собственной выгоды."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "спекулировать",
                                "target_lang_sense_clarification": "использовать в корыстных целях"
                            },
                            {
                                "target_lang_word": "играть",
                                "target_lang_sense_clarification": "манипулировать чувствами"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}