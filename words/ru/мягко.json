                    ],
                    "antonyms": [
                        "жёстко"
                    ],
                    "common_phrases": [
                        "мягко ступать",
                        "мягко падать"
                    ],
                    "target_lang_definitions": {
                        "en": "In a way that is yielding to pressure, cushioned, or not hard."
                    },
                    "translations": {
                        "en": [
                            {
