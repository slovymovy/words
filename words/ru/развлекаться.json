    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "e506f36f-0b3a-34dd-b299-6947ad562a5c",
                    "sense_definition": "Приятно и весело проводить время, занимаясь чем-то интересным или забавным.",
                    "learner_level": "A2",
                    "frequency": "High",
                    "semantic_group_id": "leisure",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "В выходные мы обычно едем в парк, чтобы <w>развлекаться</w>.",
                            "target_lang_translations": {
                                "en": "On weekends, we usually go to the park to <w>have fun</w>."
                            }
                        },
                        {
                            "text": "Мои друзья любят <w>развлекаться</w> и танцевать в клубах.",
                            "target_lang_translations": {
                                "en": "My friends love to <w>have fun</w> and dance in clubs."
                            }
                        }
                    ],
                    "synonyms": [
                        "веселиться",
                        "забавляться"
                    ],
                    "antonyms": [
                        "работать",
                        "трудиться"
                    ],
                    "common_phrases": [
                        "пойти развлекаться",
                        "люблю развлекаться",
                        "уметь развлекаться"
                    ],
                    "target_lang_definitions": {
                        "en": "To spend time pleasantly and cheerfully, engaging in something interesting or amusing."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "have fun",
                                "target_lang_sense_clarification": "general term for enjoying oneself"
                            },
                            {
                                "target_lang_word": "have a good time",
                                "target_lang_sense_clarification": "idiomatic expression for enjoyment"
                            },
                            {
                                "target_lang_word": "enjoy oneself",
                                "target_lang_sense_clarification": "reflexive form"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "04970840-e48b-3dfb-9db4-9b40b17c4cdf",
                    "sense_definition": "Занимаясь чем-либо, отвлекаться от работы, тяжелых мыслей или скуки.",
                    "learner_level": "B1",
                    "frequency": "Middle",
                    "semantic_group_id": "distraction",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "В ожидании поезда он <w>развлекался</w> чтением старой газеты.",
                            "target_lang_translations": {
                                "en": "While waiting for the train, he <w>amused himself</w> by reading an old newspaper."
                            }
                        },
                        {
                            "text": "Она <w>развлекалась</w> тем, что смотрела на прохожих из окна.",
                            "target_lang_translations": {
                                "en": "She <w>amused herself</w> by watching passersby from the window."
                            }
                        }
                    ],
                    "synonyms": [
                        "отвлекаться"
                    ],
                    "common_phrases": [
                        "развлекаться чтением",
                        "развлекаться разговорами"
                    ],
                    "target_lang_definitions": {
                        "en": "To distract oneself from work, heavy thoughts, or boredom by doing something."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "amuse oneself",
                                "target_lang_sense_clarification": "to occupy oneself pleasantly to pass time"
                            },
                            {
                                "target_lang_word": "entertain oneself",
                                "target_lang_sense_clarification": "to provide one's own amusement"
                            },
                            {
                                "target_lang_word": "divert oneself",
                                "target_lang_sense_clarification": "formal; to turn one's attention away from tedious matters"
                            }
                        ]
                    }
                }
            ]
        }
    ]
