    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "f946293b-59a7-3705-9c2b-ee252c6a3428",
                    "sense_definition": "Быть в состоянии выполнить трудную работу, преодолеть препятствие, победить кого-либо или побороть свои чувства.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "cope_manage",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Новый сотрудник отлично <w>справляется</w> со своими обязанностями в офисе.",
                            "target_lang_translations": {
                                "en": "The new employee <w>handles</w> his duties in the office perfectly."
                            }
                        },
                        {
                            "text": "Ей было очень тяжело <w>справляться</w> с волнением перед важным экзаменом.",
                            "target_lang_translations": {
                                "en": "It was very hard for her to <w>cope</w> with the anxiety before the important exam."
                            }
                        }
                    ],
                    "synonyms": [
                        "осведомля́ться",
                        "осведомля́ться"
                    ],
                    "common_phrases": [
                        "справляться с задачей",
                        "справляться с трудностями",
                        "успешно справляться",
                        "справляться с управлением"
                    ],
                    "target_lang_definitions": {
                        "en": "To succeed in dealing with a difficult problem, situation, or task."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "cope",
                                "target_lang_sense_clarification": "to deal effectively with something difficult"
                            },
                            {
                                "target_lang_word": "manage",
                                "target_lang_sense_clarification": "to succeed in doing or dealing with something"
                            },
                            {
                                "target_lang_word": "handle",
                                "target_lang_sense_clarification": "to control or deal with a situation"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "875e5e0d-42b2-36a5-8f98-b733d93c1fa5",
                    "sense_definition": "Наводить справки, спрашивать о чьём-либо состоянии, здоровье или делах.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "inquire",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Он звонил каждый вечер, чтобы <w>справляться</w> о здоровье больной бабушки.",
                            "target_lang_translations": {
                                "en": "He called every evening to <w>inquire</w> about his sick grandmother's health."
                            }
                        },
                        {
                            "text": "Вам следует <w>справляться</w> у секретаря о времени начала собрания.",
                            "target_lang_translations": {
                                "en": "You should <w>check</w> with the secretary regarding the start time of the meeting."
                            }
                        }
                    ],
                    "synonyms": [
                        "осведомля́ться",
                        "спра́шивать"
                    ],
                    "common_phrases": [
                        "справляться о здоровье",
                        "справляться у дежурного"
                    ],
                    "target_lang_definitions": {
                        "en": "To ask for information about someone's health, condition, or affairs."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "inquire",
                                "target_lang_sense_clarification": "formal request for information"
                            },
                            {
                                "target_lang_word": "ask after",
                                "target_lang_sense_clarification": "to ask for news about someone's well-being"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "28fcf322-af2c-352f-8b64-c0a997b2e36f",
                    "sense_definition": "Искать информацию в справочнике, словаре или документах для проверки сведений.",
                    "learner_level": "B2",
                    "frequency": "Low",
                    "semantic_group_id": "consult_check",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "При переводе сложного текста студент вынужден постоянно <w>справляться</w> в словаре.",
                            "target_lang_translations": {
                                "en": "When translating a complex text, the student is forced to constantly <w>consult</w> the dictionary."
                            }
                        },
                        {
                            "text": "Я всегда стараюсь <w>справляться</w> с картой, когда гуляю по незнакомому городу.",
                            "target_lang_translations": {
                                "en": "I always try to <w>consult</w> the map when walking in an unfamiliar city."
                            }
                        }
                    ],
                    "synonyms": [
