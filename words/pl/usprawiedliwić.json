    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "2a31ade6-95f9-30f5-a8f2-67877e7b2c96",
                    "sense_definition": "Podać powód wyjaśniający czyjeś niewłaściwe zachowanie, błąd lub nieobecność, aby oczyścić tę osobę z zarzutów lub winy.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "exoneration",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Rodzic musi pisemnie <usprawiedliwić> każdą nieobecność dziecka w szkole.",
                            "target_lang_translations": {
                                "ru": "Родитель должен письменно <оправдать> каждое отсутствие ребенка в школе."
                            }
                        },
                        {
                            "text": "Nie potrafię <usprawiedliwić> jego wczorajszego wybuchu gniewu.",
                            "target_lang_translations": {
                                "ru": "Я не могу <оправдать> его вчерашнюю вспышку гнева."
                            }
                        }
                    ],
                    "synonyms": [
                        "wyjaśnić"
                    ],
                    "common_phrases": [
                        "usprawiedliwić nieobecność",
                        "usprawiedliwić spóźnienie",
                        "usprawiedliwić ucznia"
                    ],
                    "target_lang_definitions": {
                        "ru": "Привести довод, объясняющий чье-то неправильное поведение, ошибку или отсутствие, чтобы снять с этого человека обвинения или вину."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "оправдать",
                                "target_lang_sense_clarification": "снять вину или объяснить поступок"
                            },
                            {
                                "target_lang_word": "объяснить",
                                "target_lang_sense_clarification": "привести причину (например, отсутствия)"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "2421b853-854d-340c-9d34-8f78c7be92f2",
                    "sense_definition": "Wyjaśnić swoje własne postępowanie, starając się dowieść, że było ono słuszne lub konieczne (używane z zaimkiem zwrotnym „się”).",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "exoneration",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Sprawca próbował <usprawiedliwić się> przed sądem trudną sytuacją rodzinną.",
                            "target_lang_translations": {
                                "ru": "Виновник пытался <оправдаться> перед судом тяжелой семейной ситуацией."
                            }
                        },
                        {
                            "text": "Chciał <usprawiedliwić się> brakiem czasu, ale nikt mu nie uwierzył.",
                            "target_lang_translations": {
                                "ru": "Он хотел <оправдаться> нехваткой времени, но никто ему не поверил."
                            }
                        }
                    ],
                    "common_phrases": [
                        "usprawiedliwić się przed kimś",
                        "usprawiedliwić się niewiedzą"
                    ],
                    "target_lang_definitions": {
                        "ru": "Объяснить свое собственное поведение, пытаясь доказать, что оно было правильным или необходимым."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "оправдаться",
                                "target_lang_sense_clarification": "привести доводы в свою защиту"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "2acff69a-761a-31d4-be4e-3d4bcbacdba7",
                    "sense_definition": "Wykazać, że jakieś działanie, decyzja lub fakt są słuszne, celowe lub mają racjonalne podstawy.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "substantiation",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Sukces tego ryzykownego projektu ostatecznie <usprawiedliwił> poniesione wysokie koszty.",
                            "target_lang_translations": {
                                "ru": "Успех этого рискованного проекта в конечном итоге <оправдал> понесенные высокие расходы."
                            }
                        },
                        {
                            "text": "Nic nie może <usprawiedliwić> stosowania przemocy wobec słabszych.",
                            "target_lang_translations": {
                                "ru": "Ничто не может <оправдать> применение насилия к более слабым."
                            }
                        }
                    ],
                    "synonyms": [
                        "uzasadnić"
                    ],
                    "common_phrases": [
                        "w pełni usprawiedliwione",
                        "usprawiedliwić wydatki",
                        "usprawiedliwić środki"
                    ],
                    "target_lang_definitions": {
                        "ru": "Доказать, что какое-либо действие, решение или факт являются правильными, целесообразными или имеют рациональные основания."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "оправдать",
                                "target_lang_sense_clarification": "подтвердить правильность или целесообразность"
                            },
                            {
                                "target_lang_word": "обосновать",
                                "target_lang_sense_clarification": "подкрепить доказательствами"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}