    ],
    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "3d04bca0-033f-398e-91c5-30158e0cadae",
                    "sense_definition": "A period of training, information, or introduction given to new employees or students to help them adapt to a new environment.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "introduction_training",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The company holds a two-day <w>orientation</w> for all new staff members.",
                            "target_lang_translations": {
                                "ru": "Компания проводит двухдневный <w>вводный курс</w> для всех новых сотрудников."
                            }
                        },
                        {
                            "text": "During the student <w>orientation</w>, we learned where the library and cafeteria were located.",
                            "target_lang_translations": {
                                "ru": "Во время <w>ознакомительной программы</w> для студентов мы узнали, где находятся библиотека и столовая."
                            }
                        }
                    ],
                    "synonyms": [
                        "induction",
                        "introduction"
                    ],
                    "common_phrases": [
                        "new employee orientation",
                        "student orientation",
                        "orientation day",
                        "orientation session"
                    ],
                    "target_lang_definitions": {
                        "ru": "Период обучения, инструктажа или ознакомления для новых сотрудников или студентов, помогающий им адаптироваться к новой среде."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "вводный курс",
                                "target_lang_sense_clarification": "обучение для новичков"
                            },
                            {
                                "target_lang_word": "инструктаж",
                                "target_lang_sense_clarification": "краткое обучение правилам"
                            },
                            {
                                "target_lang_word": "адаптация",
                                "target_lang_sense_clarification": "процесс привыкания"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "6de4f424-da7d-3aff-8b8d-7741343d9c42",
                    "sense_definition": "The physical position, direction, or alignment of an object relative to its surroundings.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "physical_position",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "You should change the page <w>orientation</w> to landscape before printing the chart.",
                            "target_lang_translations": {
                                "ru": "Перед печатью диаграммы следует изменить <w>ориентацию</w> страницы на альбомную."
                            }
                        },
                        {
                            "text": "The building's southern <w>orientation</w> allows it to capture maximum sunlight.",
                            "target_lang_translations": {
                                "ru": "Южная <w>ориентация</w> здания позволяет ему получать максимум солнечного света."
                            }
                        }
                    ],
                    "synonyms": [
                        "alignment",
                        "positioning",
                        "direction"
                    ],
                    "common_phrases": [
                        "landscape orientation",
                        "portrait orientation",
                        "change the orientation"
                    ],
                    "target_lang_definitions": {
                        "ru": "Физическое положение, направление или размещение объекта относительно его окружения."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "ориентация",
                                "target_lang_sense_clarification": "положение в пространстве"
                            },
                            {
                                "target_lang_word": "расположение",
                                "target_lang_sense_clarification": "размещение"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "893d756b-9f87-3533-97e2-7904133722d8",
                    "sense_definition": "A person's sexual identity in relation to the gender to which they are attracted; short for sexual orientation.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "inclination_identity",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Laws in this country protect employees from discrimination based on their sexual <w>orientation</w>.",
                            "target_lang_translations": {
                                "ru": "Законы в этой стране защищают сотрудников от дискриминации на основе их сексуальной <w>ориентации</w>."
                            }
                        },
                        {
                            "text": "He felt comfortable discussing his <w>orientation</w> with his close friends.",
                            "target_lang_translations": {
                                "ru": "Ему было комфортно обсуждать свою <w>ориентацию</w> с близкими друзьями."
                            }
                        }
                    ],
                    "common_phrases": [
                        "sexual orientation"
                    ],
                    "target_lang_definitions": {
                        "ru": "Сексуальная идентичность человека по отношению к полу, к которому он испытывает влечение."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "ориентация",
                                "target_lang_sense_clarification": "сексуальная"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "bce65b17-e596-34fa-8cc3-edc66f8398e7",
                    "sense_definition": "A person's basic beliefs, interests, or preferences regarding a particular subject, such as politics or religion.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "inclination_identity",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The newspaper has a clear conservative <w>orientation</w> in its editorials.",
                            "target_lang_translations": {
                                "ru": "Газета придерживается четкой консервативной <w>ориентации</w> в своих передовицах."
                            }
                        },
                        {
                            "text": "We welcome members of any political <w>orientation</w> to join the debate club.",
                            "target_lang_translations": {
                                "ru": "Мы приглашаем людей любой политической <w>ориентации</w> вступить в дискуссионный клуб."
                            }
                        }
                    ],
                    "synonyms": [
                        "inclination",
                        "leaning",
                        "persuasion"
                    ],
                    "common_phrases": [
                        "political orientation",
                        "religious orientation",
                        "market orientation"
                    ],
                    "target_lang_definitions": {
                        "ru": "Основные убеждения, интересы или предпочтения человека в определенной области (например, в политике или религии)."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "ориентация",
                                "target_lang_sense_clarification": "взгляды, убеждения"
                            },
                            {
                                "target_lang_word": "направленность",
                                "target_lang_sense_clarification": "склонность, вектор интересов"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "11dba888-1255-36ba-8fa6-58a7bc84517a",
                    "sense_definition": "The ability to determine one's position and find one's way.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "navigation_ability",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Migratory birds rely on the stars for <w>orientation</w> during their long flights.",
                            "target_lang_translations": {
                                "ru": "Перелетные птицы полагаются на звезды для <w>ориентирования</w> во время своих долгих перелетов."
                            }
                        },
                        {
                            "text": "A sudden loss of <w>orientation</w> can be a symptom of severe dehydration.",
                            "target_lang_translations": {
                                "ru": "Внезапная потеря <w>ориентации</w> может быть симптомом сильного обезвоживания."
                            }
                        }
                    ],
                    "antonyms": [
                        "disorientation"
                    ],
                    "common_phrases": [
                        "sense of orientation"
                    ],
                    "target_lang_definitions": {
                        "ru": "Способность определять свое местоположение и находить дорогу."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "ориентирование",
                                "target_lang_sense_clarification": "процесс определения пути"
                            },
                            {
                                "target_lang_word": "ориентация",
                                "target_lang_sense_clarification": "способность ориентироваться"
                            },
                            {
                                "target_lang_word": "ориентировка",
                                "target_lang_sense_clarification": "понимание обстановки"
                            }
                        ]
                    }
                }
            ]
        }
    ]
