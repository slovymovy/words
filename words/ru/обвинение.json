    ],
    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "5731d8d6-c7c6-32ea-8cff-f82ad5a74024",
                    "sense_definition": "Приписывание кому-либо вины; утверждение о том, что кто-то совершил дурной поступок или преступление.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Ваши <обвинения> в мой адрес совершенно беспочвенны.",
                            "target_lang_translations": {
                                "en": "Your <accusations> against me are completely groundless."
                            }
                        },
                        {
                            "text": "Полиция решила предъявить ему официальное <обвинение>.",
                            "target_lang_translations": {
                                "en": "The police decided to bring an official <charge> against him."
                            }
                        }
                    ],
                    "synonyms": [
                        "осуждение"
                    ],
                    "antonyms": [
                        "оправдание",
                        "восхваление"
                    ],
                    "common_phrases": [
                        "предъявить обвинение",
                        "ложное обвинение",
                        "снять обвинения",
                        "тяжёлое обвинение"
                    ],
                    "target_lang_definitions": {
                        "en": "The act of claiming that someone has done something wrong or illegal, or a formal statement of this claim."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "accusation",
                                "target_lang_sense_clarification": "a statement saying that someone has done something wrong"
                            },
                            {
                                "target_lang_word": "charge",
                                "target_lang_sense_clarification": "an official claim made by the police that someone has committed a crime"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "d3bc229b-4ac8-31f2-bb2f-ea46accdd3f6",
                    "sense_definition": "Сторона в судебном процессе, которая поддерживает иск и доказывает виновность подсудимого.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "2",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Главный свидетель <обвинения> отказался давать показания в суде.",
                            "target_lang_translations": {
                                "en": "The main witness for the <prosecution> refused to testify in court."
                            }
                        },
                        {
                            "text": "В ходе процесса <обвинение> представило неопровержимые улики.",
                            "target_lang_translations": {
                                "en": "During the trial, the <prosecution> presented irrefutable evidence."
                            }
                        }
                    ],
                    "synonyms": [
                        "прокурор"
                    ],
                    "antonyms": [
                        "защита"
                    ],
                    "common_phrases": [
                        "свидетель обвинения",
                        "сторона обвинения",
                        "линия обвинения"
                    ],
                    "target_lang_definitions": {
                        "en": "The lawyers in a court case who represent the side trying to prove that the accused person is guilty."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "prosecution",
                                "target_lang_sense_clarification": "the side in a legal trial that tries to prove guilt"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}