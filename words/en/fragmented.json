    ],
    "entries": [
        {
            "pos": "adjective",
            "senses": [
                {
                    "sense_id": "84a1cc1b-2416-3e9b-b8a2-d73634e5131d",
                    "sense_definition": "Broken or separated into distinct parts; lacking unity or continuity.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The historian tried to reconstruct the story from <w>fragmented</w> records.",
                            "target_lang_translations": {
                                "ru": "Историк пытался восстановить историю по <w>разрозненным</w> записям."
                            }
                        },
                        {
                            "text": "After the conflict, the region became a <w>fragmented</w> society with little trust.",
                            "target_lang_translations": {
                                "ru": "После конфликта регион превратился в <w>раздробленное</w> общество, где почти нет доверия."
                            }
                        }
                    ],
                    "synonyms": [
                        "disjointed",
                        "divided",
                        "splintered",
                        "broken",
                        "scattered"
                    ],
                    "antonyms": [
                        "unified",
                        "integrated",
                        "whole",
                        "intact"
                    ],
                    "common_phrases": [
                        "fragmented market",
                        "fragmented society",
                        "fragmented information",
                        "highly fragmented"
                    ],
                    "target_lang_definitions": {
                        "ru": "Разделенный на отдельные части; лишенный единства или целостности."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "раздробленный",
                                "target_lang_sense_clarification": "разделенный на мелкие части (об обществе, рынке)"
                            },
                            {
                                "target_lang_word": "фрагментарный",
                                "target_lang_sense_clarification": "состоящий из фрагментов, неполный"
                            },
                            {
                                "target_lang_word": "разрозненный",
                                "target_lang_sense_clarification": "несогласованный, отдельный (о данных, записях)"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "43dcb874-4659-3fea-9131-80392bddf4cb",
                    "sense_definition": "Simple past and past participle of <w>fragment</w>.",
                    "learner_level": "B2",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The glass fell off the table and <w>fragmented</w> into hundreds of pieces.",
                            "target_lang_translations": {
                                "ru": "Стакан упал со стола и <w>разбился</w> на сотни осколков."
                            }
                        },
                        {
                            "text": "The political party <w>fragmented</w> into several smaller groups after the disagreement.",
                            "target_lang_translations": {
                                "ru": "После разногласий политическая партия <w>распалась</w> на несколько более мелких групп."
                            }
                        }
                    ],
                    "synonyms": [
                        "shattered",
                        "broke",
                        "disintegrated",
                        "split"
                    ],
                    "antonyms": [
                        "united",
                        "combined"
                    ],
                    "common_phrases": [
                        "fragmented into"
                    ],
                    "target_lang_definitions": {
                        "ru": "Прошедшее время от глагола, означающего ломаться или распадаться на мелкие части."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "распался",
                                "target_lang_sense_clarification": "перестал существовать как единое целое (о группах)"
                            },
                            {
                                "target_lang_word": "раздробился",
                                "target_lang_sense_clarification": "разделился на мелкие части"
                            },
                            {
                                "target_lang_word": "разбился",
                                "target_lang_sense_clarification": "разлетелся на осколки (о хрупких предметах)"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}