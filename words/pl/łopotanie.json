{
    "word_family": [
        "łopotać",
        "łopot"
    ],
    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "ff19e984-6f72-3ca0-a0e4-a963c4e01f00",
                    "sense_definition": "Wydawanie charakterystycznego dźwięku przez przedmiot, taki jak materiał, poruszany wiatrem lub szybkim ruchem.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "sound_motion",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Na maszcie słychać było rytmiczne <w>łopotanie</w> flagi.",
                            "target_lang_translations": {
                                "ru": "На мачте было слышно ритмичное <w>хлопанье</w> флага."
                            }
                        },
                        {
                            "text": "Silny wiatr powodował głośne <w>łopotanie</w> prania na sznurze.",
                            "target_lang_translations": {
                                "ru": "Сильный ветер вызывал громкое <w>хлопанье</w> белья на веревке."
                            }
                        }
                    ],
                    "synonyms": [
                        "łopot"
                    ],
                    "common_phrases": [
                        "łopotanie żagli",
                        "łopotanie flagi",
                        "głośne łopotanie"
                    ],
                    "target_lang_definitions": {
                        "ru": "Издавание характерного звука предметом (например, тканью) под воздействием ветра или быстрого движения."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "хлопанье",
                                "target_lang_sense_clarification": "звук ударов ткани на ветру"
                            },
                            {
                                "target_lang_word": "трепетание",
                                "target_lang_sense_clarification": "дрожание на ветру"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "7ada2901-9488-30fa-b7ab-f05e9980fabe",
                    "sense_definition": "Szybkie poruszanie skrzydłami w górę i w dół, często połączone z charakterystycznym dźwiękiem.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "sound_motion",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Przestraszone gołębie odleciały z głośnym <w>łopotaniem</w> skrzydeł.",
                            "target_lang_translations": {
                                "ru": "Испуганные голуби улетели с громким <w>хлопаньем</w> крыльев."
                            }
                        },
                        {
                            "text": "Ptaki zerwały się do lotu, a powietrze wypełniło <w>łopotanie</w> ich skrzydeł.",
                            "target_lang_translations": {
                                "ru": "Птицы взлетели, и воздух наполнило <w>хлопанье</w> их крыльев."
                            }
                        }
                    ],
                    "synonyms": [
                        "łopot"
                    ],
                    "common_phrases": [
                        "łopotanie skrzydeł"
                    ],
                    "target_lang_definitions": {
                        "ru": "Быстрые взмахи крыльями, часто сопровождаемые характерным шумом."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "хлопанье",
                                "target_lang_sense_clarification": "звук крыльев"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "374e9eb1-3288-3e24-8292-1f0d356b6461",
                    "sense_definition": "Mocne i szybkie bicie serca spowodowane silnymi emocjami, stresem lub wysiłkiem.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Czułem niepokojące <w>łopotanie</w> serca ze strachu przed egzaminem.",
                            "target_lang_translations": {
                                "ru": "Я чувствовал тревожное <w>трепетание</w> сердца от страха перед экзаменом."
                            }
                        },
                        {
                            "text": "Wypicie zbyt dużej ilości kawy może powodować nieprzyjemne <w>łopotanie</w> serca.",
                            "target_lang_translations": {
                                "ru": "Употребление слишком большого количества кофе может вызвать неприятное <w>трепетание</w> сердца."
                            }
                        }
                    ],
                    "synonyms": [
                        "łopot",
                        "łopot"
                    ],
                    "common_phrases": [
                        "łopotanie serca"
                    ],
                    "target_lang_definitions": {
                        "ru": "Сильное и учащенное сердцебиение, вызванное эмоциями, стрессом или нагрузкой."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "трепетание",
                                "target_lang_sense_clarification": "ощущение дрожи в груди"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}