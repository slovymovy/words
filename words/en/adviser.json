    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "858c6d0f-6785-3f7e-ba54-abdb16b19bb5",
                    "sense_definition": "A person who gives advice, especially someone who does this as a profession.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "She works as a financial <w>adviser</w> for a large international bank.",
                            "target_lang_translations": {
                                "ru": "Она работает финансовым <w>консультантом</w> в крупном международном банке."
                            }
                        },
                        {
                            "text": "The king listened carefully to his most trusted <w>adviser</w> before making a decision.",
                            "target_lang_translations": {
                                "ru": "Король внимательно выслушал своего самого доверенного <w>советника</w>, прежде чем принять решение."
                            }
                        }
                    ],
                    "synonyms": [
                        "consultant",
                        "counselor",
                        "mentor",
                        "guide"
                    ],
                    "common_phrases": [
                        "financial adviser",
                        "legal adviser",
                        "senior adviser",
                        "technical adviser",
                        "special adviser"
                    ],
                    "target_lang_definitions": {
                        "ru": "Человек, который дает советы, особенно тот, кто занимается этим профессионально."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "советник",
                                "target_lang_sense_clarification": "должностное лицо или доверенный человек"
                            },
                            {
                                "target_lang_word": "консультант",
                                "target_lang_sense_clarification": "специалист, дающий советы в определенной области"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "dda319e1-35b0-3d44-a29d-fc819af1ac53",
                    "sense_definition": "A teacher or staff member who is responsible for guiding and supervising a specific class or group of students.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The senior class <w>adviser</w> helped the students organize their graduation ceremony.",
                            "target_lang_translations": {
                                "ru": "<w>Классный руководитель</w> выпускного класса помог ученикам организовать церемонию вручения аттестатов."
                            }
                        },
                        {
                            "text": "If you have questions about your schedule, please speak to your faculty <w>adviser</w>.",
                            "target_lang_translations": {
                                "ru": "Если у вас есть вопросы по расписанию, пожалуйста, поговорите со своим факультетским <w>куратором</w>."
                            }
                        }
                    ],
                    "common_phrases": [
                        "class adviser",
                        "faculty adviser"
                    ],
                    "target_lang_definitions": {
                        "ru": "Преподаватель или сотрудник, ответственный за руководство и контроль определенного класса или группы студентов."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "куратор",
                                "target_lang_sense_clarification": "в университете или колледже"
                            },
                            {
                                "target_lang_word": "классный руководитель",
                                "target_lang_sense_clarification": "в школе"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}