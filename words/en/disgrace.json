{
    "word_family": [
        "disgraceful",
        "disgracefully"
    ],
    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "6be99cd5-8000-39e5-aab9-78c3cfd109e1",
                    "sense_definition": "The state of having lost the respect of others; the condition of being dishonored or covered with shame.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "He resigned from his position in <w>disgrace</w> after the corruption scandal.",
                            "target_lang_translations": {
                                "ru": "Он ушел со своего поста с <w>позором</w> после коррупционного скандала."
                            }
                        },
                        {
                            "text": "The family lived in <w>disgrace</w> for many years because of the crime.",
                            "target_lang_translations": {
                                "ru": "Семья много лет жила в <w>бесчестии</w> из-за этого преступления."
                            }
                        }
                    ],
                    "synonyms": [
                        "dishonor",
                        "ignominy"
                    ],
                    "common_phrases": [
                        "in disgrace",
                        "fall into disgrace",
                        "bring disgrace on"
                    ],
                    "target_lang_definitions": {
                        "ru": "Состояние потери уважения окружающих; бесчестие или позор."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "позор",
                                "target_lang_sense_clarification": "состояние стыда или унижения"
                            },
                            {
                                "target_lang_word": "бесчестие",
                                "target_lang_sense_clarification": "потеря чести и доброго имени"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "161ed4fb-fdb4-3973-bd91-75d3def376ac",
                    "sense_definition": "A person or thing that is so bad that they cause shame or loss of respect.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Your rude behavior at the party was a total <w>disgrace</w>.",
                            "target_lang_translations": {
                                "ru": "Твое грубое поведение на вечеринке — это настоящий <w>позор</w>."
                            }
                        },
                        {
                            "text": "That dilapidated building is a <w>disgrace</w> to the whole neighborhood.",
                            "target_lang_translations": {
                                "ru": "Это полуразрушенное здание — <w>позор</w> для всего района."
                            }
                        }
                    ],
                    "common_phrases": [
                        "a total disgrace",
                        "an absolute disgrace",
                        "disgrace to"
                    ],
                    "target_lang_definitions": {
                        "ru": "Человек, предмет или явление, вызывающие чувство стыда или являющиеся пятном на репутации."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "позор",
                                "target_lang_sense_clarification": "постыдное явление или поступок"
                            },
                            {
                                "target_lang_word": "срам",
                                "target_lang_sense_clarification": "разг. стыд, постыдная ситуация"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "e20ef1d8-7040-3dc1-b0a5-da0a9fb4735f",
                    "sense_definition": "To cause someone to lose respect or honor; to bring shame upon someone or something.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "He <w>disgraced</w> himself by cheating on the final exam.",
                            "target_lang_translations": {
                                "ru": "Он <w>опозорил</w> себя, списав на выпускном экзамене."
                            }
                        },
                        {
                            "text": "Please do not <w>disgrace</w> the family name with such foolish actions.",
                            "target_lang_translations": {
                                "ru": "Пожалуйста, не <w>позорь</w> фамилию такими глупыми поступками."
                            }
                        }
                    ],
                    "synonyms": [
                        "dishonor"
                    ],
                    "common_phrases": [
                        "disgrace oneself",
                        "be disgraced"
                    ],
                    "target_lang_definitions": {
                        "ru": "Лишать уважения или чести; навлекать позор на кого-либо или что-либо."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "позорить",
                                "target_lang_sense_clarification": "навлекать позор"
                            },
                            {
                                "target_lang_word": "опозорить",
                                "target_lang_sense_clarification": "сов. вид, совершить действие, навлекающее позор"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}