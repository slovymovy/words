                    ],
                    "target_lang_definitions": {
                        "ru": "Направлять кого-то к другому лицу или в организацию за помощью или консультацией."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "направлять",
                                "target_lang_sense_clarification": "посылать к специалисту или в инстанцию"
                            },
                            {
                                "target_lang_word": "перенаправлять",
