    "entries": [
        {
            "pos": "adjective",
            "senses": [
                {
                    "sense_id": "902ca8e2-67c4-3e99-bb03-aba538002d5d",
                    "sense_definition": "Very confused or perplexed, often due to a complex situation or trickery.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "confusion",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The students looked completely <w>bamboozled</w> by the difficult questions on the exam.",
                            "target_lang_translations": {
                                "ru": "Студенты выглядели совершенно <w>сбитыми с толку</w> сложными вопросами на экзамене."
                            }
                        },
                        {
                            "text": "I was utterly <w>bamboozled</w> when the magician made the large rabbit disappear.",
                            "target_lang_translations": {
                                "ru": "Я был совершенно <w>озадачен</w>, когда фокусник заставил большого кролика исчезнуть."
                            }
                        }
                    ],
                    "synonyms": [
                        "bewildered",
                        "perplexed",
                        "baffled",
                        "confused"
                    ],
                    "common_phrases": [
                        "completely bamboozled",
                        "utterly bamboozled",
                        "look bamboozled"
                    ],
                    "target_lang_definitions": {
                        "ru": "Сильно сбитый с толку или озадаченный, часто из-за сложной ситуации или чьей-то хитрости."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "сбитый с толку",
                                "target_lang_sense_clarification": "находящийся в сильном замешательстве"
                            },
                            {
                                "target_lang_word": "озадаченный",
                                "target_lang_sense_clarification": "находящийся в недоумении"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "b4937d27-cb6f-3104-b5e0-0fc66031c763",
                    "sense_definition": "Simple past and past participle of <w>bamboozle</w>.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "deception",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The clever salesman <w>bamboozled</w> the customers into buying expensive insurance they did not need.",
                            "target_lang_translations": {
                                "ru": "Хитрый продавец <w>одурачил</w> покупателей, заставив их купить дорогую страховку, которая им была не нужна."
                            }
                        },
                        {
                            "text": "She felt she had been <w>bamboozled</w> by the confusing terms of the contract.",
                            "target_lang_translations": {
                                "ru": "Она чувствовала, что её <w>обвели вокруг пальца</w> запутанными условиями контракта."
                            }
                        }
                    ],
                    "synonyms": [
                        "tricked",
                        "duped",
                        "hoodwinked",
                        "deceived"
                    ],
                    "common_phrases": [
                        "bamboozled into",
                        "bamboozled by"
                    ],
                    "traits": [
                        {
                            "trait_type": "form",
                            "comment": "past tense and participle"
                        }
                    ],
                    "target_lang_definitions": {
                        "ru": "Прошедшее время и причастие прошедшего времени от глагола bamboozle (обманывать, дурачить)."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "одурачил",
