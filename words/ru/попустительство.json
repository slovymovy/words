    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "9451fbfc-bfff-3f3a-a713-1e9b70c2963b",
                    "sense_definition": "Снисходительное отношение к чему-либо недозволенному или предосудительному; отсутствие должной требовательности и противодействия плохому.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "permissiveness",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "При твоём явном <w>попустительстве</w> дети совсем перестали слушаться старших.",
                            "target_lang_translations": {
                                "en": "With your obvious <w>permissiveness</w>, the children have completely stopped obeying their elders."
                            }
                        },
                        {
                            "text": "Директор проявляет недопустимое <w>попустительство</w> к постоянным опозданиям сотрудников.",
                            "target_lang_translations": {
                                "en": "The director shows unacceptable <w>connivance</w> regarding the employees' constant lateness."
                            }
                        }
                    ],
                    "synonyms": [
                        "потворство",
                        "снисходительность"
                    ],
                    "antonyms": [
                        "требовательность",
                        "строгость",
                        "взыскательность"
                    ],
                    "common_phrases": [
                        "молчаливое попустительство",
                        "граничить с попустительством",
                        "полное попустительство"
                    ],
                    "target_lang_definitions": {
                        "en": "An indulgent attitude towards something impermissible or reprehensible; a lack of proper strictness and opposition to bad behavior."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "connivance",
                                "target_lang_sense_clarification": "tacit encouragement or ignoring of wrongdoing"
                            },
                            {
                                "target_lang_word": "permissiveness",
                                "target_lang_sense_clarification": "habitual lack of strictness or control"
                            },
                            {
                                "target_lang_word": "indulgence",
                                "target_lang_sense_clarification": "leniency towards faults"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "f07f4f66-2996-3482-9c06-2eef6e09c4bc",
                    "sense_definition": "Непринятие должностным лицом необходимых мер для пресечения противозаконных действий или преступлений.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "permissiveness",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Чиновника обвинили в преступном <w>попустительстве</w> действиям мошенников.",
                            "target_lang_translations": {
                                "en": "The official was accused of criminal <w>connivance</w> with the actions of the fraudsters."
                            }
                        },
                        {
                            "text": "Суд установил факт <w>попустительства</w> со стороны охраны во время ограбления.",
                            "target_lang_translations": {
                                "en": "The court established the fact of <w>connivance</w> on the part of the security guards during the robbery."
                            }
                        }
                    ],
                    "synonyms": [
                        "бездействие"
                    ],
                    "antonyms": [
                        "пресечение",
                        "противодействие"
                    ],
                    "common_phrases": [
                        "преступное попустительство",
                        "попустительство по службе"
                    ],
                    "target_lang_definitions": {
                        "en": "Failure by an official to take necessary measures to stop illegal actions or crimes."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "connivance",
                                "target_lang_sense_clarification": "secret cooperation or allowance of illegal acts"
                            },
                            {
                                "target_lang_word": "criminal negligence",
                                "target_lang_sense_clarification": "failure to perform official duties"
                            }
                        ]
                    }
                }
            ]
        }
    ]
