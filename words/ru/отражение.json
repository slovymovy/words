    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "555a817d-3d9a-3e68-bd24-5fdd3b9c975d",
                    "sense_definition": "Образ предмета или живого существа, который виден на гладкой, блестящей поверхности (например, в зеркале, воде или стекле).",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Кошка увидела своё <w>отражение</w> в зеркале и испуганно отпрыгнула назад.",
                            "target_lang_translations": {
                                "en": "The cat saw its <w>reflection</w> in the mirror and jumped back in fright."
                            }
                        },
                        {
                            "text": "В чистой воде озера мы наблюдали красивое <w>отражение</w> высоких гор.",
                            "target_lang_translations": {
                                "en": "In the clear water of the lake, we observed a beautiful <w>reflection</w> of the high mountains."
                            }
                        }
                    ],
                    "common_phrases": [
                        "своё отражение",
                        "отражение в зеркале",
                        "отражение в воде",
                        "смотреть на отражение"
                    ],
                    "target_lang_definitions": {
                        "en": "An image of an object or person seen on a shiny surface, such as a mirror or water."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "reflection",
                                "target_lang_sense_clarification": "image on a surface"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "eb20e515-99b9-3fc9-b4b5-bde79d0a6356",
                    "sense_definition": "Воспроизведение, выражение или след чего-либо в мыслях, искусстве или на лице; результат воздействия одного явления на другое.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Литература часто служит верным <w>отражением</w> исторических событий и настроений общества.",
                            "target_lang_translations": {
                                "en": "Literature often serves as a true <w>reflection</w> of historical events and societal moods."
                            }
                        },
                        {
                            "text": "На её лице появилось <w>отражение</w> глубокой грусти после услышанных новостей.",
                            "target_lang_translations": {
                                "en": "A <w>reflection</w> of deep sadness appeared on her face after hearing the news."
                            }
                        }
                    ],
                    "synonyms": [
                        "отображение",
                        "воспроизведение",
                        "отпечаток",
                        "след"
                    ],
                    "common_phrases": [
                        "найти отражение",
                        "яркое отражение",
                        "быть отражением",
                        "нашло отражение"
                    ],
                    "target_lang_definitions": {
                        "en": "A sign, result, or representation of something in art, thoughts, or facial expression."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "reflection",
                                "target_lang_sense_clarification": "manifestation or sign"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "cb677c1e-816f-34f7-8883-85e7903d030e",
                    "sense_definition": "Физический процесс возвращения световых, звуковых или иных волн от поверхности, на которую они падают.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "На уроке физики школьники изучали законы преломления и <w>отражения</w> света.",
                            "target_lang_translations": {
                                "en": "In physics class, the students studied the laws of refraction and <w>reflection</w> of light."
                            }
                        },
                        {
                            "text": "Из-за сильного <w>отражения</w> звука в пустом зале было трудно разобрать слова лектора.",
                            "target_lang_translations": {
                                "en": "Due to the strong <w>reflection</w> of sound in the empty hall, it was difficult to make out the lecturer's words."
                            }
                        }
                    ],
                    "antonyms": [
                        "поглощение"
                    ],
                    "common_phrases": [
                        "угол отражения",
                        "отражение света",
                        "отражение звука",
                        "полное отражение"
                    ],
                    "target_lang_definitions": {
                        "en": "The physical process of light, sound, or other waves bouncing back from a surface."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "reflection",
                                "target_lang_sense_clarification": "physics term"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "2eed491e-723a-37d4-b510-0d679d04f37f",
                    "sense_definition": "Ответное действие с целью защититься от нападения или удара; успешное отбивание атаки.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Генерал приказал подготовить войска к <w>отражению</w> внезапной атаки противника.",
                            "target_lang_translations": {
                                "en": "The general ordered the troops to prepare for the <w>repelling</w> of a sudden enemy attack."
                            }
                        },
                        {
                            "text": "Вратарь продемонстрировал отличную реакцию при <w>отражении</w> сложного удара по воротам.",
                            "target_lang_translations": {
                                "en": "The goalkeeper demonstrated excellent reaction time in the <w>parrying</w> of a difficult shot on goal."
                            }
                        }
                    ],
                    "synonyms": [
                        "отбивание",
                        "отпор"
                    ],
                    "antonyms": [
                        "нападение",
                        "атака"
                    ],
                    "common_phrases": [
                        "отражение атаки",
                        "отражение удара",
                        "отражение агрессии",
                        "отражение нападения"
                    ],
                    "target_lang_definitions": {
                        "en": "The act of fighting back an attack or defending against a blow."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "repelling",
                                "target_lang_sense_clarification": "driving back an attack"
                            },
                            {
                                "target_lang_word": "repulse",
                                "target_lang_sense_clarification": "military context"
                            },
                            {
                                "target_lang_word": "parry",
                                "target_lang_sense_clarification": "defensive move in sports/fencing"
                            }
                        ]
                    }
                }
            ]
        }
