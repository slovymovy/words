    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "283f1452-4c66-38ea-9d9d-b96801df5489",
                    "sense_definition": "To control the functioning of a machine, device, or system, or to manage the activities of a business or organization.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "You need special training to <w>operate</w> this heavy machinery safely.",
                            "target_lang_translations": {
                                "ru": "Вам нужна специальная подготовка, чтобы безопасно <w>управлять</w> этой тяжелой техникой."
                            }
                        },
                        {
                            "text": "The company <w>operates</w> a business that sells organic food to local restaurants.",
                            "target_lang_translations": {
                                "ru": "Компания <w>управляет</w> бизнесом, который продает органические продукты местным ресторанам."
                            }
                        }
                    ],
                    "synonyms": [
                        "control",
                        "manage",
                        "run",
                        "handle"
                    ],
                    "common_phrases": [
                        "operate a machine",
                        "operate a business",
                        "operate a system",
                        "operate a vehicle"
                    ],
                    "target_lang_definitions": {
                        "ru": "Управлять работой машины, устройства или системы, либо руководить деятельностью бизнеса или организации."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "управля́ть",
                                "target_lang_sense_clarification": "контролировать работу техники или вести дела"
                            },
                            {
                                "target_lang_word": "эксплуати́ровать",
                                "target_lang_sense_clarification": "использовать технику или оборудование"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "0ae74116-f243-30d6-ba9c-e3e521a26189",
                    "sense_definition": "To function, work, or take place in a particular way.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The new computer software <w>operates</w> smoothly on all modern devices.",
                            "target_lang_translations": {
                                "ru": "Новое компьютерное программное обеспечение плавно <w>работает</w> на всех современных устройствах."
                            }
                        },
                        {
                            "text": "Police officers understand how the local criminal gang <w>operates</w> in this area.",
                            "target_lang_translations": {
                                "ru": "Полицейские понимают, как местная преступная группировка <w>действует</w> в этом районе."
                            }
                        }
                    ],
                    "synonyms": [
                        "function",
                        "work",
                        "run"
                    ],
                    "antonyms": [
                        "malfunction"
                    ],
                    "common_phrases": [
                        "operate smoothly",
                        "operate effectively",
                        "operate independently",
                        "operate normally"
                    ],
                    "target_lang_definitions": {
                        "ru": "Функционировать, работать или происходить определенным образом."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "рабо́тать",
                                "target_lang_sense_clarification": "функционировать (о механизмах, программах)"
                            },
                            {
                                "target_lang_word": "де́йствовать",
                                "target_lang_sense_clarification": "совершать действия, функционировать"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "eca0fe28-b300-3ad5-8d70-ddf464508814",
                    "sense_definition": "To perform a medical procedure that involves cutting into a person's body to repair or remove a damaged part.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The surgeon had to <w>operate</w> on the patient's heart to save her life.",
                            "target_lang_translations": {
                                "ru": "Хирургу пришлось <w>оперировать</w> сердце пациентки, чтобы спасти ей жизнь."
                            }
                        },
                        {
                            "text": "Doctors will <w>operate</w> on his injured knee early tomorrow morning.",
                            "target_lang_translations": {
                                "ru": "Врачи будут <w>оперировать</w> его травмированное колено завтра рано утром."
                            }
                        }
                    ],
                    "common_phrases": [
                        "operate on someone",
                        "operate on a patient"
                    ],
                    "target_lang_definitions": {
                        "ru": "Проводить медицинскую процедуру, включающую хирургическое вмешательство для лечения или удаления поврежденной части тела."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "опери́ровать",
                                "target_lang_sense_clarification": "проводить хирургическую операцию"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}