                },
                {
                    "sense_id": "be95ffcc-b01b-31d7-851b-51f01470dd39",
                    "sense_definition": "Sytuacja oceniana przez kogoś jako śmieszna, niepoważna lub absurdalna.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "situation",
                    "name_type": "no",
                    "examples": [
                        {
