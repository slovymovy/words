    "entries": [
        {
            "pos": "adverb",
            "senses": [
                {
                    "sense_id": "1e4e7303-4ab7-346d-811e-9d8dc14856df",
                    "sense_definition": "Важно, официально, серьёзно и возвышенно; с соблюдением церемоний.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Директор школы <торжественно> вручил аттестаты выпускникам.",
                            "target_lang_translations": {
                                "en": "The school principal <w>solemnly</w> handed the diplomas to the graduates."
                            }
                        },
                        {
                            "text": "Мы <торжественно> отметили юбилей нашей компании в большом зале.",
                            "target_lang_translations": {
                                "en": "We <w>ceremoniously</w> celebrated our company's anniversary in the large hall."
                            }
                        }
                    ],
                    "synonyms": [
                        "важно",
                        "официально",
                        "серьёзно"
                    ],
                    "antonyms": [
                        "буднично"
                    ],
                    "common_phrases": [
                        "торжественно вручить",
                        "торжественно открыть",
                        "торжественно объявить"
                    ],
                    "target_lang_definitions": {
                        "en": "In a formal, dignified, and impressive manner; often involving official ceremony."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "solemnly",
                                "target_lang_sense_clarification": "in a formal and dignified way"
                            },
                            {
                                "target_lang_word": "ceremoniously",
                                "target_lang_sense_clarification": "with formal ritual or etiquette"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "09d2bf82-d72d-32de-84c5-ddf7c56ca9a4",
                    "sense_definition": "Нерушимо, священно (обычно об обещаниях или клятвах).",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Я <торжественно> обещаю говорить только правду и ничего кроме правды.",
                            "target_lang_translations": {
                                "en": "I <w>solemnly</w> promise to speak only the truth and nothing but the truth."
                            }
                        },
                        {
                            "text": "Солдаты <торжественно> присягнули на верность своей стране.",
                            "target_lang_translations": {
                                "en": "The soldiers <w>solemnly</w> swore allegiance to their country."
                            }
                        }
                    ],
                    "synonyms": [
                        "нерушимо",
                        "священно"
                    ],
                    "common_phrases": [
                        "торжественно клясться",
                        "торжественно обещать"
                    ],
                    "target_lang_definitions": {
                        "en": "With deep sincerity and seriousness, specifically regarding vows, oaths, or promises."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "solemnly",
                                "target_lang_sense_clarification": "with deep sincerity (used with promises/oaths)"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "555334b2-c04c-39c8-8086-d90ff4129029",
                    "sense_definition": "Величаво, величественно, грандиозно.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Орган в старинном соборе звучал мощно и <торжественно>.",
                            "target_lang_translations": {
                                "en": "The organ in the old cathedral sounded powerful and <w>solemn</w>."
                            }
                        },
                        {
                            "text": "Солнце <торжественно> поднималось над горизонтом, освещая горы.",
                            "target_lang_translations": {
                                "en": "The sun rose <w>majestically</w> above the horizon, illuminating the mountains."
                            }
                        }
                    ],
                    "synonyms": [
                        "величаво",
                        "величественно",
                        "возвышенно"
                    ],
                    "common_phrases": [
                        "звучать торжественно",
                        "выглядеть торжественно"
                    ],
                    "target_lang_definitions": {
                        "en": "In a magnificent, imposing, or stately manner; creating a sense of grandeur."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "majestically",
                                "target_lang_sense_clarification": "with impressive beauty or dignity"
                            },
                            {
                                "target_lang_word": "grandly",
                                "target_lang_sense_clarification": "in a magnificent or imposing way"
                            }
                        ]
                    }
                }
            ]
        },
