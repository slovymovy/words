    "entries": [
        {
            "pos": "adjective",
            "senses": [
                {
                    "sense_id": "5c570c63-e305-3e13-ae5a-819da62d2979",
                    "sense_definition": "Of or relating to the art of preaching or to sermons.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The library contains a vast collection of <w>homiletic</w> literature from the medieval period.",
                            "target_lang_translations": {
                                "ru": "В библиотеке хранится обширная коллекция <w>гомилетической</w> литературы средневекового периода."
                            }
                        },
                        {
                            "text": "He demonstrated great <w>homiletic</w> skill during the Sunday service.",
                            "target_lang_translations": {
                                "ru": "Он продемонстрировал великолепное <w>проповедническое</w> мастерство во время воскресной службы."
                            }
                        }
                    ],
                    "synonyms": [
                        "homiletical",
                        "sermonic"
                    ],
                    "common_phrases": [
                        "homiletic commentary",
                        "homiletic skill",
                        "homiletic theology"
                    ],
                    "target_lang_definitions": {
                        "ru": "Относящийся к искусству проповеди или к проповедям."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "гомилетический",
                                "target_lang_sense_clarification": "относящийся к теории церковной проповеди"
                            },
                            {
                                "target_lang_word": "проповеднический",
                                "target_lang_sense_clarification": "связанный с чтением проповедей"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "630f7c13-5016-3d60-bd5f-269c2733cbc4",
                    "sense_definition": "Resembling a sermon in tone; tediously moralizing.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The movie was criticized for its <w>homiletic</w> dialogue and lack of subtlety.",
                            "target_lang_translations": {
                                "ru": "Фильм критиковали за <w>нравоучительные</w> диалоги и отсутствие тонкости."
                            }
                        },
                        {
                            "text": "She adopted a <w>homiletic</w> tone that alienated her listeners.",
                            "target_lang_translations": {
                                "ru": "Она приняла <w>назидательный</w> тон, который оттолкнул слушателей."
                            }
                        }
                    ],
                    "synonyms": [
                        "preachy",
                        "didactic",
                        "moralizing",
                        "sermonizing"
                    ],
                    "common_phrases": [
                        "homiletic tone",
                        "homiletic manner"
                    ],
                    "target_lang_definitions": {
                        "ru": "Напоминающий проповедь по тону; утомительно нравоучительный."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "нравоучительный",
                                "target_lang_sense_clarification": "содержащий наставления"
                            },
                            {
                                "target_lang_word": "назидательный",
                                "target_lang_sense_clarification": "поучающий, менторский"
                            }
                        ]
                    }
                }
            ]
        }
    ]
