    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "cf21df65-e172-3f58-8f5b-68e1f2a431bd",
                    "sense_definition": "A description of possible actions or events that might happen in the future.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "situation_model",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "We need to prepare for the worst-case <w>scenario</w> just to be safe.",
                            "target_lang_translations": {
                                "ru": "Нам нужно подготовиться к худшему <w>сценарию</w> просто на всякий случай."
                            }
                        },
                        {
                            "text": "In this <w>scenario</w>, the company would lose a significant amount of money.",
                            "target_lang_translations": {
                                "ru": "При таком <w>сценарии</w> компания потеряла бы значительную сумму денег."
                            }
                        }
                    ],
                    "synonyms": [
                        "situation",
                        "possibility",
                        "case"
                    ],
                    "common_phrases": [
                        "worst-case scenario",
                        "best-case scenario",
                        "likely scenario",
                        "nightmare scenario"
                    ],
                    "target_lang_definitions": {
                        "ru": "Описание возможных событий или план действий, которые могут произойти в будущем."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "сценарий",
                                "target_lang_sense_clarification": "план развития событий"
                            },
                            {
                                "target_lang_word": "вариант развития событий",
                                "target_lang_sense_clarification": "предполагаемая ситуация"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "b9e3fef7-752f-30b9-b18f-cd33970e84fa",
                    "sense_definition": "A written outline of the plot and scenes of a dramatic or literary work.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "literary_outline",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The director asked the writer to submit a detailed <w>scenario</w> before starting the script.",
                            "target_lang_translations": {
                                "ru": "Режиссёр попросил писателя представить подробный <w>сценарный план</w> перед началом работы над скриптом."
                            }
                        },
                        {
                            "text": "She created a brief <w>scenario</w> to explain the main events of the play.",
                            "target_lang_translations": {
                                "ru": "Она создала краткий <w>сценарий</w>, чтобы объяснить основные события пьесы."
                            }
                        }
                    ],
                    "synonyms": [
                        "outline",
                        "synopsis",
                        "plot"
                    ],
                    "common_phrases": [
                        "write a scenario",
                        "draft a scenario"
                    ],
                    "target_lang_definitions": {
                        "ru": "Краткое изложение сюжета и сцен драматического или литературного произведения."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "сценарный план",
                                "target_lang_sense_clarification": "схема сюжета"
                            },
                            {
                                "target_lang_word": "либретто",
                                "target_lang_sense_clarification": "для оперы или балета"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "e6c7eed6-32f6-3606-b8f0-9c95aa48f044",
                    "sense_definition": "A complete screenplay or script for a film or broadcast.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "literary_outline",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The filmmaker spent months adapting the novel into a workable <w>scenario</w>.",
                            "target_lang_translations": {
                                "ru": "Кинематографист потратил месяцы на адаптацию романа в рабочий <w>сценарий</w>."
                            }
                        },
                        {
                            "text": "He is famous for writing the <w>scenario</w> of that classic black-and-white movie.",
                            "target_lang_translations": {
                                "ru": "Он известен тем, что написал <w>сценарий</w> к тому классическому черно-белому фильму."
                            }
                        }
                    ],
                    "synonyms": [
                        "screenplay",
                        "script"
                    ],
                    "target_lang_definitions": {
                        "ru": "Полный текст пьесы или фильма с диалогами и указаниями для актёров."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "сценарий",
                                "target_lang_sense_clarification": "текст фильма или пьесы"
                            },
                            {
                                "target_lang_word": "киносценарий",
                                "target_lang_sense_clarification": "для кинофильмов"
                            }
                        ]
                    }
                }
            ]
        }
    ]
