    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "926cfd6b-6c4d-37b6-8ecc-ca4e55eb683c",
                    "sense_definition": "Наклонение головы или корпуса вперёд в знак приветствия, благодарности или уважения.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "При встрече он сделал вежливый <поклон> и улыбнулся.",
                            "target_lang_translations": {
                                "en": "Upon meeting, he made a polite <bow> and smiled."
                            }
                        },
                        {
                            "text": "Артисты вышли на <поклон> под громкие аплодисменты зрителей.",
                            "target_lang_translations": {
                                "en": "The artists came out for a <bow> to the loud applause of the audience."
                            }
                        },
                        {
                            "text": "Гость отвесил хозяйке глубокий <поклон>.",
                            "target_lang_translations": {
                                "en": "The guest gave the hostess a deep <bow>."
                            }
                        }
                    ],
                    "common_phrases": [
                        "отвесить поклон",
                        "низкий поклон",
                        "сделать поклон",
                        "выход на поклон"
                    ],
                    "target_lang_definitions": {
                        "en": "A bending of the head or body forward as a sign of greeting, gratitude, or respect."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "bow",
                                "target_lang_sense_clarification": "gesture of respect"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "b34ec4ae-89dc-335e-b398-e06e9d78d840",
                    "sense_definition": "Приветствие или пожелание благополучия, передаваемое кому-либо заочно (обычно через третье лицо или в письме).",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Прошу передать мой сердечный <поклон> вашим родителям.",
                            "target_lang_translations": {
                                "en": "Please convey my heartfelt <regards> to your parents."
                            }
                        },
                        {
                            "text": "Вам большой <поклон> от всех наших общих друзей.",
                            "target_lang_translations": {
                                "en": "Warm <regards> to you from all our mutual friends."
                            }
                        }
                    ],
                    "synonyms": [
                        "привет",
                        "приветствие"
                    ],
                    "common_phrases": [
                        "передать поклон",
                        "шлю поклон",
                        "земной поклон"
                    ],
                    "target_lang_definitions": {
                        "en": "A greeting or wish for well-being sent to someone who is absent (usually through a third party or in a letter)."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "regards",
                                "target_lang_sense_clarification": "greetings sent to someone"
                            },
                            {
                                "target_lang_word": "greetings",
                                "target_lang_sense_clarification": "expression of good wishes"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "805b69e2-ba37-3538-a3fa-a8b6e4b4dd1d",
                    "sense_definition": "Униженная просьба или обращение к кому-либо за покровительством или помощью.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Ему пришлось идти на <поклон> к начальству, чтобы решить проблему.",
                            "target_lang_translations": {
                                "en": "He had to go <begging> to the management to solve the problem."
                            }
                        },
                        {
                            "text": "Гордость не позволяла ему идти с <поклоном> к богатым родственникам.",
                            "target_lang_translations": {
                                "en": "Pride did not allow him to go with a <supplication> to his rich relatives."
                            }
                        }
                    ],
                    "synonyms": [
                        "просьба",
                        "ходатайство"
                    ],
                    "common_phrases": [
                        "идти на поклон"
                    ],
                    "traits": [
                        {
                            "trait_type": "archaic",
                            "comment": "sense is archaic, but the phrase 'идти на поклон' is still used idiomatically"
                        }
                    ],
                    "target_lang_definitions": {
                        "en": "A humble request or appeal to someone for patronage or help."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "supplication",
                                "target_lang_sense_clarification": "humble request"
                            },
                            {
                                "target_lang_word": "obeisance",
                                "target_lang_sense_clarification": "act of submission"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}