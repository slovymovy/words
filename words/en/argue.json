{
    "word_family": [
        "argument",
        "argumentation",
        "argumentative",
        "arguable",
        "arguably",
        "arguer"
    ],
    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "bb36d2c9-62e3-3457-8855-91e10d0a6d58",
                    "sense_definition": "To speak angrily to someone because you disagree with them.",
                    "learner_level": "A2",
                    "frequency": "High",
                    "semantic_group_id": "disagreement",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "My brothers always <w>argue</w> about whose turn it is to wash the dishes.",
                            "target_lang_translations": {
                                "ru": "Мои братья всегда <w>спорят</w> о том, чья очередь мыть посуду."
                            }
                        },
                        {
                            "text": "It is not polite to <w>argue</w> with your parents in public.",
                            "target_lang_translations": {
                                "ru": "Невежливо <w>ругаться</w> с родителями на людях."
                            }
                        }
                    ],
                    "synonyms": [
                        "bicker",
                        "wrangle",
                        "altercate"
                    ],
                    "antonyms": [
                        "agree"
                    ],
                    "common_phrases": [
                        "argue with someone",
                        "argue about something",
                        "argue constantly",
                        "stop arguing"
                    ],
                    "target_lang_definitions": {
                        "ru": "Говорить с кем-то сердито из-за несогласия; вступать в перепалку."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "спорить",
                                "target_lang_sense_clarification": "выражать несогласие, дискутировать"
                            },
                            {
                                "target_lang_word": "ссориться",
                                "target_lang_sense_clarification": "конфликтовать, ругаться"
                            },
                            {
                                "target_lang_word": "ругаться",
                                "target_lang_sense_clarification": "браниться, вести перепалку на повышенных тонах"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "46990edd-2cc9-368f-aac0-e1fcbb702fdc",
                    "sense_definition": "To give reasons why you think something is true or right, often to persuade others.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "reasoning",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The author <w>argues</w> that technology makes us less social.",
                            "target_lang_translations": {
                                "ru": "Автор <w>утверждает</w>, что технологии делают нас менее общительными."
                            }
                        },
                        {
                            "text": "She went to the meeting to <w>argue</w> for a change in the company policy.",
                            "target_lang_translations": {
                                "ru": "Она пошла на собрание, чтобы <w>отстаивать</w> изменение политики компании."
                            }
                        }
                    ],
                    "synonyms": [
                        "submit",
                        "remonstrate"
                    ],
                    "common_phrases": [
                        "argue that",
                        "argue for",
                        "argue against",
                        "argue a point"
                    ],
                    "target_lang_definitions": {
                        "ru": "Приводить доводы в пользу того, что что-то верно или правильно; убеждать."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "доказывать",
                                "target_lang_sense_clarification": "убеждать в истинности, приводить доказательства"
                            },
                            {
                                "target_lang_word": "утверждать",
                                "target_lang_sense_clarification": "настойчиво говорить, заявлять"
                            },
                            {
                                "target_lang_word": "аргументировать",
                                "target_lang_sense_clarification": "обосновывать мнение доводами"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "d6919380-fc05-30fb-96b1-4e02b6f37459",
                    "sense_definition": "To show clearly that something exists or is true; to suggest or imply.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "implication",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The empty streets <w>argued</w> that the town had been abandoned long ago.",
                            "target_lang_translations": {
                                "ru": "Пустые улицы <w>свидетельствовали</w> о том, что город был давно покинут."
                            }
                        },
                        {
                            "text": "His precise knowledge of the topic <w>argues</w> a good education.",
                            "target_lang_translations": {
                                "ru": "Его точное знание темы <w>говорит</w> о хорошем образовании."
                            }
                        }
                    ],
                    "common_phrases": [
                        "argue a lack of"
                    ],
                    "target_lang_definitions": {
                        "ru": "Ясно показывать, что что-то существует или является правдой; свидетельствовать о чем-либо."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "свидетельствовать",
                                "target_lang_sense_clarification": "служить доказательством, указывать на что-то"
                            },
                            {
                                "target_lang_word": "говорить",
                                "target_lang_sense_clarification": "перен. подтверждать наличие чего-либо"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "pos": "name",
            "senses": [
                {
                    "sense_id": "27f835fb-599b-3735-b70c-80dc7daeb3f3",
                    "sense_definition": "A surname.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "",
                    "name_type": "person_name",
                    "examples": [
                        {
                            "text": "We met a man named Mr. <w>Argues</w> at the conference yesterday.",
                            "target_lang_translations": {
                                "ru": "Вчера на конференции мы встретили человека по фамилии <w>Аргьюс</w>."
                            }
                        },
                        {
                            "text": "The <w>Argues</w> family has lived in this village for three generations.",
                            "target_lang_translations": {
                                "ru": "Семья <w>Аргьюс</w> живет в этой деревне уже три поколения."
                            }
                        }
                    ],
                    "traits": [
                        {
                            "trait_type": "surname",
                            "comment": "used as a family name"
                        }
                    ],
                    "target_lang_definitions": {
                        "ru": "Фамилия."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "Аргьюс",
                                "target_lang_sense_clarification": "транслитерация фамилии"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}