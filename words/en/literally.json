    "entries": [
        {
            "pos": "adverb",
            "senses": [
                {
                    "sense_id": "30d4f33d-21b6-3ac6-97e7-83fb0ffd9039",
                    "sense_definition": "In a literal manner or sense; exactly as written or stated, without metaphor or exaggeration.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "He is prone to exaggeration, so do not take what he says <w>literally</w>.",
                            "target_lang_translations": {
                                "ru": "Он склонен к преувеличениям, поэтому не воспринимай его слова <w>буквально</w>."
                            }
                        },
                        {
                            "text": "There are <w>literally</w> millions of individual pieces of space debris orbiting the planet.",
                            "target_lang_translations": {
                                "ru": "На орбите планеты находятся <w>буквально</w> миллионы отдельных фрагментов космического мусора."
                            }
                        }
                    ],
                    "synonyms": [
                        "exactly",
                        "precisely",
                        "actually",
                        "truly",
                        "unfiguratively"
                    ],
                    "antonyms": [
                        "figuratively",
                        "metaphorically",
                        "idiomatically"
                    ],
                    "common_phrases": [
                        "take literally",
                        "quite literally",
                        "interpret literally"
                    ],
                    "target_lang_definitions": {
                        "ru": "В прямом смысле слова; точно так, как написано или сказано, без метафор и преувеличений."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "буквально",
                                "target_lang_sense_clarification": "в прямом смысле"
                            },
                            {
                                "target_lang_word": "дословно",
                                "target_lang_sense_clarification": "слово в слово"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "680b6704-954d-33ce-a26f-99eaea4792f2",
                    "sense_definition": "Used to emphasize a statement or description that is not actually true or possible, often to express strong feeling.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "2",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "He was so surprised by the news that he <w>literally</w> jumped twenty feet in the air.",
                            "target_lang_translations": {
                                "ru": "Он был так удивлён новостью, что <w>буквально</w> подпрыгнул на двадцать футов в воздух."
                            }
                        },
                        {
                            "text": "On the day of the event, people were <w>literally</w> glued to their television sets.",
                            "target_lang_translations": {
                                "ru": "В день события люди <w>буквально</w> прилипли к экранам своих телевизоров."
                            }
                        }
                    ],
                    "synonyms": [
                        "virtually",
                        "really"
                    ],
                    "common_phrases": [
                        "literally dying",
                        "literally starving"
                    ],
                    "traits": [
                        {
                            "trait_type": "colloquial",
                            "comment": "often criticized as incorrect usage"
                        }
                    ],
                    "target_lang_definitions": {
                        "ru": "Используется для эмоционального усиления высказывания, описывающего что-либо преувеличенное или невозможное."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "буквально",
                                "target_lang_sense_clarification": "как усилительная частица"
                            },
                            {
                                "target_lang_word": "прямо-таки",
                                "target_lang_sense_clarification": "разговорное усиление"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "a89b68ca-f825-3253-b0f4-6456fcc0f37c",
                    "sense_definition": "Used to emphasize that a statement is simple, straightforward, or nothing more than what is said.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "3",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "It is not hard to make; you <w>literally</w> just put it in the microwave for five minutes.",
                            "target_lang_translations": {
                                "ru": "Это нетрудно приготовить; нужно <w>просто</w> поставить это в микроволновку на пять минут."
                            }
                        },
                        {
                            "text": "It will not take me long to get back because the store is <w>literally</w> two blocks away.",
                            "target_lang_translations": {
                                "ru": "Я быстро вернусь, потому что магазин находится <w>буквально</w> в двух кварталах отсюда."
                            }
                        }
                    ],
                    "synonyms": [
                        "simply",
                        "just",
                        "merely",
                        "only"
                    ],
                    "common_phrases": [
                        "literally just"
                    ],
                    "target_lang_definitions": {
                        "ru": "Используется, чтобы подчеркнуть простоту действия или точность факта."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "просто",
                                "target_lang_sense_clarification": "всего лишь"
                            },
                            {
                                "target_lang_word": "буквально",
                                "target_lang_sense_clarification": "на самом деле"
                            }
                        ]
                    }
                }
            ]
        }
    ]
