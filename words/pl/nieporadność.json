    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "b08c3830-9049-3f6b-a8cb-951af1322870",
                    "sense_definition": "Brak umiejętności radzenia sobie w trudnych sytuacjach lub w życiu codziennym; cecha osoby, która potrzebuje pomocy innych.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "helplessness",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Jego życiowa <w>nieporadność</w> sprawiała, że rodzice musieli go wspierać finansowo nawet po trzydziestce.",
                            "target_lang_translations": {
                                "ru": "Его житейская <w>неприспособленность</w> приводила к тому, что родителям приходилось поддерживать его финансово даже после тридцати."
                            }
                        },
                        {
                            "text": "Dziecięca <w>nieporadność</w> jest naturalna, ale u dorosłego człowieka może być problemem.",
                            "target_lang_translations": {
                                "ru": "Детская <w>беспомощность</w> естественна, но у взрослого человека она может стать проблемой."
                            }
                        }
                    ],
                    "synonyms": [
                        "bezradność",
                        "niezaradność",
                        "niedołęstwo"
                    ],
                    "antonyms": [
                        "zaradność",
                        "przedsiębiorczość",
                        "samodzielność"
                    ],
                    "common_phrases": [
                        "życiowa nieporadność",
                        "dziecięca nieporadność",
                        "wyuczona nieporadność"
                    ],
                    "target_lang_definitions": {
                        "ru": "Отсутствие умения справляться с трудными ситуациями или повседневной жизнью; черта человека, нуждающегося в помощи других."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "беспомощность",
                                "target_lang_sense_clarification": "состояние, когда человек не может справиться сам"
                            },
                            {
                                "target_lang_word": "неприспособленность",
                                "target_lang_sense_clarification": "неумение адаптироваться к жизненным условиям"
                            },
                            {
                                "target_lang_word": "непрактичность",
                                "target_lang_sense_clarification": "отсутствие житейской хватки"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "4449fade-b113-3357-8942-190bba941043",
                    "sense_definition": "Brak zręczności, precyzji lub wdzięku w poruszaniu się albo wykonywaniu czynności fizycznych.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "clumsiness",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Przez swoją <w>nieporadność</w> upuścił tacę z napojami na środku sali.",
                            "target_lang_translations": {
                                "ru": "Из-за своей <w>неуклюжести</w> он уронил поднос с напитками посреди зала."
                            }
                        },
                        {
                            "text": "Jej ruchowa <w>nieporadność</w> utrudniała naukę tańca, ale nadrabiała to entuzjazmem.",
                            "target_lang_translations": {
                                "ru": "Её двигательная <w>неловкость</w> затрудняла обучение танцам, но она компенсировала это энтузиазмом."
                            }
                        }
                    ],
                    "synonyms": [
                        "niezgrabność",
                        "niezdarność",
                        "niezręczność"
                    ],
                    "antonyms": [
                        "zręczność",
                        "zwinność",
                        "gracja"
                    ],
                    "common_phrases": [
                        "ruchowa nieporadność",
                        "fizyczna nieporadność"
                    ],
                    "target_lang_definitions": {
                        "ru": "Отсутствие ловкости, точности или грации в движениях или при выполнении физических действий."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "неуклюжесть",
                                "target_lang_sense_clarification": "отсутствие грации, неловкость в движениях"
                            },
                            {
                                "target_lang_word": "неловкость",
                                "target_lang_sense_clarification": "недостаток сноровки"
                            }
                        ]
                    }
                }
            ]
        }
