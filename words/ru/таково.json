    "entries": [
        {
            "pos": "adjective",
            "senses": [
                {
                    "sense_id": "c6377a27-baab-3f5f-8348-97fa09a55627",
                    "sense_definition": "Краткая форма среднего рода от <w>таков</w>; указывает на качество, свойство или состояние, упомянутое ранее или раскрываемое далее.",
                    "learner_level": "B1",
                    "frequency": "Middle",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Нынешнее положение дел <w>таково</w>, что нам придётся отложить поездку.",
                            "target_lang_translations": {
                                "en": "The current state of affairs is <w>such</w> that we will have to postpone the trip."
                            }
                        },
                        {
                            "text": "Моё окончательное решение <w>таково</w>, и я не собираюсь его менять.",
                            "target_lang_translations": {
                                "en": "My final decision is <w>this</w>, and I am not going to change it."
                            }
                        }
                    ],
                    "synonyms": [
                        "такое"
                    ],
                    "antonyms": [
                        "иное",
                        "другое"
                    ],
                    "common_phrases": [
                        "положение таково",
                        "дело таково",
                        "решение таково"
                    ],
                    "target_lang_definitions": {
                        "en": "Short neuter form of \"takov\"; indicates a quality, property, or state mentioned earlier or revealed later."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "such",
                                "target_lang_sense_clarification": "referring to a quality or state"
                            },
                            {
                                "target_lang_word": "as follows",
                                "target_lang_sense_clarification": "introducing an explanation or list"
                            },
                            {
                                "target_lang_word": "this",
                                "target_lang_sense_clarification": "demonstrative, referring to a specific state"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "pos": "adverb",
            "senses": [
                {
                    "sense_id": "1fafbfad-afda-3572-9080-36e822e5531e",
                    "sense_definition": "Употребляется в значении <w>так</w> или «до такой степени».",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Каково лето, <w>таково</w> и сено.",
                            "target_lang_translations": {
                                "en": "As is the summer, <w>so</w> is the hay."
                            }
                        },
                        {
                            "text": "Ему стало <w>таково</w> грустно, что он чуть не заплакал.",
                            "target_lang_translations": {
                                "en": "He felt <w>so</w> sad that he almost cried."
                            }
                        }
                    ],
                    "synonyms": [
                        "так"
                    ],
                    "common_phrases": [
                        "каково таково"
                    ],
                    "traits": [
                        {
                            "trait_type": "colloquial",
                            "comment": ""
                        }
                    ],
                    "target_lang_definitions": {
                        "en": "Used in the meaning of \"so\" or \"to such an extent\"."
                    },
                    "translations": {
