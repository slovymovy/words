    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "4117ee10-ea71-356f-b490-f2b01a6fc777",
                    "sense_definition": "The formal act of forgiving someone for a sin, guilt, or offense, often used in a religious context.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "forgiveness",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The priest granted the penitent man <w>absolution</w> for his past mistakes.",
                            "target_lang_translations": {
                                "ru": "Священник даровал раскаявшемуся мужчине <w>отпущение</w> его прошлых ошибок."
                            }
                        },
                        {
                            "text": "She hoped to receive <w>absolution</w> from her friend after apologizing sincerely.",
                            "target_lang_translations": {
                                "ru": "Она надеялась получить <w>прощение</w> от подруги после искренних извинений."
                            }
                        }
                    ],
                    "synonyms": [
                        "forgiveness",
                        "pardon",
                        "remission",
                        "exoneration"
                    ],
                    "antonyms": [
                        "condemnation",
                        "punishment",
                        "blame"
                    ],
                    "common_phrases": [
                        "grant absolution",
                        "seek absolution",
                        "receive absolution"
                    ],
                    "target_lang_definitions": {
                        "ru": "Формальный акт прощения греха, вины или проступка, часто используемый в религиозном контексте."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "отпущение",
                                "target_lang_sense_clarification": "грехов, религиозное"
                            },
                            {
                                "target_lang_word": "прощение",
                                "target_lang_sense_clarification": "общее значение"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "85ab4ba7-ef05-3b88-b849-7a6c65803998",
                    "sense_definition": "A formal declaration by a judge or legal authority that an accused person is innocent.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "legal_decision",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The lawyer fought hard for the complete <w>absolution</w> of his client in court.",
                            "target_lang_translations": {
                                "ru": "Адвокат упорно боролся в суде за полное <w>оправдание</w> своего клиента."
                            }
                        },
                        {
                            "text": "Without new evidence, the trial ended in the <w>absolution</w> of the defendant.",
                            "target_lang_translations": {
                                "ru": "Без новых улик судебный процесс завершился <w>оправданием</w> подсудимого."
                            }
                        }
                    ],
                    "synonyms": [
                        "acquittal",
                        "exculpation",
                        "clearance"
                    ],
                    "antonyms": [
                        "conviction",
                        "sentencing"
                    ],
                    "target_lang_definitions": {
                        "ru": "Официальное постановление судьи или юридического органа о невиновности обвиняемого."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "оправдание",
                                "target_lang_sense_clarification": "судебное решение"
                            }
                        ]
                    }
                }
            ]
        }
    ]
