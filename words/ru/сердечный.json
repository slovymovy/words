                    "frequency": "High",
                    "semantic_group_id": "medical",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "У пациента случился <w>сердечный</w> приступ.",
                            "target_lang_translations": {
                                "en": "The patient had a <w>heart</w> attack."
                            }
                        },
                        {
                            "text": "Врачи долго боролись за <w>сердечный</w> ритм больного.",
                            "target_lang_translations": {
                                "en": "The doctors fought for a long time for the patient's <w>heart</w> rhythm."
                            }
                        }
                    ],
                    "synonyms": [
                        "амурный",
                        "душевный"
                    ],
                    "common_phrases": [
                        "сердечный приступ",
                        "сердечная недостаточность",
