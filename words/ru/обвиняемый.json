                        {
                            "trait_type": "form",
                            "comment": "participle"
                        }
                    ],
                    "target_lang_definitions": {
                        "en": "Being charged with or blamed for an offense or wrongdoing (participle form)."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "accused",
