    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "d00ffe01-c405-3c89-9dcb-117b07950918",
                    "sense_definition": "Форма повелительного наклонения глагола <w>постоять</w> (единственное число).",
                    "learner_level": "A2",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Пожалуйста, <постой> здесь пару минут, я скоро вернусь.",
                            "target_lang_translations": {
                                "en": "Please <stand> here for a couple of minutes, I will be back soon."
                            }
                        },
                        {
                            "text": "<Постой> смирно, пока я тебя фотографирую.",
                            "target_lang_translations": {
                                "en": "<Stand> still while I take a photo of you."
                            }
                        }
                    ],
                    "common_phrases": [
                        "постой здесь",
                        "постой немного"
                    ],
                    "traits": [
                        {
                            "trait_type": "form",
                            "comment": "imperative"
                        }
                    ],
                    "target_lang_definitions": {
                        "en": "Imperative form of the verb 'to stand for a while' (singular)."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "stand",
                                "target_lang_sense_clarification": "imperative, to stay in an upright position for a short time"
                            },
                            {
                                "target_lang_word": "wait",
                                "target_lang_sense_clarification": "to stay in place"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "pos": "interjection",
            "senses": [
                {
                    "sense_id": "ce79c961-3f98-3461-a6c9-3571987fb0e8",
                    "sense_definition": "Возглас, выражающий просьбу подождать, остановиться или не спешить.",
                    "learner_level": "A2",
                    "frequency": "High",
                    "semantic_group_id": "wait_request",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "<Постой>, ты забыл взять свои документы!",
                            "target_lang_translations": {
                                "en": "<Wait>, you forgot to take your documents!"
                            }
                        },
                        {
                            "text": "<Постой>, не уходи так быстро, нам нужно поговорить.",
                            "target_lang_translations": {
                                "en": "<Wait>, don't leave so quickly, we need to talk."
                            }
                        }
                    ],
                    "synonyms": [
                        "подожди",
                        "погоди",
                        "стой"
                    ],
                    "common_phrases": [
                        "постой-ка"
                    ],
                    "target_lang_definitions": {
                        "en": "Exclamation expressing a request to wait, stop, or not rush."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "wait",
                                "target_lang_sense_clarification": "request to stop or pause"
                            },
                            {
                                "target_lang_word": "hold on",
                                "target_lang_sense_clarification": "informal request to wait"
                            },
                            {
                                "target_lang_word": "stop",
                                "target_lang_sense_clarification": "command to cease movement"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "0336d539-81a5-3bc4-9f65-2db1bbc94dd0",
                    "sense_definition": "Употребляется для выражения удивления, внезапной догадки, несогласия или при попытке вспомнить что-либо.",
                    "learner_level": "B1",
                    "frequency": "Middle",
                    "semantic_group_id": "wait_request",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "<Постой>, разве мы не договаривались встретиться завтра?",
                            "target_lang_translations": {
                                "en": "<Wait a minute>, didn't we agree to meet tomorrow?"
                            }
                        },
                        {
                            "text": "<Постой>, где я мог видеть этого человека раньше?",
                            "target_lang_translations": {
                                "en": "<Hold on>, where could I have seen this person before?"
                            }
                        }
                    ],
                    "synonyms": [
                        "погоди",
                        "подожди"
                    ],
                    "target_lang_definitions": {
                        "en": "Used to express surprise, sudden insight, disagreement, or when trying to remember something."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "wait a minute",
                                "target_lang_sense_clarification": "expression of sudden realization or doubt"
                            },
                            {
                                "target_lang_word": "hold on",
                                "target_lang_sense_clarification": "expression of surprise or interruption"
                            },
                            {
                                "target_lang_word": "hang on",
                                "target_lang_sense_clarification": "informal expression of sudden thought"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "ca31c3dc-51c0-3991-aa64-600e93635364",
                    "sense_definition": "Временное проживание, ночевка в чужом доме или нанятом помещении.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "lodging",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Усталые путники попросились в избу на <постой>.",
                            "target_lang_translations": {
                                "en": "The tired travelers asked for <lodging> in the hut."
                            }
                        },
                        {
                            "text": "За <постой> и еду хозяева попросили небольшую плату.",
                            "target_lang_translations": {
                                "en": "The hosts asked for a small fee for <lodging> and food."
                            }
