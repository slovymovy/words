                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "establishment",
                                "target_lang_sense_clarification": "the act of bringing something into existence or making it widely accepted"
                            },
                            {
                                "target_lang_word": "consolidation",
                                "target_lang_sense_clarification": "the action or process of making something stronger or more solid"
                            },
                            {
                                "target_lang_word": "strengthening",
                                "target_lang_sense_clarification": "the process of making something stronger or more effective"
                            }
                        ]
                    }
                }
            ]
        }
