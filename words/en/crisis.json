    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "617afad8-9768-398f-9396-44dc47a20878",
                    "sense_definition": "An unstable or dangerous situation in political, social, or economic affairs that requires immediate action.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "emergency_situation",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The government acted quickly to resolve the political <w>crisis</w> before it got worse.",
                            "target_lang_translations": {
                                "ru": "Правительство действовало быстро, чтобы разрешить политический <w>кризис</w>, пока он не усугубился."
                            }
                        },
                        {
                            "text": "Many families lost their savings during the recent financial <w>crisis</w>.",
                            "target_lang_translations": {
                                "ru": "Многие семьи потеряли свои сбережения во время недавнего финансового <w>кризиса</w>."
                            }
                        }
                    ],
                    "synonyms": [
                        "emergency",
                        "disaster",
                        "catastrophe",
                        "turmoil"
                    ],
                    "antonyms": [
                        "stability",
                        "peace",
                        "prosperity"
                    ],
                    "common_phrases": [
                        "financial crisis",
                        "economic crisis",
                        "political crisis",
                        "energy crisis",
                        "crisis management"
                    ],
                    "target_lang_definitions": {
                        "ru": "Нестабильная или опасная ситуация в политических, социальных или экономических делах, требующая немедленных действий."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "кризис",
                                "target_lang_sense_clarification": "политический или экономический"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "60fc8a43-44f6-327c-8876-0ca4c7f3d374",
                    "sense_definition": "A time of intense difficulty, trouble, or danger in a person's life.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "emergency_situation",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "He bought a red sports car during his midlife <w>crisis</w>.",
                            "target_lang_translations": {
                                "ru": "Он купил красную спортивную машину во время <w>кризиса</w> среднего возраста."
                            }
                        },
                        {
                            "text": "She suffered a <w>crisis</w> of confidence right before her big presentation.",
                            "target_lang_translations": {
                                "ru": "У неё случился <w>кризис</w> уверенности в себе прямо перед важной презентацией."
                            }
                        }
                    ],
                    "synonyms": [
                        "difficulty",
                        "trouble",
                        "trauma"
                    ],
                    "common_phrases": [
                        "midlife crisis",
                        "identity crisis",
                        "existential crisis"
                    ],
                    "target_lang_definitions": {
                        "ru": "Период сильных трудностей, проблем или опасности в жизни человека."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "кризис",
                                "target_lang_sense_clarification": "психологический или жизненный"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "ee0c93af-77dd-3faf-b806-2e1a3a0a3209",
                    "sense_definition": "A crucial or decisive point or situation where a change must happen; a turning point.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "turning_point",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The negotiations reached a <w>crisis</w> late last night when both sides refused to compromise.",
                            "target_lang_translations": {
                                "ru": "Переговоры достигли <w>критической точки</w> поздно ночью, когда обе стороны отказались идти на компромисс."
                            }
                        },
                        {
                            "text": "This moment is a <w>crisis</w> in the history of our nation that will determine our future.",
                            "target_lang_translations": {
                                "ru": "Этот момент — <w>переломный этап</w> в истории нашей нации, который определит наше будущее."
                            }
                        }
                    ],
                    "synonyms": [
                        "turning point",
                        "crossroads",
                        "critical point"
                    ],
                    "common_phrases": [
                        "reach a crisis"
                    ],
                    "target_lang_definitions": {
                        "ru": "Решающий или критический момент, когда должны произойти перемены; поворотный пункт."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "переломный момент",
                                "target_lang_sense_clarification": "решающий этап"
                            },
                            {
                                "target_lang_word": "поворотный пункт",
                                "target_lang_sense_clarification": "момент изменения"
                            },
                            {
                                "target_lang_word": "критическая точка",
                                "target_lang_sense_clarification": "пик напряжения"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "e8641f14-4421-3cc2-ba64-995f2ba45239",
                    "sense_definition": "A sudden change in the course of a disease, usually at which point the patient is expected to either recover or die.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "turning_point",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The fever broke after the patient passed the <w>crisis</w> early this morning.",
                            "target_lang_translations": {
                                "ru": "Лихорадка спала после того, как пациент миновал <w>кризис</w> сегодня рано утром."
                            }
                        },
                        {
                            "text": "Doctors monitored him closely as the disease reached its <w>crisis</w>.",
                            "target_lang_translations": {
                                "ru": "Врачи внимательно наблюдали за ним, когда болезнь достигла своего <w>кризиса</w>."
                            }
                        }
                    ],
                    "traits": [
                        {
                            "trait_type": "regional",
                            "comment": "medical"
                        }
                    ],
                    "target_lang_definitions": {
                        "ru": "Внезапное изменение в течении болезни, обычно момент, когда решается, выздоровеет пациент или умрет."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "кризис",
                                "target_lang_sense_clarification": "перелом в болезни"
                            },
                            {
                                "target_lang_word": "криз",
                                "target_lang_sense_clarification": "острый приступ"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "1e6c2e8a-e705-3f5f-9aab-5f19f3239364",
                    "sense_definition": "A point in a drama at which a conflict reaches a peak before being resolved.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "turning_point",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The protagonist faces a moral <w>crisis</w> in the second act of the play.",
                            "target_lang_translations": {
                                "ru": "Главный герой сталкивается с моральным <w>кризисом</w> во втором акте пьесы."
                            }
                        },
                        {
                            "text": "The <w>crisis</w> of the story leads directly to the tragic conclusion.",
                            "target_lang_translations": {
                                "ru": "<w>Кульминация</w> истории ведет прямо к трагической развязке."
                            }
                        }
                    ],
                    "synonyms": [
                        "climax"
                    ],
                    "traits": [
                        {
                            "trait_type": "regional",
                            "comment": "literary"
                        }
                    ],
                    "target_lang_definitions": {
                        "ru": "Момент в драме, когда конфликт достигает пика перед разрешением."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "кульминация",
                                "target_lang_sense_clarification": "высшая точка напряжения"
                            },
                            {
                                "target_lang_word": "кризис",
                                "target_lang_sense_clarification": "в развитии сюжета"
                            }
                        ]
                    }
                }
            ]
        }
    ]
