    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "90269b65-eda2-32d2-88a0-92bfc584d399",
                    "sense_definition": "To remove hard mineral deposits from the surface of metal or the inside of appliances like kettles and boilers.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "cleaning",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "You should <w>descale</w> your coffee machine every few months to keep it working efficiently.",
                            "target_lang_translations": {
                                "ru": "Вам следует <w>очищать от накипи</w> вашу кофемашину каждые несколько месяцев, чтобы она работала эффективно."
                            }
                        },
                        {
                            "text": "The plumber used a strong chemical to <w>descale</w> the old heating pipes.",
                            "target_lang_translations": {
                                "ru": "Сантехник использовал сильное химическое средство, чтобы <w>очистить от накипи</w> старые отопительные трубы."
                            }
                        }
                    ],
                    "common_phrases": [
                        "descale a kettle",
                        "descale a coffee machine",
                        "descale the boiler"
                    ],
                    "target_lang_definitions": {
                        "ru": "Удалять известковый налет (накипь) с металлических поверхностей или изнутри таких приборов, как чайники и бойлеры."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "удалять накипь",
                                "target_lang_sense_clarification": "действие"
                            },
                            {
                                "target_lang_word": "очищать от накипи",
                                "target_lang_sense_clarification": "процесс очистки"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "665bd7ce-a22d-3d04-bce5-71cc713702df",
                    "sense_definition": "To remove the small, hard plates from the skin of a fish.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "cleaning",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The chef showed the apprentice how to <w>descale</w> a fish without tearing the skin.",
                            "target_lang_translations": {
                                "ru": "Шеф-повар показал ученику, как <w>очистить от чешуи</w> рыбу, не разрывая кожу."
                            }
                        },
                        {
                            "text": "It is much easier to <w>descale</w> the catch if you have the right tool.",
                            "target_lang_translations": {
                                "ru": "Гораздо проще <w>очистить от чешуи</w> улов, если у вас есть подходящий инструмент."
                            }
                        }
                    ],
                    "synonyms": [
                        "scale",
                        "unscale"
                    ],
                    "common_phrases": [
                        "descale a fish"
                    ],
                    "target_lang_definitions": {
                        "ru": "Счищать мелкие твердые пластинки (чешую) с кожи рыбы."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "чистить",
                                "target_lang_sense_clarification": "рыбу (общий термин)"
                            },
                            {
                                "target_lang_word": "очищать от чешуи",
                                "target_lang_sense_clarification": "конкретное действие"
                            }
                        ]
                    }
                }
            ]
        }
    ]
