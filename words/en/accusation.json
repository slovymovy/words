        "accusingly"
    ],
    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "bcd74209-e60d-3552-ab30-867269d97797",
                    "sense_definition": "A statement saying that someone has done something morally wrong, illegal, or unkind.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "You should not make a serious <w>accusation</w> without having any proof.",
                            "target_lang_translations": {
                                "ru": "Не следует выдвигать серьезное <w>обвинение</w> без каких-либо доказательств."
                            }
                        },
                        {
                            "text": "She strongly denied the <w>accusation</w> that she had stolen the money.",
                            "target_lang_translations": {
                                "ru": "Она категорически отвергла <w>обвинение</w> в том, что украла деньги."
                            }
                        }
                    ],
                    "synonyms": [
                        "allegation",
                        "charge",
                        "assertion"
                    ],
                    "antonyms": [
                        "defense",
                        "denial"
                    ],
                    "common_phrases": [
                        "false accusation",
                        "make an accusation",
                        "deny an accusation",
                        "serious accusation"
                    ],
                    "target_lang_definitions": {
                        "ru": "Утверждение о том, что кто-то совершил нечто аморальное, незаконное или недоброе"
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "обвинение",
                                "target_lang_sense_clarification": "заявление о виновности"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "88a4c82c-7d90-3909-abb1-fc69f0a458c9",
                    "sense_definition": "A formal charge of a crime brought against a person in a court of law.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The lawyer read the formal <w>accusation</w> to the jury.",
                            "target_lang_translations": {
                                "ru": "Юрист зачитал присяжным официальное <w>обвинение</w>."
                            }
                        },
                        {
                            "text": "He faced a criminal <w>accusation</w> regarding the missing funds.",
                            "target_lang_translations": {
                                "ru": "Ему было предъявлено уголовное <w>обвинение</w> в связи с пропажей средств."
                            }
                        }
                    ],
                    "synonyms": [
                        "charge",
                        "impeachment"
                    ],
                    "antonyms": [
                        "acquittal",
                        "exoneration"
                    ],
                    "common_phrases": [
                        "bring an accusation",
                        "criminal accusation"
                    ],
                    "target_lang_definitions": {
                        "ru": "Официальное обвинение в совершении преступления, предъявленное лицу в суде"
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "обвинение",
                                "target_lang_sense_clarification": "юридический акт"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}