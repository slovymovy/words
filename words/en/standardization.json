    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "a09f5af6-3abf-3209-88f7-fe641167fef0",
                    "sense_definition": "The process of establishing a standard to ensure consistency and uniformity.",
                    "learner_level": "C1",
                    "frequency": "High",
                    "semantic_group_id": "standard_process",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The <w>standardization</w> of safety procedures has reduced accidents in the factory.",
                            "target_lang_translations": {
                                "ru": "<w>Стандартизация</w> процедур безопасности привела к снижению числа несчастных случаев на заводе."
                            }
                        },
                        {
                            "text": "Global <w>standardization</w> allows products from different countries to work together seamlessly.",
                            "target_lang_translations": {
                                "ru": "Глобальная <w>стандартизация</w> позволяет продуктам из разных стран беспрепятственно работать вместе."
                            }
                        }
                    ],
                    "synonyms": [
                        "normalization",
                        "harmonization",
                        "regularization",
                        "uniformity"
                    ],
                    "antonyms": [
                        "diversification",
                        "variation"
                    ],
                    "common_phrases": [
                        "process of standardization",
                        "international standardization",
                        "lack of standardization",
                        "standardization of procedures"
                    ],
                    "target_lang_definitions": {
                        "ru": "Процесс установления стандарта для обеспечения согласованности и единообразия."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "стандартизация",
                                "target_lang_sense_clarification": "установление единых норм"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "11c42732-e34c-36f5-a419-9959c20481db",
                    "sense_definition": "The process of evaluating or adjusting something by comparing it with a standard.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "standard_process",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Proper <w>standardization</w> of the laboratory equipment is essential for accurate results.",
                            "target_lang_translations": {
                                "ru": "Правильная <w>стандартизация</w> лабораторного оборудования необходима для получения точных результатов."
                            }
                        },
                        {
                            "text": "The <w>standardization</w> of test scores allows for fair comparisons between different student groups.",
                            "target_lang_translations": {
                                "ru": "<w>Стандартизация</w> результатов тестов позволяет проводить справедливое сравнение между различными группами студентов."
                            }
                        }
                    ],
                    "synonyms": [
                        "calibration",
                        "benchmarking"
                    ],
                    "common_phrases": [
                        "standardization of tests",
                        "standardization of results"
                    ],
                    "target_lang_definitions": {
                        "ru": "Процесс оценки или корректировки чего-либо путем сравнения с эталоном."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "стандартизация",
                                "target_lang_sense_clarification": "калибровка, сравнение с эталоном"
                            }
                        ]
                    }
                }
            ]
        }
    ]
