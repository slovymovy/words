            "pos": "verb",
            "senses": [
                {
                    "sense_id": "0b590423-6b85-3b59-90bf-bb74f4b03ddf",
                    "sense_definition": "Iets, zoals kleding of beddengoed, netjes maken door eraan te trekken zodat het weer glad of recht zit.",
                    "learner_level": "B1",
                    "frequency": "Middle",
                    "semantic_group_id": "physical_smoothing",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "De kinderen moeten elke ochtend hun eigen bed <w>rechttrekken</w>.",
                            "target_lang_translations": {
                                "en": "The children have to <w>straighten</w> their own beds every morning.",
                                "ru": "Дети должны каждое утро <w>поправлять</w> свои кровати."
                            }
                        },
                        {
                            "text": "Hij heeft zijn das even <w>rechtgetrokken</w> voordat hij de kamer binnenliep.",
                            "target_lang_translations": {
                                "en": "He briefly <w>straightened</w> his tie before walking into the room.",
                                "ru": "Он <w>поправил</w> свой галстук перед тем, как войти в комнату."
                            }
                        }
                    ],
                    "synonyms": [
                        "rechtleggen"
                    ],
                    "common_phrases": [
                        "je kleren rechttrekken",
                        "het bed rechttrekken",
                        "je jasje rechttrekken"
                    ],
                    "target_lang_definitions": {
                        "en": "To make something neat, such as clothing or bedding, by pulling it so that it sits smooth or straight again.",
                        "ru": "Привести в порядок (одежду, постель), потянув или разгладив ткань."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "straighten",
