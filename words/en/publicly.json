{
    "word_family": [
        "public",
        "publication",
        "publicity",
        "publicize",
        "publicist"
    ],
    "entries": [
        {
            "pos": "adverb",
            "senses": [
                {
                    "sense_id": "8aa3a211-6288-301c-b03d-e719caa7773f",
                    "sense_definition": "In a manner that is open to be seen or heard by people in general; not in secret.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "openness",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The mayor decided to <w>publicly</w> apologize for the mistake.",
                            "target_lang_translations": {
                                "ru": "Мэр решил <w>публично</w> извиниться за ошибку."
                            }
                        },
                        {
                            "text": "She refused to discuss the details of the agreement <w>publicly</w>.",
                            "target_lang_translations": {
                                "ru": "Она отказалась обсуждать детали соглашения <w>публично</w>."
                            }
                        }
                    ],
                    "synonyms": [
                        "openly"
                    ],
                    "antonyms": [
                        "privately",
                        "secretly"
                    ],
                    "common_phrases": [
                        "publicly announce",
                        "speak publicly",
                        "publicly declare"
                    ],
                    "target_lang_definitions": {
                        "ru": "Открыто, таким образом, что это могут видеть или слышать люди; не тайно."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "публично",
                                "target_lang_sense_clarification": "открыто, гласно, в присутствии публики"
                            },
                            {
                                "target_lang_word": "при всех",
                                "target_lang_sense_clarification": "на людях, в присутствии свидетелей"
                            },
                            {
                                "target_lang_word": "открыто",
                                "target_lang_sense_clarification": "не скрываясь, явно"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "64e2e8d0-3eb5-308c-8c62-c1a4fa49a4d9",
                    "sense_definition": "By, for, or on behalf of the public or the government.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "availability",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The report is now <w>publicly</w> available on the official website.",
                            "target_lang_translations": {
                                "ru": "Отчет теперь <w>публично</w> доступен на официальном сайте."
                            }
                        },
                        {
                            "text": "The new hospital will be <w>publicly</w> funded by the state.",
                            "target_lang_translations": {
                                "ru": "Новая больница будет финансироваться <w>за счет государства</w>."
                            }
                        }
                    ],
                    "antonyms": [
                        "privately"
                    ],
                    "common_phrases": [
                        "publicly available",
                        "publicly funded",
                        "publicly traded"
                    ],
                    "target_lang_definitions": {
                        "ru": "От имени общества или государства; на средства или в интересах общественности."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "публично",
                                "target_lang_sense_clarification": "в контексте доступности или отчетности (напр. публично доступный)"
                            },
                            {
                                "target_lang_word": "общественно",
                                "target_lang_sense_clarification": "с точки зрения общества, социально"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}