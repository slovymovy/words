    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "ece282da-dc4b-36fd-bad3-e501851be6f6",
                    "sense_definition": "Специальная открытая печь для нагревания и плавки металлов или обжига керамических изделий.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "furnace_group",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Кузнец поместил железную заготовку в раскалённый <w>горн</w>, чтобы размягчить металл.",
                            "target_lang_translations": {
                                "en": "The blacksmith placed the iron billet into the red-hot <w>forge</w> to soften the metal."
                            }
                        },
                        {
                            "text": "На заводе установили новый плавильный <w>горн</w> для обработки руды.",
                            "target_lang_translations": {
                                "en": "A new smelting <w>furnace</w> was installed at the plant to process ore."
                            }
                        }
                    ],
                    "synonyms": [
                        "печь",
                        "очаг"
                    ],
                    "common_phrases": [
                        "кузнечный горн",
                        "плавильный горн",
                        "раздувать горн"
                    ],
                    "target_lang_definitions": {
                        "en": "A special open furnace used for heating and melting metals or firing ceramic products."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "forge",
                                "target_lang_sense_clarification": "blacksmith's hearth"
                            },
                            {
                                "target_lang_word": "furnace",
                                "target_lang_sense_clarification": "industrial oven"
                            },
                            {
                                "target_lang_word": "hearth",
                                "target_lang_sense_clarification": "part of a furnace"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "acff5540-f3b6-3820-a9e8-acc29bc02799",
                    "sense_definition": "Медный духовой музыкальный инструмент без клапанов, похожий на трубу, используемый для подачи сигналов.",
                    "learner_level": "B1",
                    "frequency": "Low",
                    "semantic_group_id": "instrument_group",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Каждое утро в летнем лагере начиналось под звонкий пионерский <w>горн</w>.",
                            "target_lang_translations": {
                                "en": "Every morning in the summer camp began to the sound of a ringing pioneer <w>bugle</w>."
                            }
                        },
                        {
                            "text": "Музыкант поднял свой <w>горн</w> и сыграл сигнал к атаке.",
                            "target_lang_translations": {
                                "en": "The musician raised his <w>bugle</w> and played the signal to attack."
                            }
                        }
                    ],
                    "synonyms": [
                        "труба",
                        "рожок"
                    ],
                    "common_phrases": [
                        "пионерский горн",
                        "трубить в горн",
                        "звуки горна"
                    ],
                    "target_lang_definitions": {
                        "en": "A brass wind instrument without valves, similar to a trumpet, used for giving signals."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "bugle",
                                "target_lang_sense_clarification": "signal instrument"
                            },
                            {
                                "target_lang_word": "horn",
                                "target_lang_sense_clarification": "general term"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}