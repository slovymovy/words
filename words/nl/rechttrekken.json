                {
                    "sense_id": "59a1a593-7ad1-3025-82dc-3b910b06f662",
                    "sense_definition": "De fysieke vorm van iets veranderen zodat het niet meer krom is, bijvoorbeeld een weg of rivier.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "physical_structural",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "De gemeente heeft plannen om de gevaarlijke bocht in de weg <w>recht</w> te <w>trekken</w>.",
                            "target_lang_translations": {
                                "en": "The municipality has plans to <w>straighten</w> the dangerous curve in the road.",
                                "ru": "У муниципалитета есть планы <w>спрямить</w> опасный поворот на дороге."
                            }
                        },
                        {
                            "text": "Door het <w>rechttrekken</w> van de rivier is de waterafvoer verbeterd.",
                            "target_lang_translations": {
                                "en": "Water drainage has improved due to the <w>straightening</w> of the river.",
                                "ru": "Благодаря <w>выпрямлению</w> русла реки сток воды улучшился."
                            }
                        }
                    ],
                    "common_phrases": [
                        "een bocht rechttrekken",
                        "de rivier rechttrekken"
                    ],
                    "target_lang_definitions": {
                        "en": "To change the physical shape of something so that it is no longer curved, such as a road or river.",
                        "ru": "Изменить физическую форму объекта, устранив изгибы (например, дороги или реки)."
                    },
