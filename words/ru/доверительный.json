    "entries": [
        {
            "pos": "adjective",
            "senses": [
                {
                    "sense_id": "14f4740a-4995-360e-847d-fe0e2ccd9e28",
                    "sense_definition": "Выражающий доверие, искренность и готовность поделиться личными мыслями или чувствами; свидетельствующий о близости отношений.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "trust_expression",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Она понизила голос и перешла на тихий, <w>доверительный</w> шёпот.",
                            "target_lang_translations": {
                                "en": "She lowered her voice to a quiet, <w>confidential</w> whisper."
                            }
                        },
                        {
                            "text": "Между нами быстро установились тёплые и <w>доверительные</w> отношения.",
                            "target_lang_translations": {
                                "en": "Warm and <w>trusting</w> relations were quickly established between us."
                            }
                        }
                    ],
                    "synonyms": [
                        "искренний",
                        "откровенный",
                        "душевный"
                    ],
                    "antonyms": [
                        "отчуждённый",
                        "холодный",
                        "настороженный",
                        "официальный"
                    ],
                    "common_phrases": [
                        "доверительный тон",
                        "доверительная беседа",
                        "доверительные отношения",
                        "доверительный разговор"
                    ],
                    "target_lang_definitions": {
                        "en": "Expressing trust, sincerity, and a readiness to share personal thoughts; indicating a close relationship."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "confidential",
                                "target_lang_sense_clarification": "referring to a tone or manner that suggests intimacy or secrecy"
                            },
                            {
                                "target_lang_word": "trusting",
                                "target_lang_sense_clarification": "characterized by reliance and trust, usually describing relationships"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "599ddb22-7f2a-3c84-bec8-86e818cc2203",
                    "sense_definition": "Секретный, не предназначенный для огласки или посторонних лиц.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "confidentiality",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Это сугубо <w>доверительная</w> информация, которую нельзя распространять в прессе.",
                            "target_lang_translations": {
                                "en": "This is strictly <w>confidential</w> information that cannot be distributed to the press."
                            }
                        },
                        {
                            "text": "Партнёры обменялись <w>доверительными</w> письмами по поводу слияния компаний.",
                            "target_lang_translations": {
                                "en": "The partners exchanged <w>confidential</w> letters regarding the company merger."
                            }
                        }
                    ],
                    "synonyms": [
                        "конфиденциальный",
                        "секретный",
                        "приватный"
                    ],
                    "antonyms": [
                        "публичный",
                        "гласный",
                        "открытый"
                    ],
                    "common_phrases": [
                        "доверительная информация",
                        "доверительное письмо",
                        "сугубо доверительный"
                    ],
                    "target_lang_definitions": {
                        "en": "Private and not intended for public knowledge or disclosure."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "confidential",
                                "target_lang_sense_clarification": "secret, restricted to authorized persons"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "b707a5c3-818e-3c0e-a475-be9ac2e6b5f3",
                    "sense_definition": "Связанный с управлением имуществом, финансами или правами на основе доверенности.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "legal_financial",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Инвестор решил передать свои активы в <w>доверительное</w> управление крупному банку.",
                            "target_lang_translations": {
                                "en": "The investor decided to transfer his assets into <w>trust</w> management with a large bank."
                            }
                        },
                        {
                            "text": "<w>Доверительная</w> собственность регулируется специальными нормами гражданского права.",
                            "target_lang_translations": {
                                "en": "<w>Trust</w> property is regulated by special norms of civil law."
                            }
                        }
                    ],
                    "synonyms": [
                        "фидуциарный"
                    ],
                    "common_phrases": [
                        "доверительное управление",
                        "доверительная собственность",
                        "доверительный управляющий"
                    ],
                    "target_lang_definitions": {
                        "en": "Relating to the legal management of property, finance, or rights on behalf of another."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "trust",
                                "target_lang_sense_clarification": "used attributively in legal/financial contexts (e.g., trust management)"
                            },
                            {
                                "target_lang_word": "fiduciary",
                                "target_lang_sense_clarification": "involving a legal duty of care and trust"
                            }
                        ]
                    }
                }
            ]
        }
    ]
