    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "e84199bd-be2c-391d-b5c3-25317fd13669",
                    "sense_definition": "Egzotyczna roślina wodna o dużych, pływających liściach i okazałych kwiatach, często kojarzona z kulturą Wschodu.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Na środku stawu zakwitł piękny, różowy <w>lotos</w>.",
                            "target_lang_translations": {
                                "ru": "Посреди пруда расцвел красивый розовый <w>лотос</w>."
                            }
                        },
                        {
                            "text": "W wielu kulturach azjatyckich <w>lotos</w> jest symbolem czystości i duchowego odrodzenia.",
                            "target_lang_translations": {
                                "ru": "Во многих азиатских культурах <w>лотос</w> является символом чистоты и духовного возрождения."
                            }
                        }
                    ],
                    "synonyms": [
                        "nelumbo",
                        "bobowiec",
                        "bób wodny"
                    ],
                    "common_phrases": [
                        "kwiat lotosu",
                        "efekt lotosu",
                        "błękitny lotos"
                    ],
                    "target_lang_definitions": {
                        "ru": "Экзотическое водное растение с крупными плавающими листьями и красивыми цветами, часто ассоциируемое с культурой Востока."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "лотос",
                                "target_lang_sense_clarification": "растение"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "aebf461f-4365-3903-aebf-934ceb542021",
                    "sense_definition": "Pozycja siedząca w jodze, polegająca na skrzyżowaniu nóg i umieszczeniu stóp na przeciwległych udach.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "2",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Instruktor jogi pokazał nam, jak bezpiecznie wejść w pełny <w>lotos</w>.",
                            "target_lang_translations": {
                                "ru": "Инструктор по йоге показал нам, как безопасно сесть в полный <w>лотос</w>."
                            }
                        },
                        {
                            "text": "Dla początkujących siedzenie w <w>lotosie</w> może być zbyt trudne i bolesne dla kolan.",
                            "target_lang_translations": {
                                "ru": "Для начинающих сидение в <w>лотосе</w> может быть слишком трудным и болезненным для коленей."
                            }
                        }
                    ],
                    "synonyms": [
                        "padmasana"
                    ],
                    "common_phrases": [
                        "pozycja lotosu",
                        "siad w lotosie"
                    ],
                    "target_lang_definitions": {
                        "ru": "Поза сидя в йоге, при которой ноги скрещены, а ступни помещены на противоположные бедра."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "лотос",
                                "target_lang_sense_clarification": "поза в йоге"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}