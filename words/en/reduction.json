    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "a980b844-596e-3e3c-9edf-c52b2b745528",
                    "sense_definition": "An amount by which a price or cost is lowered.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "general_decrease",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The store offers a significant <w>reduction</w> on winter clothing during the spring sale.",
                            "target_lang_translations": {
                                "ru": "Магазин предлагает значительную <w>скидку</w> на зимнюю одежду во время весенней распродажи."
                            }
                        },
                        {
                            "text": "You can get a further price <w>reduction</w> if you pay with cash.",
                            "target_lang_translations": {
                                "ru": "Вы можете получить дополнительное <w>снижение</w> цены, если заплатите наличными."
                            }
                        }
                    ],
                    "synonyms": [
                        "lessening"
                    ],
                    "antonyms": [
                        "increase"
                    ],
                    "common_phrases": [
                        "price reduction",
                        "further reduction",
                        "substantial reduction"
                    ],
                    "target_lang_definitions": {
                        "ru": "Сумма, на которую снижена цена или стоимость."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "скидка",
                                "target_lang_sense_clarification": "дисконт"
                            },
                            {
                                "target_lang_word": "снижение",
                                "target_lang_sense_clarification": "цены"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "e2f8813f-ec88-3de5-b5ca-b9bfe5935bbc",
                    "sense_definition": "The act or process of making something smaller or less in size, amount, degree, or importance.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "general_decrease",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The company announced a <w>reduction</w> in staff numbers to lower operational costs.",
                            "target_lang_translations": {
                                "ru": "Компания объявила о <w>сокращении</w> штата для снижения операционных расходов."
                            }
                        },
                        {
                            "text": "We have seen a gradual <w>reduction</w> in pollution levels over the last decade.",
                            "target_lang_translations": {
                                "ru": "Мы наблюдаем постепенное <w>снижение</w> уровня загрязнения за последнее десятилетие."
                            }
                        }
                    ],
                    "synonyms": [
                        "decline",
                        "lessening"
                    ],
                    "antonyms": [
                        "increase",
                        "expansion",
                        "addition"
                    ],
                    "common_phrases": [
                        "drastic reduction",
                        "reduction in size",
                        "poverty reduction",
                        "risk reduction"
                    ],
                    "target_lang_definitions": {
                        "ru": "Действие или процесс уменьшения чего-либо в размере, количестве, степени или значимости."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "сокращение",
                                "target_lang_sense_clarification": "численности или объема"
                            },
                            {
                                "target_lang_word": "уменьшение",
                                "target_lang_sense_clarification": "размера или количества"
                            },
                            {
                                "target_lang_word": "снижение",
                                "target_lang_sense_clarification": "уровня или степени"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "47716c78-97a6-3e39-8391-c25c79cde8b6",
                    "sense_definition": "A chemical reaction in which an atom or ion gains electrons, often involving the removal of oxygen or the addition of hydrogen.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "In the process of <w>reduction</w>, the molecule gains electrons and its oxidation state decreases.",
                            "target_lang_translations": {
                                "ru": "В процессе <w>восстановления</w> молекула присоединяет электроны, и степень её окисления понижается."
                            }
                        },
                        {
                            "text": "The experiment demonstrated the <w>reduction</w> of copper oxide to pure copper.",
                            "target_lang_translations": {
                                "ru": "Эксперимент продемонстрировал <w>восстановление</w> оксида меди до чистой меди."
                            }
                        }
                    ],
                    "antonyms": [
                        "oxidation"
                    ],
                    "common_phrases": [
                        "oxidation and reduction",
                        "reduction potential"
                    ],
                    "target_lang_definitions": {
                        "ru": "Химическая реакция, при которой атом или ион присоединяет электроны."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "восстановление",
                                "target_lang_sense_clarification": "химический процесс"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "b19dce1d-91af-310f-96b7-8da13add282f",
                    "sense_definition": "The process of thickening a liquid, such as a sauce, by boiling it to intensify the flavor, or the resulting liquid itself.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The chef prepared a balsamic <w>reduction</w> to drizzle over the roasted vegetables.",
                            "target_lang_translations": {
                                "ru": "Шеф-повар приготовил бальзамический <w>крем</w>, чтобы полить им запеченные овощи."
                            }
                        },
                        {
                            "text": "Keep the sauce at a simmer until you achieve a thick <w>reduction</w>.",
                            "target_lang_translations": {
                                "ru": "Держите соус на медленном огне, пока не получите густой <w>соус</w>."
                            }
                        }
                    ],
                    "common_phrases": [
                        "balsamic reduction",
                        "wine reduction",
                        "sauce reduction"
                    ],
                    "target_lang_definitions": {
                        "ru": "Процесс загустения жидкости путем кипячения или полученный густой продукт."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "выпаривание",
                                "target_lang_sense_clarification": "процесс"
                            },
                            {
                                "target_lang_word": "уваривание",
                                "target_lang_sense_clarification": "процесс"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "2bcee81e-bc50-3c03-a2a1-fb998f797bf4",
                    "sense_definition": "A medical procedure to restore a fractured bone or dislocated joint to its correct alignment.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The doctor performed a closed <w>reduction</w> to fix the patient's dislocated shoulder.",
                            "target_lang_translations": {
                                "ru": "Врач выполнил закрытое <w>вправление</w>, чтобы исправить вывих плеча пациента."
                            }
                        },
                        {
                            "text": "Surgery was required for the open <w>reduction</w> of the complex leg fracture.",
                            "target_lang_translations": {
                                "ru": "Потребовалась операция для открытой <w>репозиции</w> сложного перелома ноги."
                            }
                        }
                    ],
                    "synonyms": [
                        "taxis"
                    ],
                    "common_phrases": [
                        "closed reduction",
                        "open reduction"
                    ],
                    "target_lang_definitions": {
                        "ru": "Медицинская процедура по восстановлению правильного положения сломанной кости или вывихнутого сустава."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "вправление",
                                "target_lang_sense_clarification": "вывиха"
                            },
                            {
                                "target_lang_word": "репозиция",
                                "target_lang_sense_clarification": "перелома"
                            }
                        ]
                    }
                }
            ]
        }
