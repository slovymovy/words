    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "1647a2f0-55a8-382e-9a8c-e27ab1a31896",
                    "sense_definition": "О душевном состоянии печали, испытываемом кем-либо, или о печальной, унылой обстановке.",
                    "learner_level": "A1",
                    "frequency": "High",
                    "semantic_group_id": "state_of_sadness",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Мне <w>грустно</w>, потому что мой лучший друг уехал в другой город.",
                            "target_lang_translations": {
                                "en": "I feel <w>sad</w> because my best friend moved to another city."
                            }
                        },
                        {
                            "text": "Осенью на улице часто бывает темно и <w>грустно</w>.",
                            "target_lang_translations": {
                                "en": "In autumn, it is often dark and <w>gloomy</w> outside."
                            }
                        }
                    ],
                    "synonyms": [
                        "печально",
                        "уныло"
                    ],
                    "antonyms": [
                        "весело"
                    ],
                    "common_phrases": [
                        "мне грустно",
                        "стало грустно",
                        "очень грустно",
                        "немного грустно"
                    ],
                    "target_lang_definitions": {
                        "en": "Refers to a mental state of sadness experienced by someone, or a sad, gloomy atmosphere."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "sad",
                                "target_lang_sense_clarification": "feeling or state"
                            },
                            {
                                "target_lang_word": "gloomy",
                                "target_lang_sense_clarification": "atmosphere"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "a30e836c-7a95-3ea6-94d2-6ddb21af048f",
                    "sense_definition": "С чувством грусти, сожаления или тоски; печально (о действии).",
                    "learner_level": "A2",
                    "frequency": "High",
                    "semantic_group_id": "state_of_sadness",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Он <w>грустно</w> посмотрел в окно и тяжело вздохнул.",
                            "target_lang_translations": {
                                "en": "He looked <w>sadly</w> out the window and sighed heavily."
                            }
                        },
                        {
                            "text": "Девушка <w>грустно</w> улыбнулась нам на прощание.",
                            "target_lang_translations": {
                                "en": "The girl smiled <w>sadly</w> at us in parting."
                            }
                        }
                    ],
                    "synonyms": [
                        "печально",
                        "с грустью",
                        "уныло"
                    ],
                    "antonyms": [
                        "весело"
                    ],
                    "common_phrases": [
                        "грустно смотреть",
                        "грустно улыбнуться",
                        "грустно вздохнуть"
                    ],
                    "target_lang_definitions": {
                        "en": "With a feeling of sadness, regret, or longing; sadly (describing an action)."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "sadly",
                                "target_lang_sense_clarification": "adverb"
                            },
                            {
                                "target_lang_word": "sorrowfully",
                                "target_lang_sense_clarification": "with deep sadness"
                            }
                        ]
                    }
                }
            ]
        },
