    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "a4aeaebb-fddf-328b-ac8f-9d6260b7f64e",
                    "sense_definition": "To tell someone that you are sorry for having done something wrong or for causing a problem.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "I realized I was wrong and went to <w>apologize</w> to him immediately.",
                            "target_lang_translations": {
                                "ru": "Я понял, что был неправ, и сразу же пошел <w>извиниться</w> перед ним."
                            }
                        },
                        {
                            "text": "You should <w>apologize</w> for keeping everyone waiting so long.",
                            "target_lang_translations": {
                                "ru": "Тебе следует <w>извиниться</w> за то, что заставил всех так долго ждать."
                            }
                        }
                    ],
                    "synonyms": [
                        "say sorry",
                        "express regret"
                    ],
                    "common_phrases": [
                        "apologize for",
                        "apologize to someone",
                        "sincerely apologize",
                        "publicly apologize"
                    ],
                    "target_lang_definitions": {
                        "ru": "Просить прощения за совершенный проступок или причиненные неудобства."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "извиняться",
                                "target_lang_sense_clarification": "просить прощения (несов. вид)"
                            },
                            {
                                "target_lang_word": "извиниться",
                                "target_lang_sense_clarification": "попросить прощения (сов. вид)"
                            },
                            {
                                "target_lang_word": "просить прощения",
                                "target_lang_sense_clarification": "выражать сожаление"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "df58b731-fe42-359a-99ae-954e10ceacd4",
                    "sense_definition": "To make a formal defense or justification of a belief, doctrine, or action.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The scholar wrote a lengthy essay to <w>apologize</w> for the controversial theory.",
                            "target_lang_translations": {
                                "ru": "Ученый написал длинное эссе, чтобы <w>оправдать</w> спорную теорию."
                            }
                        },
                        {
                            "text": "He sought to <w>apologize</w> for the ancient customs in his latest book.",
                            "target_lang_translations": {
                                "ru": "В своей последней книге он стремился <w>оправдать</w> древние обычаи."
                            }
                        }
                    ],
                    "synonyms": [
                        "defend",
                        "justify"
                    ],
                    "traits": [
                        {
                            "trait_type": "archaic",
                            "comment": "Modern usage typically prefers 'defend' or 'make an apologia'."
                        }
                    ],
                    "target_lang_definitions": {
                        "ru": "Выступать с официальной защитой или обоснованием убеждения или учения (устар.)."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "защищать",
