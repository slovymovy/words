    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "ffc2979e-1483-3197-8f40-0ebf955c54ec",
                    "sense_definition": "An opinion or suggestion given to someone about what they should do in a particular situation.",
                    "learner_level": "A2",
                    "frequency": "High",
                    "semantic_group_id": "guidance_1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "She was offered various pieces of <w>advice</w> on what to do.",
                            "target_lang_translations": {
                                "ru": "Ей дали разные <w>советы</w> о том, что делать."
                            }
                        },
                        {
                            "text": "On the <w>advice</w> of her doctor, Mary cut down on her carbohydrates.",
                            "target_lang_translations": {
                                "ru": "По <w>совету</w> врача Мэри сократила потребление углеводов."
                            }
                        },
                        {
                            "text": "I have some useful <w>advice</w> to give you regarding your new job.",
                            "target_lang_translations": {
                                "ru": "У меня есть для тебя полезный <w>совет</w> насчет твоей новой работы."
                            }
                        }
                    ],
                    "synonyms": [
                        "counsel",
                        "suggestion",
                        "recommendation",
                        "tip",
                        "hint"
                    ],
                    "common_phrases": [
                        "give advice",
                        "take advice",
                        "piece of advice",
                        "follow advice",
                        "seek advice"
                    ],
                    "target_lang_definitions": {
                        "ru": "Мнение или предложение, высказанное кому-либо относительно того, что следует делать в конкретной ситуации."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "совет",
                                "target_lang_sense_clarification": "указание или наставление, как поступить"
                            },
                            {
                                "target_lang_word": "рекомендация",
                                "target_lang_sense_clarification": "пожелание или предписание, часто профессионального характера"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "ffff3db6-7337-3e0d-bd28-890e5f28ee33",
                    "sense_definition": "A formal document or notification sent to provide information about a financial transaction.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "financial_doc",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "An <w>advice</w> of an incoming settlement payment order may be given to the bank.",
                            "target_lang_translations": {
                                "ru": "Банку может быть передано <w>уведомление</w> о входящем расчетном ордере."
                            }
                        },
                        {
                            "text": "The company sent a remittance <w>advice</w> to confirm the payment details.",
                            "target_lang_translations": {
                                "ru": "Компания отправила платежное <w>извещение</w> для подтверждения деталей оплаты."
                            }
                        }
                    ],
                    "synonyms": [
                        "notice",
                        "information"
                    ],
                    "common_phrases": [
                        "remittance advice",
                        "letter of advice",
                        "payment advice"
                    ],
                    "target_lang_definitions": {
                        "ru": "Официальный документ или уведомление, отправляемое для предоставления информации о финансовой операции."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "уведомление",
                                "target_lang_sense_clarification": "официальное сообщение о чем-либо"
                            },
                            {
                                "target_lang_word": "извещение",
                                "target_lang_sense_clarification": "официальный документ с сообщением"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "b78b738d-c8e5-3de2-8026-53074bdb49c5",
                    "sense_definition": "Deliberate consideration or forethought.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "archaic_meaning",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "How shall I dote on her with more <w>advice</w>?",
                            "target_lang_translations": {
                                "ru": "Как мне любить ее с большей <w>осмотрительностью</w>?"
                            }
                        },
                        {
                            "text": "He acted without <w>advice</w> or caution in this matter.",
                            "target_lang_translations": {
                                "ru": "В этом деле он действовал без <w>рассудительности</w> и осторожности."
                            }
                        }
                    ],
                    "traits": [
                        {
                            "trait_type": "archaic",
                            "comment": "literary"
                        }
                    ],
                    "target_lang_definitions": {
                        "ru": "Обдуманность, рассудительность или предусмотрительность (устаревшее значение)."
                    },
                    "translations": {
                        "ru": []
                    }
                }
            ]
        }
    ]
