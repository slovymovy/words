{
    "word_family": [
        "посвящение",
        "посвящённый",
        "освятить",
        "святить"
    ],
    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "50dc6358-27a0-34f5-bb05-0c026d37174a",
                    "sense_definition": "Предназначить, отдать что-либо (время, силы, труд, произведение) кому-либо или чему-либо.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Писатель решил <посвятить> свой новый роман любимой жене.",
                            "target_lang_translations": {
                                "en": "The writer decided to <dedicate> his new novel to his beloved wife."
                            }
                        },
                        {
                            "text": "Мы хотим <посвятить> этот выходной день прогулке по лесу.",
                            "target_lang_translations": {
                                "en": "We want to <devote> this day off to a walk in the forest."
                            }
                        }
                    ],
                    "synonyms": [
                        "предназначить",
                        "отдать"
                    ],
                    "common_phrases": [
                        "посвятить жизнь",
                        "посвятить себя",
                        "посвятить время",
                        "посвятить стихи"
                    ],
                    "target_lang_definitions": {
                        "en": "To give your energy, time, effort, or a work of art to someone or something."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "dedicate",
                                "target_lang_sense_clarification": "to give time, effort, or a creative work to a specific cause or person"
                            },
                            {
                                "target_lang_word": "devote",
                                "target_lang_sense_clarification": "to give all of one's time or resources to something"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "129356b1-620a-3c79-ac79-85cd1c696a68",
                    "sense_definition": "Ознакомить с чем-либо тайным, неизвестным другим; сделать причастным к чему-либо.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Директор не стал <посвящать> всех сотрудников в детали новой сделки.",
                            "target_lang_translations": {
                                "en": "The director did not <let> all the employees <in on> the details of the new deal."
                            }
                        },
                        {
                            "text": "Мой друг решил <посвятить> меня в свои планы на будущее.",
                            "target_lang_translations": {
                                "en": "My friend decided to <let> me <in on> his plans for the future."
                            }
                        }
                    ],
                    "synonyms": [
                        "ознакомить",
                        "приобщить"
                    ],
                    "common_phrases": [
                        "посвятить в тайну",
                        "посвятить в планы",
                        "посвятить в детали",
                        "посвятить в курс дела"
                    ],
                    "target_lang_definitions": {
                        "en": "To allow someone to know about something secret, private, or unknown to others."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "let in on",
                                "target_lang_sense_clarification": "to share a secret or plans with someone"
                            },
                            {
                                "target_lang_word": "initiate",
                                "target_lang_sense_clarification": "to introduce someone to secret knowledge or a group"
                            },
                            {
                                "target_lang_word": "fill in on",
                                "target_lang_sense_clarification": "to provide missing details or updates"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "aa91e786-1275-3dc0-92d8-57a387bb603a",
                    "sense_definition": "Возвести в какое-либо звание, сан или должность посредством особого обряда.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Королева торжественно обещала <посвятить> отважного героя в рыцари.",
                            "target_lang_translations": {
                                "en": "The Queen solemnly promised to <knight> the brave hero."
                            }
                        },
                        {
                            "text": "Епископ готовился <посвятить> молодого служителя церкви в сан.",
                            "target_lang_translations": {
                                "en": "The Bishop was preparing to <ordain> the young church minister."
                            }
                        }
                    ],
                    "synonyms": [
                        "рукоположить",
                        "возвести"
                    ],
                    "antonyms": [
                        "разжаловать"
                    ],
                    "common_phrases": [
                        "посвятить в рыцари",
                        "посвятить в сан"
                    ],
                    "target_lang_definitions": {
                        "en": "To formally admit someone into a rank, office, or religious order, often with a ceremony."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "knight",
                                "target_lang_sense_clarification": "to confer the rank of knight upon someone"
                            },
                            {
                                "target_lang_word": "ordain",
                                "target_lang_sense_clarification": "to officially make someone a priest or minister"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}