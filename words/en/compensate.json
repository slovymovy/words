{
    "word_family": [
        "compensation",
        "compensatory",
        "compensator",
        "compensable"
    ],
    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "255cc2a5-9758-3424-81f1-43db71c02e6c",
                    "sense_definition": "To provide something good to balance or reduce the bad effect of damage, loss, or a mistake; to make up for something.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "balance_effect",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "His enthusiasm helps <w>compensate</w> for his lack of experience."
                        },
                        {
                            "text": "Nothing can fully <w>compensate</w> for the loss of a loved one."
                        }
                    ],
                    "synonyms": [
                        "make up for",
                        "offset",
                        "counterbalance",
                        "redress",
                        "make good"
                    ],
                    "common_phrases": [
                        "compensate for the loss",
                        "compensate for a lack",
                        "compensate for the mistake"
                    ]
                },
                {
                    "sense_id": "81465564-aa4a-3642-81ca-5f0df7b8af39",
                    "sense_definition": "To pay someone money in exchange for work done or because they have suffered injury or loss.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "payment",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The company promised to <w>compensate</w> the workers for their overtime."
                        },
                        {
                            "text": "Victims of the accident were <w>compensated</w> for their injuries."
                        }
                    ],
                    "synonyms": [
                        "reimburse",
                        "remunerate",
                        "pay",
                        "indemnify",
                        "recompense"
                    ],
                    "common_phrases": [
                        "compensate victims",
                        "compensate employees",
                        "compensate for damages"
                    ]
                },
                {
                    "sense_id": "9ff9c42b-d3b1-39ce-939a-bc1e429b8df4",
                    "sense_definition": "To make an adjustment or take action to correct a problem or adapt to a new situation.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "balance_effect",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The pilot had to <w>compensate</w> for the strong wind while landing."
                        },
                        {
                            "text": "Our eyes naturally <w>compensate</w> for changes in light levels."
                        }
                    ],
                    "synonyms": [
                        "adapt",
                        "adjust"
                    ],
                    "common_phrases": [
                        "compensate for the error",
                        "compensate for the drift"
                    ]
                }
            ]
        }
    ]
}