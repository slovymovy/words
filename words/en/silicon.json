    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "e470a2c4-5b60-3707-900b-7ca7382acb2d",
                    "sense_definition": "A nonmetallic chemical element (symbol Si) found in sand and rocks, widely used in making glass and electronic components.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Pure <w>silicon</w> is essential for the manufacturing of solar panels.",
                            "target_lang_translations": {
                                "ru": "Чистый <w>кремний</w> необходим для производства солнечных панелей."
                            }
                        },
                        {
                            "text": "Scientists discovered that <w>silicon</w> is the second most abundant element in the crust of the Earth.",
                            "target_lang_translations": {
                                "ru": "Ученые обнаружили, что <w>кремний</w> является вторым по распространенности элементом в земной коре."
                            }
                        }
                    ],
                    "synonyms": [
                        "silicium",
                        "silicum"
                    ],
                    "common_phrases": [
                        "silicon chip",
                        "silicon wafer",
                        "silicon valley"
                    ],
                    "target_lang_definitions": {
                        "ru": "Неметаллический химический элемент (символ Si), содержащийся в песке и горных породах, широко используемый при производстве стекла и электронных компонентов."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "кремний",
                                "target_lang_sense_clarification": "химический элемент"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "c425ee02-9cb7-3678-8c33-4995a6290c0f",
                    "sense_definition": "A computer processor or microchip; the hardware logic used in computing.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "2",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The company decided to design its own custom <w>silicon</w> to improve performance.",
                            "target_lang_translations": {
                                "ru": "Компания решила разработать собственные <w>микросхемы</w> для повышения производительности."
                            }
                        },
                        {
                            "text": "Modern <w>silicon</w> can process billions of operations per second.",
                            "target_lang_translations": {
                                "ru": "Современные <w>процессоры</w> могут обрабатывать миллиарды операций в секунду."
                            }
                        }
                    ],
                    "common_phrases": [
                        "custom silicon",
                        "apple silicon"
                    ],
                    "target_lang_definitions": {
                        "ru": "Компьютерный процессор или микрочип; аппаратная логика, используемая в вычислениях."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "чип",
                                "target_lang_sense_clarification": "компьютерный компонент"
                            },
                            {
                                "target_lang_word": "микросхема",
                                "target_lang_sense_clarification": "электроника"
                            },
                            {
                                "target_lang_word": "процессор",
                                "target_lang_sense_clarification": "вычислительное устройство"
                            }
                        ]
                    }
                }
            ]
