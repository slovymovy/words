            "senses": [
                {
                    "sense_id": "74d7ace5-c702-3976-b6b3-e1313a0f4f91",
                    "sense_definition": "Zonder tussenkomst van anderen of zonder omwegen; rechtstreeks.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "spatial_relational",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "We hebben een <w>directe</w> trein naar het centrum van de stad genomen.",
                            "target_lang_translations": {
                                "ru": "Мы сели на <w>прямой</w> поезд до центра города."
                            }
                        },
                        {
                            "text": "Er is geen <w>direct</w> bewijs gevonden voor zijn betrokkenheid bij de zaak.",
                            "target_lang_translations": {
                                "ru": "Не было найдено <w>прямых</w> доказательств его причастности к делу."
