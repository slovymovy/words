                {
                    "sense_id": "9d94b2f9-4baa-377c-a121-454caa26f5cf",
                    "sense_definition": "The state of feeling bitter, resentful, or cynical.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "He could not hide his deep <w>embitterment</w> regarding the unfair decision.",
                            "target_lang_translations": {
                                "ru": "Он не мог скрыть свою глубокую <w>озлобленность</w> по поводу несправедливого решения."
                            }
                        },
                        {
                            "text": "Years of isolation contributed to her growing <w>embitterment</w> toward society.",
                            "target_lang_translations": {
                                "ru": "Годы изоляции способствовали её растущему <w>ожесточению</w> по отношению к обществу."
                            }
                        }
                    ],
                    "synonyms": [
                        "bitterness",
                        "resentment",
                        "acrimony",
                        "rancor"
                    ],
                    "antonyms": [
                        "contentment",
                        "satisfaction",
                        "happiness"
