    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "e9eab83e-c1f5-3fae-8af2-3dca4783db32",
                    "sense_definition": "Распространение политических или идеологических взглядов с целью формирования определённого общественного мнения.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "ideology",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "По телевизору целыми днями идёт государственная <w>пропаганда</w>.",
                            "target_lang_translations": {
                                "en": "State <w>propaganda</w> is on TV all day long."
                            }
                        },
                        {
                            "text": "Многие люди не замечают, как на них влияет политическая <w>пропаганда</w>.",
                            "target_lang_translations": {
                                "en": "Many people do not notice how political <w>propaganda</w> influences them."
                            }
                        }
                    ],
                    "synonyms": [
                        "агита́ция"
                    ],
                    "antonyms": [
                        "антипропаганда"
                    ],
                    "common_phrases": [
                        "государственная пропаганда",
                        "политическая пропаганда",
                        "жертва пропаганды",
                        "средства пропаганды"
                    ],
                    "target_lang_definitions": {
                        "en": "The dissemination of political or ideological views aimed at shaping a specific public opinion."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "propaganda",
                                "target_lang_sense_clarification": "political or biased communication"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "fad943c9-4f41-3d88-853d-76879c33cd4b",
                    "sense_definition": "Активное распространение знаний, идей или образа жизни для их популяризации и внедрения в сознание людей.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "promotion",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "В нашей стране ведётся активная <w>пропаганда</w> здорового образа жизни.",
                            "target_lang_translations": {
                                "en": "There is active <w>promotion</w> of a healthy lifestyle in our country."
                            }
                        },
                        {
                            "text": "Главная цель этого мероприятия — <w>пропаганда</w> чтения среди молодёжи.",
                            "target_lang_translations": {
                                "en": "The main goal of this event is the <w>promotion</w> of reading among young people."
                            }
                        }
                    ],
                    "synonyms": [
                        "популяризация"
                    ],
                    "antonyms": [
                        "замалчивание"
                    ],
                    "common_phrases": [
                        "пропаганда здорового образа жизни",
                        "пропаганда спорта",
                        "пропаганда науки"
                    ],
                    "target_lang_definitions": {
                        "en": "The active dissemination of knowledge, ideas, or a lifestyle to popularize them and embed them in people's minds."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "promotion",
                                "target_lang_sense_clarification": "encouragement of a cause or lifestyle"
                            },
                            {
                                "target_lang_word": "advocacy",
                                "target_lang_sense_clarification": "active support for a cause or idea"
                            },
                            {
                                "target_lang_word": "popularization",
                                "target_lang_sense_clarification": "making something known to the general public"
                            }
                        ]
                    }
                }
            ]
        }
    ]
