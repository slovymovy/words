                {
                    "sense_id": "097a6545-5e2a-3e72-8829-830d54d5ec47",
                    "sense_definition": "Najwyższy dostojnik duchowny w Kościołach wschodnich (prawosławnych) oraz tytuł honorowy niektórych biskupów w Kościele katolickim.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "religious_title",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Wczoraj <w>patriarcha</w> Konstantynopola spotkał się z papieżem, aby rozmawiać o jedności chrześcijan."
                        },
                        {
                            "text": "Uroczysta wizyta <w>patriarchy</w> w naszym mieście zgromadziła w katedrze tłumy wiernych."
                        }
                    ],
                    "common_phrases": [
                        "patriarcha Konstantynopola",
