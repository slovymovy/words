{
    "word_family": [
        "ironic",
        "ironically"
    ],
    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "14306e07-2652-3f53-a401-74f35277765a",
                    "sense_definition": "A situation that is strange or funny because things happen in a way that seems to be the opposite of what was expected.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "It is a cruel <w>irony</w> that the fire station burned down while the firefighters were out."
                        },
                        {
                            "text": "The <w>irony</w> of the situation was that he became rich just after he lost his desire for money."
                        }
                    ],
                    "common_phrases": [
                        "cruel irony",
                        "tragic irony",
                        "irony of fate",
                        "life's ironies"
                    ]
                },
                {
                    "sense_id": "5e1efacb-27d2-37b2-a6aa-98be5437693e",
                    "sense_definition": "The use of words to express something different from and often opposite to their literal meaning, usually for humorous or emphatic effect.",
                    "learner_level": "C1",
                    "frequency": "High",
                    "semantic_group_id": "1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "She spoke with heavy <w>irony</w> when she described the messy room as a \"palace\"."
                        },
                        {
                            "text": "I could detect a hint of <w>irony</w> in his voice when he congratulated his rival."
                        }
                    ],
                    "common_phrases": [
                        "heavy irony",
                        "without irony",
                        "trace of irony",
                        "tinged with irony"
                    ]
                },
                {
                    "sense_id": "5e6226bc-3a5f-308f-91a9-6c8e66b31f8c",
                    "sense_definition": "A situation in a play, movie, or story where the audience understands something that the characters do not know.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The playwright used dramatic <w>irony</w> to create tension as the hero walked into the trap."
                        },
                        {
                            "text": "We feel the <w>irony</w> when the character plans for a future we know he will never see."
                        }
                    ],
                    "common_phrases": [
                        "dramatic irony"
                    ],
                    "traits": [
                        {
                            "trait_type": "colloquial",
                            "comment": "often used in literary analysis"
                        }
                    ]
                },
                {
                    "sense_id": "dbdd0a07-bb3e-302c-abc5-2b2fe3533982",
                    "sense_definition": "A feigned ignorance used in argument or discussion to entice an opponent into making a statement that can then be challenged.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The professor used Socratic <w>irony</w> to expose the flaws in the student's logic."
                        },
                        {
                            "text": "His questions were full of <w>irony</w>, designed to make us realize we didn't know the answer."
                        }
                    ],
                    "common_phrases": [
                        "Socratic irony"
                    ]
                },
                {
                    "sense_id": "457d0e92-9d3c-3cf6-99c1-dd251165e02b",
                    "sense_definition": "A type of marble made of metal or resembling metal, used in children's games.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "2",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The children traded their glass marbles for heavy <w>ironies</w>."
                        },
                        {
                            "text": "He lost his favorite <w>irony</w> during the game at recess."
                        }
                    ],
                    "traits": [
                        {
                            "trait_type": "slang",
                            "comment": "playground slang"
                        }
                    ]
                }
            ]
        },
        {
            "pos": "adjective",
            "senses": [
                {
                    "sense_id": "7f3506c4-cb4e-3cfa-b425-8baf39154f17",
                    "sense_definition": "Resembling or containing iron; having the taste, smell, or appearance of iron.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "3",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The water from the old well had a strong <w>irony</w> taste."
                        },
                        {
                            "text": "There was an <w>irony</w> smell in the air near the metal workshop."
                        }
                    ],
                    "synonyms": [
