                    "traits": [
                        {
                            "trait_type": "colloquial",
                            "comment": ""
                        }
                    ],
                    "target_lang_definitions": {
                        "en": "To provide arguments or circumstances to justify oneself."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "make excuses",
                                "target_lang_sense_clarification": "justify oneself"
