        {
            "pos": "adverb",
            "senses": [
                {
                    "sense_id": "61d18ffd-fc9c-3a2d-9dc5-938439657ba2",
                    "sense_definition": "Наречие к <w>широкий</w>; имея большую протяжённость в поперечнике.",
                    "learner_level": "A2",
                    "frequency": "High",
                    "semantic_group_id": "physical_width",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Она <широко> открыла окно, чтобы впустить свежий воздух.",
                            "target_lang_translations": {
                                "en": "She opened the window <wide> to let in fresh air."
                            }
                        },
                        {
                            "text": "Мальчик <широко> улыбнулся, увидев своих друзей.",
                            "target_lang_translations": {
                                "en": "The boy smiled <broadly> when he saw his friends."
                            }
                        }
                    ],
                    "antonyms": [
                        "узко"
                    ],
                    "common_phrases": [
                        "широко открыть",
                        "широко улыбаться",
                        "широко раскрыть глаза"
                    ],
                    "target_lang_definitions": {
                        "en": "Adverb derived from 'wide'; having a large extent across."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "wide",
                                "target_lang_sense_clarification": "used with verbs like open, spread"
                            },
                            {
                                "target_lang_word": "broadly",
                                "target_lang_sense_clarification": "used with verbs like smile, grin"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "a446d411-0845-3e2b-85db-c6644d921585",
                    "sense_definition": "В большом объёме, повсеместно, с большим охватом или без ограничений.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "figurative_extent",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Этот писатель <широко> известен не только в России, но и за рубежом.",
                            "target_lang_translations": {
                                "en": "This writer is <widely> known not only in Russia but also abroad."
                            }
                        },
                        {
                            "text": "Новая технология <широко> применяется в современной медицине.",
                            "target_lang_translations": {
                                "en": "The new technology is <widely> used in modern medicine."
                            }
                        }
                    ],
                    "synonyms": [
                        "обширно"
                    ],
                    "antonyms": [
                        "узко"
                    ],
                    "common_phrases": [
                        "широко известный",
                        "широко применяться",
                        "широко распространенный"
                    ],
                    "target_lang_definitions": {
                        "en": "To a large extent, universally, covering a wide area or without restrictions."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "widely",
                                "target_lang_sense_clarification": "commonly, extensively, generally"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "8b5914b1-8e91-30bf-a292-34d06b663410",
                    "sense_definition": "Размашисто, делая крупные движения.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "movement",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Солдаты <широко> шагали по площади во время парада.",
                            "target_lang_translations": {
                                "en": "The soldiers marched <with long strides> across the square during the parade."
                            }
                        },
                        {
                            "text": "Он <широко> перекрестился перед входом в храм.",
                            "target_lang_translations": {
                                "en": "He crossed himself <broadly> before entering the temple."
                            }
                        }
                    ],
                    "common_phrases": [
                        "широко шагать",
                        "широко размахнуться"
                    ],
                    "target_lang_definitions": {
                        "en": "With sweeping, large movements."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "with long strides",
                                "target_lang_sense_clarification": "regarding walking or stepping"
                            },
                            {
                                "target_lang_word": "broadly",
                                "target_lang_sense_clarification": "regarding gestures or movements"
                            }
                        ]
                    }
                }
            ]
        },
