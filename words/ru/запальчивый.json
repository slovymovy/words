            "senses": [
                {
                    "sense_id": "74d12007-6cac-35cf-a940-0f6a90ac6938",
                    "sense_definition": "Склонный легко и быстро сердиться, впадать в гнев или раздражение.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "anger_trait",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Мой сосед — <w>запальчивый</w> человек, который начинает кричать из-за любой мелочи.",
                            "target_lang_translations": {
                                "en": "My neighbor is a <w>hot-tempered</w> person who starts shouting over any trifle."
                            }
                        },
                        {
                            "text": "В молодости он был очень <w>запальчив</w> и часто ввязывался в бессмысленные конфликты.",
                            "target_lang_translations": {
                                "en": "In his youth, he was very <w>hot-headed</w> and often got involved in senseless conflicts."
                            }
                        }
                    ],
                    "synonyms": [
                        "вспыльчивый"
                    ],
                    "antonyms": [
                        "сдержанный",
                        "спокойный",
                        "хладнокровный"
                    ],
                    "common_phrases": [
                        "запальчивый человек",
                        "запальчивый характер",
                        "запальчивый нрав"
                    ],
                    "target_lang_definitions": {
                        "en": "Prone to getting angry easily or falling into a rage."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "hot-tempered",
                                "target_lang_sense_clarification": "personality trait"
                            },
                            {
