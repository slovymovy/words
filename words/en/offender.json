    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "df6cd585-9dcc-3ae5-9bce-94b285e4147a",
                    "sense_definition": "A person who commits an illegal act or breaks the law.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "legal_crime",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The judge decided to give the young <w>offender</w> a second chance with community service.",
                            "target_lang_translations": {
                                "ru": "Судья решил дать юному <w>правонарушителю</w> второй шанс, назначив общественные работы."
                            }
                        },
                        {
                            "text": "Because he was a repeat <w>offender</w>, the court imposed a much stricter sentence.",
                            "target_lang_translations": {
                                "ru": "Поскольку он был <w>рецидивистом</w>, суд вынес гораздо более строгий приговор."
                            }
                        }
                    ],
                    "synonyms": [
                        "criminal",
                        "lawbreaker",
                        "culprit",
                        "perpetrator",
                        "felon"
                    ],
                    "antonyms": [
                        "victim"
                    ],
                    "common_phrases": [
                        "repeat offender",
                        "sex offender",
                        "juvenile offender",
                        "first-time offender",
                        "violent offender"
                    ],
                    "target_lang_definitions": {
                        "ru": "Человек, совершивший противозаконное действие или нарушивший закон."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "правонарушитель",
                                "target_lang_sense_clarification": "лицо, нарушившее закон; официальный термин"
                            },
                            {
                                "target_lang_word": "преступник",
                                "target_lang_sense_clarification": "человек, совершивший уголовное преступление"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "4b43b068-381d-3914-9149-6e0f7b7f2f0b",
                    "sense_definition": "A person or thing that causes a problem, does something wrong, or gives offense.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "general_wrongdoing",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "When it comes to wasting energy in the home, the old refrigerator is the worst <w>offender</w>.",
                            "target_lang_translations": {
                                "ru": "Когда речь заходит о перерасходе энергии в доме, старый холодильник — главный <w>виновник</w>."
                            }
                        },
                        {
                            "text": "She quickly identified the <w>offender</w> who had been eating her lunch from the office fridge.",
                            "target_lang_translations": {
                                "ru": "Она быстро вычислила <w>виновника</w>, который таскал её обеды из офисного холодильника."
                            }
                        }
                    ],
                    "synonyms": [
                        "wrongdoer",
                        "culprit",
                        "sinner"
                    ],
                    "common_phrases": [
                        "worst offender",
                        "main offender"
                    ],
                    "target_lang_definitions": {
                        "ru": "Человек или предмет, который создает проблемы, совершает проступок или наносит обиду."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "виновник",
                                "target_lang_sense_clarification": "причина проблемы или неприятности"
                            },
                            {
                                "target_lang_word": "обидчик",
                                "target_lang_sense_clarification": "тот, кто причинил обиду"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}