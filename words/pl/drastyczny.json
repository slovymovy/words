            "senses": [
                {
                    "sense_id": "6092d27d-be28-36f6-a9c7-e90531a2244e",
                    "sense_definition": "O zmianie, metodzie lub działaniu: gwałtowny, radykalny i bardzo zdecydowany, mający silny skutek.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "action_measure",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Rząd musiał podjąć <w>drastyczne</w> kroki, aby szybko opanować kryzys gospodarczy.",
                            "target_lang_translations": {
                                "ru": "Правительству пришлось предпринять <w>радикальные</w> меры, чтобы быстро справиться с экономическим кризисом."
                            }
                        },
                        {
                            "text": "W ostatnim miesiącu odnotowano <w>drastyczny</w> spadek temperatury w całym regionie.",
                            "target_lang_translations": {
                                "ru": "В прошлом месяце было отмечено <w>резкое</w> падение температуры во всём регионе."
                            }
                        }
                    ],
                    "synonyms": [
                        "zdecydowany",
                        "mocny"
                    ],
                    "antonyms": [
                        "łagodny",
                        "umiarkowany"
                    ],
                    "common_phrases": [
                        "drastyczne środki",
                        "drastyczne zmiany",
                        "drastyczny krok",
                        "drastyczna dieta",
                        "drastyczny spadek"
                    ],
                    "target_lang_definitions": {
                        "ru": "О переменах, методах или действиях: внезапный, радикальный и очень решительный, имеющий сильные последствия."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "радикальный",
                                "target_lang_sense_clarification": "о мерах или решениях"
                            },
                            {
                                "target_lang_word": "резкий",
                                "target_lang_sense_clarification": "об изменениях или перепадах"
                            },
                            {
                                "target_lang_word": "суровый",
                                "target_lang_sense_clarification": "о методах или ограничениях"
                            }
                        ]
