{
    "word_family": [
        "gebed",
        "aanbidden",
        "voorbede",
        "aanbidder",
        "bidder",
        "voorbidden"
    ],
    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "b68ed088-a773-37dc-9134-8a1d6aa68766",
                    "sense_definition": "Zich in gedachten of met woorden tot een godheid richten om te vereren, te danken of iets te vragen.",
                    "learner_level": "A2",
                    "frequency": "High",
                    "semantic_group_id": "religious_activity",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Wij <w>bidden</w> elke avond voor het slapengaan.",
                            "target_lang_translations": {
                                "ru": "Мы <w>молимся</w> каждый вечер перед сном."
                            }
                        },
                        {
                            "text": "De priester <w>bad</w> samen met de gelovigen voor vrede.",
                            "target_lang_translations": {
                                "ru": "Священник <w>молился</w> о мире вместе с верующими."
                            }
                        }
                    ],
                    "antonyms": [
                        "vloeken"
                    ],
                    "common_phrases": [
                        "bidden tot God",
                        "voor het eten bidden",
                        "het Onze Vader bidden"
                    ],
                    "target_lang_definitions": {
                        "ru": "Обращаться к божеству мысленно или вслух с целью поклонения, благодарности или просьбы."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "молиться",
                                "target_lang_sense_clarification": "обращаться к Богу"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "5486bcf7-30f4-3845-8f2d-c007385d200d",
                    "sense_definition": "(van roofvogels) Met snelle vleugelslagen op dezelfde plaats in de lucht blijven hangen om een prooi te zoeken.",
                    "learner_level": "B2",
                    "frequency": "Low",
                    "semantic_group_id": "animal_behavior",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "De torenvalk <w>bad</w> boven het veld op zoek naar een muis.",
                            "target_lang_translations": {
                                "ru": "Пустельга <w>зависла</w> над полем в поисках мыши."
                            }
                        },
                        {
                            "text": "Je kunt de vogel zien <w>bidden</w> voordat hij op zijn prooi duikt.",
                            "target_lang_translations": {
                                "ru": "Можно увидеть, как птица <w>зависает</w> в воздухе, прежде чем пикировать на добычу."
                            }
                        }
                    ],
                    "synonyms": [
                        "stilhangen"
                    ],
                    "common_phrases": [
                        "biddende valk",
                        "biddende vogel"
                    ],
                    "target_lang_definitions": {
                        "ru": "(о хищных птицах) Зависать в воздухе на одном месте, быстро взмахивая крыльями, в поисках добычи."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "зависать",
                                "target_lang_sense_clarification": "о птицах: держаться в воздухе на одном месте"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "c96c43e0-00a0-3b38-b253-cd0663def380",
                    "sense_definition": "Iemand dringend en nederig om iets vragen.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "requesting",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Ik <w>bid</w> je, vertel niemand wat er gisteren is gebeurd.",
                            "target_lang_translations": {
                                "ru": "<w>Умоляю</w> тебя, не рассказывай никому, что случилось вчера."
                            }
                        },
                        {
                            "text": "De wanhopige man <w>bad</w> om genade bij de rechter.",
                            "target_lang_translations": {
                                "ru": "Отчаявшийся мужчина <w>молил</w> судью о пощаде."
                            }
                        }
                    ],
                    "synonyms": [
                        "smeken"
                    ],
                    "antonyms": [
                        "eisen",
                        "bevelen"
                    ],
                    "common_phrases": [
                        "ik bid u",
                        "bidden en smeken"
                    ],
                    "traits": [
                        {
                            "trait_type": "dated",
                            "comment": "often used in formal or literary contexts like 'ik bid u'"
                        }
                    ],
                    "target_lang_definitions": {
                        "ru": "Настойчиво и смиренно просить кого-либо о чем-либо."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "умолять",
                                "target_lang_sense_clarification": "настойчиво просить"
                            },
                            {
                                "target_lang_word": "молить",
                                "target_lang_sense_clarification": "просить о милости (книжн.)"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}