    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "26a87a49-ace2-3521-a4f0-21189edb312c",
                    "sense_definition": "Деятельность правовых органов государства (судов), направленная на соблюдение законов и разрешение конфликтов; юстиция.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "legal_system",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Преступник пытался скрыться, но <w>правосудие</w> его настигло.",
                            "target_lang_translations": {
                                "en": "The criminal tried to hide, but <w>justice</w> caught up with him."
                            }
                        },
                        {
                            "text": "Судья поклялся честно вершить <w>правосудие</w> и защищать права граждан.",
                            "target_lang_translations": {
                                "en": "The judge swore to honestly administer <w>justice</w> and protect citizens' rights."
                            }
                        }
                    ],
                    "synonyms": [
                        "юстиция",
                        "судопроизводство"
                    ],
                    "antonyms": [
                        "неправосудие"
                    ],
                    "common_phrases": [
                        "вершить правосудие",
                        "отправление правосудия",
                        "свершилось правосудие",
                        "предать правосудию"
                    ],
                    "traits": [
                        {
                            "trait_type": "form",
                            "comment": "formal"
                        }
                    ],
                    "target_lang_definitions": {
                        "en": "The activity of state legal bodies (courts) aimed at upholding laws and resolving conflicts; the administration of law."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "justice",
                                "target_lang_sense_clarification": "administration of law"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "ea9a812f-84c5-3677-a057-65c1c395e880",
                    "sense_definition": "Совокупность государственных органов (судов), которые осуществляют судебную деятельность.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "legal_system",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Новый дворец <w>правосудия</w> был построен в центре города.",
                            "target_lang_translations": {
                                "en": "A new palace of <w>justice</w> was built in the city center."
                            }
                        },
                        {
                            "text": "Российское <w>правосудие</w> рассматривает это сложное дело уже несколько месяцев.",
                            "target_lang_translations": {
                                "en": "The Russian <w>justice system</w> has been considering this complex case for several months."
                            }
                        }
                    ],
                    "synonyms": [
                        "суд"
                    ],
                    "common_phrases": [
                        "органы правосудия",
                        "дворец правосудия"
                    ],
                    "traits": [
                        {
                            "trait_type": "form",
                            "comment": "formal"
                        }
                    ],
                    "target_lang_definitions": {
                        "en": "The aggregate of state bodies (courts) that carry out judicial activity."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "justice system",
                                "target_lang_sense_clarification": "legal institutions"
                            },
                            {
                                "target_lang_word": "judiciary",
                                "target_lang_sense_clarification": "branch of government"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "4b3b953e-d8a3-3c37-966c-ac59e2157682",
                    "sense_definition": "Справедливое решение или суждение, основанное на законах и морали.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "moral_quality",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "В этом жестоком приговоре не было ни капли <w>правосудия</w>.",
                            "target_lang_translations": {
                                "en": "There was not a drop of <w>justice</w> in this cruel verdict."
                            }
                        },
                        {
                            "text": "Мы надеемся, что истинное <w>правосудие</w> восторжествует.",
                            "target_lang_translations": {
                                "en": "We hope that true <w>justice</w> will triumph."
                            }
                        }
                    ],
                    "antonyms": [
                        "кривосудие"
                    ],
                    "common_phrases": [
                        "чувство правосудия",
                        "восстановить правосудие"
                    ],
                    "target_lang_definitions": {
                        "en": "A fair decision or judgment based on laws and morality."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "justice",
