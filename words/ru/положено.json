            "senses": [
                {
                    "sense_id": "c87da1b4-3bab-3f70-af8a-a76e87d5203d",
                    "sense_definition": "Установлено правилами, законом или обычаем; требуется или разрешается (часто используется в значении «должно быть» или «принято»).",
                    "learner_level": "A2",
                    "frequency": "High",
                    "semantic_group_id": "obligation",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "В больнице <положено> соблюдать тишину и порядок.",
                            "target_lang_translations": {
                                "en": "In the hospital, it is <required> to maintain silence and order."
                            }
                        },
                        {
                            "text": "Гостям предложили чай, как и <положено> по этикету.",
                            "target_lang_translations": {
                                "en": "The guests were offered tea, as is <customary> according to etiquette."
                            }
                        },
                        {
                            "text": "Здесь посторонним находиться не <положено>.",
                            "target_lang_translations": {
                                "en": "Strangers are not <allowed> to be here."
                            }
                        }
                    ],
                    "synonyms": [
                        "принято",
                        "разрешено",
                        "полагается",
                        "надо"
                    ],
                    "antonyms": [
                        "запрещено",
                        "нельзя",
                        "возбраняется"
                    ],
                    "common_phrases": [
                        "не положено",
                        "как положено",
                        "кем положено",
                        "сколько положено"
                    ],
                    "target_lang_definitions": {
                        "en": "Established by rules, law, or custom; required or permitted."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "supposed to",
                                "target_lang_sense_clarification": "indicating an obligation or expectation based on rules"
                            },
                            {
                                "target_lang_word": "allowed",
                                "target_lang_sense_clarification": "indicating permission, often used in negative contexts"
                            },
                            {
                                "target_lang_word": "customary",
                                "target_lang_sense_clarification": "indicating adherence to tradition or etiquette"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "4424e9f6-b73b-3a5d-b959-802dfce8a95c",
                    "sense_definition": "Краткая форма среднего рода причастия <w>положенный</w> (от глагола «положить»); помещено, уложено куда-либо.",
