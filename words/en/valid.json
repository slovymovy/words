    "entries": [
        {
            "pos": "adjective",
            "senses": [
                {
                    "sense_id": "86be6a16-0443-37ed-a1a3-5a9f48b913d0",
                    "sense_definition": "Acceptable, legally binding, or in accordance with official rules and regulations.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "official_rules",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "You cannot drive a car legally without a <w>valid</w> license.",
                            "target_lang_translations": {
                                "ru": "Нельзя законно водить машину без <w>действительного</w> водительского удостоверения."
                            }
                        },
                        {
                            "text": "This discount coupon is <w>valid</w> for one week only.",
                            "target_lang_translations": {
                                "ru": "Этот купон на скидку <w>действителен</w> только одну неделю."
                            }
                        }
                    ],
                    "synonyms": [
                        "legal",
                        "authorized",
                        "legitimate",
                        "current"
                    ],
                    "antonyms": [
                        "invalid"
                    ],
                    "common_phrases": [
                        "valid passport",
                        "valid license",
                        "valid for",
                        "valid until"
                    ],
                    "target_lang_definitions": {
                        "ru": "Имеющий юридическую силу, действующий или соответствующий официальным правилам."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "действительный",
                                "target_lang_sense_clarification": "имеющий законную силу, годный"
                            },
                            {
                                "target_lang_word": "действующий",
                                "target_lang_sense_clarification": "актуальный на данный момент"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "218cd0c2-da30-3a89-8c32-1b0eeda1a756",
                    "sense_definition": "Well-grounded, reasonable, and based on sound logic or facts.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "logic_reason",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "She raised a <w>valid</w> point about the safety of the new design.",
                            "target_lang_translations": {
                                "ru": "Она сделала <w>обоснованное</w> замечание о безопасности новой конструкции."
                            }
                        },
                        {
                            "text": "I need a <w>valid</w> reason to approve your request for extra time off.",
                            "target_lang_translations": {
                                "ru": "Мне нужна <w>уважительная</w> причина, чтобы одобрить твой запрос на дополнительный отгул."
                            }
                        }
                    ],
                    "synonyms": [
                        "reasonable",
                        "justifiable",
                        "logical",
                        "sound"
                    ],
                    "antonyms": [
                        "invalid"
                    ],
                    "common_phrases": [
                        "valid point",
                        "valid reason",
                        "valid argument",
                        "valid concern"
                    ],
                    "target_lang_definitions": {
                        "ru": "Обоснованный, разумный, опирающийся на здравую логику или факты."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "веский",
                                "target_lang_sense_clarification": "убедительный, значимый (о доводах)"
                            },
                            {
                                "target_lang_word": "обоснованный",
                                "target_lang_sense_clarification": "подкрепленный доказательствами"
                            },
                            {
                                "target_lang_word": "уважительный",
                                "target_lang_sense_clarification": "заслуживающий оправдания (о причине)"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "2af760d1-1c43-3555-8462-b495c7e14657",
                    "sense_definition": "Of an argument in logic: structured so that the conclusion must be true if the premises are true.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "logic_technical",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "In formal logic, an argument can be <w>valid</w> even if its premises are factually incorrect.",
                            "target_lang_translations": {
                                "ru": "В формальной логике аргумент может быть <w>валидным</w>, даже если его посылки фактически неверны."
                            }
                        },
                        {
                            "text": "The professor asked the students to determine if the syllogism was <w>valid</w>.",
                            "target_lang_translations": {
                                "ru": "Профессор попросил студентов определить, является ли силлогизм <w>валидным</w>."
                            }
                        }
                    ],
                    "synonyms": [
                        "logical"
                    ],
                    "antonyms": [
                        "invalid"
                    ],
                    "common_phrases": [
                        "valid deduction",
                        "valid syllogism"
                    ],
                    "target_lang_definitions": {
                        "ru": "В логике: аргумент, построенный так, что истинность посылок гарантирует истинность вывода."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "валидный",
                                "target_lang_sense_clarification": "термин в логике и науке"
                            },
                            {
                                "target_lang_word": "логически правильный",
                                "target_lang_sense_clarification": "верный по структуре"
                            }
                        ]
                    }
                }
            ]
        }
    ]
