                            {
                                "target_lang_word": "so",
                                "target_lang_sense_clarification": "indicating degree"
                            },
                            {
                                "target_lang_word": "such",
                                "target_lang_sense_clarification": "in comparative proverbs"
                            }
                        ]
                    }
                }
            ]
        }
