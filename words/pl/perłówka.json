            "pos": "noun",
            "senses": [
                {
                    "sense_id": "a9775ebd-ecab-3e53-a958-252995f90ff7",
                    "sense_definition": "Rodzaj kaszy produkowanej z ziarna jęczmienia, która wyglądem przypomina małe perły.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "food_groats",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Do ugotowania tradycyjnego krupniku niezbędna jest dobra <w>perłówka</w>.",
                            "target_lang_translations": {
                                "ru": "Для приготовления традиционного крупника необходима хорошая <w>перловка</w>."
                            }
                        },
                        {
                            "text": "W sklepie spożywczym kupiłem paczkę <w>perłówki</w> na dzisiejszy obiad.",
                            "target_lang_translations": {
                                "ru": "В продуктовом магазине я купил пачку <w>перловки</w> на сегодняшний обед."
                            }
                        }
                    ],
                    "synonyms": [
                        "kasza perłowa",
                        "kasza jęczmienna mazurska"
                    ],
                    "common_phrases": [
                        "zupa z perłówką",
                        "gotowana perłówka"
                    ],
                    "target_lang_definitions": {
                        "ru": "Вид крупы, производимой из зерен ячменя, которая внешне напоминает маленькие жемчужины."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "перловка",
                                "target_lang_sense_clarification": "крупа"
                            },
                            {
                                "target_lang_word": "перловая крупа",
                                "target_lang_sense_clarification": "полное название"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "17d551d6-7ae3-39ca-b5f1-fd1cc22d26ff",
                    "sense_definition": "Gotowa potrawa przyrządzona z kaszy perłowej, często podawana z sosem lub warzywami.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "food_groats",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Na kolację została podana gorąca <w>perłówka</w> z gulaszem wieprzowym.",
                            "target_lang_translations": {
                                "ru": "На ужин была подана горячая <w>перловка</w> со свиным гуляшом."
                            }
                        },
                        {
                            "text": "Moja babcia robi pyszną <w>perłówkę</w> z suszonymi grzybami leśnymi.",
                            "target_lang_translations": {
                                "ru": "Моя бабушка готовит вкусную <w>перловку</w> с сушеными лесными грибами."
                            }
                        }
                    ],
                    "common_phrases": [
                        "perłówka z sosem",
                        "perłówka z warzywami"
                    ],
                    "target_lang_definitions": {
                        "ru": "Готовое блюдо, приготовленное из перловой крупы, часто подаваемое с соусом или овощами."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "перловая каша",
                                "target_lang_sense_clarification": "блюдо"
                            },
                            {
                                "target_lang_word": "перловка",
                                "target_lang_sense_clarification": "разговорное"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "4836f254-8011-3e38-ac1b-ad30ca524b5d",
                    "sense_definition": "Rodzaj trawy z rodziny wiechlinowatych, często spotykany w lasach lub uprawiany jako roślina ozdobna.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "plant_melica",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "W cieniu starych drzew rośnie zielona <w>perłówka</w>, która ozdabia ogród.",
                            "target_lang_translations": {
                                "ru": "В тени старых деревьев растет зеленый <w>перловник</w>, который украшает сад."
                            }
                        },
                        {
                            "text": "Botanicy badali, gdzie w tym regionie występuje rzadka odmiana <w>perłówki</w>.",
                            "target_lang_translations": {
                                "ru": "Ботаники изучали, где в этом регионе встречается редкая разновидность <w>перловника</w>."
                            }
                        }
                    ],
                    "target_lang_definitions": {
                        "ru": "Род трав семейства злаковых, часто встречающийся в лесах или выращиваемый как декоративное растение."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "перловник",
                                "target_lang_sense_clarification": "растение"
                            }
                        ]
                    }
                }
            ]
        }
    ]
