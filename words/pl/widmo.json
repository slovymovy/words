{
    "word_family": [
        "widmowy"
    ],
    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "91f4cd70-1ed9-3052-ae62-d7cf714eaae2",
                    "sense_definition": "Niematerialna postać, duch, zjawa lub złudzenie wzrokowe przedstawiające taką postać.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "supernatural",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "W starym zamczysku podobno nocami pojawia się białe <w>widmo</w>.",
                            "target_lang_translations": {
                                "ru": "В старом замке, говорят, по ночам появляется белый <w>призрак</w>."
                            }
                        },
                        {
                            "text": "To nie był prawdziwy człowiek, lecz tylko senne <w>widmo</w>.",
                            "target_lang_translations": {
                                "ru": "Это был не настоящий человек, а лишь сонное <w>видение</w>."
                            }
                        }
                    ],
                    "synonyms": [
                        "duch",
                        "zjawa",
                        "mara",
                        "upiór",
                        "fantom",
                        "widziadło"
                    ],
                    "common_phrases": [
                        "blade widmo",
                        "nocne widmo"
                    ],
                    "target_lang_definitions": {
                        "ru": "Нематериальная фигура, дух, призрак или зрительная иллюзия, представляющая такую фигуру."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "призрак",
                                "target_lang_sense_clarification": "сверхъестественное существо"
                            },
                            {
                                "target_lang_word": "привидение",
                                "target_lang_sense_clarification": "дух умершего"
                            },
                            {
                                "target_lang_word": "фантом",
                                "target_lang_sense_clarification": "иллюзия"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "e747681f-66c9-3923-bfc7-1203cc0000f9",
                    "sense_definition": "Groźna, niepokojąca perspektywa nadchodzących, negatywnych wydarzeń.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "metaphorical_threat",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Nad krajem zawisło <w>widmo</w> poważnego kryzysu gospodarczego.",
                            "target_lang_translations": {
                                "ru": "Над страной нависла <w>угроза</w> серьезного экономического кризиса."
                            }
                        },
                        {
                            "text": "Politycy starają się oddalić <w>widmo</w> wojny od naszych granic.",
                            "target_lang_translations": {
                                "ru": "Политики стараются отодвинуть <w>призрак</w> войны от наших границ."
                            }
                        }
                    ],
                    "synonyms": [
                        "mara"
                    ],
                    "common_phrases": [
                        "widmo bankructwa",
                        "widmo wojny",
                        "widmo głodu",
                        "widmo porażki"
                    ],
                    "target_lang_definitions": {
                        "ru": "Угрожающая, тревожная перспектива грядущих негативных событий."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "призрак",
                                "target_lang_sense_clarification": "метафорическая угроза"
                            },
                            {
                                "target_lang_word": "угроза",
                                "target_lang_sense_clarification": "опасность"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "a0b2498e-4589-3801-8210-1e8ad53366e3",
                    "sense_definition": "Obraz powstający w wyniku rozszczepienia promieniowania (np. światła) na składowe o różnych długościach fal.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "science_physics",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Pryzmat rozszczepia światło słoneczne na barwne <w>widmo</w>.",
                            "target_lang_translations": {
                                "ru": "Призма разлагает солнечный свет в цветной <w>спектр</w>."
                            }
                        },
                        {
                            "text": "Naukowcy badają <w>widmo</w> gwiazd, aby określić ich skład chemiczny.",
                            "target_lang_translations": {
                                "ru": "Ученые изучают <w>спектр</w> звезд, чтобы определить их химический состав."
                            }
                        }
                    ],
                    "synonyms": [
                        "spektrum"
                    ],
                    "common_phrases": [
                        "widmo światła",
                        "widmo ciągłe",
                        "widmo emisyjne",
                        "widmo elektromagnetyczne"
                    ],
                    "target_lang_definitions": {
                        "ru": "Изображение, возникающее в результате разложения излучения (например, света) на составляющие с разной длиной волны."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "спектр",
                                "target_lang_sense_clarification": "физика/оптика"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "a8d045ef-b019-32b4-8ab0-3200f7ace0d5",
                    "sense_definition": "Zbiór wartości własnych macierzy lub operatora liniowego w matematyce.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "science_math",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Student musiał wyznaczyć <w>widmo</w> macierzy na egzaminie z algebry.",
                            "target_lang_translations": {
                                "ru": "Студент должен был определить <w>спектр</w> матрицы на экзамене по алгебре."
                            }
                        },
                        {
                            "text": "W analizie funkcjonalnej bada się <w>widmo</w> operatorów ograniczonych.",
                            "target_lang_translations": {
                                "ru": "В функциональном анализе изучается <w>спектр</w> ограниченных операторов."
                            }
                        }
                    ],
                    "synonyms": [
                        "spektrum"
                    ],
                    "common_phrases": [
                        "widmo macierzy",
                        "widmo operatora"
                    ],
                    "target_lang_definitions": {
                        "ru": "Множество собственных значений матрицы или линейного оператора в математике."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "спектр",
                                "target_lang_sense_clarification": "математика"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}