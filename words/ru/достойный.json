    "entries": [
        {
            "pos": "adjective",
            "senses": [
                {
                    "sense_id": "6c244bfe-effa-30cb-a18a-b972a3399c19",
                    "sense_definition": "Заслуживающий или стоящий чего-либо (обычно требует дополнения в родительном падеже).",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "deserving",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Этот человек — настоящий герой, <w>достойный</w> всеобщего уважения.",
                            "target_lang_translations": {
                                "en": "This man is a real hero, <w>worthy</w> of universal respect."
                            }
                        },
                        {
                            "text": "Ваше интересное предложение <w>достойно</w> самого пристального внимания.",
                            "target_lang_translations": {
                                "en": "Your interesting proposal is <w>worthy</w> of the closest attention."
                            }
                        }
                    ],
                    "synonyms": [
                        "заслуживающий"
                    ],
                    "antonyms": [
                        "недостойный"
                    ],
                    "common_phrases": [
                        "достойный уважения",
                        "достойный внимания",
                        "достойный похвалы",
                        "достойный лучшего"
                    ],
                    "target_lang_definitions": {
                        "en": "Deserving or worth something (usually followed by 'of')."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "worthy",
                                "target_lang_sense_clarification": "deserving of something"
                            },
                            {
                                "target_lang_word": "deserving",
                                "target_lang_sense_clarification": "meriting a specific treatment or reward"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "ae1195cf-056f-34a8-8878-94e3687704bc",
                    "sense_definition": "Обладающий высокими нравственными качествами, уважаемый, порядочный.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "respectable",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "В одном из женских журналов опубликовали признаки <w>достойного</w> мужчины.",
                            "target_lang_translations": {
                                "en": "One of the women's magazines published the signs of a <w>decent</w> man."
                            }
                        },
                        {
                            "text": "Родители воспитали <w>достойных</w> детей, которыми можно гордиться.",
                            "target_lang_translations": {
                                "en": "The parents raised <w>decent</w> children who one can be proud of."
                            }
                        }
                    ],
                    "antonyms": [
                        "недостойный"
                    ],
                    "common_phrases": [
                        "достойный человек",
                        "достойный пример",
                        "достойный гражданин"
                    ],
                    "target_lang_definitions": {
                        "en": "Possessing high moral qualities; respectable or decent."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "decent",
                                "target_lang_sense_clarification": "having good moral character"
                            },
                            {
                                "target_lang_word": "respectable",
                                "target_lang_sense_clarification": "having a good reputation"
                            },
                            {
                                "target_lang_word": "worthy",
                                "target_lang_sense_clarification": "admirable or honourable (formal)"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "7af67041-5910-3d57-bc86-4f083253b957",
                    "sense_definition": "Справедливый, заслуженный; соответствующий чьим-либо заслугам, качествам или требованиям.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "fitting",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Победитель конкурса получил <w>достойную</w> награду за свои старания.",
                            "target_lang_translations": {
                                "en": "The contest winner received a <w>fitting</w> reward for their efforts."
                            }
                        },
                        {
                            "text": "Мы должны дать врагу <w>достойный</w> отпор и защитить свою землю.",
                            "target_lang_translations": {
                                "en": "We must give the enemy a <w>fitting</w> response and protect our land."
                            }
                        }
                    ],
                    "common_phrases": [
                        "достойная награда",
                        "достойная зарплата",
                        "достойный ответ",
                        "достойный вклад"
                    ],
