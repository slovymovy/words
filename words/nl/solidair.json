{
    "word_family": [
        "solidariteit",
        "solidariseren",
        "solidarisme"
    ],
    "entries": [
        {
            "pos": "adjective",
            "senses": [
                {
                    "sense_id": "1edfef41-c0d4-324b-85b8-9e768ff791aa",
                    "sense_definition": "Verbonden door een gevoel van saamhorigheid en bereid elkaar te steunen.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "De hele klas was <w>solidair</w> met de zieke leraar.",
                            "target_lang_translations": {
                                "en": "The entire class stood <w>in solidarity</w> with the sick teacher."
                            }
                        },
                        {
                            "text": "Zij hebben zich <w>solidair</w> verklaard met de stakende arbeiders.",
                            "target_lang_translations": {
                                "en": "They declared themselves <w>in solidarity</w> with the striking workers."
                            }
                        }
                    ],
                    "synonyms": [
                        "saamhorig",
                        "eensgezind"
                    ],
                    "antonyms": [
                        "onsolidair"
                    ],
                    "common_phrases": [
                        "solidair zijn met",
                        "zich solidair verklaren",
                        "zich solidair tonen"
                    ],
                    "target_lang_definitions": {
                        "en": "Connected by a sense of togetherness and willing to support each other."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "in solidarity",
                                "target_lang_sense_clarification": "showing unity or support"
                            },
                            {
                                "target_lang_word": "united",
                                "target_lang_sense_clarification": "joined in spirit or purpose"
                            },
                            {
                                "target_lang_word": "standing together",
                                "target_lang_sense_clarification": "supporting one another"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "08f59abc-b6f1-3182-b684-0a02f72986ac",
                    "sense_definition": "Hoofdelijk aansprakelijk; gezamenlijk verantwoordelijk voor een gehele schuld.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "De vennoten zijn <w>solidair</w> aansprakelijk voor de schulden van het bedrijf.",
                            "target_lang_translations": {
                                "en": "The partners are <w>jointly and severally</w> liable for the company's debts."
                            }
                        },
                        {
                            "text": "In dit contract zijn beide partijen <w>solidair</w> verbonden.",
                            "target_lang_translations": {
                                "en": "In this contract, both parties are <w>jointly</w> bound."
                            }
                        }
                    ],
                    "synonyms": [
                        "hoofdelijk"
                    ],
                    "common_phrases": [
                        "solidair aansprakelijk",
                        "solidair verbonden"
                    ],
                    "target_lang_definitions": {
                        "en": "Jointly liable; collectively responsible for a total debt or obligation."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "jointly and severally",
                                "target_lang_sense_clarification": "legal liability where each party is responsible for the whole"
                            },
                            {
                                "target_lang_word": "jointly",
                                "target_lang_sense_clarification": "shared responsibility"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}