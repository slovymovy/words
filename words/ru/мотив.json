    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "20ba7297-a302-3250-b67b-d0c7a4ea1edf",
                    "sense_definition": "Мелодия, напев (обычно ритмичный и легко запоминающийся).",
                    "learner_level": "B1",
                    "frequency": "Middle",
                    "semantic_group_id": "melody_group",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Я весь день напеваю этот прилипчивый <w>мотив</w> из популярной рекламы.",
                            "target_lang_translations": {
                                "en": "I've been humming this catchy <w>tune</w> from a popular commercial all day."
                            }
                        },
                        {
                            "text": "Из открытого окна доносился тихий и грустный гитарный <w>мотив</w>.",
                            "target_lang_translations": {
                                "en": "A quiet and sad guitar <w>tune</w> drifted from the open window."
                            }
                        }
                    ],
                    "synonyms": [
                        "мелодия",
                        "напев"
                    ],
                    "common_phrases": [
                        "знакомый мотив",
                        "напевать мотив",
                        "весёлый мотив",
                        "простой мотив"
                    ],
                    "traits": [
                        {
                            "trait_type": "colloquial",
                            "comment": "often used in casual speech"
                        }
                    ],
                    "target_lang_definitions": {
                        "en": "A melody or tune (usually rhythmic and easy to remember)."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "tune",
                                "target_lang_sense_clarification": "A melody, especially one that is catchy or characterizes a piece of music"
                            },
                            {
                                "target_lang_word": "melody",
                                "target_lang_sense_clarification": "A sequence of musical notes that is musically satisfying"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "2c1d3a6b-e116-3b2f-aad5-e0a64b57a1d0",
                    "sense_definition": "Внутреннее побуждение, причина, толкающая человека на какое-либо действие.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "reason_group",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Следователь пытался понять, какой <w>мотив</w> был у преступника.",
                            "target_lang_translations": {
                                "en": "The investigator tried to understand what <w>motive</w> the criminal had."
                            }
                        },
                        {
                            "text": "Мы так и не узнали, какими <w>мотивами</w> он руководствовался при принятии решения.",
                            "target_lang_translations": {
                                "en": "We never found out what <w>motives</w> guided him in making the decision."
                            }
                        }
                    ],
                    "synonyms": [
                        "причи́на",
                        "по́вод",
                        "побужде́ние",
                        "до́вод"
                    ],
                    "common_phrases": [
                        "мотив преступления",
                        "личные мотивы",
                        "скрытые мотивы",
                        "по политическим мотивам"
                    ],
                    "target_lang_definitions": {
                        "en": "An internal urge or reason that pushes a person to perform a specific action."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "motive",
                                "target_lang_sense_clarification": "A reason for doing something, especially one that is hidden or not obvious"
                            },
                            {
                                "target_lang_word": "reason",
                                "target_lang_sense_clarification": "A cause, explanation, or justification for an action"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "d4ae4e42-e090-3109-b626-a9a7c253ad31",
                    "sense_definition": "Характерная тема или элемент сюжета в художественном произведении.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "art_theme_group",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "В этой книге отчётливо звучат библейские <w>мотивы</w> добра и зла.",
                            "target_lang_translations": {
                                "en": "Biblical <w>motifs</w> of good and evil resonate clearly in this book."
                            }
                        },
                        {
                            "text": "Художник использовал в своих картинах яркие цветочные <w>мотивы</w>.",
                            "target_lang_translations": {
                                "en": "The artist used bright floral <w>motifs</w> in his paintings."
                            }
                        }
                    ],
                    "synonyms": [
                        "те́ма",
                        "сюже́т",
                        "лейтмоти́в"
                    ],
                    "common_phrases": [
                        "народные мотивы",
                        "сказочные мотивы",
                        "восточные мотивы"
                    ],
                    "target_lang_definitions": {
                        "en": "A characteristic theme or element of the plot in an artistic work."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "motif",
                                "target_lang_sense_clarification": "A recurring element, theme, or subject in an artistic, literary, or musical work"
                            },
                            {
                                "target_lang_word": "theme",
                                "target_lang_sense_clarification": "A unifying idea or subject in a work of art"
                            }
                        ]
                    }
                }
            ]
        }
    ]
