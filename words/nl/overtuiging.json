                            }
                        ],
                        "ru": [
                            {
                                "target_lang_word": "убежденность",
                                "target_lang_sense_clarification": "твердость, вера в свои слова"
                            },
                            {
                                "target_lang_word": "уверенность",
                                "target_lang_sense_clarification": "отсутствие сомнений"
                            }
                        ]
                    }
                }
            ]
        }
