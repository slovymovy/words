            "pos": "adjective",
            "senses": [
                {
                    "sense_id": "f53c7956-90c2-3fd0-b6c1-a62deefbf906",
                    "sense_definition": "Of a person or entity: generally or widely known for something negative; infamous.",
                    "learner_level": "C1",
                    "frequency": "High",
                    "semantic_group_id": "negative_fame",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The city is <w>notorious</w> for its heavy traffic and pollution.",
                            "target_lang_translations": {
                                "ru": "Этот город <w>печально известен</w> своим плотным движением и загрязнением среды."
                            }
                        },
                        {
                            "text": "He became a <w>notorious</w> criminal after the bank robbery.",
                            "target_lang_translations": {
                                "ru": "После ограбления банка он стал <w>печально известным</w> преступником."
                            }
                        }
                    ],
                    "synonyms": [
                        "ill-famed",
                        "notoriously",
                        "notoriously"
                    ],
                    "antonyms": [
                        "famous",
                        "unnotorious"
                    ],
                    "common_phrases": [
                        "notorious for",
                        "notorious criminal",
                        "become notorious"
                    ],
                    "target_lang_definitions": {
                        "ru": "О человеке или организации: широко известный чем-то негативным; пользующийся дурной славой."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "печально известный",
                                "target_lang_sense_clarification": "широко известный с негативной стороны"
                            },
                            {
                                "target_lang_word": "пользующийся дурной славой",
                                "target_lang_sense_clarification": "имеющий плохую репутацию"
                            },
                            {
                                "target_lang_word": "небезызвестный",
                                "target_lang_sense_clarification": "известный (часто с иронией или негативным оттенком)"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "1f5ad2e0-4bd8-33e5-997c-86d8e5284c2d",
                    "sense_definition": "Of an act, situation, or quality: blameworthy in an obvious and offensive way; blatant.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "negative_fame",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The trial was a <w>notorious</w> miscarriage of justice.",
                            "target_lang_translations": {
                                "ru": "Этот судебный процесс стал <w>вопиющим</w> примером судебной ошибки."
                            }
                        },
                        {
                            "text": "It was a <w>notorious</w> lie that everyone immediately recognized.",
                            "target_lang_translations": {
                                "ru": "Это была <w>вопиющая</w> ложь, которую все сразу распознали."
                            }
                        }
                    ],
                    "common_phrases": [
                        "notorious injustice",
                        "notorious example"
                    ],
                    "target_lang_definitions": {
                        "ru": "О поступке, ситуации или качестве: заслуживающий осуждения; вопиющий, явный."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "вопиющий",
                                "target_lang_sense_clarification": "вызывающий возмущение, недопустимый"
                            },
                            {
                                "target_lang_word": "пресловутый",
                                "target_lang_sense_clarification": "получивший печальную известность (часто о фактах, проблемах)"
