            "pos": "adjective",
            "senses": [
                {
                    "sense_id": "0b47af96-27ff-3552-80c3-b424531f6eee",
                    "sense_definition": "Taki, który wywołuje smutek, przygnębienie lub strach; ciemny, mroczny i mało przyjazny (o miejscu, pogodzie, zjawisku).",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "atmosphere_weather",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Dzisiejsza pogoda jest wyjątkowo <w>ponura</w> i deszczowa.",
                            "target_lang_translations": {
                                "ru": "Сегодняшняя погода исключительно <w>пасмурная</w> и дождливая."
                            }
                        },
                        {
                            "text": "Nie lubię chodzić do tego lasu, bo jest ciemny i <w>ponury</w>.",
                            "target_lang_translations": {
                                "ru": "Я не люблю ходить в этот лес, потому что он темный и <w>мрачный</w>."
                            }
                        }
                    ],
                    "synonyms": [
                        "posępny",
                        "pochmurny",
                        "zachmurzony",
                        "smętny"
                    ],
                    "antonyms": [
                        "pogodny"
                    ],
                    "common_phrases": [
                        "ponura pogoda",
                        "ponury dzień",
                        "ponury krajobraz",
                        "ponure miejsce"
                    ],
                    "target_lang_definitions": {
                        "ru": "Вызывающий тоску, уныние или страх; темный и неприветливый (о месте, погоде, явлении)."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "мрачный",
                                "target_lang_sense_clarification": "о месте, атмосфере или освещении"
                            },
                            {
                                "target_lang_word": "пасмурный",
                                "target_lang_sense_clarification": "о погоде"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "9e80f76e-8703-3a30-9ac3-6e574c750c03",
                    "sense_definition": "Pełen smutku, przygnębienia i powagi; o człowieku, który się nie uśmiecha, lub o jego zachowaniu i nastroju.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "mood_personality",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Mój sąsiad to <w>ponury</w> człowiek, który z nikim nie rozmawia.",
                            "target_lang_translations": {
                                "ru": "Мой сосед — <w>мрачный</w> человек, который ни с кем не разговаривает."
                            }
                        },
                        {
                            "text": "Jego <w>ponure</w> spojrzenie sprawiło, że wszyscy w pokoju zamilkli.",
                            "target_lang_translations": {
                                "ru": "Его <w>мрачный</w> взгляд заставил всех в комнате замолчать."
                            }
                        }
                    ],
                    "synonyms": [
                        "posępny",
                        "smętny",
                        "chmurny",
                        "minorowy"
                    ],
                    "antonyms": [
                        "pogodny"
                    ],
                    "common_phrases": [
