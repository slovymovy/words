{
    "word_family": [
        "circumstance",
        "circumstantial"
    ],
    "entries": [
        {
            "pos": "adverb",
            "senses": [
                {
                    "sense_id": "73be9c95-6cef-31fc-8a30-d05b8080ee03",
                    "sense_definition": "In a way that includes every detail or particular; minutely.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "detailed_description",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The witness described the events <w>circumstantially</w> to ensure the police understood exactly what happened.",
                            "target_lang_translations": {
                                "ru": "Свидетель описал события <w>обстоятельно</w>, чтобы полиция точно поняла, что произошло."
                            }
                        },
                        {
                            "text": "He wrote <w>circumstantially</w> about his travels, noting every small observation in his journal.",
                            "target_lang_translations": {
                                "ru": "Он писал о своих путешествиях <w>детально</w>, отмечая в дневнике каждое мелкое наблюдение."
                            }
                        }
                    ],
                    "synonyms": [
                        "minutely",
                        "thoroughly",
                        "detailedly",
                        "specifically"
                    ],
                    "antonyms": [
                        "vaguely",
                        "generally",
                        "broadly"
                    ],
                    "common_phrases": [
                        "described circumstantially",
                        "recounted circumstantially"
                    ],
                    "target_lang_definitions": {
                        "ru": "Способом, включающим каждую деталь или подробность; подробно, основательно."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "обстоятельно",
                                "target_lang_sense_clarification": "подробно, со всеми деталями"
                            },
                            {
                                "target_lang_word": "детально",
                                "target_lang_sense_clarification": "с вниманием к мелочам"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "2a856f8e-4301-37ec-b27e-6e0802c0f7b3",
                    "sense_definition": "In relation to specific conditions or situations rather than the essential nature of something; accidentally or incidentally.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "incidental_nature",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The two problems are only <w>circumstantially</w> related and do not share a common root cause.",
                            "target_lang_translations": {
                                "ru": "Эти две проблемы связаны лишь <w>в силу обстоятельств</w> и не имеют общей первопричины."
                            }
                        },
                        {
                            "text": "Success in this market is often <w>circumstantially</w> determined by timing rather than skill.",
                            "target_lang_translations": {
                                "ru": "Успех на этом рынке часто определяется <w>ситуативно</w> — выбором времени, а не мастерством."
                            }
                        }
                    ],
                    "synonyms": [
                        "incidentally",
                        "contingently",
                        "accidentally"
                    ],
                    "antonyms": [
                        "essentially",
                        "inherently",
                        "fundamentally"
                    ],
                    "common_phrases": [
                        "circumstantially different",
                        "circumstantially linked"
                    ],
                    "target_lang_definitions": {
                        "ru": "В зависимости от конкретных условий или ситуаций, а не от сущности чего-либо; случайно или в силу обстоятельств."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "в силу обстоятельств",
                                "target_lang_sense_clarification": "из-за сложившейся ситуации"
                            },
                            {
                                "target_lang_word": "ситуативно",
                                "target_lang_sense_clarification": "в зависимости от условий"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}