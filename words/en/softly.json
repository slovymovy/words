    "entries": [
        {
            "pos": "adverb",
            "senses": [
                {
                    "sense_id": "e1c62db8-34ed-3a11-aee0-ff19395ac13d",
                    "sense_definition": "In a quiet way; with a low volume.",
                    "learner_level": "A2",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Please speak <w>softly</w> while we are in the library.",
                            "target_lang_translations": {
                                "ru": "Пожалуйста, говорите <w>тихо</w>, пока мы в библиотеке."
                            }
                        },
                        {
                            "text": "The music played <w>softly</w> in the background during dinner.",
                            "target_lang_translations": {
                                "ru": "Во время ужина на заднем плане <w>тихо</w> играла музыка."
                            }
                        }
                    ],
                    "synonyms": [
                        "quietly",
                        "faintly"
                    ],
                    "antonyms": [
                        "loudly",
                        "noisily"
                    ],
                    "common_phrases": [
                        "speak softly",
                        "whisper softly",
                        "play softly",
                        "sing softly"
                    ],
                    "target_lang_definitions": {
                        "ru": "Тихо; с низкой громкостью."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "тихо",
                                "target_lang_sense_clarification": "не издавая громких звуков"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "4551f94e-68f1-3d23-ae50-d674eb05c9c6",
                    "sense_definition": "In a gentle or delicate way; without force or roughness.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "He closed the door <w>softly</w> so he would not disturb anyone.",
                            "target_lang_translations": {
                                "ru": "Он <w>мягко</w> закрыл дверь, чтобы никого не побеспокоить."
                            }
                        },
                        {
                            "text": "The snow fell <w>softly</w> on the frozen ground.",
                            "target_lang_translations": {
                                "ru": "Снег <w>мягко</w> падал на мерзлую землю."
                            }
                        }
                    ],
                    "synonyms": [
                        "gently",
                        "delicately",
                        "tenderly"
                    ],
                    "antonyms": [
                        "roughly",
                        "harshly",
                        "hard"
                    ],
                    "common_phrases": [
                        "tread softly",
                        "touch softly",
                        "land softly"
                    ],
                    "target_lang_definitions": {
                        "ru": "Мягко или нежно; без применения силы или грубости."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "мягко",
                                "target_lang_sense_clarification": "аккуратно, плавно; без толчков"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "542c7fdf-2b24-3255-ab69-d5f75b7a5870",
                    "sense_definition": "With a gentle appearance, especially regarding light or color; not brightly or harshly.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The room was <w>softly</w> lit by a few candles on the table.",
                            "target_lang_translations": {
                                "ru": "Комната была <w>мягко</w> освещена несколькими свечами на столе."
                            }
                        },
                        {
                            "text": "We could see the mountains glowing <w>softly</w> in the distance.",
                            "target_lang_translations": {
                                "ru": "Мы видели горы, <w>мягко</w> светящиеся вдалеке."
                            }
                        }
                    ],
                    "synonyms": [
                        "dimly"
                    ],
                    "antonyms": [
                        "brightly"
                    ],
                    "common_phrases": [
                        "softly lit",
                        "softly colored",
                        "softly glowing"
                    ],
                    "target_lang_definitions": {
                        "ru": "С мягким оттенком (о свете или цвете); не ярко и не резко."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "мягко",
                                "target_lang_sense_clarification": "приятно для глаз, не резко"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}