            "senses": [
                {
                    "sense_id": "9b09008f-999d-3942-9ae7-ead01618368b",
                    "sense_definition": "Dawny, miękki materac lub grube posłanie wypełnione pierzem, używane do spania.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "bedding",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "W wiejskiej chacie goście spali na wielkim, puchowym <w>piernacie</w>.",
                            "target_lang_translations": {
                                "ru": "В деревенской хате гости спали на огромной пуховой <w>перине</w>."
                            }
                        },
                        {
                            "text": "Stary <w>piernat</w> był niezwykle wygodny i zapewniał ciepło w mroźne, zimowe noce.",
                            "target_lang_translations": {
                                "ru": "Старая <w>перина</w> была необычайно удобной и согревала в морозные зимние ночи."
                            }
                        }
                    ],
                    "synonyms": [
                        "gw. (Poznań) spodek"
                    ],
                    "common_phrases": [
                        "spać na piernacie",
                        "miękki piernat"
                    ],
                    "traits": [
                        {
                            "trait_type": "dated",
                            "comment": "słowo używane głównie w kontekście historycznym lub literackim"
                        }
                    ],
                    "target_lang_definitions": {
                        "ru": "Старинный мягкий матрас или толстая подстилка, набитая перьями, используемая для сна."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "перина",
                                "target_lang_sense_clarification": "матрас, набитый пухом или пером"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "edf76410-bb93-3a4f-93d6-1ccbc710c0be",
                    "sense_definition": "Osoba rozpieszczona, delikatna lub zniewieściała; synonim słowa pieszczoch.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Nie zachowuj się jak <w>piernat</w>, tylko pomóż nam wreszcie nosić te ciężkie paczki.",
                            "target_lang_translations": {
                                "ru": "Не веди себя как <w>неженка</w>, а помоги нам наконец носить эти тяжелые посылки."
                            }
                        },
                        {
                            "text": "Jej mąż to taki <w>piernat</w>, który boi się ubrudzić ręce jakąkolwiek pracą.",
                            "target_lang_translations": {
                                "ru": "Ее муж — такой <w>белоручка</w>, который боится запачкать руки какой-либо работой."
                            }
                        }
                    ],
                    "synonyms": [
                        "pieszczoch"
                    ],
                    "target_lang_definitions": {
                        "ru": "Избалованный, изнеженный или женоподобный человек."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "неженка",
                                "target_lang_sense_clarification": "изнеженный, чувствительный человек"
                            },
                            {
                                "target_lang_word": "белоручка",
                                "target_lang_sense_clarification": "человек, избегающий физического труда"
                            }
                        ]
                    }
                }
            ]
        }
