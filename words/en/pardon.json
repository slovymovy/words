{
    "word_family": [
        "pardonable",
        "unpardonable",
        "pardoner"
    ],
    "entries": [
        {
            "pos": "interjection",
            "senses": [
                {
                    "sense_id": "cfdceb36-9f34-3194-94ed-6f6a866585bd",
                    "sense_definition": "Used to politely ask someone to repeat something because it was not heard or understood.",
                    "learner_level": "A2",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "<w>Pardon</w>? I am afraid I did not hear what you said.",
                            "target_lang_translations": {
                                "ru": "<w>Прошу прощения</w>? Боюсь, я не расслышал, что вы сказали."
                            }
                        },
                        {
                            "text": "I beg your <w>pardon</w>, but could you please repeat that address?",
                            "target_lang_translations": {
                                "ru": "<w>Прошу прощения</w>, но не могли бы вы повторить этот адрес?"
                            }
                        }
                    ],
                    "common_phrases": [
                        "I beg your pardon",
                        "pardon me"
                    ],
                    "target_lang_definitions": {
                        "ru": "Используется для вежливой просьбы повторить что-либо, если это не было услышано или понято."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "прошу́ проще́ния",
                                "target_lang_sense_clarification": "вежливая форма"
                            },
                            {
                                "target_lang_word": "прости́те",
                                "target_lang_sense_clarification": "общеупотребительное"
                            },
                            {
                                "target_lang_word": "что?",
                                "target_lang_sense_clarification": "разговорное, переспрос"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "b75e65fc-c7a8-329b-9ba6-1b9352c218b4",
                    "sense_definition": "To forgive someone for an offense, mistake, or rude behavior.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "forgiveness_general",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Please <w>pardon</w> me for interrupting your conversation so abruptly.",
                            "target_lang_translations": {
                                "ru": "Пожалуйста, <w>простите</w> меня за то, что я так резко прервал ваш разговор."
                            }
                        },
                        {
                            "text": "She could not <w>pardon</w> him for forgetting their anniversary again.",
                            "target_lang_translations": {
                                "ru": "Она не могла <w>простить</w> ему того, что он снова забыл об их годовщине."
                            }
                        }
                    ],
                    "synonyms": [
                        "amnesty"
                    ],
                    "common_phrases": [
                        "pardon me",
                        "pardon the interruption"
                    ],
                    "target_lang_definitions": {
                        "ru": "Прощать кого-либо за обиду, ошибку или грубое поведение."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "проща́ть",
                                "target_lang_sense_clarification": "извинять за проступок"
                            },
                            {
                                "target_lang_word": "извиня́ть",
                                "target_lang_sense_clarification": "не держать обиды"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "ef1baa5a-7e83-38cd-83a1-592963d781d2",
                    "sense_definition": "To officially release a person from the legal penalties of a crime.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "legal_release",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The governor decided to <w>pardon</w> the prisoner due to his poor health.",
                            "target_lang_translations": {
                                "ru": "Губернатор решил <w>помиловать</w> заключенного из-за его плохого здоровья."
                            }
                        },
                        {
                            "text": "He was <w>pardoned</w> by the president after serving five years in prison.",
                            "target_lang_translations": {
                                "ru": "Он был <w>помилован</w> президентом после пяти лет тюремного заключения."
                            }
                        }
                    ],
                    "common_phrases": [
                        "pardon a criminal",
                        "be pardoned"
                    ],
                    "target_lang_definitions": {
                        "ru": "Официально освобождать человека от юридического наказания за преступление."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "поми́ловать",
                                "target_lang_sense_clarification": "освободить от наказания"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "24165fbf-9e9b-39ae-a4c3-03df02fe9448",
                    "sense_definition": "The act of forgiving someone for a mistake or offense.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "forgiveness_general",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "He went to his friend to ask for <w>pardon</w> after their heated argument.",
                            "target_lang_translations": {
                                "ru": "Он пошел к другу просить <w>прощения</w> после их жаркого спора."
                            }
                        },
                        {
                            "text": "She smiled at him, showing that his <w>pardon</w> was fully granted.",
                            "target_lang_translations": {
                                "ru": "Она улыбнулась ему, показывая, что <w>прощение</w> ему полностью даровано."
                            }
                        }
                    ],
                    "common_phrases": [
                        "ask for pardon",
                        "beg pardon"
                    ],
                    "target_lang_definitions": {
                        "ru": "Акт прощения кого-либо за ошибку или обиду."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "проще́ние",
                                "target_lang_sense_clarification": "отпущение вины"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "eae2f318-83ac-310c-8d07-7212e982e0cf",
                    "sense_definition": "An official government order that releases a person from punishment for a crime.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "legal_release",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The lawyer fought hard to secure a full <w>pardon</w> for his client.",
                            "target_lang_translations": {
                                "ru": "Адвокат упорно боролся, чтобы добиться полного <w>помилования</w> для своего клиента."
                            }
                        },
                        {
                            "text": "A presidential <w>pardon</w> can restore the rights of a convicted citizen.",
                            "target_lang_translations": {
                                "ru": "Президентское <w>помилование</w> может восстановить права осужденного гражданина."
                            }
                        }
                    ],
                    "synonyms": [
                        "clemency",
                        "amnesty"
                    ],
                    "common_phrases": [
                        "presidential pardon",
                        "grant a pardon",
                        "full pardon"
                    ],
                    "target_lang_definitions": {
                        "ru": "Официальное правительственное постановление, освобождающее лицо от наказания за преступление."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "поми́лование",
                                "target_lang_sense_clarification": "официальный акт"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}