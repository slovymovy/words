    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "68f35e2f-b587-3850-8a3f-db26a5bdb7e9",
                    "sense_definition": "Юрист, чья профессия — оказание правовой помощи гражданам и организациям, а также защита их интересов в суде.",
                    "learner_level": "A2",
                    "frequency": "High",
                    "semantic_group_id": "legal_profession",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "На суде <w>адвокат</w> смог доказать полную невиновность своего клиента.",
                            "target_lang_translations": {
                                "en": "At the trial, the <w>lawyer</w> was able to prove his client's complete innocence."
                            }
                        },
                        {
                            "text": "Если у тебя возникли проблемы с законом, тебе срочно нужен хороший <w>адвокат</w>.",
                            "target_lang_translations": {
                                "en": "If you have problems with the law, you urgently need a good <w>lawyer</w>."
                            }
                        }
                    ],
                    "synonyms": [
                        "юри́ст",
                        "защитник"
                    ],
                    "antonyms": [
                        "прокурор",
                        "обвинитель"
                    ],
                    "common_phrases": [
                        "нанять адвоката",
                        "опытный адвокат",
                        "услуги адвоката",
                        "консультация адвоката"
                    ],
                    "target_lang_definitions": {
                        "en": "A lawyer whose profession is to provide legal assistance to citizens and organizations, as well as to defend their interests in court."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "lawyer",
                                "target_lang_sense_clarification": "general term for a legal professional"
                            },
                            {
                                "target_lang_word": "attorney",
                                "target_lang_sense_clarification": "common term in the US"
                            },
                            {
                                "target_lang_word": "defense attorney",
                                "target_lang_sense_clarification": "lawyer who represents defendants in court"
                            },
                            {
                                "target_lang_word": "advocate",
                                "target_lang_sense_clarification": "formal term, often used in specific legal systems"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "51420719-e23c-302a-aa16-b29dd18db4e3",
                    "sense_definition": "Человек, который настойчиво защищает кого-либо, выступает в чью-либо пользу или отстаивает какие-либо взгляды.",
                    "learner_level": "B2",
                    "frequency": "Low",
                    "semantic_group_id": "defender_figurative",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Он всегда выступает как <w>адвокат</w> непопулярных реформ на наших собраниях.",
                            "target_lang_translations": {
                                "en": "He always acts as an <w>advocate</w> for unpopular reforms at our meetings."
                            }
                        },
                        {
                            "text": "Не будь его <w>адвокатом</w>, пусть он сам объяснит своё странное поведение.",
                            "target_lang_translations": {
                                "en": "Don't be his <w>advocate</w>; let him explain his strange behavior himself."
                            }
                        }
                    ],
                    "synonyms": [
                        "защитник",
                        "заступник",
                        "поборник"
                    ],
                    "antonyms": [
                        "противник"
                    ],
                    "common_phrases": [
                        "адвокат дьявола",
                        "выступать адвокатом"
                    ],
                    "target_lang_definitions": {
                        "en": "A person who persistently defends someone, speaks in favor of someone, or upholds certain views."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "advocate",
                                "target_lang_sense_clarification": "supporter or proponent of a cause"
                            },
                            {
                                "target_lang_word": "defender",
                                "target_lang_sense_clarification": "someone who protects or supports"
                            },
                            {
                                "target_lang_word": "proponent",
                                "target_lang_sense_clarification": "someone who argues in favor of something"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "b7cd2e6f-9fc8-3a2e-86dc-e99dd085053d",
                    "sense_definition": "Крепкий чай с лимоном, иногда с добавлением рома или другого алкоголя.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "nautical_slang",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "После долгой вахты на холоде боцман с удовольствием выпил горячий <w>адвокат</w>.",
                            "target_lang_translations": {
                                "en": "After a long watch in the cold, the boatswain gladly drank hot <w>advokat</w>."
                            }
                        },
                        {
                            "text": "Моряки называли крепкий чай с лимоном словом <w>адвокат</w>.",
                            "target_lang_translations": {
                                "en": "Sailors called strong tea with lemon by the word <w>advokat</w>."
                            }
                        }
                    ],
                    "traits": [
                        {
                            "trait_type": "slang",
                            "comment": "морской жаргон"
                        }
                    ],
                    "target_lang_definitions": {
                        "en": "Strong tea with lemon, sometimes with the addition of rum or other alcohol."
                    },
                    "translations": {
                        "en": []
                    }
                }
            ]
        }
    ]
