{
    "word_family": [
        "propagandist",
        "propagandize",
        "propagandistic"
    ],
    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "f3a0858b-215f-3ef3-bed3-1bc34b6f0ab9",
                    "sense_definition": "Biased or misleading information used to promote a political cause or point of view.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "communication_influence",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The government spread <w>propaganda</w> to gain support for the war.",
                            "target_lang_translations": {
                                "ru": "Правительство распространяло <w>пропаганду</w>, чтобы заручиться поддержкой в войне."
                            }
                        },
                        {
                            "text": "Voters were bombarded with political <w>propaganda</w> before the election.",
                            "target_lang_translations": {
                                "ru": "Перед выборами на избирателей обрушился поток политической <w>пропаганды</w>."
                            }
                        }
                    ],
                    "synonyms": [
                        "disinformation",
                        "spin",
                        "indoctrination"
                    ],
                    "antonyms": [
                        "truth",
                        "fact"
                    ],
                    "common_phrases": [
                        "political propaganda",
                        "war propaganda",
                        "spread propaganda"
                    ],
                    "target_lang_definitions": {
                        "ru": "Предвзятая или ложная информация, используемая для продвижения политических целей или взглядов."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "пропаганда",
                                "target_lang_sense_clarification": "политическая или идеологическая"
                            },
                            {
                                "target_lang_word": "агитация",
                                "target_lang_sense_clarification": "активная деятельность по убеждению масс"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "0933bf54-58ae-3b69-93a6-9c9c6acd816e",
                    "sense_definition": "Public communication or publicity intended to influence an audience and advance an agenda.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "communication_influence",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The agency handles publicity and <w>propaganda</w> for the new policy.",
                            "target_lang_translations": {
                                "ru": "Агентство занимается рекламой и <w>пропагандой</w> новой политики."
                            }
                        },
                        {
                            "text": "Art can be used as <w>propaganda</w> to inspire social change.",
                            "target_lang_translations": {
                                "ru": "Искусство может использоваться как <w>пропаганда</w> для вдохновения на социальные перемены."
                            }
                        }
                    ],
                    "synonyms": [
                        "advocacy",
                        "promotion",
                        "publicity"
                    ],
                    "common_phrases": [
                        "propaganda campaign"
                    ],
                    "target_lang_definitions": {
                        "ru": "Публичная коммуникация, направленная на влияние на аудиторию и продвижение определённой повестки (идей, знаний)."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "пропаганда",
                                "target_lang_sense_clarification": "распространение идей, знаний или образа жизни"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}