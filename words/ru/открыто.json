    "entries": [
        {
            "pos": "adverb",
            "senses": [
                {
                    "sense_id": "08246725-32e2-3ba8-a582-df9df2930e2e",
                    "sense_definition": "Не таясь, не скрывая своих мыслей, чувств или действий; публично, при всех.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "manner",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Он честно и <открыто> рассказал о своих планах на будущее.",
                            "target_lang_translations": {
                                "en": "He spoke honestly and <openly> about his plans for the future."
                            }
                        },
                        {
                            "text": "Мы должны <открыто> обсуждать проблемы, чтобы найти правильное решение.",
                            "target_lang_translations": {
                                "en": "We must discuss problems <openly> to find the right solution."
                            }
                        }
                    ],
                    "synonyms": [
                        "откровенно",
                        "явно",
                        "публично",
                        "прямо"
                    ],
                    "antonyms": [
                        "скрытно",
                        "тайно"
                    ],
                    "common_phrases": [
                        "открыто заявить",
                        "смотреть открыто",
                        "действовать открыто",
                        "говорить открыто"
                    ],
                    "target_lang_definitions": {
                        "en": "Without hiding one's thoughts, feelings, or actions; publicly, in front of everyone."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "openly",
                                "target_lang_sense_clarification": "in a manner that is not hidden or secret"
                            },
                            {
                                "target_lang_word": "frankly",
                                "target_lang_sense_clarification": "in an honest and direct way"
                            },
                            {
                                "target_lang_word": "publicly",
                                "target_lang_sense_clarification": "in a way that can be seen by everyone"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "23b27e2c-d5bd-3760-b5af-95371d71e72e",
                    "sense_definition": "О помещении, учреждении или заведении: работает, доступно для входа, не заперто.",
                    "learner_level": "A2",
                    "frequency": "High",
                    "semantic_group_id": "state",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Заходите скорее, у нас уже <открыто>!",
                            "target_lang_translations": {
                                "en": "Come in quickly, we are already <open>!"
                            }
                        },
                        {
                            "text": "Я дёрнул ручку двери и с удивлением обнаружил, что там <открыто>.",
                            "target_lang_translations": {
                                "en": "I pulled the door handle and was surprised to find that it was <unlocked>."
                            }
                        }
                    ],
                    "common_phrases": [
                        "здесь открыто",
                        "у нас открыто"
                    ],
                    "traits": [
                        {
                            "trait_type": "colloquial",
                            "comment": "often used as a predicative adverb"
                        }
                    ],
                    "target_lang_definitions": {
                        "en": "Refers to a room, institution, or establishment: working, accessible for entry, not locked."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "open",
                                "target_lang_sense_clarification": "accessible or open for business"
                            },
                            {
                                "target_lang_word": "unlocked",
                                "target_lang_sense_clarification": "not locked, allowing entry"
                            }
                        ]
                    }
                }
            ]
        },
        {
