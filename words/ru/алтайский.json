    "entries": [
        {
            "pos": "adjective",
            "senses": [
                {
                    "sense_id": "76c36eda-7f00-349c-8dc3-3cd39cafe2db",
                    "sense_definition": "Связанный с Алтаем — горной системой в Азии, а также с Алтайским краем или Республикой Алтай.",
                    "learner_level": "B1",
                    "frequency": "Middle",
                    "semantic_group_id": "geo_related",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Каждое лето туристы едут смотреть на <w>Алтайские</w> горы.",
                            "target_lang_translations": {
                                "en": "Every summer, tourists go to see the <w>Altai</w> Mountains."
                            }
                        },
                        {
                            "text": "Мой друг родился и вырос в <w>Алтайском</w> крае.",
                            "target_lang_translations": {
                                "en": "My friend was born and grew up in <w>Altai</w> Krai."
                            }
                        }
                    ],
                    "common_phrases": [
                        "Алтайский край",
                        "Алтайские горы",
                        "алтайский мёд",
                        "алтайский заповедник"
                    ],
                    "target_lang_definitions": {
                        "en": "Related to the Altai — a mountain system in Asia, as well as Altai Krai or the Altai Republic."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "Altai",
                                "target_lang_sense_clarification": "relating to the region or mountains"
                            },
                            {
                                "target_lang_word": "Altaian",
                                "target_lang_sense_clarification": "adjective form"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "875909a8-a352-389e-81e6-00cdc68dcfb5",
                    "sense_definition": "Относящийся к алтайцам (коренному народу Алтая), их культуре, быту или языку.",
                    "learner_level": "B2",
                    "frequency": "Low",
                    "semantic_group_id": "ethnic_related",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "В университете можно изучать <w>алтайский</w> язык.",
                            "target_lang_translations": {
                                "en": "You can study the <w>Altai</w> language at the university."
                            }
                        },
                        {
                            "text": "В музее нам показали традиционный <w>алтайский</w> костюм.",
                            "target_lang_translations": {
                                "en": "At the museum, they showed us a traditional <w>Altai</w> costume."
                            }
                        }
                    ],
                    "common_phrases": [
                        "алтайский язык",
                        "алтайский народ",
                        "алтайская культура",
                        "алтайские сказки"
                    ],
                    "target_lang_definitions": {
                        "en": "Relating to the Altai people (indigenous people of Altai), their culture, way of life, or language."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "Altai",
                                "target_lang_sense_clarification": "relating to the people or language"
                            },
                            {
                                "target_lang_word": "Altaian",
                                "target_lang_sense_clarification": "relating to the people"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "566537cc-3b67-3b3c-90ae-02f1828e8771",
                    "sense_definition": "Относящийся к гипотетической языковой семье, включающей тюркские, монгольские и другие языки.",
                    "learner_level": "C1",
                    "frequency": "VeryLow",
                    "semantic_group_id": "linguistic_term",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Учёные обсуждают теорию существования <w>алтайской</w> семьи языков.",
                            "target_lang_translations": {
                                "en": "Scientists discuss the theory of the existence of the <w>Altaic</w> language family."
                            }
                        },
                        {
                            "text": "Многие <w>алтайские</w> языки имеют схожую грамматику.",
                            "target_lang_translations": {
                                "en": "Many <w>Altaic</w> languages have similar grammar."
                            }
                        }
                    ],
                    "common_phrases": [
                        "алтайская семья языков",
                        "алтайские языки",
                        "алтайское языкознание"
                    ],
                    "target_lang_definitions": {
                        "en": "Relating to a hypothetical language family including Turkic, Mongolic, and other languages."
                    },
                    "translations": {
                        "en": [
