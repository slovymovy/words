    "entries": [
        {
            "pos": "adverb",
            "senses": [
                {
                    "sense_id": "25d0ccc0-beb3-350c-a9e4-c0b35528b191",
                    "sense_definition": "С большой силой звука; так, что хорошо слышно.",
                    "learner_level": "A1",
                    "frequency": "High",
                    "semantic_group_id": "sound_volume",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Учитель попросил ученика читать текст <w>громко</w> и с выражением.",
                            "target_lang_translations": {
                                "en": "The teacher asked the student to read the text <w>loudly</w> and with expression."
                            }
                        },
                        {
                            "text": "В соседней комнате кто-то очень <w>громко</w> смеялся над шуткой.",
                            "target_lang_translations": {
                                "en": "In the next room, someone was laughing very <w>loudly</w> at a joke."
                            }
                        }
                    ],
                    "synonyms": [
                        "звучно"
                    ],
                    "antonyms": [
                        "тихо"
                    ],
                    "common_phrases": [
                        "громко говорить",
                        "громко смеяться",
                        "громко кричать",
                        "громко плакать"
                    ],
                    "target_lang_definitions": {
                        "en": "At a high volume; in a way that is easily heard."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "loudly",
                                "target_lang_sense_clarification": "standard adverb"
                            },
                            {
                                "target_lang_word": "loud",
                                "target_lang_sense_clarification": "colloquial adverb"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "a6917a68-844f-3a3f-aedd-584c3310e4ba",
                    "sense_definition": "Привлекая всеобщее внимание; вызывающе, торжественно или хвастливо (переносное значение).",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "figurative_pompous",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Эта небольшая фирма <w>громко</w> именует себя международной корпорацией.",
                            "target_lang_translations": {
                                "en": "This small firm <w>grandly</w> styles itself an international corporation."
                            }
                        },
                        {
                            "text": "Политик <w>громко</w> заявил о своих намерениях изменить систему образования.",
                            "target_lang_translations": {
                                "en": "The politician <w>loudly</w> declared his intentions to change the education system."
                            }
                        }
                    ],
                    "synonyms": [
                        "помпезно",
                        "с помпой"
                    ],
                    "antonyms": [
                        "скромно"
                    ],
                    "common_phrases": [
                        "громко заявить",
                        "громко именоваться",
                        "громко уйти"
                    ],
                    "target_lang_definitions": {
                        "en": "In a manner intended to attract attention; boastfully or pompously."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "loudly",
                                "target_lang_sense_clarification": "figurative: publicly and forcefully"
                            },
                            {
                                "target_lang_word": "pompously",
                                "target_lang_sense_clarification": "pretentiously"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "63c1ac0d-d4aa-3699-8159-f42ee28630fe",
                    "sense_definition": "О звуках интенсивного артиллерийского обстрела или взрывов.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "military_slang",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Сегодня вечером в пригороде было очень <w>громко</w> и тревожно.",
                            "target_lang_translations": {
                                "en": "Tonight it was very <w>loud</w> and unsettling in the suburbs."
                            }
                        },
                        {
                            "text": "Местные жители сообщают, что на окраинах города снова <w>громко</w>.",
                            "target_lang_translations": {
                                "en": "Locals report that it is <w>loud</w> again on the outskirts of the city."
                            }
                        }
                    ],
                    "antonyms": [
                        "тихо"
                    ],
                    "traits": [
                        {
                            "trait_type": "colloquial",
                            "comment": "military context"
                        }
                    ],
                    "target_lang_definitions": {
                        "en": "Characterized by the noise of explosions or shelling (often used impersonally)."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "loud",
                                "target_lang_sense_clarification": "describing a noisy situation/environment"
                            },
                            {
                                "target_lang_word": "noisy",
                                "target_lang_sense_clarification": "filled with noise"
                            }
                        ]
                    }
                }
            ]
        },
