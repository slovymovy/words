    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "cecbbd92-19ce-3342-9b47-4461f8d95cbd",
                    "sense_definition": "Sprawić, że ktoś staje się smutny; wywołać u kogoś przygnębienie lub żal.",
                    "learner_level": "B1",
                    "frequency": "Middle",
                    "semantic_group_id": "emotions_sadness",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Jego nagłe odejście bardzo nas wszystkich <zasmuciło>.",
                            "target_lang_translations": {
                                "ru": "Его внезапный уход очень нас всех <опечалил>."
                            }
                        },
                        {
                            "text": "Nie chciałem cię <zasmucić> tą przykrą informacją.",
                            "target_lang_translations": {
                                "ru": "Я не хотел <опечалить> тебя этой неприятной новостью."
                            }
                        }
                    ],
                    "synonyms": [
                        "zmartwić",
                        "przygnębić",
                        "rozżalić"
                    ],
                    "antonyms": [
                        "ucieszyć",
                        "rozweselić",
                        "pocieszyć"
                    ],
                    "common_phrases": [
                        "głęboko zasmucić",
                        "bardzo zasmucić",
                        "zasmucić rodziców"
                    ],
                    "target_lang_definitions": {
                        "ru": "Сделать кого-то грустным; вызвать у кого-то уныние или сожаление."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "опечалить",
                                "target_lang_sense_clarification": "вызвать чувство печали"
                            },
                            {
                                "target_lang_word": "расстроить",
                                "target_lang_sense_clarification": "испортить настроение, вызвать огорчение"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "5ba58b23-48fb-3625-afcc-93470aa4f43f",
                    "sense_definition": "Poczuć smutek lub żal z jakiegoś powodu; stać się smutnym (używane z zaimkiem zwrotnym „się”).",
                    "learner_level": "B1",
                    "frequency": "Middle",
                    "semantic_group_id": "emotions_sadness",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Dziewczynka <zasmuciła> się, gdy zgubiła swoją ulubioną lalkę.",
                            "target_lang_translations": {
                                "ru": "Девочка <опечалилась>, когда потеряла свою любимую куклу."
                            }
                        },
                        {
                            "text": "Bardzo się <zasmuciłem> na wieść o twoich problemach.",
                            "target_lang_translations": {
                                "ru": "Я очень <опечалился>, узнав о твоих проблемах."
                            }
                        }
                    ],
                    "synonyms": [
                        "zmartwić się",
                        "przygnębić się"
                    ],
                    "antonyms": [
                        "ucieszyć się",
                        "rozweselić się"
                    ],
                    "common_phrases": [
                        "zasmucić się wiadomością",
                        "szczerze się zasmucić"
                    ],
                    "target_lang_definitions": {
                        "ru": "Почувствовать грусть или сожаление по какой-либо причине; стать грустным (возвратный глагол)."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "опечалиться",
                                "target_lang_sense_clarification": "почувствовать печаль"
                            },
                            {
                                "target_lang_word": "расстроиться",
                                "target_lang_sense_clarification": "прийти в плохое настроение, огорчиться"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}