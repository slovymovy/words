                    "traits": [
                        {
                            "trait_type": "form",
                            "comment": "meestal in het meervoud: passiva"
                        }
                    ],
                    "target_lang_definitions": {
                        "en": "The debts and obligations of a company, as shown on the balance sheet."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "liabilities",
                                "target_lang_sense_clarification": "financial debts"
                            }
                        ]
                    }
                }
            ]
        }
    ]
