                {
                    "sense_id": "ee6820cc-0b34-3148-9ecc-0795e77b7456",
                    "sense_definition": "Gumowy but służący do ochrony stóp przed błotem, deszczem lub wodą.",
                    "learner_level": "A2",
                    "frequency": "High",
                    "semantic_group_id": "1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Pada deszcz, więc załóż <w>kalosze</w>, żeby nie przemoczyć nóg.",
                            "target_lang_translations": {
                                "ru": "Идет дождь, поэтому надень <w>резиновые сапоги</w>, чтобы не промочить ноги."
                            }
                        },
                        {
                            "text": "Dzieci uwielbiają skakać po kałużach w kolorowych <w>kaloszach</w>.",
                            "target_lang_translations": {
                                "ru": "Дети обожают прыгать по лужам в цветных <w>резиновых сапогах</w>."
                            }
                        }
                    ],
                    "synonyms": [
                        "gumiak",
                        "gumowiec"
                    ],
                    "common_phrases": [
                        "gumowe kalosze",
                        "założyć kalosze",
                        "para kaloszy"
                    ],
                    "target_lang_definitions": {
                        "ru": "Резиновая обувь, предназначенная для защиты ног от грязи, дождя или воды."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "резиновый сапог",
                                "target_lang_sense_clarification": "высокая резиновая обувь (наиболее точный перевод для современного контекста)"
                            },
                            {
                                "target_lang_word": "галоша",
                                "target_lang_sense_clarification": "низкая резиновая обувь, надеваемая поверх другой обуви"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "6c39c317-a1fd-3b04-910c-0429f8c61319",
                    "sense_definition": "Potoczne, lekceważące określenie niekompetentnego sędziego sportowego.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "2",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Po niesłusznym rzucie karnym cały stadion skandował: sędzia <w>kalosz</w>!",
                            "target_lang_translations": {
                                "ru": "После несправедливого пенальти весь стадион скандировал: судью на <w>мыло</w>!"
                            }
                        },
                        {
                            "text": "Kibice byli wściekli na decyzje arbitra i nazywali go <w>kaloszem</w>.",
                            "target_lang_translations": {
                                "ru": "Болельщики были в ярости от решений арбитра и называли его <w>шляпой</w>."
                            }
                        }
                    ],
                    "common_phrases": [
                        "sędzia kalosz"
                    ],
                    "traits": [
                        {
                            "trait_type": "colloquial",
                            "comment": "używane w języku potocznym"
                        }
                    ],
                    "target_lang_definitions": {
                        "ru": "Разговорное, пренебрежительное название некомпетентного спортивного судьи."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "мыло",
                                "target_lang_sense_clarification": "функциональный аналог в кричалках (судью на мыло)"
                            },
                            {
                                "target_lang_word": "шляпа",
                                "target_lang_sense_clarification": "перен. о бестолковом, неумелом человеке"
