                {
                    "sense_id": "395a914f-2cc7-362f-a352-5f342e4eb9e5",
                    "sense_definition": "W sposób charakterystyczny dla smaku cukru, miodu lub innych substancji słodzących.",
                    "learner_level": "A1",
                    "frequency": "High",
                    "semantic_group_id": "taste",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Ten deser smakuje bardzo <w>słodko</w>, chyba dodałeś za dużo cukru.",
                            "target_lang_translations": {
                                "ru": "Этот десерт очень <w>сладкий</w> на вкус, наверное, ты добавил слишком много сахара."
                            }
                        },
                        {
                            "text": "W całym domu pachnie <w>słodko</w> wanilią i pieczonym ciastem.",
                            "target_lang_translations": {
                                "ru": "Во всем доме <w>сладко</w> пахнет ванилью и испеченным пирогом."
                            }
                        }
                    ],
                    "antonyms": [
                        "gorzko",
                        "kwaśno",
                        "słono",
                        "ostro"
                    ],
                    "common_phrases": [
                        "smakować słodko",
                        "pachnieć słodko",
                        "zrobić się słodko"
                    ],
                    "target_lang_definitions": {
                        "ru": "Характерно для вкуса сахара, меда или других подсластителей."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "сладко",
                                "target_lang_sense_clarification": "о вкусе или запахе"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "759108e4-fc8e-35ac-b503-f0904592dffc",
                    "sense_definition": "W sposób uroczy, miły, wdzięczny lub przymilny; budząc sympatię swoim wyglądem lub zachowaniem.",
                    "learner_level": "A2",
                    "frequency": "High",
                    "semantic_group_id": "manner",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Małe dziecko spało <w>słodko</w> w swoim łóżeczku przez całą noc.",
                            "target_lang_translations": {
                                "ru": "Маленький ребенок <w>сладко</w> спал в своей кроватке всю ночь."
                            }
                        },
                        {
                            "text": "Dziewczyna uśmiechnęła się <w>słodko</w>, gdy zobaczyła prezent.",
                            "target_lang_translations": {
                                "ru": "Девушка <w>мило</w> улыбнулась, когда увидела подарок."
                            }
                        }
                    ],
                    "synonyms": [
                        "uroczo",
                        "wdzięcznie",
                        "milutko",
                        "przymilnie"
                    ],
                    "antonyms": [
                        "szorstko",
                        "nieprzyjemnie",
                        "chłodno",
                        "oschle"
                    ],
                    "common_phrases": [
                        "uśmiechać się słodko",
                        "wyglądać słodko",
                        "spać słodko"
                    ],
                    "target_lang_definitions": {
                        "ru": "Очаровательно, мило, приятно или ласково; вызывая симпатию своим видом или поведением."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "мило",
                                "target_lang_sense_clarification": "очаровательно, трогательно"
                            },
                            {
                                "target_lang_word": "сладко",
                                "target_lang_sense_clarification": "приятно, безмятежно (обычно о сне)"
                            }
                        ]
                    }
                }
