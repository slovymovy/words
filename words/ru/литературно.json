            "pos": "adverb",
            "senses": [
                {
                    "sense_id": "5ff21110-1b2b-3b0c-84b0-931aa1d37ce4",
                    "sense_definition": "В соответствии с нормами литературного языка; грамотно, культурно.",
                    "learner_level": "B1",
                    "frequency": "Middle",
                    "semantic_group_id": "norms",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Учитель требовал, чтобы мы выражались <w>литературно</w> и избегали сленга.",
                            "target_lang_translations": {
                                "en": "The teacher demanded that we express ourselves <w>in standard language</w> and avoid slang."
                            }
                        },
                        {
                            "text": "В официальной переписке необходимо писать <w>литературно</w>.",
                            "target_lang_translations": {
                                "en": "In official correspondence, it is necessary to write <w>properly</w>."
                            }
                        }
                    ],
                    "synonyms": [
                        "грамотно",
                        "правильно",
                        "культурно"
                    ],
                    "antonyms": [
                        "безграмотно",
                        "просторечно"
                    ],
                    "common_phrases": [
                        "говорить литературно",
                        "писать литературно",
                        "выражаться литературно"
                    ],
                    "target_lang_definitions": {
                        "en": "In accordance with the norms of the literary language; correctly, in an educated manner."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "in standard language",
                                "target_lang_sense_clarification": "regarding language norms"
                            },
                            {
                                "target_lang_word": "properly",
                                "target_lang_sense_clarification": "speaking or writing correctly"
                            },
                            {
                                "target_lang_word": "grammatically",
                                "target_lang_sense_clarification": "in a grammatically correct way"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "f0c1187d-e703-3a68-bf8d-8740db0a6682",
                    "sense_definition": "С точки зрения литературы, в отношении художественного творчества.",
                    "learner_level": "B2",
                    "frequency": "Low",
                    "semantic_group_id": "context",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Этот роман <w>литературно</w> безупречен, но сюжет кажется скучным.",
                            "target_lang_translations": {
                                "en": "This novel is <w>literarily</w> flawless, but the plot seems boring."
                            }
                        },
                        {
                            "text": "Автор <w>литературно</w> обработал старинные народные сказки.",
                            "target_lang_translations": {
                                "en": "The author adapted the old folk tales <w>in a literary style</w>."
                            }
                        }
                    ],
                    "synonyms": [
                        "художественно"
                    ],
                    "common_phrases": [
                        "литературно одарённый",
                        "литературно обработанный",
                        "литературно образованный"
                    ],
                    "target_lang_definitions": {
                        "en": "From the point of view of literature; regarding artistic creativity."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "literarily",
                                "target_lang_sense_clarification": "regarding literary qualities"
                            },
                            {
                                "target_lang_word": "from a literary perspective",
                                "target_lang_sense_clarification": "viewpoint"
                            }
                        ]
                    }
                }
            ]
        },
