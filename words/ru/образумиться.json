    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "f9274aa5-c2d2-30b0-9c63-62bd321a6517",
                    "sense_definition": "Стать более благоразумным и рассудительным; прекратить вести себя легкомысленно или глупо.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "behavior_change",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Родители надеялись, что сын повзрослеет и наконец <w>образумится</w>.",
                            "target_lang_translations": {
                                "en": "The parents hoped that their son would grow up and finally <w>come to his senses</w>."
                            }
                        },
                        {
                            "text": "Тебе давно пора <w>образумиться</w> и начать думать о своём будущем.",
                            "target_lang_translations": {
                                "en": "It is high time you <w>came to your senses</w> and started thinking about your future."
                            }
                        }
                    ],
                    "synonyms": [
                        "одуматься"
                    ],
                    "common_phrases": [
                        "пора образумиться",
                        "вовремя образумиться",
                        "заставить образумиться"
                    ],
                    "target_lang_definitions": {
                        "en": "To become more prudent and reasonable; to stop behaving frivolously or foolishly."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "come to one's senses",
                                "target_lang_sense_clarification": "change behavior to be more rational"
                            },
                            {
                                "target_lang_word": "come to reason",
                                "target_lang_sense_clarification": "start acting reasonably"
                            },
                            {
                                "target_lang_word": "settle down",
                                "target_lang_sense_clarification": "stop living wildly"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "24bc0726-31ed-3bea-8cfa-27a674ae8e68",
                    "sense_definition": "Прийти в себя, вернуть самообладание или сознание после потрясения.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "state_of_mind",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "От сильного испуга она долго не могла <w>образумиться</w>.",
                            "target_lang_translations": {
                                "en": "She could not <w>come to her senses</w> for a long time after the severe fright."
                            }
                        },
                        {
                            "text": "Путник едва <w>образумился</w> после падения с лошади.",
                            "target_lang_translations": {
                                "en": "The traveler barely <w>recovered</w> after falling off the horse."
                            }
                        }
                    ],
                    "synonyms": [
                        "опомниться",
                        "прийти в себя"
                    ],
                    "traits": [
                        {
                            "trait_type": "archaic",
                            "comment": "устар."
                        }
                    ],
                    "target_lang_definitions": {
                        "en": "To regain one's composure or consciousness after a shock."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "recover",
                                "target_lang_sense_clarification": "regain self-control"
                            },
                            {
                                "target_lang_word": "come to one's senses",
                                "target_lang_sense_clarification": "regain composure"
                            }
                        ]
                    }
                }
            ]
        }
    ]
