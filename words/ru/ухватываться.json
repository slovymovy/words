    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "7ee0c042-ae37-3ab3-af26-2b8f57f3d7e0",
                    "sense_definition": "Крепко браться или держаться за что-либо руками, чтобы не упасть или удержать.",
                    "learner_level": "B1",
                    "frequency": "Middle",
                    "semantic_group_id": "grasping_physical",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Пассажир успел <w>ухватиться</w> за поручень, когда автобус резко затормозил.",
                            "target_lang_translations": {
                                "en": "The passenger managed to <w>grab hold of</w> the handrail when the bus braked sharply."
                            }
                        },
                        {
                            "text": "Маленький ребёнок старался крепко <w>ухватываться</w> за руку отца во время прогулки.",
                            "target_lang_translations": {
                                "en": "The small child tried to tightly <w>clutch</w> his father's hand during the walk."
                            }
                        }
                    ],
                    "synonyms": [
                        "хвататься",
                        "цепляться",
                        "держаться"
                    ],
                    "antonyms": [
                        "отпускать"
                    ],
                    "common_phrases": [
                        "ухватываться за перила",
                        "ухватываться за край",
                        "ухватываться обеими руками"
                    ],
                    "target_lang_definitions": {
                        "en": "To take firm hold of or hold onto something with one's hands, often to avoid falling or to keep possession."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "grab hold of",
                                "target_lang_sense_clarification": "to suddenly take or hold something with your hand"
                            },
                            {
                                "target_lang_word": "clutch",
                                "target_lang_sense_clarification": "to hold something tightly, often due to fear or need for support"
                            },
                            {
                                "target_lang_word": "grasp",
                                "target_lang_sense_clarification": "to take a firm hold of something"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "ca88054a-f1a9-3a5c-b8df-4c8f0155702a",
                    "sense_definition": "С поспешностью или радостью использовать какую-либо возможность, идею или предложение.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "grasping_figurative",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Он решил <w>ухватиться</w> за этот случай, чтобы изменить свою жизнь к лучшему.",
                            "target_lang_translations": {
                                "en": "He decided to <w>seize</w> this chance to change his life for the better."
                            }
                        },
                        {
                            "text": "Директор готов <w>ухватываться</w> за любую идею, которая принесёт прибыль компании.",
                            "target_lang_translations": {
                                "en": "The director is ready to <w>jump at</w> any idea that will bring profit to the company."
                            }
                        }
                    ],
                    "synonyms": [
                        "пользоваться",
                        "хвататься"
                    ],
                    "antonyms": [
                        "упускать",
                        "отвергать",
                        "игнорировать"
                    ],
                    "common_phrases": [
                        "ухватываться за соломинку",
                        "ухватываться за идею",
                        "ухватываться за предложение",
                        "ухватываться за шанс"
                    ],
                    "target_lang_definitions": {
                        "en": "To eagerly or hastily accept or make use of an opportunity, idea, or suggestion."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "jump at",
                                "target_lang_sense_clarification": "to accept an opportunity or offer with great eagerness"
                            },
                            {
                                "target_lang_word": "seize",
                                "target_lang_sense_clarification": "to take advantage of an opportunity or chance decisively"
                            },
                            {
                                "target_lang_word": "snatch at",
                                "target_lang_sense_clarification": "to try to take advantage of something quickly or desperately"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}