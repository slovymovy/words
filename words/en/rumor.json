{
    "word_family": [
        "rumormonger"
    ],
    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "4196448b-b0f9-35af-a07b-6a6bf476115d",
                    "sense_definition": "A statement or claim of questionable accuracy, from no known reliable source, usually spread by word of mouth.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "group_1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "There is a <w>rumor</w> going round that he is going to get married.",
                            "target_lang_translations": {
                                "ru": "Ходит <w>слух</w>, что он собирается жениться."
                            }
                        },
                        {
                            "text": "She tried to stop the vicious <w>rumor</w> before it caused more damage.",
                            "target_lang_translations": {
                                "ru": "Она пыталась пресечь этот злобный <w>слух</w>, пока он не нанес ещё большего вреда."
                            }
                        }
                    ],
                    "synonyms": [
                        "gossip",
                        "hearsay",
                        "whisper",
                        "word on the street",
                        "tale"
                    ],
                    "common_phrases": [
                        "spread a rumor",
                        "start a rumor",
                        "vicious rumors",
                        "rumor has it"
                    ],
                    "target_lang_definitions": {
                        "ru": "Заявление или утверждение сомнительной достоверности, обычно передаваемое из уст в уста."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "слух",
                                "target_lang_sense_clarification": "недостоверная информация, сплетня"
                            },
                            {
                                "target_lang_word": "молва",
                                "target_lang_sense_clarification": "разговоры, толки"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "92a6d682-5b29-3b7e-beb0-47d02ba8ae2f",
                    "sense_definition": "Information or misinformation of the kind contained in such claims.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "group_1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "They say he used to be a thief, but that is just <w>rumor</w>.",
                            "target_lang_translations": {
                                "ru": "Говорят, что раньше он был вором, но это всего лишь <w>слухи</w>."
                            }
                        },
                        {
                            "text": "We should not base our important decisions on mere <w>rumor</w>.",
                            "target_lang_translations": {
                                "ru": "Мы не должны основывать наши важные решения на простых <w>слухах</w>."
                            }
                        }
                    ],
                    "synonyms": [
                        "gossip",
                        "hearsay"
                    ],
                    "common_phrases": [
                        "just rumor",
                        "pure rumor",
                        "mere rumor"
                    ],
                    "target_lang_definitions": {
                        "ru": "Информация (часто ложная) или молва, содержащаяся в подобных заявлениях."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "слухи",
                                "target_lang_sense_clarification": "непроверенные сведения"
                            },
                            {
                                "target_lang_word": "молва",
                                "target_lang_sense_clarification": "общественное мнение"
                            },
                            {
                                "target_lang_word": "толки",
                                "target_lang_sense_clarification": "пересуды"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "6ce7acb7-9d9b-3a90-a6d0-3baa659fad0e",
                    "sense_definition": "To tell a rumor about; to gossip.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "group_1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "John is <w>rumored</w> to be next in line for a promotion.",
                            "target_lang_translations": {
                                "ru": "О Джоне <w>ходят слухи</w>, что он следующий в очереди на повышение."
                            }
                        },
                        {
                            "text": "The old house is <w>rumored</w> to be haunted by a ghost.",
                            "target_lang_translations": {
                                "ru": "<w>Ходят слухи</w>, что в этом старом доме обитает призрак."
                            }
                        }
                    ],
                    "synonyms": [
                        "gossip",
                        "whisper"
                    ],
                    "common_phrases": [
                        "rumored to be",
                        "it is rumored"
                    ],
                    "traits": [
                        {
                            "trait_type": "form",
                            "comment": "usually passive"
                        }
                    ],
                    "target_lang_definitions": {
                        "ru": "Распространять слухи о ком-либо; сплетничать."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "распространять слухи",
                                "target_lang_sense_clarification": "рассказывать небылицы"
                            },
                            {
                                "target_lang_word": "сплетничать",
                                "target_lang_sense_clarification": "обсуждать кого-то за спиной"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}