                {
                    "sense_id": "38bdd175-edd6-3c62-97a6-8edfac44319f",
                    "sense_definition": "Stopniowo zmniejszać się, znikać lub tracić na wartości",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "reduction",
                    "name_type": "no",
                    "examples": [
