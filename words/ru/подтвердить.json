{
    "word_family": [
        "подтверждение",
        "подтверждаться"
    ],
    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "b001f37c-4a75-3f6f-a6ac-f816a16cc237",
                    "sense_definition": "Засвидетельствовать верность чего-либо; заявить, что информация является истинной или что запланированное событие состоится.",
                    "learner_level": "A2",
                    "frequency": "High",
                    "semantic_group_id": "verification",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Прошу вас <подтвердить> получение этого письма обратным сообщением.",
                            "target_lang_translations": {
                                "en": "I ask you to <w>confirm</w> receipt of this letter by reply."
                            }
                        },
                        {
                            "text": "Мы должны позвонить в отель, чтобы <подтвердить> наше бронирование.",
                            "target_lang_translations": {
                                "en": "We need to call the hotel to <w>confirm</w> our reservation."
                            }
                        }
                    ],
                    "synonyms": [
                        "заверить",
                        "удостоверить"
                    ],
                    "antonyms": [
                        "опровергнуть",
                        "отрицать"
                    ],
                    "common_phrases": [
                        "подтвердить получение",
                        "подтвердить участие",
                        "подтвердить согласие",
                        "подтвердить заказ"
                    ],
                    "target_lang_definitions": {
                        "en": "To state that something is true or that a planned event will happen."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "confirm",
                                "target_lang_sense_clarification": "to state with assurance that something is true or will happen"
                            },
                            {
                                "target_lang_word": "verify",
                                "target_lang_sense_clarification": "to make sure that something is true or accurate"
                            },
                            {
                                "target_lang_word": "acknowledge",
                                "target_lang_sense_clarification": "to report the receipt of something (e.g., a letter)"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "26c2605b-0d3d-3aa5-9ea5-f4ffbf6a51cb",
                    "sense_definition": "Доказать истинность или правильность чего-либо с помощью фактов, документов или аргументов.",
                    "learner_level": "B1",
                    "frequency": "Middle",
                    "semantic_group_id": "verification",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Свидетели смогли <подтвердить> алиби подозреваемого в полиции.",
                            "target_lang_translations": {
                                "en": "The witnesses were able to <w>corroborate</w> the suspect's alibi to the police."
                            }
                        },
                        {
                            "text": "Учёным удалось <подтвердить> свою теорию новыми экспериментами.",
                            "target_lang_translations": {
                                "en": "The scientists managed to <w>confirm</w> their theory with new experiments."
                            }
                        }
                    ],
                    "synonyms": [
                        "доказать",
                        "обосновать",
                        "подкрепить"
                    ],
                    "antonyms": [
                        "опровергнуть"
                    ],
                    "common_phrases": [
                        "подтвердить фактами",
                        "подтвердить документально",
                        "подтвердить диагноз",
                        "подтвердить слухи"
                    ],
                    "target_lang_definitions": {
                        "en": "To prove that something is true using facts, documents, or evidence."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "corroborate",
                                "target_lang_sense_clarification": "to support a statement or theory with evidence"
                            },
                            {
                                "target_lang_word": "substantiate",
                                "target_lang_sense_clarification": "to provide evidence to support or prove the truth of something"
                            },
                            {
                                "target_lang_word": "confirm",
                                "target_lang_sense_clarification": "to establish the truth or correctness of something"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "6eb31a5d-057b-3c8b-bdd1-06ab716fb5fa",
                    "sense_definition": "Официально утвердить, признать законным или окончательно установленным (обычно о решениях, приговорах или полномочиях).",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "ratification",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Верховный суд отказался <подтвердить> вынесенный ранее приговор.",
                            "target_lang_translations": {
                                "en": "The Supreme Court refused to <w>uphold</w> the previously issued verdict."
                            }
                        },
                        {
                            "text": "Совет директоров собрался, чтобы <подтвердить> полномочия нового руководителя.",
                            "target_lang_translations": {
                                "en": "The Board of Directors met to <w>confirm</w> the authority of the new leader."
                            }
                        }
                    ],
                    "synonyms": [
                        "утвердить",
                        "узаконить",
                        "санкционировать"
                    ],
                    "antonyms": [
                        "отменить",
                        "аннулировать"
                    ],
                    "common_phrases": [
                        "подтвердить решение",
                        "подтвердить приговор",
                        "подтвердить полномочия"
                    ],
                    "target_lang_definitions": {
                        "en": "To officially approve, validate, or recognize a decision or authority as legal."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "uphold",
                                "target_lang_sense_clarification": "to maintain or affirm a decision, especially a legal verdict"
                            },
                            {
                                "target_lang_word": "ratify",
                                "target_lang_sense_clarification": "to give formal consent to an agreement or decision, making it officially valid"
                            },
                            {
                                "target_lang_word": "validate",
                                "target_lang_sense_clarification": "to check or prove the validity or accuracy of something"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}