    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "9a214f03-934f-3538-b393-2ff9c0620788",
                    "sense_definition": "Een geheim, verrassing of verborgen informatie onthullen aan iemand die het nog niet wist.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "reveal_secret",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Je mag absoluut niet <w>verklappen</w> wat we voor haar verjaardag hebben gekocht.",
                            "target_lang_translations": {
                                "en": "You absolutely must not <w>give away</w> what we bought for her birthday."
                            }
                        },
                        {
                            "text": "Hij heeft per ongeluk het einde van de spannende film <w>verklapt</w>.",
                            "target_lang_translations": {
                                "en": "He accidentally <w>spoiled</w> the ending of the exciting movie."
                            }
                        }
                    ],
                    "synonyms": [
                        "verbeuzelen",
                        "spoilen",
                        "verbabbelen"
                    ],
                    "antonyms": [
                        "geheimhouden",
                        "verzwijgen"
                    ],
                    "common_phrases": [
                        "een geheim verklappen",
                        "niets verklappen",
                        "de boel verklappen",
                        "per ongeluk verklappen"
                    ],
                    "target_lang_definitions": {
                        "en": "To reveal a secret, surprise, or hidden information to someone who did not know it yet."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "give away",
                                "target_lang_sense_clarification": "a secret or surprise"
                            },
                            {
                                "target_lang_word": "reveal",
                                "target_lang_sense_clarification": "hidden information"
                            },
                            {
                                "target_lang_word": "spill",
                                "target_lang_sense_clarification": "informal; to tell a secret"
                            },
                            {
                                "target_lang_word": "tell",
                                "target_lang_sense_clarification": "general"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "d1462356-0c74-3c8f-8edd-40112a7204a4",
                    "sense_definition": "De tijd nutteloos doorbrengen met praten.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "waste_time",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "We hebben de hele middag <w>verklapt</w> in plaats van te studeren.",
                            "target_lang_translations": {
                                "en": "We <w>chattered away</w> the whole afternoon instead of studying."
                            }
                        },
                        {
                            "text": "Het is zonde om je kostbare tijd te <w>verklappen</w> aan onbelangrijke zaken.",
                            "target_lang_translations": {
                                "en": "It is a shame to <w>chatter away</w> your precious time on unimportant matters."
                            }
                        }
                    ],
                    "synonyms": [
                        "verbeuzelen",
                        "verbabbelen"
                    ],
                    "common_phrases": [
                        "zijn tijd verklappen"
                    ],
                    "traits": [
                        {
                            "trait_type": "dated",
                            "comment": "This usage is less common in modern standard Dutch compared to the meaning of revealing secrets."
                        }
                    ],
                    "target_lang_definitions": {
                        "en": "To spend time uselessly by talking."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "chatter away",
