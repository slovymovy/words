    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "e6d46a91-6b12-30e9-a2e4-3647940d114d",
                    "sense_definition": "A lawyer who is qualified to advise or represent people in legal matters.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "legal_professional",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The defense <w>attorney</w> argued passionately that her client was innocent of all charges.",
                            "target_lang_translations": {
                                "ru": "<w>Адвокат</w> защиты страстно доказывала, что её клиент невиновен по всем пунктам обвинения."
                            }
                        },
                        {
                            "text": "We need to consult a qualified <w>attorney</w> before signing any of these contracts.",
                            "target_lang_translations": {
                                "ru": "Нам нужно проконсультироваться с квалифицированным <w>юристом</w> перед подписанием любого из этих контрактов."
                            }
                        }
                    ],
                    "synonyms": [
                        "lawyer",
                        "counsel",
                        "counselor",
                        "advocate[Appendix:Glossary#narrow|narrower]] distinctions>"
                    ],
                    "common_phrases": [
                        "defense attorney",
                        "district attorney",
                        "prosecuting attorney",
                        "attorney fees"
                    ],
                    "target_lang_definitions": {
                        "ru": "Юрист, квалифицированный для консультирования или представления интересов людей в юридических вопросах."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "адвокат",
                                "target_lang_sense_clarification": "защитник в суде"
                            },
                            {
                                "target_lang_word": "юрист",
                                "target_lang_sense_clarification": "специалист в области права"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "e72bb1eb-fc0a-338d-82a5-0b952bfc9731",
                    "sense_definition": "A person who is given the legal power to act on behalf of someone else in business or legal matters.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "legal_agent",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "He granted his sister power of <w>attorney</w> so she could sell the house for him.",
                            "target_lang_translations": {
                                "ru": "Он оформил на сестру <w>доверенность</w>, чтобы она могла продать дом от его имени."
                            }
                        },
                        {
                            "text": "Without a valid power of <w>attorney</w>, the bank cannot allow you to access the account.",
                            "target_lang_translations": {
                                "ru": "Без действительной <w>доверенности</w> банк не может разрешить вам доступ к счету."
                            }
                        }
                    ],
                    "synonyms": [
                        "solicitor",
                        "barrister",
                        "lawyer",
                        "counsel",
                        "counselor",
                        "advocate[Appendix:Glossary#narrow|narrower]] distinctions>"
                    ],
                    "common_phrases": [
                        "power of attorney",
                        "letter of attorney"
                    ],
                    "traits": [
                        {
                            "trait_type": "form",
                            "comment": "legal"
                        }
                    ],
                    "target_lang_definitions": {
                        "ru": "Лицо, наделенное юридическими полномочиями действовать от имени другого человека в деловых или юридических вопросах."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "поверенный",
                                "target_lang_sense_clarification": "доверенное лицо"
                            },
                            {
                                "target_lang_word": "представитель",
                                "target_lang_sense_clarification": "действующий от чужого имени"
                            }
                        ]
                    }
                }
            ]
        }
    ]
