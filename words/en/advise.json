    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "0a8537a2-3cda-38a2-b213-174d83b54944",
                    "sense_definition": "To give advice to someone; to offer an opinion about what should be done.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The doctor <w>advised</w> him to stop smoking immediately for the sake of his health.",
                            "target_lang_translations": {
                                "ru": "Врач <w>посоветовал</w> ему немедленно бросить курить ради его здоровья."
                            }
                        },
                        {
                            "text": "I would strongly <w>advise</w> you to book your tickets well in advance.",
                            "target_lang_translations": {
                                "ru": "Я бы настоятельно <w>посоветовал</w> вам забронировать билеты заранее."
                            }
                        }
                    ],
                    "synonyms": [
                        "counsel",
                        "recommend",
                        "urge",
                        "encourage",
                        "admonish"
                    ],
                    "common_phrases": [
                        "advise against",
                        "strongly advise",
                        "ill-advised"
                    ],
                    "target_lang_definitions": {
                        "ru": "Давать совет или высказывать мнение о том, как следует поступить."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "советовать",
                                "target_lang_sense_clarification": "давать совет (несов. вид)"
                            },
                            {
                                "target_lang_word": "посоветовать",
                                "target_lang_sense_clarification": "дать совет (сов. вид)"
                            },
                            {
                                "target_lang_word": "рекомендовать",
                                "target_lang_sense_clarification": "предлагать как желательное действие"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "919cfe78-fc61-35f2-a5b6-7e98fa34b748",
                    "sense_definition": "To recommend or suggest a specific action or course of conduct.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Experts <w>advise</w> caution when driving on icy roads during the winter.",
                            "target_lang_translations": {
                                "ru": "Эксперты <w>рекомендуют</w> соблюдать осторожность при вождении на обледенелых дорогах зимой."
                            }
                        },
                        {
                            "text": "The committee <w>advised</w> a review of the current safety procedures.",
                            "target_lang_translations": {
                                "ru": "Комитет <w>рекомендовал</w> пересмотреть текущие процедуры безопасности."
                            }
                        }
                    ],
                    "synonyms": [
                        "recommend",
                        "suggest",
                        "advocate"
                    ],
                    "common_phrases": [
                        "advise caution",
                        "advise patience"
                    ],
                    "target_lang_definitions": {
                        "ru": "Рекомендовать или предлагать определенный курс действий, часто в качестве эксперта."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "рекомендовать",
                                "target_lang_sense_clarification": "давать рекомендацию"
                            },
                            {
                                "target_lang_word": "советовать",
                                "target_lang_sense_clarification": "предлагать соблюдать осторожность или определенный порядок"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "d622c04d-af16-3278-a5e7-1148adb4a73c",
                    "sense_definition": "To formally give information or notice to someone about something.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "2",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Please <w>advise</w> us immediately if you are unable to attend the scheduled meeting.",
                            "target_lang_translations": {
                                "ru": "Пожалуйста, немедленно <w>сообщите</w> нам, если вы не сможете присутствовать на запланированной встрече."
                            }
                        },
                        {
                            "text": "The bank <w>advised</w> the customer of the changes to the interest rate policy.",
                            "target_lang_translations": {
                                "ru": "Банк <w>уведомил</w> клиента об изменениях в политике процентных ставок."
                            }
                        }
                    ],
                    "synonyms": [
                        "inform",
                        "notify",
                        "apprise",
                        "acquaint",
                        "keep informed"
                    ],
                    "common_phrases": [
                        "please be advised",
                        "advise of",
                        "keep advised"
                    ],
                    "traits": [
