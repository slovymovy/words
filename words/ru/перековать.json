    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "3090b8a8-ea7a-35db-93f1-0814858c2871",
                    "sense_definition": "Воздействуя на кого-либо, изменить его внутренний мир, взгляды, характер или привычки; перевоспитать.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "change_character",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Строгая дисциплина и труд помогли <перековать> трудного подростка в ответственного человека.",
                            "target_lang_translations": {
                                "en": "Strict discipline and labor helped <remold> the troubled teenager into a responsible person."
                            }
                        },
                        {
                            "text": "Невозможно быстро <перековать> характер, который формировался годами.",
                            "target_lang_translations": {
                                "en": "It is impossible to quickly <reshape> a character that has been forming for years."
                            }
                        }
                    ],
                    "synonyms": [
                        "перевоспитать",
                        "исправить",
                        "переделать"
                    ],
                    "common_phrases": [
                        "перековать характер",
                        "перековать человека"
                    ],
                    "target_lang_definitions": {
                        "en": "To influence someone in order to change their inner world, views, character, or habits; to re-educate."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "remold",
                                "target_lang_sense_clarification": "character or personality"
                            },
                            {
                                "target_lang_word": "reform",
                                "target_lang_sense_clarification": "behavior or a person"
                            },
                            {
                                "target_lang_word": "re-educate",
                                "target_lang_sense_clarification": "ideology or habits"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "f77ce4fe-c9d2-364d-aef1-6a7ae59c7d1c",
                    "sense_definition": "Переделать металлическое изделие, подвергнув его новой ковке; выковать заново или придать иную форму.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "metalwork",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Кузнец согласился <перековать> сломанный меч в охотничий нож.",
                            "target_lang_translations": {
                                "en": "The blacksmith agreed to <reforge> the broken sword into a hunting knife."
                            }
                        },
                        {
                            "text": "Люди мечтают <перековать> мечи на орала, чтобы навсегда прекратить войны.",
                            "target_lang_translations": {
                                "en": "People dream of <beating> swords into plowshares to end wars forever."
                            }
                        }
                    ],
                    "synonyms": [
                        "переплавить"
                    ],
                    "common_phrases": [
                        "перековать мечи на орала",
                        "перековать железо"
                    ],
                    "target_lang_definitions": {
                        "en": "To remake a metal object by subjecting it to new forging; to forge anew or give a different shape."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "reforge",
                                "target_lang_sense_clarification": "metal objects"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "a6de160a-d730-3e53-b4b4-26e020860643",
                    "sense_definition": "Снять старые подковы и прибить новые; подковать заново (о лошадях).",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "horses",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Перед долгой дорогой ямщик решил <перековать> левую пристяжную лошадь.",
                            "target_lang_translations": {
                                "en": "Before the long journey, the coachman decided to <reshoe> the left side horse."
                            }
                        },
                        {
                            "text": "Если вовремя не <перековать> коня, он может повредить копыта на каменистой дороге.",
                            "target_lang_translations": {
                                "en": "If you do not <reshoe> the horse in time, it may damage its hooves on the rocky road."
                            }
                        }
                    ],
                    "synonyms": [
                        "переподковать"
                    ],
                    "common_phrases": [
                        "перековать лошадь",
                        "перековать коня"
                    ],
                    "target_lang_definitions": {
                        "en": "To remove old horseshoes and attach new ones; to shoe a horse again."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "reshoe",
                                "target_lang_sense_clarification": "a horse"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}