    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "b150c2b2-6cd6-34af-a1ba-d8a5f08a23bf",
                    "sense_definition": "Установленный, обычно торжественный порядок совершения чего-либо; торжественное мероприятие или обряд.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "event_ritual",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Вчера в центре города состоялась торжественная <w>церемония</w> открытия нового театра.",
                            "target_lang_translations": {
                                "en": "Yesterday, a solemn opening <w>ceremony</w> for the new theater took place in the city center."
                            }
                        },
                        {
                            "text": "Свадебная <w>церемония</w> прошла в узком семейном кругу без посторонних глаз.",
                            "target_lang_translations": {
                                "en": "The wedding <w>ceremony</w> was held in a close family circle, away from prying eyes."
                            }
                        }
                    ],
                    "synonyms": [
                        "ритуал",
                        "обряд",
                        "церемониал"
                    ],
                    "common_phrases": [
                        "свадебная церемония",
                        "церемония открытия",
                        "торжественная церемония",
                        "церемония награждения"
                    ],
                    "target_lang_definitions": {
                        "en": "An established, usually solemn procedure for performing something; a formal event or rite."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "ceremony",
                                "target_lang_sense_clarification": "formal event"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "52fbc258-d373-36d2-88c3-38964877689e",
                    "sense_definition": "Принятые условности в общении, правила вежливости; стеснение или принуждённость в поведении.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "behavior_formality",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Хозяйка дома попросила гостей чувствовать себя свободно и обойтись без лишних <w>церемоний</w>.",
                            "target_lang_translations": {
                                "en": "The hostess asked the guests to feel at ease and do without unnecessary <w>formalities</w>."
                            }
                        },
                        {
                            "text": "Мы старые друзья, поэтому к чему эти <w>церемонии</w> между нами?",
                            "target_lang_translations": {
                                "en": "We are old friends, so why these <w>formalities</w> between us?"
                            }
                        }
                    ],
                    "synonyms": [
                        "учтивость",
                        "вежливость"
                    ],
                    "antonyms": [
                        "непринуждённость",
                        "фамильярность",
                        "развязность"
                    ],
                    "common_phrases": [
                        "без церемоний",
                        "разводить церемонии",
                        "излишние церемонии"
                    ],
                    "traits": [
                        {
                            "trait_type": "colloquial",
                            "comment": "often used in phrases like 'без церемоний'"
                        }
                    ],
                    "target_lang_definitions": {
                        "en": "Accepted conventions in communication, rules of politeness; stiffness or constraint in behavior."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "formality",
                                "target_lang_sense_clarification": "social convention"
                            },
                            {
                                "target_lang_word": "ceremony",
                                "target_lang_sense_clarification": "formal behavior"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "84a7999a-c532-3eab-8628-056ebe19c629",
                    "sense_definition": "Действие, которое совершается слишком медленно, методично или с излишней важностью.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "slow_action",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Для моего дедушки утреннее чтение газеты — это целая <w>церемония</w>, которую нельзя прерывать.",
                            "target_lang_translations": {
                                "en": "For my grandfather, reading the morning newspaper is a whole <w>ritual</w> that cannot be interrupted."
                            }
                        },
                        {
                            "text": "Сборы в школу превратились в долгую <w>церемонию</w>, из-за чего мы чуть не опоздали.",
                            "target_lang_translations": {
                                "en": "Getting ready for school turned into a long <w>ceremony</w>, which is why we almost arrived late."
                            }
                        }
                    ],
                    "common_phrases": [
                        "целая церемония"
                    ],
                    "traits": [
                        {
                            "trait_type": "colloquial",
                            "comment": "figurative usage"
                        }
                    ],
                    "target_lang_definitions": {
                        "en": "An action performed too slowly, methodically, or with excessive self-importance."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "ritual",
                                "target_lang_sense_clarification": "routine action"
                            },
                            {
                                "target_lang_word": "ceremony",
                                "target_lang_sense_clarification": "figurative"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}