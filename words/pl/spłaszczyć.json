{
    "word_family": [
        "płaski",
        "płasko",
        "płaskość",
        "spłaszczać",
        "spłaszczenie",
        "rozpłaszczyć"
    ],
    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "0bf07771-4626-3bf0-a73c-a1b47e85662e",
                    "sense_definition": "Uczynić coś płaskim lub cieńszym poprzez nacisk, uderzenie lub walcowanie.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "physical_shape",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Musisz mocno <w>spłaszczyć</w> kulkę ciasta dłonią, aby uformować spód do pizzy.",
                            "target_lang_translations": {
                                "ru": "Ты должен сильно <w>расплющить</w> шарик теста ладонью, чтобы сформировать основу для пиццы."
                            }
                        },
                        {
                            "text": "Mechanik musiał <w>spłaszczyć</w> końcówkę rury, żeby pasowała do wąskiego otworu.",
                            "target_lang_translations": {
                                "ru": "Механику пришлось <w>сплющить</w> конец трубы, чтобы он вошел в узкое отверстие."
                            }
                        }
                    ],
                    "synonyms": [
                        "rozpłaszczyć",
                        "zgnieść"
                    ],
                    "antonyms": [
                        "uwypuklić"
                    ],
                    "common_phrases": [
                        "spłaszczyć nos",
                        "spłaszczyć ciasto",
                        "spłaszczyć powierzchnię"
                    ],
                    "target_lang_definitions": {
                        "ru": "Сделать что-то плоским или более тонким путем давления, удара или раскатывания."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "сплющить",
                                "target_lang_sense_clarification": "сделать плоским давлением"
                            },
                            {
                                "target_lang_word": "расплющить",
                                "target_lang_sense_clarification": "раскатать или раздавить в плоскость"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "0b47fb75-7378-3de1-8ae6-eaa8d69d0960",
                    "sense_definition": "Stać się płaskim lub stracić wypukłość, zazwyczaj pod wpływem ciężaru lub utraty powietrza (używane z zaimkiem „się”).",
                    "learner_level": "B2",
                    "frequency": "Low",
                    "semantic_group_id": "physical_shape",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Pod wpływem ogromnego ciężaru kartonowe pudełko całkowicie <w>spłaszczyło</w> się.",
                            "target_lang_translations": {
                                "ru": "Под воздействием огромного веса картонная коробка полностью <w>сплющилась</w>."
                            }
                        },
                        {
                            "text": "Piłka plażowa <w>spłaszczyła</w> się na słońcu, ponieważ uciekło z niej powietrze.",
                            "target_lang_translations": {
                                "ru": "Пляжный мяч <w>сплющился</w> на солнце, так как из него вышел воздух."
                            }
                        }
                    ],
                    "synonyms": [
                        "rozpłaszczyć się",
                        "oklapnąć"
                    ],
                    "common_phrases": [
                        "spłaszczyć się od uderzenia",
                        "nos się spłaszczył"
                    ],
                    "target_lang_definitions": {
                        "ru": "Стать плоским или потерять выпуклость, обычно под воздействием веса или потери воздуха."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "сплющиться",
                                "target_lang_sense_clarification": "стать плоским (возвратный глагол)"
                            },
                            {
                                "target_lang_word": "расплющиться",
                                "target_lang_sense_clarification": "раздавиться в лепешку"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "19caf993-06b9-3f9e-8c21-5973320a2228",
                    "sense_definition": "Przedstawić problem, temat lub dyskusję w sposób nadmiernie uproszczony, pozbawiając je głębi i ważnych szczegółów.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "figurative_simplification",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Dziennikarz niepotrzebnie <w>spłaszczył</w> ten skomplikowany konflikt do walki dobra ze złem.",
                            "target_lang_translations": {
                                "ru": "Журналист излишне <w>упростил</w> этот сложный конфликт до борьбы добра со злом."
                            }
                        },
                        {
                            "text": "Nie powinniśmy <w>spłaszczyć</w> tej debaty, używając jedynie popularnych haseł i sloganów.",
                            "target_lang_translations": {
                                "ru": "Мы не должны <w>упрощать</w> эту дискуссию, используя лишь популярные лозунги и слоганы."
                            }
                        }
                    ],
                    "synonyms": [
                        "zbanalizować",
                        "trywializować",
                        "uprościć"
                    ],
                    "antonyms": [
                        "pogłębić",
                        "skomplikować"
                    ],
                    "common_phrases": [
                        "spłaszczyć problem",
                        "spłaszczyć dyskusję",
                        "spłaszczyć temat"
                    ],
                    "target_lang_definitions": {
                        "ru": "Представить проблему, тему или дискуссию чрезмерно упрощенно, лишая их глубины и важных деталей."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "упростить",
                                "target_lang_sense_clarification": "сделать слишком простым"
                            },
                            {
                                "target_lang_word": "примитивизировать",
                                "target_lang_sense_clarification": "свести к примитиву"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}