    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "1935a1d1-625c-3f63-90df-1738be57e51f",
                    "sense_definition": "The state of being <w>negligent</w>; a failure to take reasonable care or give enough attention to someone or something.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "general_carelessness",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The accident was caused by the driver's <w>negligence</w> regarding road safety rules.",
                            "target_lang_translations": {
                                "ru": "Авария была вызвана <w>небрежностью</w> водителя в отношении правил дорожного движения."
                            }
                        },
                        {
                            "text": "He was dismissed from his job for gross <w>negligence</w> in handling the company accounts.",
                            "target_lang_translations": {
                                "ru": "Его уволили с работы за грубую <w>халатность</w> при ведении счетов компании."
                            }
                        }
                    ],
                    "synonyms": [
                        "carelessness",
                        "inattention",
                        "laxity",
                        "heedlessness"
                    ],
                    "antonyms": [
                        "care",
                        "attention",
                        "diligence",
                        "conscientiousness"
                    ],
                    "common_phrases": [
                        "gross negligence",
                        "serious negligence",
                        "admit negligence"
                    ],
                    "target_lang_definitions": {
                        "ru": "Небрежное отношение к делу; неспособность проявить должную заботу или внимание к кому-либо или чему-либо."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "халатность",
                                "target_lang_sense_clarification": "недобросовестное выполнение обязанностей"
                            },
                            {
                                "target_lang_word": "небрежность",
                                "target_lang_sense_clarification": "невнимательность, отсутствие старания"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "a2391426-0d6d-36a5-ac40-9cb8cbcbeef8",
                    "sense_definition": "The breach of a duty of care; the failure to exercise a standard of care that a reasonable person would have in a similar situation.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "legal_tort",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The patient decided to sue the hospital for medical <w>negligence</w> after the surgery failed.",
                            "target_lang_translations": {
                                "ru": "Пациент решил подать в суд на больницу за врачебную <w>халатность</w> после неудачной операции."
                            }
                        },
                        {
                            "text": "To prove <w>negligence</w>, the plaintiff must show that the defendant had a duty to prevent harm.",
                            "target_lang_translations": {
                                "ru": "Чтобы доказать <w>небрежность</w>, истец должен показать, что ответчик был обязан предотвратить вред."
                            }
                        }
                    ],
                    "synonyms": [
                        "malpractice",
                        "dereliction"
                    ],
                    "common_phrases": [
                        "medical negligence",
                        "contributory negligence",
                        "sue for negligence",
                        "professional negligence"
                    ],
                    "traits": [
                        {
                            "trait_type": "regional",
                            "comment": "legal"
                        }
                    ],
                    "target_lang_definitions": {
                        "ru": "Нарушение обязанности проявлять осмотрительность; несоблюдение стандартов безопасности, ожидаемых от разумного человека в аналогичной ситуации."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "халатность",
                                "target_lang_sense_clarification": "юридический термин; неисполнение должностных обязанностей"
                            },
                            {
                                "target_lang_word": "небрежность",
                                "target_lang_sense_clarification": "форма вины в гражданском праве"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}