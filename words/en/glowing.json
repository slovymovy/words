    "entries": [
        {
            "pos": "adjective",
            "senses": [
                {
                    "sense_id": "ee3f98f9-93e1-39c4-b15c-b62fb16ae94c",
                    "sense_definition": "Emitting a steady light or heat without flames.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "light_emission",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The <w>glowing</w> embers provided a small amount of warmth in the cold night.",
                            "target_lang_translations": {
                                "ru": "<w>Тлеющие</w> угли давали немного тепла холодной ночью."
                            }
                        },
                        {
                            "text": "She looked at the <w>glowing</w> screen of her phone to check the time.",
                            "target_lang_translations": {
                                "ru": "Она посмотрела на <w>светящийся</w> экран своего телефона, чтобы узнать время."
                            }
                        }
                    ],
                    "synonyms": [
                        "luminous",
                        "radiant",
                        "shining",
                        "bright"
                    ],
                    "antonyms": [
                        "dim",
                        "dull",
                        "dark"
                    ],
                    "common_phrases": [
                        "glowing embers",
                        "glowing light",
                        "glowing coals",
                        "softly glowing"
                    ],
                    "target_lang_definitions": {
                        "ru": "Излучающий ровный свет или тепло без пламени."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "светящийся",
                                "target_lang_sense_clarification": "излучающий свет"
                            },
                            {
                                "target_lang_word": "раскалённый",
                                "target_lang_sense_clarification": "излучающий жар и свет от нагрева"
                            },
                            {
                                "target_lang_word": "тлеющий",
                                "target_lang_sense_clarification": "горящий без пламени (об углях)"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "8ad7ade5-9c34-3d89-b0d8-fb296b1e87f4",
                    "sense_definition": "Expressing enthusiastic praise or admiration.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "praise",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The new restaurant received a <w>glowing</w> review from the city's top food critic.",
                            "target_lang_translations": {
                                "ru": "Новый ресторан получил <w>хвалебный</w> отзыв от главного ресторанного критика города."
                            }
                        },
                        {
                            "text": "Her former boss wrote a <w>glowing</w> reference letter to help her secure the job.",
                            "target_lang_translations": {
                                "ru": "Её бывший начальник написал <w>восторженную</w> рекомендацию, чтобы помочь ей получить работу."
                            }
                        }
                    ],
                    "synonyms": [
                        "complimentary",
                        "enthusiastic",
                        "laudatory",
                        "positive"
                    ],
                    "antonyms": [
                        "critical",
                        "scathing",
                        "negative"
                    ],
                    "common_phrases": [
                        "glowing review",
                        "glowing report",
                        "glowing tribute",
                        "glowing terms"
                    ],
                    "target_lang_definitions": {
                        "ru": "Выражающий восторженную похвалу или восхищение."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "хвалебный",
                                "target_lang_sense_clarification": "содержащий похвалу"
                            },
                            {
                                "target_lang_word": "восторженный",
                                "target_lang_sense_clarification": "выражающий большой энтузиазм"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "cd4facab-425a-3986-b4b1-8d9c895b4af5",
                    "sense_definition": "Present participle of <w>glow</w>.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The fire was <w>glowing</w> softly as we sat around it telling stories.",
                            "target_lang_translations": {
                                "ru": "Огонь мягко <w>светился</w>, пока мы сидели вокруг него и рассказывали истории."
                            }
                        },
                        {
                            "text": "Her face was <w>glowing</w> with happiness after hearing the wonderful news.",
                            "target_lang_translations": {
                                "ru": "Её лицо <w>сияло</w> от счастья, когда она услышала чудесные новости."
                            }
                        }
                    ],
                    "traits": [
