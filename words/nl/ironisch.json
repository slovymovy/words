{
    "word_family": [
        "ironie",
        "ironiseren",
        "ironicus"
    ],
    "entries": [
        {
            "pos": "adjective",
            "senses": [
                {
                    "sense_id": "6664d5f4-ee68-32bf-bb75-456177833c34",
                    "sense_definition": "Spottend door het tegenovergestelde te zeggen van wat men eigenlijk bedoelt, of gekenmerkt door een situatie die anders loopt dan verwacht.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "sense_irony",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Zijn <w>ironische</w> opmerking maakte het moeilijk om niet te lachen.",
                            "target_lang_translations": {
                                "en": "His <w>ironic</w> remark made it difficult not to laugh.",
                                "ru": "Его <w>ироничное</w> замечание мешало сдержать смех."
                            }
                        },
                        {
                            "text": "Het is nogal <w>ironisch</w> dat de dokter zelf ziek is geworden.",
                            "target_lang_translations": {
                                "en": "It is quite <w>ironic</w> that the doctor himself got sick.",
                                "ru": "Довольно <w>иронично</w>, что врач сам заболел."
                            }
                        }
                    ],
                    "synonyms": [
                        "spottend"
                    ],
                    "antonyms": [
                        "serieus",
                        "ernstig"
                    ],
                    "common_phrases": [
                        "een ironische opmerking",
                        "ironisch bedoeld",
                        "een ironische glimlach"
                    ],
                    "target_lang_definitions": {
                        "en": "Mocking by saying the opposite of what is meant, or characterized by a situation that turns out differently than expected.",
                        "ru": "Насмешливый, говорящий обратное тому, что имеется в виду, или характеризующийся ситуацией, которая развивается не так, как ожидалось."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "ironic",
                                "target_lang_sense_clarification": "characterized by irony"
                            }
                        ],
                        "ru": [
                            {
                                "target_lang_word": "ироничный",
                                "target_lang_sense_clarification": "содержащий иронию, насмешливый"
                            },
                            {
                                "target_lang_word": "иронический",
                                "target_lang_sense_clarification": "относящийся к иронии"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "pos": "adverb",
            "senses": [
                {
                    "sense_id": "5597f6f4-c7aa-350a-b602-d1ff1f5f15c6",
                    "sense_definition": "Op een manier die spot uitdrukt door het tegendeel te zeggen van wat men meent.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "sense_irony",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "<w>Ironisch</w> genoeg begon de zon te schijnen toen we weer binnen waren.",
                            "target_lang_translations": {
                                "en": "<w>Ironically</w> enough, the sun started shining when we were back inside.",
                                "ru": "<w>Иронично</w>, но солнце начало светить, когда мы вернулись внутрь."
                            }
                        },
                        {
                            "text": "Hij bedankte ons <w>ironisch</w> voor de hulp die we niet hadden gegeven.",
                            "target_lang_translations": {
                                "en": "He thanked us <w>ironically</w> for the help we hadn't given.",
                                "ru": "Он <w>иронично</w> поблагодарил нас за помощь, которую мы не оказали."
                            }
                        }
                    ],
                    "synonyms": [
                        "spottend"
                    ],
                    "antonyms": [
                        "serieus"
                    ],
                    "common_phrases": [
                        "ironisch genoeg",
                        "ironisch kijken"
                    ],
                    "target_lang_definitions": {
                        "en": "In a way that expresses mockery by saying the opposite of what one means.",
                        "ru": "Образом, выражающим насмешку, когда говорят противоположное тому, что думают."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "ironically",
                                "target_lang_sense_clarification": "in an ironic manner"
                            }
                        ],
                        "ru": [
                            {
                                "target_lang_word": "иронично",
                                "target_lang_sense_clarification": "с иронией, насмешливо"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}