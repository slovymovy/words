                {
                    "sense_id": "4c1c93c2-78b9-358c-8483-8432b20e23b2",
                    "sense_definition": "Een dringend verzoek of overtuigend betoog om steun te krijgen voor een bepaalde zaak of om mensen tot actie aan te zetten.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "De politicus hield een vurig <w>pleidooi</w> voor meer investeringen in het onderwijs.",
                            "target_lang_translations": {
                                "en": "The politician made a passionate <w>plea</w> for more investment in education.",
                                "ru": "Политик выступил с пламенным <w>призывом</w> увеличить инвестиции в образование."
                            }
                        },
                        {
                            "text": "Haar <w>pleidooi</w> om de oude bibliotheek te behouden vond veel gehoor bij de bewoners.",
                            "target_lang_translations": {
                                "en": "Her <w>plea</w> to preserve the old library resonated with the residents.",
                                "ru": "Её <w>призыв</w> сохранить старую библиотеку нашел большой отклик у жителей."
                            }
                        }
                    ],
                    "synonyms": [
                        "betoog",
                        "oproep",
                        "verdediging"
                    ],
                    "common_phrases": [
                        "een vurig pleidooi",
                        "een pleidooi houden",
                        "pleidooi voor"
                    ],
                    "target_lang_definitions": {
                        "en": "An urgent request or convincing argument to gain support for a specific cause or to urge people to action.",
                        "ru": "Настойчивая просьба или убедительная речь с целью получения поддержки определенного дела или побуждения людей к действию."
                    },
