            "senses": [
                {
                    "sense_id": "efc8eb8a-22b1-309f-a787-8be513068341",
                    "sense_definition": "Having a good reason or explanation; considered right, reasonable, or necessary based on the circumstances.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "validity",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Her anger was fully <w>justified</w> after they lost her luggage.",
                            "target_lang_translations": {
                                "ru": "Её гнев был полностью <w>оправдан</w> после того, как они потеряли её багаж."
                            }
                        },
                        {
                            "text": "The expense is <w>justified</w> because the new equipment will save us money in the long run.",
                            "target_lang_translations": {
                                "ru": "Эти расходы <w>оправданы</w>, так как новое оборудование сэкономит нам деньги в долгосрочной перспективе."
                            }
                        }
                    ],
                    "synonyms": [
                        "reasonable",
                        "valid",
                        "warranted",
                        "legitimate"
                    ],
                    "antonyms": [
                        "unjustified"
                    ],
                    "common_phrases": [
                        "fully justified",
                        "perfectly justified",
                        "morally justified",
                        "entirely justified"
                    ],
                    "target_lang_definitions": {
                        "ru": "Имеющий вескую причину или объяснение; считающийся правильным или необходимым в данных обстоятельствах."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "оправданный",
                                "target_lang_sense_clarification": "имеющий уважительную причину"
                            },
                            {
                                "target_lang_word": "обоснованный",
                                "target_lang_sense_clarification": "подкрепленный доводами или фактами"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "a17ef813-edfa-38a0-b1a1-2e1dac5082ea",
                    "sense_definition": "Of text, arranged so that lines begin at the left margin and end evenly at the right margin.",
