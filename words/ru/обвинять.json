{
    "word_family": [
        "обвинение",
        "обвинитель",
        "обвиняемый",
        "обвинительный",
        "вина",
        "виновный"
    ],
    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "4448559a-8e8f-3f40-b95c-b70b39f75030",
                    "sense_definition": "Считать кого-либо виновным в чём-либо, упрекать за какой-либо поступок или поведение",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Не нужно <обвинять> друзей в своих личных неудачах.",
                            "target_lang_translations": {
                                "en": "You shouldn't <blame> your friends for your personal failures."
                            }
                        },
                        {
                            "text": "Она привыкла <обвинять> окружающих в своём плохом настроении.",
                            "target_lang_translations": {
                                "en": "She is used to <blaming> others for her bad mood."
                            }
                        }
                    ],
                    "synonyms": [
                        "винить"
                    ],
                    "antonyms": [
                        "оправдывать",
                        "выгораживать"
                    ],
                    "common_phrases": [
                        "обвинять во лжи",
                        "обвинять в предательстве",
                        "обвинять в равнодушии",
                        "обвинять друг друга"
                    ],
                    "target_lang_definitions": {
                        "en": "To hold someone responsible for a fault or wrong, or to claim that someone has done something improper"
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "blame",
                                "target_lang_sense_clarification": "assign responsibility for something negative"
                            },
                            {
                                "target_lang_word": "accuse",
                                "target_lang_sense_clarification": "claim someone has done something wrong"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "74684f29-4aba-311f-b463-b155bb89b27d",
                    "sense_definition": "Предъявлять официальное обвинение в совершении преступления, привлекать к уголовной ответственности",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Прокурор решил <обвинять> подсудимого по всей строгости закона.",
                            "target_lang_translations": {
                                "en": "The prosecutor decided to <charge> the defendant to the fullest extent of the law."
                            }
                        },
                        {
                            "text": "Следствие имеет веские основания <обвинять> его в шпионаже.",
                            "target_lang_translations": {
                                "en": "The investigation has strong grounds to <accuse> him of espionage."
                            }
                        }
                    ],
                    "antonyms": [
                        "оправдывать"
                    ],
                    "common_phrases": [
                        "обвинять в преступлении",
                        "обвинять в убийстве",
                        "обвинять в мошенничестве",
                        "обвинять в краже"
                    ],
                    "target_lang_definitions": {
                        "en": "To officially claim that someone has committed a crime or illegal act"
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "accuse",
                                "target_lang_sense_clarification": "formally charge with a crime"
                            },
                            {
                                "target_lang_word": "charge",
                                "target_lang_sense_clarification": "formally accuse of an offense"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}