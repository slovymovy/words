                    "target_lang_definitions": {
                        "en": "To give something a golden color or hue, illuminating it with rays or changing its natural color."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "gild",
                                "target_lang_sense_clarification": "to cover with golden light or color"
                            },
