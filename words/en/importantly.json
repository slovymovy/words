            "pos": "adverb",
            "senses": [
                {
                    "sense_id": "6d2ef62b-8b0a-381a-92cf-b0ec85b0ec27",
                    "sense_definition": "Used to emphasize that a statement is significant or relevant.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "You need to bring your passport and, most <w>importantly</w>, your visa.",
                            "target_lang_translations": {
                                "ru": "Вам нужно взять с собой паспорт и, что самое <w>главное</w>, вашу визу."
                            }
                        },
                        {
                            "text": "<w>Importantly</w>, the results of the study were confirmed by independent scientists.",
                            "target_lang_translations": {
                                "ru": "<w>Важно</w>, что результаты исследования были подтверждены независимыми учеными."
                            }
                        }
                    ],
                    "synonyms": [
                        "significantly",
                        "notably",
                        "crucially"
                    ],
                    "common_phrases": [
                        "most importantly",
                        "more importantly",
                        "equally importantly"
                    ],
                    "target_lang_definitions": {
                        "ru": "Используется для подчеркивания значимости или актуальности утверждения."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "важно",
                                "target_lang_sense_clarification": "наречие, вводное слово"
                            },
                            {
                                "target_lang_word": "что немаловажно",
                                "target_lang_sense_clarification": "вводная конструкция"
                            },
                            {
                                "target_lang_word": "главное",
                                "target_lang_sense_clarification": "в сочетании 'самое главное'"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "9b324bb7-a8d1-32aa-9a1e-54dca8422512",
                    "sense_definition": "In a way that suggests authority, high status, or self-importance.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The official walked <w>importantly</w> through the crowd, ignoring the questions from the press.",
                            "target_lang_translations": {
                                "ru": "Чиновник <w>важно</w> прошел сквозь толпу, игнорируя вопросы прессы."
                            }
                        },
                        {
                            "text": "He sat <w>importantly</w> at the head of the table, waiting for everyone to be silent.",
                            "target_lang_translations": {
                                "ru": "Он <w>важно</w> восседал во главе стола, ожидая, пока все замолчат."
                            }
                        }
                    ],
                    "synonyms": [
                        "pompously",
                        "authoritatively",
                        "pretentiously"
                    ],
                    "antonyms": [
                        "humbly",
                        "modestly"
                    ],
                    "target_lang_definitions": {
                        "ru": "Манера поведения, указывающая на авторитет, высокий статус или чувство собственной важности."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "важно",
                                "target_lang_sense_clarification": "с важным видом, надменно"
                            },
                            {
                                "target_lang_word": "с важным видом",
                                "target_lang_sense_clarification": "фраза"
                            }
                        ]
                    }
                }
