    "entries": [
        {
            "pos": "adjective",
            "senses": [
                {
                    "sense_id": "24e07f0a-51ac-3453-a5d9-04542a49bb91",
                    "sense_definition": "Торчащий в разные стороны, всклокоченный (обычно о волосах, шерсти или перьях).",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "appearance",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "У мальчика были короткие <w>ершистые</w> волосы, которые никак не хотели лежать ровно.",
                            "target_lang_translations": {
                                "en": "The boy had short <w>bristly</w> hair that just wouldn't lie flat."
                            }
                        },
                        {
                            "text": "На ветке сидел нахохлившийся <w>ершистый</w> воробей, спасаясь от зимнего холода.",
                            "target_lang_translations": {
                                "en": "A hunched, <w>ruffled</w> sparrow sat on the branch, sheltering from the winter cold."
                            }
                        }
                    ],
                    "synonyms": [
                        "всклокоченный",
                        "взъерошенный"
                    ],
                    "antonyms": [
                        "гладкий",
                        "прилизанный"
                    ],
                    "common_phrases": [
                        "ершистые волосы",
                        "ершистые брови",
                        "ершистая голова"
                    ],
                    "traits": [
                        {
                            "trait_type": "colloquial",
                            "comment": "разг."
                        }
                    ],
                    "target_lang_definitions": {
                        "en": "Sticking out in different directions; disheveled or stiff (usually referring to hair, fur, or feathers)."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "bristly",
                                "target_lang_sense_clarification": "stiff and sticking up (hair/fur)"
                            },
                            {
                                "target_lang_word": "spiky",
                                "target_lang_sense_clarification": "sticking up in points"
                            },
                            {
                                "target_lang_word": "tousled",
                                "target_lang_sense_clarification": "disordered or messy"
                            },
                            {
                                "target_lang_word": "ruffled",
                                "target_lang_sense_clarification": "disarranged (feathers)"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "848de94a-c908-3a04-9206-57c9f0a04a7b",
                    "sense_definition": "Неуступчивый, склонный к спорам и сопротивлению, резкий в общении (о характере или человеке).",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "character",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Новый сотрудник оказался <w>ершистым</w> и постоянно спорил с руководством по любому поводу.",
                            "target_lang_translations": {
                                "en": "The new employee turned out to be <w>prickly</w> and constantly argued with management about everything."
                            }
                        },
                        {
                            "text": "Несмотря на свой <w>ершистый</w> характер, в душе он был добрым и отзывчивым человеком.",
                            "target_lang_translations": {
                                "en": "Despite his <w>prickly</w> character, at heart he was a kind and responsive person."
                            }
                        }
                    ],
                    "synonyms": [
                        "задиристый"
                    ],
                    "antonyms": [
                        "покладистый",
                        "сговорчивый"
                    ],
                    "common_phrases": [
                        "ершистый характер",
                        "ершистый подросток",
                        "ершистый парень"
                    ],
                    "target_lang_definitions": {
                        "en": "Unyielding, prone to arguing, and sharp in manner; difficult to deal with (referring to character or a person)."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "prickly",
                                "target_lang_sense_clarification": "easily offended or annoyed; difficult to handle"
                            },
                            {
                                "target_lang_word": "feisty",
                                "target_lang_sense_clarification": "spirited, tough, and aggressive"
                            },
                            {
                                "target_lang_word": "pugnacious",
                                "target_lang_sense_clarification": "eager or quick to argue"
                            },
                            {
                                "target_lang_word": "cantankerous",
                                "target_lang_sense_clarification": "bad-tempered and uncooperative"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}