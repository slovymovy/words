    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "e9ef894f-8059-3e19-96ee-f9e484eeeb46",
                    "sense_definition": "Нарушение религиозных правил, нравственных предписаний или воли Бога действием, словом или мыслью.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "religious_concept",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "В христианстве гордыня считается тяжким <грехом>.",
                            "target_lang_translations": {
                                "en": "In Christianity, pride is considered a grave <sin>."
                            }
                        },
                        {
                            "text": "Священник выслушал исповедь и отпустил прихожанину все <грехи>.",
                            "target_lang_translations": {
                                "en": "The priest heard the confession and absolved the parishioner of all <sins>."
                            }
                        }
                    ],
                    "synonyms": [
                        "прегрешение"
                    ],
                    "antonyms": [
                        "добродетель",
                        "благочестие",
                        "благодеяние"
                    ],
                    "common_phrases": [
                        "смертный грех",
                        "первородный грех",
                        "отпускать грехи",
                        "брать грех на душу"
                    ],
                    "target_lang_definitions": {
                        "en": "A violation of religious rules, moral precepts, or the will of God through action, word, or thought."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "sin",
                                "target_lang_sense_clarification": "religious violation"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "f0a00325-4df9-38e2-9f92-28cb82e972f7",
                    "sense_definition": "Оценка ситуации, когда что-либо считается неправильным, достойным осуждения или сожаления (в значении сказуемого).",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Тебе <грех> жаловаться на свою судьбу, у тебя всё хорошо.",
                            "target_lang_translations": {
                                "en": "It is a <sin> for you to complain about your fate; everything is fine with you."
                            }
                        },
                        {
                            "text": "Оставлять друзей в беде — это просто <грех>.",
                            "target_lang_translations": {
                                "en": "Leaving friends in trouble is simply a <sin>."
                            }
                        }
                    ],
                    "synonyms": [
                        "грешно"
                    ],
                    "common_phrases": [
                        "грех жаловаться",
                        "и смех и грех",
                        "не грех"
                    ],
                    "traits": [
                        {
                            "trait_type": "colloquial",
                            "comment": ""
                        }
                    ],
                    "target_lang_definitions": {
                        "en": "An assessment of a situation where something is considered wrong, worthy of condemnation, or regrettable."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "sin",
                                "target_lang_sense_clarification": "something considered wrong or regrettable"
                            },
                            {
                                "target_lang_word": "shame",
                                "target_lang_sense_clarification": "a cause for regret"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "0b400115-8cf5-393e-b8f5-c98fe0a36153",
                    "sense_definition": "Предосудительный поступок, ошибка или недостаток.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "fault_mistake",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "За ним водился такой <грех>: он любил приврать в разговоре.",
                            "target_lang_translations": {
                                "en": "He had this <sin>: he loved to fib in conversation."
                            }
                        },
                        {
                            "text": "Мы простили ему этот случайный <грех> по молодости лет.",
                            "target_lang_translations": {
                                "en": "We forgave him this accidental <sin> due to his youth."
                            }
                        }
                    ],
                    "synonyms": [
                        "ошибка",
                        "проступок",
                        "недостаток"
                    ],
                    "common_phrases": [
                        "как на грех",
                        "знать за собой грех"
                    ],
                    "target_lang_definitions": {
                        "en": "A reprehensible act, mistake, or shortcoming."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "sin",
                                "target_lang_sense_clarification": "misdeed or wrong"
                            },
                            {
                                "target_lang_word": "fault",
                                "target_lang_sense_clarification": "flaw or shortcoming"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}