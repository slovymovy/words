                        "nieczule",
                        "nieoględnie"
                    ],
                    "antonyms": [
                        "miękko"
                    ],
                    "common_phrases": [
                        "rządzić twardo"
                    ],
                    "target_lang_definitions": {
                        "ru": "Сурово, безжалостно, без проявления чувств или снисхождения."
