    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "90aab44a-1ff4-3d65-8dd6-9f1153482064",
                    "sense_definition": "Uznać prawnie cudze dziecko za własne, przyjmując je do rodziny i nadając mu wszelkie prawa dziecka biologicznego.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "przyjęcie_pod_opiekę",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Młode małżeństwo po wielu latach starań postanowiło w końcu <adoptować> dziecko.",
                            "target_lang_translations": {
                                "ru": "Молодая супружеская пара после многих лет попыток решила наконец <w>усыновить</w> ребенка."
                            }
                        },
                        {
                            "text": "Aby <adoptować> sierotę, przyszli rodzice muszą spełnić wiele rygorystycznych wymogów prawnych.",
                            "target_lang_translations": {
                                "ru": "Чтобы <w>усыновить</w> сироту, будущие родители должны выполнить множество строгих юридических требований."
                            }
                        }
                    ],
                    "synonyms": [
                        "przysposabiać"
                    ],
                    "common_phrases": [
                        "adoptować dziecko",
                        "prawnie adoptować",
                        "chcieć adoptować"
                    ],
                    "target_lang_definitions": {
                        "ru": "Юридически признать чужого ребенка своим, приняв его в семью и наделив всеми правами биологического ребенка."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "усыновлять",
                                "target_lang_sense_clarification": "ребенка (общий термин)"
                            },
                            {
                                "target_lang_word": "удочерять",
                                "target_lang_sense_clarification": "девочку"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "fc9cc3e9-7a6c-3a90-a67d-79b4d7012cb4",
                    "sense_definition": "Przygarnąć zwierzę, zazwyczaj ze schroniska lub fundacji, i zapewnić mu stałą opiekę oraz dom.",
                    "learner_level": "B1",
                    "frequency": "Middle",
                    "semantic_group_id": "przyjęcie_pod_opiekę",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Zamiast kupować rasowego szczeniaka, lepiej <adoptować> psa ze schroniska.",
                            "target_lang_translations": {
                                "ru": "Вместо того чтобы покупать породистого щенка, лучше <w>взять</w> собаку из приюта."
                            }
                        },
                        {
                            "text": "Moja siostra planuje <adoptować> kota, który został znaleziony na ulicy.",
                            "target_lang_translations": {
                                "ru": "Моя сестра планирует <w>приютить</w> кота, которого нашли на улице."
                            }
                        }
                    ],
                    "common_phrases": [
                        "adoptować psa",
                        "adoptować kota ze schroniska",
                        "wirtualnie adoptować"
                    ],
                    "target_lang_definitions": {
                        "ru": "Взять животное, обычно из приюта или фонда, обеспечив ему постоянный уход и дом."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "взять",
                                "target_lang_sense_clarification": "животное из приюта"
                            },
                            {
                                "target_lang_word": "приютить",
                                "target_lang_sense_clarification": "дать дом животному"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "ad1dc771-b292-3335-8328-546af4e7b57c",
                    "sense_definition": "Zacząć używać czegoś nowego, np. metody, technologii, zwyczaju lub rozwiązania; wprowadzić coś do użytku.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Nasza firma musi szybciej <adoptować> nowoczesne technologie, aby nie zostać w tyle za konkurencją.",
                            "target_lang_translations": {
                                "ru": "Наша компания должна быстрее <w>внедрять</w> современные технологии, чтобы не отстать от конкурентов."
                            }
                        },
                        {
                            "text": "Zespół projektowy postanowił <adoptować> nowe rozwiązania w zakresie bezpieczeństwa danych.",
                            "target_lang_translations": {
                                "ru": "Проектная группа решила <w>применить</w> новые решения в области безопасности данных."
                            }
                        }
                    ],
                    "synonyms": [
                        "stosować",
                        "używać"
                    ],
                    "common_phrases": [
                        "adoptować nowe rozwiązania",
                        "adoptować technologię",
                        "szybko adoptować"
                    ],
                    "target_lang_definitions": {
                        "ru": "Начать использовать что-то новое, например, метод, технологию или решение; внедрить что-то в использование."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "внедрять",
                                "target_lang_sense_clarification": "технологии, методы"
                            },
                            {
                                "target_lang_word": "перенимать",
                                "target_lang_sense_clarification": "опыт, обычаи"
                            }
                        ]
                    }
                }
            ]
        }
    ]
