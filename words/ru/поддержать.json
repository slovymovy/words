    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "1e46ac56-2ce8-34e1-9289-a19d1cb1d06a",
                    "sense_definition": "Оказать помощь, выразить согласие или одобрение чьим-либо действиям, мнениям или предложениям.",
                    "learner_level": "A2",
                    "frequency": "High",
                    "semantic_group_id": "support_abstract",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Мы решили <поддержать> его в этой трудной жизненной ситуации.",
                            "target_lang_translations": {
                                "en": "We decided to <support> him in this difficult life situation."
                            }
                        },
                        {
                            "text": "Прошу вас <поддержать> моё предложение на общем собрании.",
                            "target_lang_translations": {
                                "en": "I ask you to <support> my proposal at the general meeting."
                            }
                        }
                    ],
                    "synonyms": [
                        "помочь",
                        "одобрить",
                        "выручить"
                    ],
                    "antonyms": [
                        "отвергнуть",
                        "осудить"
                    ],
                    "common_phrases": [
                        "поддержать друга",
                        "поддержать идею",
                        "поддержать инициативу",
                        "поддержать морально"
                    ],
                    "target_lang_definitions": {
                        "en": "To provide help, express agreement, or approval of someone's actions, opinions, or proposals."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "support",
                                "target_lang_sense_clarification": "to back a person, idea, or cause"
                            },
                            {
                                "target_lang_word": "back",
                                "target_lang_sense_clarification": "to encourage or assist someone"
                            },
                            {
                                "target_lang_word": "endorse",
                                "target_lang_sense_clarification": "to officially approve a proposal"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "07b90d1a-00fb-38d6-9d43-383223d8c9c5",
                    "sense_definition": "Сохранить что-либо в прежнем состоянии, не дать чему-либо прекратиться или исчезнуть.",
                    "learner_level": "B1",
                    "frequency": "Middle",
                    "semantic_group_id": "maintain_state",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Ему было очень трудно <поддержать> разговор с незнакомым человеком.",
                            "target_lang_translations": {
                                "en": "It was very difficult for him to <maintain> a conversation with a stranger."
                            }
                        },
                        {
                            "text": "Вам нужно <поддержать> огонь в камине, чтобы в доме было тепло.",
                            "target_lang_translations": {
                                "en": "You need to <keep> the fire <going> in the fireplace so that the house stays warm."
                            }
                        }
                    ],
                    "synonyms": [
                        "сохранить",
                        "продолжить"
                    ],
                    "antonyms": [
                        "прекратить",
                        "прервать"
                    ],
                    "common_phrases": [
                        "поддержать разговор",
                        "поддержать порядок",
                        "поддержать беседу",
                        "поддержать температуру"
                    ],
                    "target_lang_definitions": {
                        "en": "To preserve something in its former state, to prevent something from stopping or disappearing."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "maintain",
                                "target_lang_sense_clarification": "to keep a conversation or state going"
                            },
                            {
                                "target_lang_word": "keep up",
                                "target_lang_sense_clarification": "to continue or sustain something"
                            },
                            {
                                "target_lang_word": "sustain",
                                "target_lang_sense_clarification": "to keep something going over time"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "bda02a58-61e3-3f0b-8dff-8a49ce6bb088",
                    "sense_definition": "Придержать кого-либо или что-либо, чтобы не дать упасть.",
                    "learner_level": "B1",
                    "frequency": "Low",
                    "semantic_group_id": "support_physical",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Он успел <поддержать> падающую вазу, прежде чем она разбилась.",
                            "target_lang_translations": {
                                "en": "He managed to <catch> the falling vase before it shattered."
                            }
                        },
                        {
                            "text": "Внук решил <поддержать> бабушку под руку, когда они переходили скользкую улицу.",
                            "target_lang_translations": {
                                "en": "The grandson decided to <steady> his grandmother by the arm when they were crossing the slippery street."
                            }
                        }
                    ],
                    "synonyms": [
                        "придержать",
                        "подхватить"
                    ],
                    "antonyms": [
                        "уронить",
                        "отпустить"
                    ],
                    "common_phrases": [
                        "поддержать под руку",
                        "поддержать больного"
                    ],
                    "target_lang_definitions": {
                        "en": "To hold someone or something to prevent them from falling."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "support",
                                "target_lang_sense_clarification": "to physically hold up"
                            },
                            {
                                "target_lang_word": "steady",
                                "target_lang_sense_clarification": "to stabilize someone or something"
                            },
                            {
                                "target_lang_word": "hold up",
                                "target_lang_sense_clarification": "to prevent from dropping"
                            }
                        ]
                    }
                }
            ]
        }
    ]
