                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "суть",
                                "target_lang_sense_clarification": "самое главное"
                            },
                            {
                                "target_lang_word": "корень",
                                "target_lang_sense_clarification": "источник проблемы"
                            },
                            {
                                "target_lang_word": "решающий вопрос",
                                "target_lang_sense_clarification": "важный момент"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "04e19ea3-578d-339f-a044-637b931db0fd",
                    "sense_definition": "The hardest point or most difficult section of a climb.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The climber rested for a moment before attempting the <w>crux</w> of the route.",
