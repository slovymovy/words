    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "50bad010-b908-3bf8-8368-0c2e85508e01",
                    "sense_definition": "Брать на себя обязательство сделать что-либо, давать слово.",
                    "learner_level": "A2",
                    "frequency": "High",
                    "semantic_group_id": "commitment",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Я твёрдо <обещаю> вернуть эту книгу в библиотеку завтра.",
                            "target_lang_translations": {
                                "en": "I firmly <promise> to return this book to the library tomorrow."
                            }
                        },
                        {
                            "text": "Отец <обещал> купить мне новый велосипед на день рождения.",
                            "target_lang_translations": {
                                "en": "Father <promised> to buy me a new bicycle for my birthday."
                            }
                        }
                    ],
                    "synonyms": [
                        "давать обещание"
                    ],
                    "common_phrases": [
                        "обещать помочь",
                        "обещать вернуться",
                        "торжественно обещать"
                    ],
                    "target_lang_definitions": {
                        "en": "To make a commitment to do something; to give one's word."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "promise",
                                "target_lang_sense_clarification": "to give one's word"
                            },
                            {
                                "target_lang_word": "pledge",
                                "target_lang_sense_clarification": "to commit formally"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "267814c4-e0ff-3733-a9f1-74a5c394e39a",
                    "sense_definition": "Внушать надежду на что-либо или служить признаком наступления чего-либо в будущем.",
                    "learner_level": "B1",
                    "frequency": "Middle",
                    "semantic_group_id": "prediction",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Ясное утреннее небо <обещало> нам тёплый и солнечный день.",
                            "target_lang_translations": {
                                "en": "The clear morning sky <promised> us a warm and sunny day."
                            }
                        },
                        {
                            "text": "Начало концерта <обещает> быть очень интересным и захватывающим.",
                            "target_lang_translations": {
                                "en": "The beginning of the concert <promises> to be very interesting and exciting."
                            }
                        }
                    ],
                    "synonyms": [
                        "предвещать",
                        "сули́ть"
                    ],
                    "common_phrases": [
                        "день обещает быть",
                        "утро обещает",
                        "начало обещает"
                    ],
                    "target_lang_definitions": {
                        "en": "To give grounds for expectation; to show signs of a future outcome."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "promise",
                                "target_lang_sense_clarification": "to show signs of"
                            },
                            {
                                "target_lang_word": "bode",
                                "target_lang_sense_clarification": "to indicate by signs"
                            }
                        ]
                    }
                }
            ]
        }
    ]
