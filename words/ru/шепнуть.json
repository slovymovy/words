{
    "word_family": [
        "шептать",
        "шёпот",
        "шептаться",
        "нашёптывать",
        "прошептать"
    ],
    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "b022877a-f561-3cd2-ad12-4745f7853da8",
                    "sense_definition": "Сказать что-либо очень тихо, шёпотом.",
                    "learner_level": "B1",
                    "frequency": "Middle",
                    "semantic_group_id": "speech_action",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Он наклонился ко мне и <шепнул> на ухо правильный ответ.",
                            "target_lang_translations": {
                                "en": "He leaned towards me and <w>whispered</w> the correct answer in my ear."
                            }
                        },
                        {
                            "text": "Пожалуйста, <шепни> ему, что мы уже уходим домой.",
                            "target_lang_translations": {
                                "en": "Please <w>whisper</w> to him that we are already going home."
                            }
                        }
                    ],
                    "synonyms": [
                        "прошептать"
                    ],
                    "antonyms": [
                        "выкрикнуть"
                    ],
                    "common_phrases": [
                        "шепнуть на ухо",
                        "тихо шепнуть",
                        "что-то шепнуть"
                    ],
                    "target_lang_definitions": {
                        "en": "To say something very quietly, in a whisper."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "whisper",
                                "target_lang_sense_clarification": "to speak very softly"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "c87eea01-c6ad-3d43-afb2-2ac3f8c48aeb",
                    "sense_definition": "Сообщить какую-либо новость или тайну по секрету.",
                    "learner_level": "B2",
                    "frequency": "Low",
                    "semantic_group_id": "secret_communication",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Коллега <шепнул> мне, что завтра будет внеплановая проверка.",
                            "target_lang_translations": {
                                "en": "A colleague <w>whispered</w> to me that there will be an unscheduled inspection tomorrow."
                            }
                        },
                        {
                            "text": "Если узнаешь новости, <шепни> мне сразу, чтобы я знал.",
                            "target_lang_translations": {
                                "en": "If you find out the news, <w>whisper</w> to me immediately so I know."
                            }
                        }
                    ],
                    "synonyms": [
                        "намекнуть"
                    ],
                    "antonyms": [
                        "раззвонить",
                        "разболтать"
                    ],
                    "common_phrases": [
                        "шепнуть словечко"
                    ],
                    "target_lang_definitions": {
                        "en": "To communicate news or a secret confidentially."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "whisper",
                                "target_lang_sense_clarification": "to mention privately"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}