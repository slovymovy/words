                        }
                    ],
                    "target_lang_definitions": {
                        "ru": "Лекарственный препарат, отпускаемый только по рецепту врача."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "рецептурный препарат",
