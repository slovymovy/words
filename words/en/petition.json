{
    "word_family": [
        "petitioner",
        "petitionary"
    ],
    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "af107bdb-9e92-39c7-a5fc-f94d2b734b7b",
                    "sense_definition": "A formal written request, typically signed by many people, appealing to an authority for a specific cause or action.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "request_noun",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "We need more people to sign the <w>petition</w> to save the local park.",
                            "target_lang_translations": {
                                "ru": "Нам нужно больше людей, чтобы подписать <w>петицию</w> за сохранение местного парка."
                            }
                        },
                        {
                            "text": "The group presented a <w>petition</w> to the city council demanding better streetlights.",
                            "target_lang_translations": {
                                "ru": "Группа подала <w>петицию</w> в городской совет с требованием улучшить уличное освещение."
                            }
                        }
                    ],
                    "synonyms": [
                        "appeal",
                        "plea",
                        "request"
                    ],
                    "common_phrases": [
                        "sign a petition",
                        "start a petition",
                        "online petition",
                        "present a petition"
                    ],
                    "target_lang_definitions": {
                        "ru": "Официальное письменное требование, обычно подписанное многими людьми, с призывом к властям по конкретному вопросу."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "петиция",
                                "target_lang_sense_clarification": "коллективное обращение"
                            },
                            {
                                "target_lang_word": "прошение",
                                "target_lang_sense_clarification": "официальная просьба"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "45c06fa5-0915-38a9-a112-c72f99764057",
                    "sense_definition": "A formal written application submitted to a court or magistrate requesting a specific judicial action.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "request_noun",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "His lawyer filed a <w>petition</w> for divorce early this morning.",
                            "target_lang_translations": {
                                "ru": "Его адвокат подал <w>заявление</w> о разводе рано утром."
                            }
                        },
                        {
                            "text": "The company submitted a <w>petition</w> for bankruptcy protection.",
                            "target_lang_translations": {
                                "ru": "Компания подала <w>ходатайство</w> о защите от банкротства."
                            }
                        }
                    ],
                    "synonyms": [
                        "application",
                        "motion",
                        "suit"
                    ],
                    "common_phrases": [
                        "file a petition",
                        "divorce petition",
                        "bankruptcy petition"
                    ],
                    "target_lang_definitions": {
                        "ru": "Официальное письменное заявление, подаваемое в суд или должностному лицу с просьбой о совершении юридического действия."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "ходатайство",
                                "target_lang_sense_clarification": "судебная просьба"
                            },
                            {
                                "target_lang_word": "заявление",
                                "target_lang_sense_clarification": "официальное обращение"
                            },
                            {
                                "target_lang_word": "жалоба",
                                "target_lang_sense_clarification": "правовой протест"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "6ba851c2-78c1-3bda-8451-303c94d9376b",
                    "sense_definition": "A solemn prayer or humble request made to a deity or a superior.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "request_noun",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The priest offered a <w>petition</w> for peace during the service.",
                            "target_lang_translations": {
                                "ru": "Священник вознес <w>молитву</w> о мире во время службы."
                            }
                        },
                        {
                            "text": "Her humble <w>petition</w> for mercy was ignored by the king.",
                            "target_lang_translations": {
                                "ru": "Её смиренное <w>прошение</w> о помиловании было проигнорировано королем."
                            }
                        }
                    ],
                    "synonyms": [
                        "prayer",
                        "supplication",
                        "entreaty"
                    ],
                    "common_phrases": [
                        "petition to God",
                        "humble petition"
                    ],
                    "target_lang_definitions": {
                        "ru": "Торжественная молитва или смиренная просьба, обращенная к Богу или вышестоящему лицу."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "мольба",
                                "target_lang_sense_clarification": "горячая просьба"
                            },
                            {
                                "target_lang_word": "прошение",
                                "target_lang_sense_clarification": "смиренное обращение"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "75719f57-6ffd-37b5-b210-a4377a4e2295",
                    "sense_definition": "To make a formal request to an authority or organization, often seeking a specific change or action.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "request_verb",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The residents <w>petitioned</w> the mayor to fix the dangerous potholes.",
                            "target_lang_translations": {
                                "ru": "Жители <w>подали петицию</w> мэру с просьбой заделать опасные выбоины."
                            }
                        },
                        {
                            "text": "They are <w>petitioning</w> for better working conditions at the factory.",
                            "target_lang_translations": {
                                "ru": "Они <w>ходатайствуют</w> об улучшении условий труда на фабрике."
                            }
                        }
                    ],
                    "synonyms": [
                        "appeal",
                        "solicit",
                        "request"
                    ],
                    "common_phrases": [
                        "petition the government",
                        "petition for change",
                        "petition the court"
                    ],
                    "target_lang_definitions": {
                        "ru": "Обращаться с официальной просьбой к властям или организации, часто добиваясь определенных изменений."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "ходатайствовать",
                                "target_lang_sense_clarification": "просить официально"
                            },
                            {
                                "target_lang_word": "подавать",
                                "target_lang_sense_clarification": "петицию или жалобу"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}