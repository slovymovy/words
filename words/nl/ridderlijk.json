    "entries": [
        {
            "pos": "adjective",
            "senses": [
                {
                    "sense_id": "979473a7-ad42-32d1-aa7b-eaea00c25466",
                    "sense_definition": "Gekenmerkt door moed, eerlijkheid en grootmoedigheid, zoals traditioneel van een ridder wordt verwacht.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "noble_character",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "De verliezer feliciteerde de winnaar op een zeer <w>ridderlijke</w> manier.",
                            "target_lang_translations": {
                                "ru": "Проигравший поздравил победителя в весьма <w>рыцарской</w> манере."
                            }
                        },
                        {
                            "text": "Het was een <w>ridderlijk</w> gebaar om zijn fout direct toe te geven.",
                            "target_lang_translations": {
                                "ru": "Это был <w>благородный</w> жест — сразу признать свою ошибку."
                            }
                        }
                    ],
                    "synonyms": [
                        "edelmoedig",
                        "moedig",
                        "eerlijk",
                        "oprecht",
                        "ruiterlijk"
                    ],
                    "common_phrases": [
                        "een ridderlijk gebaar",
                        "ridderlijk toegeven"
                    ],
                    "target_lang_definitions": {
                        "ru": "Характеризующийся мужеством, честностью и великодушием, как традиционно ожидается от рыцаря."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "благородный",
                                "target_lang_sense_clarification": "честный, возвышенный, великодушный"
                            },
                            {
                                "target_lang_word": "рыцарский",
                                "target_lang_sense_clarification": "свойственный рыцарю, самоотверженный"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "1911091b-0411-37fd-abb3-396f93dd6f12",
                    "sense_definition": "Zeer beleefd, voorkomend en hoffelijk in de omgang, met name tegenover vrouwen.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "polite_behavior",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Hij was zo <w>ridderlijk</w> om de deur voor haar open te houden.",
                            "target_lang_translations": {
                                "ru": "Он был настолько <w>галантен</w>, что придержал для неё дверь."
                            }
                        },
                        {
                            "text": "Met een <w>ridderlijke</w> buiging begroette hij het gezelschap.",
                            "target_lang_translations": {
                                "ru": "С <w>рыцарским</w> поклоном он поприветствовал собравшихся."
                            }
                        }
                    ],
                    "synonyms": [
                        "galant",
                        "hoffelijk",
                        "attent",
                        "wellevend",
                        "hoofs"
                    ],
                    "common_phrases": [
                        "zich ridderlijk gedragen"
                    ],
                    "target_lang_definitions": {
                        "ru": "Очень вежливый, предупредительный и учтивый в общении, особенно по отношению к женщинам."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "галантный",
                                "target_lang_sense_clarification": "изысканно вежливый, особенно с женщинами"
                            },
                            {
                                "target_lang_word": "учтивый",
                                "target_lang_sense_clarification": "почтительно вежливый"
                            }
                        ]
                    }
                }
            ]
        }
    ]
