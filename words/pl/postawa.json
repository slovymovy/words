    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "66905645-89c2-3288-b7b1-0fcc9a36045e",
                    "sense_definition": "Sposób myślenia o czymś, stosunek do ludzi, wydarzeń lub przedmiotów, który objawia się w zachowaniu.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "mental_attitude",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Jego roszczeniowa <postawa> zniechęciła wszystkich do dalszej pomocy.",
                            "target_lang_translations": {
                                "ru": "Его требовательное <w>отношение</w> отбило у всех желание помогать дальше."
                            }
                        },
                        {
                            "text": "Nauczyciele docenili aktywną <postawę> ucznia podczas zajęć szkolnych.",
                            "target_lang_translations": {
                                "ru": "Учителя оценили активную <w>позицию</w> ученика во время школьных занятий."
                            }
                        }
                    ],
                    "synonyms": [
                        "nastawienie",
                        "podejście"
                    ],
                    "common_phrases": [
                        "postawa obywatelska",
                        "przyjąć postawę",
                        "godna postawa",
                        "postawa moralna"
                    ],
                    "target_lang_definitions": {
                        "ru": "Образ мыслей, отношение к людям, событиям или предметам, проявляющееся в поведении."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "отношение",
                                "target_lang_sense_clarification": "внутренний настрой, восприятие"
                            },
                            {
                                "target_lang_word": "позиция",
                                "target_lang_sense_clarification": "точка зрения, принципы"
                            },
                            {
                                "target_lang_word": "подход",
                                "target_lang_sense_clarification": "способ действий"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "b151aff7-dcae-3d8e-89b9-a058cd035dd7",
                    "sense_definition": "Sposób trzymania ciała, ułożenie sylwetki (np. wyprostowane lub zgarbione) oraz ogólna budowa ciała.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "physical_body",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Długie godziny spędzane przed komputerem negatywnie wpływają na twoją <postawę>.",
                            "target_lang_translations": {
                                "ru": "Долгие часы, проведённые за компьютером, негативно влияют на твою <w>осанку</w>."
                            }
                        },
                        {
                            "text": "Lekarz zalecił dziecku ćwiczenia korekcyjne na wadę <postawy>.",
                            "target_lang_translations": {
                                "ru": "Врач рекомендовал ребёнку коррекционные упражнения для исправления <w>осанки</w>."
                            }
                        }
                    ],
                    "synonyms": [
                        "postura",
                        "sylwetka"
                    ],
                    "common_phrases": [
                        "prawidłowa postawa",
                        "wady postawy",
                        "wyprostowana postawa"
                    ],
                    "target_lang_definitions": {
                        "ru": "Манера держать тело, привычное положение корпуса и спины (например, прямая или сутулая)."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "осанка",
                                "target_lang_sense_clarification": "привычное положение тела"
                            },
                            {
                                "target_lang_word": "положение",
                                "target_lang_sense_clarification": "поза, расположение тела"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "01588f65-8b40-39ac-a79e-de437f3fe09e",
                    "sense_definition": "Ściśle określone ułożenie ciała przyjmowane w wojsku, sporcie lub podczas wykonywania konkretnego zadania.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "physical_body",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Na widok dowódcy żołnierze natychmiast przyjęli <postawę> zasadniczą.",
                            "target_lang_translations": {
                                "ru": "При виде командира солдаты немедленно встали в строевую <w>стойку</w>."
                            }
                        },
                        {
                            "text": "Bokser utrzymał niską <postawę>, przygotowując się do odparcia ataku przeciwnika.",
                            "target_lang_translations": {
                                "ru": "Боксёр сохранял низкую <w>стойку</w>, готовясь отразить атаку противника."
                            }
                        }
                    ],
                    "synonyms": [
                        "poza"
                    ],
                    "common_phrases": [
                        "postawa zasadnicza",
                        "postawa strzelecka",
                        "postawa obronna"
                    ],
                    "target_lang_definitions": {
                        "ru": "Строго определённое положение тела, принимаемое в армии, спорте или при выполнении конкретной задачи."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "стойка",
                                "target_lang_sense_clarification": "в спорте или строевая"
                            },
                            {
                                "target_lang_word": "позиция",
                                "target_lang_sense_clarification": "исходное положение"
                            },
                            {
                                "target_lang_word": "положение",
                                "target_lang_sense_clarification": "поза для действия"
                            }
                        ]
                    }
                }
            ]
        }
    ]
