    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "4868c314-bddf-3fc9-a65f-dad22b405d2f",
                    "sense_definition": "The act or process of punishing someone for bad behavior.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The naughty children were given a <w>punishment</w> by their teachers.",
                            "target_lang_translations": {
                                "ru": "Непослушные дети получили <w>наказание</w> от своих учителей."
                            }
                        },
                        {
                            "text": "He tried to escape <w>punishment</w> for breaking the window.",
                            "target_lang_translations": {
                                "ru": "Он пытался избежать <w>наказания</w> за разбитое окно."
                            }
                        }
                    ],
                    "synonyms": [
                        "castigation"
                    ],
                    "antonyms": [
                        "reward"
                    ],
                    "common_phrases": [
                        "corporal punishment",
                        "capital punishment",
                        "escape punishment",
                        "avoid punishment"
                    ],
                    "target_lang_definitions": {
                        "ru": "Действие или процесс наказания кого-либо за плохое поведение."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "наказание",
                                "target_lang_sense_clarification": "общая мера воздействия"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "e369cd54-d74b-319b-8207-a9f1450a1cac",
                    "sense_definition": "A specific penalty or sanction given for a crime or wrongdoing.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The judge announced a harsh <w>punishment</w> for the crime.",
                            "target_lang_translations": {
                                "ru": "Судья назначил суровое <w>наказание</w> за преступление."
                            }
                        },
                        {
                            "text": "Community service is a common <w>punishment</w> for minor offenses.",
                            "target_lang_translations": {
                                "ru": "Общественные работы — распространенное <w>наказание</w> за мелкие правонарушения."
                            }
                        }
                    ],
                    "antonyms": [
                        "reward"
                    ],
                    "common_phrases": [
                        "harsh punishment",
                        "light punishment",
                        "accept punishment",
                        "fit the punishment"
                    ],
                    "target_lang_definitions": {
                        "ru": "Конкретная мера наказания или санкция за преступление или проступок."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "наказание",
                                "target_lang_sense_clarification": "мера ответственности"
                            },
                            {
                                "target_lang_word": "кара",
                                "target_lang_sense_clarification": "возмездие, суровое наказание"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "af29d161-4687-3004-a744-ffe460fe142a",
                    "sense_definition": "Rough treatment or harsh experience that causes damage or wear.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "2",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "This vehicle can take a lot of <w>punishment</w> on rough roads.",
                            "target_lang_translations": {
                                "ru": "Этот автомобиль способен выдержать большие <w>нагрузки</w> на плохих дорогах."
                            }
                        },
                        {
                            "text": "His body took a lot of <w>punishment</w> during the long boxing match.",
                            "target_lang_translations": {
                                "ru": "Его тело выдержало множество <w>ударов</w> во время долгого боксерского поединка."
                            }
                        }
                    ],
                    "common_phrases": [
                        "take punishment",
                        "absorb punishment"
                    ],
                    "target_lang_definitions": {
                        "ru": "Грубое обращение или суровый опыт, вызывающие повреждения или износ."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "нагрузка",
                                "target_lang_sense_clarification": "физическое воздействие, износ"
                            },
                            {
                                "target_lang_word": "трёпка",
                                "target_lang_sense_clarification": "грубое обращение"
                            },
                            {
                                "target_lang_word": "удары",
                                "target_lang_sense_clarification": "физический ущерб"
                            }
                        ]
                    }
                }
            ]
        }
    ]
