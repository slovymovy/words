    "entries": [
        {
            "pos": "adjective",
            "senses": [
                {
                    "sense_id": "a31e36e2-2a44-39fd-874b-bc8bfd4aedef",
                    "sense_definition": "Dotyczący spadku (majątku dziedziczonego po osobie zmarłej) lub procedur prawnych z nim związanych.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "legal_inheritance",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Sąd rejonowy zakończył wczoraj skomplikowane postępowanie <w>spadkowe</w>.",
                            "target_lang_translations": {
                                "ru": "Районный суд вчера завершил сложное <w>наследственное</w> дело."
                            }
                        },
                        {
                            "text": "Cała masa <w>spadkowa</w> została podzielona równo między dzieci zmarłego.",
                            "target_lang_translations": {
                                "ru": "Вся <w>наследственная</w> масса была разделена поровну между детьми умершего."
                            }
                        }
                    ],
                    "common_phrases": [
                        "prawo spadkowe",
                        "masa spadkowa",
                        "postępowanie spadkowe"
                    ],
                    "target_lang_definitions": {
                        "ru": "Относящийся к наследству (имуществу, полученному от умершего) или связанным с ним юридическим процедурам."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "наследственный",
                                "target_lang_sense_clarification": "относящийся к наследованию имущества"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "bfb9a382-ec0e-3ac7-a777-4b7c12bee982",
                    "sense_definition": "Charakteryzujący się zmniejszaniem wartości, liczebności lub natężenia; wykazujący tendencję malejącą.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "trend_decline",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Na giełdzie papierów wartościowych odnotowano dziś wyraźny trend <w>spadkowy</w>.",
                            "target_lang_translations": {
                                "ru": "На фондовой бирже сегодня был отмечен явный <w>нисходящий</w> тренд."
                            }
                        },
                        {
                            "text": "Firma stara się odwrócić tendencję <w>spadkową</w> w wynikach sprzedaży.",
                            "target_lang_translations": {
                                "ru": "Компания пытается переломить <w>нисходящую</w> тенденцию в результатах продаж."
                            }
                        }
                    ],
                    "synonyms": [
                        "malejący"
                    ],
                    "antonyms": [
                        "wzrostowy"
                    ],
                    "common_phrases": [
                        "trend spadkowy",
                        "tendencja spadkowa"
                    ],
                    "target_lang_definitions": {
                        "ru": "Характеризующийся снижением стоимости, количества или интенсивности; направленный вниз."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "нисходящий",
                                "target_lang_sense_clarification": "о тренде, направлении движения"
                            },
                            {
                                "target_lang_word": "понижательный",
                                "target_lang_sense_clarification": "о тенденции к снижению"
                            }
                        ]
                    }
                }
            ]
        }
    ]
