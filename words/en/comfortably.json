                    }
                },
                {
                    "sense_id": "55f95739-14fa-3ad3-b9b3-db98f1073abc",
                    "sense_definition": "Without any difficulty, effort, or struggle; often used to describe winning a competition or meeting a standard by a wide margin.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "ease_of_action",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Our team won the match <w>comfortably</w> with a score of 4 to 0.",
                            "target_lang_translations": {
                                "ru": "Наша команда <w>уверенно</w> выиграла матч со счетом 4:0."
                            }
                        },
                        {
                            "text": "She is <w>comfortably</w> ahead of her competitors in the race.",
                            "target_lang_translations": {
