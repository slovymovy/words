    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "525508f5-8a34-3a0d-a80c-c22d0e272596",
                    "sense_definition": "Утверждение, мнение или положение, которое принимается за безусловную истину и не подлежит критике или сомнению.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "belief_system",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Для него слова начальника были абсолютной <w>догмой</w>, не требующей обсуждения.",
                            "target_lang_translations": {
                                "en": "For him, the boss's words were absolute <w>dogma</w>, requiring no discussion."
                            }
                        },
                        {
                            "text": "Мы не должны воспринимать это старое правило как застывшую <w>догму</w>, которую нельзя изменить.",
                            "target_lang_translations": {
                                "en": "We should not perceive this old rule as a rigid <w>dogma</w> that cannot be changed."
                            }
                        }
                    ],
                    "synonyms": [
                        "постулат",
                        "закон",
                        "принцип"
                    ],
                    "common_phrases": [
                        "воспринимать как догму",
                        "следовать догме",
                        "отвергать догмы",
                        "мертвая догма"
                    ],
                    "target_lang_definitions": {
                        "en": "A statement, opinion, or position accepted as absolute truth and not subject to criticism or doubt."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "dogma",
                                "target_lang_sense_clarification": "unquestionable truth"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "558511ce-3720-3bbe-bd96-d35b020c50da",
                    "sense_definition": "Система основных положений какого-либо учения (религиозного, философского, научного или правового).",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "belief_system",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Студенты юридического факультета изучали основные положения, на которых строится <w>догма</w> римского права.",
                            "target_lang_translations": {
                                "en": "Law students studied the basic principles upon which the <w>dogma</w> of Roman law is built."
                            }
                        },
                        {
                            "text": "Эта научная <w>догма</w> долгое время мешала развитию новых идей и прогрессивных теорий.",
                            "target_lang_translations": {
                                "en": "This scientific <w>dogma</w> hindered the development of new ideas and progressive theories for a long time."
                            }
                        }
                    ],
                    "synonyms": [
                        "доктрина",
                        "догмат"
                    ],
                    "common_phrases": [
                        "церковные догмы",
                        "догма права",
                        "религиозная догма"
                    ],
                    "target_lang_definitions": {
                        "en": "A system of fundamental principles of a teaching (religious, philosophical, scientific, or legal)."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "dogma",
                                "target_lang_sense_clarification": "system of beliefs"
                            },
                            {
                                "target_lang_word": "doctrine",
                                "target_lang_sense_clarification": "set of principles"
                            }
                        ]
                    }
                }
            ]
        }
    ]
