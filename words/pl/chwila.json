            "senses": [
                {
                    "sense_id": "23645276-73f7-353b-9933-01d45a1b4b63",
                    "sense_definition": "Bardzo krótki odcinek czasu.",
                    "learner_level": "A1",
                    "frequency": "High",
                    "semantic_group_id": "duration",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Muszę wyjść na <w>chwilę</w> do sklepu po zakupy.",
                            "target_lang_translations": {
                                "ru": "Мне нужно выйти на <w>минутку</w> в магазин за покупками."
                            }
                        },
                        {
                            "text": "Jerzy patrzył przez dłuższą <w>chwilę</w> na wystawę sklepową.",
                            "target_lang_translations": {
                                "ru": "Ежи некоторое <w>время</w> смотрел на витрину магазина."
                            }
                        }
                    ],
                    "synonyms": [
                        "moment",
                        "mgnienie oka"
                    ],
                    "common_phrases": [
                        "za chwilę",
                        "na chwilę",
                        "wolna chwila"
                    ],
                    "target_lang_definitions": {
                        "ru": "Очень короткий промежуток времени."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "мгновение",
                                "target_lang_sense_clarification": "очень короткий миг"
                            },
                            {
                                "target_lang_word": "минута",
                                "target_lang_sense_clarification": "короткий отрезок времени, часто используется в разговорной речи"
                            },
                            {
                                "target_lang_word": "момент",
                                "target_lang_sense_clarification": "непродолжительное время"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "7845375b-ff24-3b61-86bf-9496b8fa9070",
                    "sense_definition": "Konkretny punkt w czasie, moment, w którym coś się dzieje.",
                    "learner_level": "A2",
                    "frequency": "High",
                    "semantic_group_id": "point_in_time",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "W tej <w>chwili</w> nie mogę rozmawiać przez telefon.",
                            "target_lang_translations": {
                                "ru": "В данный <w>момент</w> я не могу говорить по телефону."
                            }
                        },
                        {
                            "text": "To była najważniejsza <w>chwila</w> w całym moim życiu.",
                            "target_lang_translations": {
                                "ru": "Это был самый важный <w>момент</w> во всей моей жизни."
                            }
                        }
                    ],
                    "synonyms": [
                        "moment"
                    ],
                    "common_phrases": [
                        "w tej chwili",
                        "od tej chwili",
                        "w każdej chwili"
                    ],
                    "target_lang_definitions": {
                        "ru": "Конкретный момент времени, когда что-то происходит."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "момент",
                                "target_lang_sense_clarification": "конкретная точка во времени"
                            },
                            {
                                "target_lang_word": "миг",
                                "target_lang_sense_clarification": "событие, происходящее мгновенно"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "cdbfefa8-17bd-3d31-b832-0bfca2caafce",
                    "sense_definition": "Czas wolny od zajęć, krótki odpoczynek.",
                    "learner_level": "B1",
                    "frequency": "Middle",
                    "semantic_group_id": "leisure",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Po ciężkiej pracy wreszcie mam <w>chwilę</w> dla siebie.",
                            "target_lang_translations": {
                                "ru": "После тяжелой работы у меня наконец-то есть <w>минутка</w> для себя."
                            }
                        },
                        {
                            "text": "Potrzebuję <w>chwili</w> spokoju, żeby to wszystko przemyśleć.",
                            "target_lang_translations": {
                                "ru": "Мне нужна <w>минута</w> покоя, чтобы всё это обдумать."
                            }
                        }
                    ],
                    "common_phrases": [
                        "chwila wytchnienia",
                        "chwila spokoju",
                        "chwila dla siebie"
                    ],
                    "target_lang_definitions": {
                        "ru": "Свободное время, короткий отдых."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "минутка",
