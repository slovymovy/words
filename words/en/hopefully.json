    "entries": [
        {
            "pos": "adverb",
            "senses": [
                {
                    "sense_id": "3efbf343-8f25-3158-b915-28d9d84d4ee0",
                    "sense_definition": "It is hoped that something will happen or is true.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "<w>Hopefully</w>, the weather will be nice for our trip tomorrow.",
                            "target_lang_translations": {
                                "ru": "<w>Надеюсь</w>, завтра погода будет хорошей для нашей поездки."
                            }
                        },
                        {
                            "text": "We can <w>hopefully</w> find a solution to this problem very soon.",
                            "target_lang_translations": {
                                "ru": "Мы, <w>надеюсь</w>, очень скоро найдем решение этой проблемы."
                            }
                        }
                    ],
                    "synonyms": [
                        "fingers crossed"
                    ],
                    "common_phrases": [
                        "hopefully soon",
                        "hopefully not"
                    ],
                    "target_lang_definitions": {
                        "ru": "Выражает надежду на то, что что-то произойдет или является правдой."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "надеюсь",
                                "target_lang_sense_clarification": "вводное слово"
                            },
                            {
                                "target_lang_word": "будем надеяться",
                                "target_lang_sense_clarification": "фраза"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "aa0bfcd3-368c-313e-9f1c-33f6a590eeda",
                    "sense_definition": "In a hopeful manner; showing or feeling hope.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The hungry dog looked <w>hopefully</w> at the food on the table.",
                            "target_lang_translations": {
                                "ru": "Голодная собака <w>с надеждой</w> смотрела на еду на столе."
                            }
                        },
                        {
                            "text": "She smiled <w>hopefully</w> when she saw her friend walking towards her.",
                            "target_lang_translations": {
                                "ru": "Она <w>с надеждой</w> улыбнулась, когда увидела, что к ней идет ее друг."
                            }
                        }
                    ],
                    "synonyms": [
                        "fingers crossed"
                    ],
                    "common_phrases": [
                        "look hopefully",
                        "wait hopefully",
                        "smile hopefully"
                    ],
                    "target_lang_definitions": {
