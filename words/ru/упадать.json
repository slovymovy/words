  "entries": [
    {
      "pos": "verb",
      "senses": [
        {
          "sense_id": "a9e92893-ec18-3f98-8592-d5df97b923ef",
          "sense_definition": "Перемещаться вниз в пространстве под действием силы тяжести (устаревшая или поэтическая форма слова <w>падать</w>).",
          "learner_level": "C1",
          "frequency": "Low",
          "semantic_group_id": "physical_motion",
          "name_type": "no",
          "examples": [
            {
              "text": "Бледный луч луны <упадал> через окно прямо на старый ковёр."
            },
            {
              "text": "Пушистый снег медленно <упадал> на замерзшую землю."
            }
          ],
          "synonyms": [
            "падать"
          ],
          "common_phrases": [
            "луч упадал",
            "свет упадал"
          ],
          "traits": [
            {
              "trait_type": "archaic",
              "comment": "commonly replaced by 'падать' in modern Russian"
            }
          ]
        },
        {
          "sense_id": "58e55933-f0a1-36f5-96f5-a71ad1035742",
          "sense_definition": "Сильно удивляться чьему-либо поведению или безудержно смеяться над кем-либо.",
          "learner_level": "C1",
          "frequency": "Low",
          "semantic_group_id": "emotional_reaction",
          "name_type": "no",
          "examples": [
            {
              "text": "Я просто <упадаю> с твоих странных историй."
            },
            {
              "text": "Мы весь вечер <упадали> над этим смешным видео."
            }
          ],
          "synonyms": [
            "угорать"
          ],
          "common_phrases": [
            "я с тебя упадаю"
          ],
          "traits": [
            {
              "trait_type": "slang",
              "comment": "expressive youth slang"
            }
          ]
        },
        {
          "sense_id": "1b9c8962-bab3-3361-a994-b16225791148",
          "sense_definition": "Плавно спускаться или свисать вниз (о волосах, ткани, одежде).",
          "learner_level": "C2",
          "frequency": "Low",
          "semantic_group_id": "physical_motion",
          "name_type": "no",
          "examples": [
            {
              "text": "Её густая коса тяжело <упадала> на плечи."
            },
            {
              "text": "Ткань платья красивыми складками <упадала> до самого пола."
            }
          ],
          "synonyms": [
            "спадать",
            "опадать"
          ],
          "common_phrases": [
            "волосы упадали",
            "складки упадали"
          ],
          "traits": []
        },
        {
          "sense_id": "4ec1c336-99ba-3db9-a2b1-ebeb7942a373",
          "sense_definition": "Приходить в состояние разрушения, ухудшаться или слабеть (о делах, государствах, явлениях).",
          "learner_level": "C2",
          "frequency": "Low",
          "semantic_group_id": "abstract_decline",
          "name_type": "no",
          "examples": [
            {
              "text": "Влияние этой империи начало стремительно <упадать>."
            },
            {
              "text": "Его хозяйство стало <упадать> из-за отсутствия должного ухода."
            }
          ],
          "traits": []
        },
        {
          "sense_id": "5d151278-fd94-3869-8236-b346708b46eb",
          "sense_definition": "Проявлять сильную симпатию, ухаживать или бегать за кем-либо.",
          "learner_level": "C2",
          "frequency": "VeryLow",
          "semantic_group_id": "emotional_reaction",
          "name_type": "no",
          "examples": [
            {
              "text": "Все местные парни <упадали> за этой красавицей."
            },
            {
              "text": "Он давно <упадал> за ней, но она не отвечала взаимностью."
            }
          ],
          "common_phrases": [
            "упадать за девушкой"
          ],
          "traits": [
            {
              "trait_type": "colloquial",
              "comment": ""
            }
          ]
        }
      ]
    }
  ]
