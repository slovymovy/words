        {
            "pos": "adjective",
            "senses": [
                {
                    "sense_id": "c564f294-2f93-3456-9459-adf4d5cfde3f",
                    "sense_definition": "Feeling or showing hope; expecting a good outcome.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "I am <w>hopeful</w> that the weather will improve by tomorrow morning.",
                            "target_lang_translations": {
                                "ru": "Я <w>надеюсь</w>, что погода улучшится к завтрашнему утру."
                            }
                        },
                        {
                            "text": "She remains <w>hopeful</w> about finding a new job soon.",
                            "target_lang_translations": {
                                "ru": "Она не теряет <w>надежды</w> найти новую работу в ближайшее время."
                            }
                        }
                    ],
                    "synonyms": [
                        "optimistic",
                        "confident"
                    ],
                    "antonyms": [
                        "hopeless",
                        "desperate",
                        "dejected"
                    ],
                    "common_phrases": [
                        "remain hopeful",
                        "feel hopeful",
                        "hopeful about"
                    ],
                    "target_lang_definitions": {
                        "ru": "Чувствующий надежду или уверенность в хорошем исходе; ожидающий лучшего."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "полный надежд",
                                "target_lang_sense_clarification": "испытывающий надежду"
                            },
                            {
                                "target_lang_word": "надеющийся",
                                "target_lang_sense_clarification": "причастие от «надеяться»"
                            },
                            {
                                "target_lang_word": "оптимистичный",
                                "target_lang_sense_clarification": "уверенный в успехе"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "a959e41a-cc49-3abc-9f0b-9963c74fde5b",
                    "sense_definition": "Inspiring hope or giving a reason to believe that something good will happen.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The early test results look very <w>hopeful</w> for the new treatment.",
