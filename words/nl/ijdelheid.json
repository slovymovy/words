    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "067ee128-d6ed-36a5-8b7d-b0eb6b57bfec",
                    "sense_definition": "De eigenschap dat iemand zichzelf erg geweldig vindt, vooral wat betreft uiterlijk, en graag bewonderd wil worden.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "conceit",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Haar <w>ijdelheid</w> zorgt ervoor dat ze elke keer stopt als ze een spiegel ziet.",
                            "target_lang_translations": {
                                "ru": "Её <w>самовлюблённость</w> заставляет её останавливаться каждый раз, когда она видит зеркало."
                            }
                        },
                        {
                            "text": "Hij deed die dure aankoop puur uit <w>ijdelheid</w> om indruk te maken op zijn buren.",
                            "target_lang_translations": {
                                "ru": "Он сделал эту дорогую покупку исключительно из <w>тщеславия</w>, чтобы произвести впечатление на соседей."
                            }
                        }
                    ],
                    "synonyms": [
                        "verwaandheid",
                        "pronkzucht",
                        "hoogmoed"
                    ],
                    "antonyms": [
                        "bescheidenheid",
                        "nederigheid"
                    ],
                    "common_phrases": [
                        "gekrenkte ijdelheid",
                        "uit ijdelheid"
                    ],
                    "target_lang_definitions": {
                        "ru": "Свойство человека, который считает себя великолепным, особенно внешне, и жаждет восхищения."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "тщеславие",
                                "target_lang_sense_clarification": "стремление к славе, почестям и вниманию окружающих"
                            },
                            {
                                "target_lang_word": "самовлюблённость",
                                "target_lang_sense_clarification": "чрезмерная любовь к самому себе и своей внешности"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "4bbd2cde-29c1-3a7a-b4ab-28b7128a9b8b",
                    "sense_definition": "Het gebrek aan werkelijke betekenis, waarde of duurzaamheid; de zinloosheid.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "futility",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "De schrijver dacht veel na over de <w>ijdelheid</w> van roem en rijkdom.",
                            "target_lang_translations": {
                                "ru": "Писатель много размышлял о <w>тщете</w> славы и богатства."
                            }
                        },
                        {
                            "text": "In het oude boek wordt de <w>ijdelheid</w> van het aardse leven beschreven.",
                            "target_lang_translations": {
                                "ru": "В старинной книге описывается <w>суета</w> земной жизни."
                            }
                        }
                    ],
                    "synonyms": [
                        "leegheid",
                        "vergankelijkheid",
                        "zinloosheid"
                    ],
                    "antonyms": [
                        "zinvolheid"
                    ],
                    "common_phrases": [
                        "ijdelheid der ijdelheden"
                    ],
                    "target_lang_definitions": {
                        "ru": "Отсутствие истинного смысла, ценности или долговечности; бессмысленность."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "тщета",
                                "target_lang_sense_clarification": "бесполезность, отсутствие внутреннего смысла"
                            },
                            {
                                "target_lang_word": "суета",
                                "target_lang_sense_clarification": "всё земное, преходящее, не имеющее истинной ценности"
                            },
                            {
                                "target_lang_word": "бренность",
                                "target_lang_sense_clarification": "недолговечность, подверженность разрушению"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}