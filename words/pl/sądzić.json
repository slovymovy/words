    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "745e33c0-ac95-3564-8fec-d94e89478ea1",
                    "sense_definition": "Mieć o czymś wyrobione zdanie, przypuszczać lub uważać coś za prawdę",
                    "learner_level": "A2",
                    "frequency": "High",
                    "semantic_group_id": "opinion_thought",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Co <sądzisz> o naszym nowym nauczycielu matematyki?",
                            "target_lang_translations": {
                                "ru": "Что ты <думаешь> о нашем новом учителе математики?"
                            }
                        },
                        {
                            "text": "Wielu ludzi błędnie <sądzi>, że nauka języka polskiego jest niemożliwa.",
                            "target_lang_translations": {
                                "ru": "Многие люди ошибочно <считают>, что выучить польский язык невозможно."
                            }
                        }
                    ],
                    "synonyms": [
                        "myśleć",
                        "uważać"
                    ],
                    "common_phrases": [
                        "co o tym sądzisz",
                        "jak sądzę",
                        "mylnie sądzić",
                        "sądzić inaczej"
                    ],
                    "target_lang_definitions": {
                        "ru": "Иметь мнение о чем-либо, предполагать или считать что-либо истиной"
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "думать",
                                "target_lang_sense_clarification": "иметь мнение"
                            },
                            {
                                "target_lang_word": "считать",
                                "target_lang_sense_clarification": "быть уверенным, полагать"
                            },
                            {
                                "target_lang_word": "полагать",
                                "target_lang_sense_clarification": "допускать, предполагать"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "805281ac-c4fb-359b-93f0-dde45431bded",
                    "sense_definition": "Dokonywać oceny kogoś lub czegoś, wyrabiać sobie opinię na podstawie obserwacji",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "evaluation",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Nie powinieneś <sądzić> książki po jej okładce.",
                            "target_lang_translations": {
                                "ru": "Не стоит <судить> о книге по её обложке."
                            }
                        },
                        {
                            "text": "Trudno <sądzić> o czyichś intencjach, nie znając całej prawdy o sytuacji.",
                            "target_lang_translations": {
                                "ru": "Трудно <судить> о чьих-то намерениях, не зная всей правды о ситуации."
                            }
                        }
                    ],
                    "synonyms": [
                        "oceniać"
                    ],
                    "common_phrases": [
                        "nie sądź po pozorach",
                        "sądzić po wyglądzie",
                        "surowo sądzić",
                        "sądząc po minie"
                    ],
                    "target_lang_definitions": {
                        "ru": "Оценивать кого-либо или что-либо, составлять мнение на основе наблюдений"
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "судить",
                                "target_lang_sense_clarification": "составлять мнение, оценивать"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "95c4315b-a730-3fff-8a88-3ff530c93fbd",
                    "sense_definition": "Rozstrzygać sprawy w sądzie, wydawać wyrok jako sędzia",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "legal_context",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Sąd będzie <sądził> sprawcę wypadku w przyszłym tygodniu.",
                            "target_lang_translations": {
                                "ru": "Суд будет <судить> виновника аварии на следующей неделе."
                            }
                        },
                        {
                            "text": "Tylko niezawisły sędzia może sprawiedliwie <sądzić> oskarżonego o przestępstwo.",
                            "target_lang_translations": {
                                "ru": "Только независимый судья может справедливо <судить> обвиняемого в преступлении."
                            }
                        }
                    ],
                    "synonyms": [
                        "osądzać"
                    ],
                    "common_phrases": [
                        "sądzić sprawę",
                        "sądzić oskarżonego",
                        "sądzić według prawa"
                    ],
                    "target_lang_definitions": {
                        "ru": "Рассматривать дела в суде, выносить приговор в качестве судьи"
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "судить",
                                "target_lang_sense_clarification": "вести судебный процесс"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "b9ad65d3-791f-3dfc-9cca-05d179123da8",
                    "sense_definition": "Prowadzić z kimś spór sądowy, występować jako strona w procesie",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "legal_context",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Moi sąsiedzi od lat <sądzą się> o kawałek ziemi przy płocie.",
                            "target_lang_translations": {
                                "ru": "Мои соседи годами <судятся> из-за куска земли у забора."
                            }
                        },
                        {
                            "text": "Nie warto <sądzić się> o tak małe pieniądze, szkoda na to nerwów i czasu.",
                            "target_lang_translations": {
                                "ru": "Не стоит <судиться> из-за таких маленьких денег, жаль нервов и времени."
                            }
                        }
                    ],
                    "synonyms": [
                        "procesować się",
                        "prawować się"
                    ],
                    "common_phrases": [
                        "sądzić się z sąsiadem",
                        "sądzić się o spadek",
                        "sądzić się latami"
                    ],
                    "target_lang_definitions": {
                        "ru": "Вести судебную тяжбу с кем-либо, выступать стороной в процессе"
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "судиться",
                                "target_lang_sense_clarification": "вести тяжбу"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}