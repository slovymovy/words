            "senses": [
                {
                    "sense_id": "eea67dcf-51ca-3d54-a037-f6761047fff0",
                    "sense_definition": "Apportioned or decided by lot; allotted.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The <w>lotted</w> land was distributed among the settlers fairly.",
                            "target_lang_translations": {
