                {
                    "sense_id": "ece1c577-b35c-3327-8887-bc66f0228b87",
                    "sense_definition": "De arbeidsovereenkomst met een werknemer beëindigen, waardoor deze zijn baan verliest.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "employment",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Het bedrijf moest door de crisis twintig werknemers <w>ontslaan</w>.",
                            "target_lang_translations": {
                                "en": "The company had to <w>lay off</w> twenty employees due to the crisis."
                            }
                        },
                        {
                            "text": "Hij werd op staande voet <w>ontslagen</w> nadat hij geld had gestolen.",
                            "target_lang_translations": {
                                "en": "He was <w>fired</w> on the spot after he had stolen money."
                            }
                        }
                    ],
                    "synonyms": [
                        "de laan uitsturen",
                        "op straat zetten",
                        "wippen"
                    ],
                    "antonyms": [
                        "aannemen",
                        "in dienst nemen",
                        "aanwerven"
                    ],
                    "common_phrases": [
                        "op staande voet ontslaan",
                        "iemand ontslaan"
                    ],
                    "target_lang_definitions": {
                        "en": "To terminate the employment contract with an employee, causing them to lose their job."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "fire",
                                "target_lang_sense_clarification": "to remove someone from their job, usually for a specific reason"
                            },
                            {
                                "target_lang_word": "dismiss",
                                "target_lang_sense_clarification": "formal term for removing someone from their job"
                            },
                            {
                                "target_lang_word": "lay off",
                                "target_lang_sense_clarification": "to end employment due to economic reasons or lack of work"
                            },
                            {
                                "target_lang_word": "sack",
                                "target_lang_sense_clarification": "informal term for firing someone"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "f3db45ae-a0a5-3614-b486-e27d44918c29",
                    "sense_definition": "Een patiënt officiële toestemming geven om het ziekenhuis of een instelling te verlaten na een behandeling.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "medical",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "De arts vertelde dat hij de patiënt morgenochtend zal <w>ontslaan</w>.",
                            "target_lang_translations": {
                                "en": "The doctor said that he will <w>discharge</w> the patient tomorrow morning."
                            }
                        },
                        {
                            "text": "Na een week in het ziekenhuis werd zij eindelijk <w>ontslagen</w>.",
                            "target_lang_translations": {
                                "en": "After a week in the hospital, she was finally <w>discharged</w>."
                            }
                        }
                    ],
                    "synonyms": [
                        "naar huis sturen"
                    ],
                    "antonyms": [
                        "opnemen"
                    ],
                    "common_phrases": [
                        "uit het ziekenhuis ontslaan"
                    ],
                    "target_lang_definitions": {
                        "en": "To give a patient official permission to leave the hospital or an institution after treatment."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "discharge",
                                "target_lang_sense_clarification": "to officially allow a patient to leave a hospital"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "c006ac1a-730c-3c90-89cf-6f47d3f69493",
                    "sense_definition": "Iemand vrijstellen van een bepaalde plicht, taak, verantwoordelijkheid of rechtsvervolging.",
