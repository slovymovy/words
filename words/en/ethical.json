    "entries": [
        {
            "pos": "adjective",
            "senses": [
                {
                    "sense_id": "2110b963-b393-3eb6-9e88-ae02229e4e62",
                    "sense_definition": "Morally approvable; good.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "morality",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "We are trying to decide what the most <w>ethical</w> course of action would be.",
                            "target_lang_translations": {
                                "ru": "Мы пытаемся решить, какой порядок действий был бы наиболее <w>этичным</w>."
                            }
                        },
                        {
                            "text": "Buying fair trade products is often seen as an <w>ethical</w> choice for consumers.",
                            "target_lang_translations": {
                                "ru": "Покупка товаров справедливой торговли часто рассматривается потребителями как <w>этичный</w> выбор."
                            }
                        }
                    ],
                    "synonyms": [
                        "moral",
                        "virtuous",
                        "principled",
                        "righteous",
                        "honorable"
                    ],
                    "antonyms": [
                        "unethical",
                        "immoral",
                        "wrong",
                        "dishonest"
                    ],
                    "common_phrases": [
                        "ethical behavior",
                        "ethical investment",
                        "ethical consumption",
                        "highly ethical"
                    ],
                    "target_lang_definitions": {
                        "ru": "Морально правильный; нравственный."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "этичный",
                                "target_lang_sense_clarification": "соответствующий нормам морали"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "c5225e8e-d244-35ad-b90f-9bfe0d749097",
                    "sense_definition": "Of or relating to the accepted principles of right and wrong, especially those of some organization or profession.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "morality",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "All employees must familiarize themselves with our <w>ethical</w> guidelines before starting work.",
                            "target_lang_translations": {
                                "ru": "Все сотрудники должны ознакомиться с нашими <w>этическими</w> нормами перед началом работы."
                            }
                        },
                        {
                            "text": "The committee met to discuss the <w>ethical</w> issues raised by the new medical research.",
                            "target_lang_translations": {
                                "ru": "Комитет собрался, чтобы обсудить <w>этические</w> вопросы, поднятые новым медицинским исследованием."
                            }
                        }
                    ],
                    "synonyms": [
                        "professional",
                        "moral"
                    ],
                    "antonyms": [
                        "unethical"
                    ],
                    "common_phrases": [
                        "ethical guidelines",
                        "ethical standards",
                        "ethical code",
                        "ethical issues"
                    ],
                    "target_lang_definitions": {
                        "ru": "Относящийся к принятым принципам правильного и неправильного, особенно в организации или профессии."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "этический",
                                "target_lang_sense_clarification": "относящийся к системе норм"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "4dd54492-97ea-309e-9520-1440e4058485",
                    "sense_definition": "Of or relating to the study of ethics.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "morality",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The philosopher Kant is particularly known for his complex <w>ethical</w> writings.",
                            "target_lang_translations": {
                                "ru": "Философ Кант особенно известен своими сложными <w>этическими</w> трудами."
                            }
                        },
                        {
                            "text": "She decided to take a course on <w>ethical</w> theory during her final semester.",
                            "target_lang_translations": {
                                "ru": "Она решила пройти курс по <w>этической</w> теории в последнем семестре."
                            }
                        }
                    ],
                    "synonyms": [
                        "moral",
                        "philosophical"
                    ],
                    "common_phrases": [
                        "ethical theory",
                        "ethical philosophy",
                        "ethical framework"
                    ],
                    "target_lang_definitions": {
                        "ru": "Относящийся к изучению этики как науки."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "этический",
                                "target_lang_sense_clarification": "философский, научный"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "e8629803-b4f4-3c74-952d-3faba5b5a539",
                    "sense_definition": "Only dispensed on the prescription of a physician.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "medicine",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "In most jurisdictions, morphine is classified strictly as an <w>ethical</w> drug.",
                            "target_lang_translations": {
                                "ru": "В большинстве юрисдикций морфин классифицируется строго как <w>рецептурный</w> препарат."
                            }
                        },
                        {
                            "text": "The company specializes in the distribution of <w>ethical</w> pharmaceuticals to hospitals.",
                            "target_lang_translations": {
                                "ru": "Компания специализируется на поставках <w>рецептурных</w> фармацевтических препаратов в больницы."
                            }
                        }
                    ],
                    "synonyms": [
                        "prescription"
                    ],
                    "antonyms": [
                        "over-the-counter"
                    ],
                    "common_phrases": [
                        "ethical drug",
                        "ethical preparation"
                    ],
                    "traits": [
                        {
                            "trait_type": "regional",
                            "comment": "technical or dated in some regions"
                        }
                    ],
                    "target_lang_definitions": {
                        "ru": "Отпускаемый только по рецепту врача (о лекарствах)."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "рецептурный",
                                "target_lang_sense_clarification": "медицинский термин"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "4a5dbb14-7772-3d5c-84f1-74914116c366",
