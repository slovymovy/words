                    "sense_id": "6c254fab-e542-33ac-8b43-53eafb73bc92",
                    "sense_definition": "W sposób właściwy, odpowiedni do okoliczności, rangi lub zasług.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "properly",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Miejmy nadzieję, że nasz zespół będzie nas <godnie> reprezentował za granicą.",
                            "target_lang_translations": {
                                "ru": "Будем надеяться, что наша команда <достойно> представит нас за границей."
                            }
                        },
                        {
                            "text": "Wszyscy chcemy <godnie> uczcić pamięć bohaterów narodowych.",
                            "target_lang_translations": {
                                "ru": "Мы все хотим <достойно> почтить память национальных героев."
                            }
                        }
                    ],
                    "common_phrases": [
                        "godnie reprezentować",
                        "godnie uczcić",
                        "godnie zastąpić",
                        "godnie wyglądać"
                    ],
                    "target_lang_definitions": {
                        "ru": "Должным образом, соответственно обстоятельствам, рангу или заслугам."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "достойно",
                                "target_lang_sense_clarification": "как подобает, заслуженно"
