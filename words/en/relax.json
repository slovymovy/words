{
    "word_family": [
        "relaxation",
        "relaxant"
    ],
    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "9fcdf417-e9c6-3d74-82e7-32212f6ab5d9",
                    "sense_definition": "To rest and become calm, often to stop worrying or working.",
                    "learner_level": "A1",
                    "frequency": "High",
                    "semantic_group_id": "mental_state",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "I like to <w>relax</w> with a good book in the evening."
                        },
                        {
                            "text": "You should sit down, <w>relax</w>, and tell me what happened."
                        }
                    ],
                    "synonyms": [
                        "chill out",
                        "unwind"
                    ],
                    "antonyms": [
                        "stress"
                    ],
                    "common_phrases": [
                        "sit back and relax",
                        "time to relax",
                        "try to relax"
                    ]
                },
                {
                    "sense_id": "12cadd28-36fd-3251-875d-b941a5c96fcc",
                    "sense_definition": "To make someone or something calmer and less worried.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "mental_state",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Listening to soft music helps to <w>relax</w> my mind."
                        },
                        {
                            "text": "A warm bath will <w>relax</w> you after a long day."
                        }
                    ],
                    "antonyms": [
                        "stress",
                        "excite"
                    ],
                    "common_phrases": [
                        "relax the mind",
                        "help to relax"
                    ]
                },
                {
                    "sense_id": "bcadd6c3-8ceb-36c6-896a-ccb379a2ca2a",
                    "sense_definition": "To make a part of the body or a physical object less tight or stiff.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "physical_loosen",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The doctor told him to <w>relax</w> his arm muscles completely."
                        },
                        {
                            "text": "You need to <w>relax</w> your grip on the steering wheel."
                        }
                    ],
                    "common_phrases": [
                        "relax your muscles",
                        "relax the grip"
                    ]
                },
                {
                    "sense_id": "918aabfd-4622-3a96-b87e-9bbc1b749325",
                    "sense_definition": "To make a rule, law, or control less strict.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "abstract_lenient",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The government decided to <w>relax</w> the travel restrictions for tourists."
                        },
                        {
                            "text": "The school refused to <w>relax</w> its strict dress code policy."
                        }
                    ],
                    "common_phrases": [
                        "relax the rules",
                        "relax restrictions"
                    ]
                }
            ]
        }
    ]
}