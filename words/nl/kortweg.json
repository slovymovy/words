            "pos": "adverb",
            "senses": [
                {
                    "sense_id": "5d5c9518-3ad4-3cef-b095-46cfa452982c",
                    "sense_definition": "Om het kort te zeggen; in het kort (vaak gebruikt bij het introduceren van een afkorting of kortere naam).",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "briefly",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "De 'Vereniging van Eigenaren' wordt <w>kortweg</w> de VvE genoemd.",
                            "target_lang_translations": {
                                "en": "The 'Vereniging van Eigenaren' is called the VvE <w>for short</w>."
                            }
                        },
                        {
                            "text": "Hij heet eigenlijk Alexander, maar we noemen hem <w>kortweg</w> Alex.",
                            "target_lang_translations": {
                                "en": "His name is actually Alexander, but we call him Alex <w>for short</w>."
                            }
                        }
                    ],
                    "synonyms": [
                        "kortom",
                        "simpelweg"
                    ],
                    "common_phrases": [
                        "of kortweg",
                        "kortweg gezegd"
                    ],
                    "target_lang_definitions": {
                        "en": "To put it briefly; in short (often used when introducing an abbreviation or shorter name)."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "for short",
                                "target_lang_sense_clarification": "used when shortening names or titles"
                            },
                            {
                                "target_lang_word": "simply",
                                "target_lang_sense_clarification": "used to indicate a simpler name or description"
                            },
                            {
                                "target_lang_word": "briefly",
                                "target_lang_sense_clarification": "in a few words"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "cfc90ef3-8cfd-3d19-8dc6-dfaf1efadac4",
                    "sense_definition": "Op een zeer korte manier, zonder veel woorden te gebruiken en zonder omhaal (soms met een botte ondertoon).",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "curtly",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "De manager deelde <w>kortweg</w> mee dat het project was geannuleerd.",
                            "target_lang_translations": {
                                "en": "The manager <w>curtly</w> announced that the project had been cancelled."
                            }
                        },
                        {
                            "text": "Toen ik om uitleg vroeg, zei hij <w>kortweg</w> 'nee' en liep weg.",
                            "target_lang_translations": {
                                "en": "When I asked for an explanation, he <w>bluntly</w> said 'no' and walked away."
                            }
                        }
                    ],
                    "synonyms": [
                        "botweg",
                        "kortaf",
                        "plompverloren"
                    ],
                    "antonyms": [
                        "uitgebreid",
                        "omstandig"
                    ],
                    "common_phrases": [
                        "kortweg nee zeggen",
                        "iemand kortweg afwijzen"
                    ],
                    "target_lang_definitions": {
                        "en": "In a very short manner, without using many words and without fuss (sometimes with a blunt undertone)."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "curtly",
                                "target_lang_sense_clarification": "rudely brief"
                            },
                            {
                                "target_lang_word": "bluntly",
                                "target_lang_sense_clarification": "direct and without politeness"
                            },
                            {
                                "target_lang_word": "flatly",
                                "target_lang_sense_clarification": "showing little interest or emotion; absolute"
                            }
                        ]
                    }
                }
            ]
        }
    ]
