    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "ead2d911-fd03-3a13-8481-5d56d34d446b",
                    "sense_definition": "The basic, central, or essential point or feature of something.",
                    "learner_level": "C1",
                    "frequency": "High",
                    "semantic_group_id": "essential_part",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The <w>crux</w> of the matter is that we simply do not have enough money to continue.",
                            "target_lang_translations": {
                                "ru": "<w>Суть</w> дела в том, что у нас просто недостаточно денег для продолжения."
                            }
                        },
                        {
                            "text": "She argued that the <w>crux</w> of the problem lay in poor communication between departments.",
                            "target_lang_translations": {
                                "ru": "Она утверждала, что <w>корень</w> проблемы кроется в плохой коммуникации между отделами."
                            }
                        }
                    ],
                    "synonyms": [
                        "core",
                        "essence",
                        "gist",
                        "heart",
                        "kernel",
                        "nub",
                        "pith",
                        "substance"
                    ],
                    "common_phrases": [
                        "crux of the matter",
                        "crux of the problem",
                        "crux of the argument",
                        "crux of the issue"
                    ],
                    "target_lang_definitions": {
