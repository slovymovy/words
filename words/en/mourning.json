            "pos": "noun",
            "senses": [
                {
                    "sense_id": "47297698-8f01-3ac0-b427-c985b0bdf51a",
                    "sense_definition": "The expression of deep sorrow or grief, typically for someone who has died.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "grief_concept",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The entire nation was in <w>mourning</w> after the beloved leader passed away.",
                            "target_lang_translations": {
                                "ru": "Вся страна была в <w>трауре</w> после кончины любимого лидера."
                            }
                        },
                        {
                            "text": "She observed a strict period of <w>mourning</w> following her husband's death.",
                            "target_lang_translations": {
                                "ru": "Она соблюдала строгий <w>траур</w> после смерти мужа."
                            }
                        }
                    ],
                    "synonyms": [
                        "grief",
                        "lamentation",
                        "sorrow",
                        "bereavement"
                    ],
                    "antonyms": [
                        "rejoicing",
                        "celebration"
                    ],
                    "common_phrases": [
                        "in mourning",
                        "national mourning",
                        "day of mourning",
                        "period of mourning"
                    ],
                    "target_lang_definitions": {
