            "senses": [
                {
                    "sense_id": "638a697d-a8e7-3266-8bd1-7ffc9f3cc32e",
                    "sense_definition": "To inflict punishment or harm in return for a specific injury or wrong done.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "action_transitive",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "He promised to <w>revenge</w> the death of his father no matter how long it took."
                        },
                        {
                            "text": "The army marched south to <w>revenge</w> the attack on their border towns."
                        }
                    ],
                    "synonyms": [
                        "avenge"
                    ],
                    "antonyms": [
                        "forgive"
                    ],
                    "common_phrases": [
