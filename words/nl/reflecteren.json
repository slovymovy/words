{
    "word_family": [
        "reflectie",
        "reflector",
        "reflectief"
    ],
    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "3bb683a6-d190-3d3c-8cac-d3706c0bb8f0",
                    "sense_definition": "Licht, geluid, warmte of beelden terugkaatsen door een oppervlak.",
                    "learner_level": "B1",
                    "frequency": "Middle",
                    "semantic_group_id": "physical_reflection",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Het stille water van het meer <w>reflecteerde</w> de besneeuwde bergtoppen.",
                            "target_lang_translations": {
                                "ru": "Тихая вода озера <w>отражала</w> заснеженные горные вершины.",
                                "en": "The still water of the lake <w>reflected</w> the snowy mountain peaks."
                            }
                        },
                        {
                            "text": "Witte muren <w>reflecteren</w> het licht, waardoor de kamer groter lijkt.",
                            "target_lang_translations": {
                                "ru": "Белые стены <w>отражают</w> свет, из-за чего комната кажется больше.",
                                "en": "White walls <w>reflect</w> light, making the room appear larger."
                            }
                        }
                    ],
                    "synonyms": [
                        "weerkaatsen",
                        "spiegelen",
                        "terugkaatsen"
                    ],
                    "antonyms": [
                        "absorberen",
                        "opnemen"
                    ],
                    "common_phrases": [
                        "licht reflecteren",
                        "zonlicht reflecteren",
                        "warmte reflecteren"
                    ],
                    "target_lang_definitions": {
                        "ru": "Отражать свет, звук, тепло или изображения от поверхности.",
                        "en": "To bounce back light, sound, heat, or images from a surface."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "отражать",
                                "target_lang_sense_clarification": "свет, звук, изображение"
                            },
                            {
                                "target_lang_word": "отражаться",
                                "target_lang_sense_clarification": "быть видимым в зеркальной поверхности"
                            }
                        ],
                        "en": [
                            {
                                "target_lang_word": "reflect",
                                "target_lang_sense_clarification": "light, sound, or images"
                            },
                            {
                                "target_lang_word": "mirror",
                                "target_lang_sense_clarification": "to show an image of"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "6b24bcc7-6bf0-3863-8da8-70af515184bd",
                    "sense_definition": "Een weergave zijn van iets; laten zien hoe een situatie, gevoel of eigenschap is.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "metaphorical_reflection",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "De uitslag van de verkiezingen <w>reflecteert</w> de ontevredenheid van het volk.",
                            "target_lang_translations": {
                                "ru": "Результат выборов <w>отражает</w> недовольство народа.",
                                "en": "The election result <w>reflects</w> the people's dissatisfaction."
                            }
                        },
                        {
                            "text": "Zijn kunstwerken <w>reflecteren</w> vaak zijn sombere stemming.",
                            "target_lang_translations": {
                                "ru": "Его произведения искусства часто <w>отражают</w> его мрачное настроение.",
                                "en": "His artworks often <w>reflect</w> his gloomy mood."
                            }
                        }
                    ],
                    "synonyms": [
                        "weerspiegelen",
                        "tonen",
                        "uitdrukken"
                    ],
                    "antonyms": [
                        "verhullen",
                        "maskeren"
                    ],
                    "common_phrases": [
                        "de werkelijkheid reflecteren",
                        "de maatschappij reflecteren"
                    ],
                    "target_lang_definitions": {
                        "ru": "Быть отображением чего-либо; показывать состояние ситуации, чувства или свойства.",
                        "en": "To be a representation of something; to show the nature of a situation, feeling, or quality."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "отражать",
                                "target_lang_sense_clarification": "показывать, свидетельствовать о чем-то"
                            },
                            {
                                "target_lang_word": "отображать",
                                "target_lang_sense_clarification": "воспроизводить, выражать"
                            }
                        ],
                        "en": [
                            {
                                "target_lang_word": "reflect",
                                "target_lang_sense_clarification": "to show or express"
                            },
                            {
                                "target_lang_word": "mirror",
                                "target_lang_sense_clarification": "to represent faithfully"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "d8d56c1e-f76c-38d9-902c-c13636cf6a4c",
                    "sense_definition": "Bewust en kritisch nadenken over eigen ervaringen, gedrag of gebeurtenissen om ervan te leren.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "mental_reflection",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Na het project moesten de studenten <w>reflecteren</w> op hun samenwerking.",
                            "target_lang_translations": {
                                "ru": "После проекта студенты должны были <w>проанализировать</w> свою совместную работу.",
                                "en": "After the project, the students had to <w>reflect</w> on their collaboration."
                            }
                        },
                        {
                            "text": "Het is goed om af en toe te <w>reflecteren</w> over de keuzes die je hebt gemaakt.",
                            "target_lang_translations": {
                                "ru": "Полезно время от времени <w>размышлять</w> о сделанном выборе.",
                                "en": "It is good to occasionally <w>reflect</w> on the choices you have made."
                            }
                        }
                    ],
                    "synonyms": [
                        "overdenken",
                        "bezinnen",
                        "beschouwen"
                    ],
                    "common_phrases": [
                        "reflecteren op jezelf",
                        "reflecteren op gedrag",
                        "kritisch reflecteren"
                    ],
                    "target_lang_definitions": {
                        "ru": "Сознательно и критически обдумывать собственный опыт, поведение или события.",
                        "en": "To think consciously and critically about one's own experiences, behavior, or events."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "размышлять",
                                "target_lang_sense_clarification": "обдумывать, анализировать"
                            },
                            {
                                "target_lang_word": "рефлексировать",
                                "target_lang_sense_clarification": "анализировать свои чувства и поступки"
                            }
                        ],
                        "en": [
                            {
                                "target_lang_word": "reflect",
                                "target_lang_sense_clarification": "to think deeply or critically"
                            },
                            {
                                "target_lang_word": "contemplate",
                                "target_lang_sense_clarification": "to think about for a long time"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}