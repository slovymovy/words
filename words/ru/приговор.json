    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "1524ed2e-5edf-395b-b208-9d9a6329be0a",
                    "sense_definition": "Официальное решение суда по уголовному или гражданскому делу, определяющее виновность или невиновность подсудимого и меру наказания.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "judgment_decision",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Судья зачитал окончательный <w>приговор</w> в полной тишине зала.",
                            "target_lang_translations": {
                                "en": "The judge read the final <w>sentence</w> in the complete silence of the courtroom."
                            }
                        },
                        {
                            "text": "Адвокат надеется, что суд вынесет оправдательный <w>приговор</w> его клиенту.",
                            "target_lang_translations": {
                                "en": "The lawyer hopes that the court will deliver a <w>verdict</w> of not guilty for his client."
                            }
                        }
                    ],
                    "synonyms": [
                        "вердикт"
                    ],
                    "common_phrases": [
                        "вынести приговор",
                        "смертный приговор",
                        "обвинительный приговор",
                        "оправдательный приговор",
                        "обжаловать приговор"
                    ],
                    "target_lang_definitions": {
                        "en": "An official court decision in a criminal or civil case, determining the guilt or innocence of the defendant and the punishment."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "sentence",
                                "target_lang_sense_clarification": "punishment imposed by a court"
                            },
                            {
                                "target_lang_word": "verdict",
                                "target_lang_sense_clarification": "decision on guilt or innocence"
                            },
                            {
                                "target_lang_word": "judgment",
                                "target_lang_sense_clarification": "formal legal decision"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "d2b37d59-097b-3e21-8a0a-19b6ce1781ae",
                    "sense_definition": "Мнение или суждение о ком-либо или чём-либо, обычно суровое, окончательное и не подлежащее пересмотру (переносное значение).",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "judgment_decision",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Диагноз врача прозвучал для пациента как страшный <w>приговор</w>.",
                            "target_lang_translations": {
                                "en": "The doctor's diagnosis sounded like a terrible <w>sentence</w> to the patient."
                            }
                        },
                        {
                            "text": "Своим поведением он сам подписал себе суровый <w>приговор</w> в глазах общества.",
                            "target_lang_translations": {
                                "en": "With his behavior, he signed his own harsh <w>sentence</w> in the eyes of society."
                            }
                        }
                    ],
                    "synonyms": [
                        "осуждение"
                    ],
                    "common_phrases": [
                        "как приговор",
                        "подписать себе приговор",
                        "суровый приговор"
                    ],
                    "target_lang_definitions": {
                        "en": "A harsh, final opinion or judgment about someone or something, often comparing a situation to a legal punishment (figurative)."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "sentence",
