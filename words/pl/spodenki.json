{
    "word_family": [
        "spodnie",
        "spodniowy"
    ],
    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "6e40a051-911d-3cd6-bb44-0ad597a99d07",
                    "sense_definition": "Krótkie spodnie, zazwyczaj sięgające do kolan lub krótsze, noszone w ciepłe dni lub podczas uprawiania sportu",
                    "learner_level": "A1",
                    "frequency": "High",
                    "semantic_group_id": "clothing_shorts",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Latem najwygodniej chodzić w przewiewnych <w>spodenkach</w>.",
                            "target_lang_translations": {
                                "ru": "Летом удобнее всего ходить в легких <w>шортах</w>."
                            }
                        },
                        {
                            "text": "Muszę kupić nowe <w>spodenki</w> na wyjazd nad morze.",
                            "target_lang_translations": {
                                "ru": "Мне нужно купить новые <w>шорты</w> для поездки на море."
                            }
                        }
                    ],
                    "synonyms": [
                        "szorty"
                    ],
                    "common_phrases": [
                        "krótkie spodenki",
                        "spodenki kąpielowe",
                        "spodenki sportowe",
                        "spodenki dżinsowe"
                    ],
                    "target_lang_definitions": {
                        "ru": "Короткие штаны, обычно до колен или короче, которые носят в теплую погоду или во время занятий спортом"
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "шорты",
                                "target_lang_sense_clarification": "одежда"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "1c2fb185-3605-3cbf-8934-b9b00240d6dc",
                    "sense_definition": "Zdrobnienie od słowa <w>spodnie</w>; spodnie małego rozmiaru, zazwyczaj przeznaczone dla dzieci",
                    "learner_level": "B1",
                    "frequency": "Middle",
                    "semantic_group_id": "clothing_diminutive",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Mama założyła dziecku czyste <w>spodenki</w> do przedszkola.",
                            "target_lang_translations": {
                                "ru": "Мама надела на ребенка чистые <w>штанишки</w> в детский сад."
                            }
                        },
                        {
                            "text": "Te małe <w>spodenki</w> są już na niego za ciasne.",
                            "target_lang_translations": {
                                "ru": "Эти маленькие <w>штанишки</w> ему уже тесны."
                            }
                        }
                    ],
                    "common_phrases": [
                        "dziecięce spodenki",
                        "małe spodenki"
                    ],
                    "traits": [
                        {
                            "trait_type": "form",
                            "comment": "diminutive"
                        }
                    ],
                    "target_lang_definitions": {
                        "ru": "Уменьшительная форма от слова «брюки»; штаны маленького размера, обычно предназначенные для детей"
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "штанишки",
                                "target_lang_sense_clarification": "детская одежда"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "f63d16dc-6865-30a1-8d46-449672ff7802",
                    "sense_definition": "Szerokie, bufiaste spodnie sięgające za kolana, często ściągnięte na dole",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "clothing_historical",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Aktor wystąpił w staromodnych <w>spodenkach</w> zapinanych pod kolanem.",
                            "target_lang_translations": {
                                "ru": "Актер выступил в старомодных <w>бриджах</w>, застегивающихся под коленом."
                            }
                        },
                        {
                            "text": "Do stroju historycznego potrzebne są bufiaste <w>spodenki</w> typu pumpy.",
                            "target_lang_translations": {
                                "ru": "Для исторического костюма нужны пышные <w>панталоны</w> типа шаровар."
                            }
                        }
                    ],
                    "synonyms": [
                        "pumpy"
                    ],
                    "common_phrases": [
                        "bufiaste spodenki"
                    ],
                    "target_lang_definitions": {
                        "ru": "Широкие, пышные штаны длиной ниже колен, часто стянутые внизу"
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "панталоны",
                                "target_lang_sense_clarification": "исторический костюм"
                            },
                            {
                                "target_lang_word": "бриджи",
                                "target_lang_sense_clarification": "укороченные брюки"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}