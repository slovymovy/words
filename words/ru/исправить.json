                            },
                            {
                                "target_lang_word": "make right",
                                "target_lang_sense_clarification": "to resolve a bad situation or relationship"
                            },
                            {
                                "target_lang_word": "redeem",
                                "target_lang_sense_clarification": "to make up for faults or bad aspects"
                            }
                        ]
                    }
                }
            ]
        }
