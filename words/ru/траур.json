    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "de8a5545-5a19-3d58-bb99-cb71b2ec017b",
                    "sense_definition": "Состояние глубокой скорби, вызванное смертью кого-либо или общественным бедствием.",
                    "learner_level": "B1",
                    "frequency": "Middle",
                    "semantic_group_id": "mourning_concept",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Из-за страшной аварии в стране объявили национальный <w>траур</w>.",
                            "target_lang_translations": {
                                "en": "Due to the terrible accident, national <w>mourning</w> was declared in the country."
                            }
                        },
                        {
                            "text": "Семья всё ещё держит <w>траур</w> по погибшему отцу.",
                            "target_lang_translations": {
                                "en": "The family is still in <w>mourning</w> for their deceased father."
                            }
                        }
                    ],
                    "synonyms": [
                        "скорбь"
                    ],
                    "antonyms": [
                        "праздник",
                        "веселье"
                    ],
                    "common_phrases": [
                        "национальный траур",
                        "объявить траур",
                        "день траура",
                        "быть в трауре"
                    ],
                    "target_lang_definitions": {
                        "en": "A state of deep sorrow or a period of official grief caused by a death or a public tragedy."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "mourning",
                                "target_lang_sense_clarification": "state or period of grief"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "6136cc93-1bb1-37d2-b529-cf5a400d2bfc",
                    "sense_definition": "Одежда определённого цвета (обычно чёрного) или особые знаки, которые носят как символ скорби.",
                    "learner_level": "B2",
                    "frequency": "Low",
                    "semantic_group_id": "mourning_concept",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Вдова носила глубокий <w>траур</w> целый год после похорон.",
                            "target_lang_translations": {
                                "en": "The widow wore deep <w>mourning</w> for a whole year after the funeral."
                            }
                        },
                        {
                            "text": "Гости пришли на церемонию, одетые в <w>траур</w>.",
                            "target_lang_translations": {
                                "en": "The guests arrived at the ceremony dressed in <w>mourning</w>."
                            }
                        }
                    ],
                    "common_phrases": [
                        "носить траур",
                        "одеться в траур",
                        "снять траур",
                        "глубокий траур"
                    ],
                    "target_lang_definitions": {
                        "en": "Clothing of a specific color (usually black) worn as a symbol of grief."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "mourning",
                                "target_lang_sense_clarification": "clothes worn to show grief"
                            }
                        ]
                    }
                }
            ]
        }
    ]
