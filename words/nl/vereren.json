    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "76493d03-29da-383f-af0b-cab31b0f1a6b",
                    "sense_definition": "Als heilig beschouwen en met diep respect of devotie behandelen.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "worship",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Zij <w>vereren</w> de geesten van hun voorouders tijdens het festival.",
                            "target_lang_translations": {
                                "en": "They <w>venerate</w> the spirits of their ancestors during the festival."
                            }
                        },
                        {
                            "text": "In de oude tempel <w>vereren</w> de monniken nog steeds dezelfde goden.",
                            "target_lang_translations": {
                                "en": "In the old temple, the monks still <w>worship</w> the same gods."
                            }
                        }
                    ],
                    "synonyms": [
                        "aanbidden",
                        "adoreren"
                    ],
                    "antonyms": [
                        "verachten",
                        "minachten"
                    ],
                    "common_phrases": [
                        "goden vereren",
                        "heiligen vereren",
                        "voorouders vereren"
                    ],
                    "target_lang_definitions": {
                        "en": "To regard as holy and treat with deep respect or devotion."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "worship",
                                "target_lang_sense_clarification": "religious devotion to a deity"
                            },
                            {
                                "target_lang_word": "venerate",
                                "target_lang_sense_clarification": "deep respect, often for saints or ancestors"
                            },
                            {
                                "target_lang_word": "revere",
                                "target_lang_sense_clarification": "to feel deep respect or awe"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "67144bb6-9549-3c00-ba7b-c0d3622fd39a",
                    "sense_definition": "Iemand mateloos bewonderen en op handen dragen.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "worship",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "De jonge fans <w>vereren</w> de zanger alsof hij een god is.",
                            "target_lang_translations": {
                                "en": "The young fans <w>worship</w> the singer as if he were a god."
                            }
                        },
                        {
                            "text": "Hij <w>vereerde</w> zijn leraar om diens enorme wijsheid en geduld.",
                            "target_lang_translations": {
                                "en": "He <w>revered</w> his teacher for his enormous wisdom and patience."
                            }
                        }
                    ],
                    "synonyms": [
                        "verafgoden",
                        "adoreren"
                    ],
                    "antonyms": [
                        "verachten"
                    ],
                    "common_phrases": [
                        "iemand vereren"
                    ],
                    "target_lang_definitions": {
                        "en": "To admire someone immensely and put them on a pedestal."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "worship",
                                "target_lang_sense_clarification": "extreme admiration"
                            },
                            {
                                "target_lang_word": "idolize",
                                "target_lang_sense_clarification": "to treat like an idol"
                            },
                            {
                                "target_lang_word": "adore",
                                "target_lang_sense_clarification": "to love and admire deeply"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "5efd6985-1127-3440-a92a-7cefe33b84a8",
                    "sense_definition": "Iemand eer aandoen of verblijden, vaak door aanwezigheid of een bezoek.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Wilt u ons vanavond met uw aanwezigheid <w>vereren</w>?",
                            "target_lang_translations": {
                                "en": "Would you <w>honor</w> us with your presence tonight?"
                            }
                        },
                        {
                            "text": "De koning zal onze stad binnenkort met een bezoek <w>vereren</w>.",
                            "target_lang_translations": {
                                "en": "The king will soon <w>honor</w> our city with a visit."
                            }
                        }
                    ],
                    "synonyms": [
                        "eren"
                    ],
                    "common_phrases": [
                        "met een bezoek vereren",
                        "met aanwezigheid vereren"
                    ],
                    "target_lang_definitions": {
                        "en": "To do someone honor, often by one's presence or a visit."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "honor",
                                "target_lang_sense_clarification": "formal; to confer distinction upon"
                            },
                            {
                                "target_lang_word": "grace",
                                "target_lang_sense_clarification": "to favor with one's presence"
                            }
                        ]
                    }
                }
            ]
        }
    ]
