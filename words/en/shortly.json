                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "He answered <w>shortly</w> when asked why he was late for the meeting.",
                            "target_lang_translations": {
                                "ru": "Он ответил <w>резко</w>, когда его спросили, почему он опоздал на встречу."
                            }
