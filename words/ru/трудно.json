                        "просто",
                        "нетрудно"
                    ],
                    "common_phrases": [
                        "трудно сказать",
                        "мне трудно",
                        "трудно поверить",
                        "трудно представить"
                    ],
                    "target_lang_definitions": {
                        "en": "Evaluation of a situation, action, or state as complex or requiring great effort."
                    },
