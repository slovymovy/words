    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "b45e9a78-f2c1-3a98-ad1e-9647915eae05",
                    "sense_definition": "Een vaststaande mening of een sterk geloof dat iets waar is.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "belief",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Ik ben tot de <w>overtuiging</w> gekomen dat dit de juiste beslissing is.",
                            "target_lang_translations": {
                                "en": "I have come to the <w>conviction</w> that this is the right decision.",
                                "ru": "Я пришел к <w>убеждению</w>, что это правильное решение."
                            }
                        },
                        {
                            "text": "Het is mijn persoonlijke <w>overtuiging</w> dat iedereen een tweede kans verdient.",
                            "target_lang_translations": {
                                "en": "It is my personal <w>conviction</w> that everyone deserves a second chance.",
                                "ru": "Это мое личное <w>убеждение</w>, что каждый заслуживает второго шанса."
                            }
                        }
                    ],
                    "synonyms": [
                        "mening",
                        "opvatting",
                        "geloof",
                        "zienswijze",
                        "standpunt"
                    ],
                    "antonyms": [
                        "twijfel"
                    ],
                    "common_phrases": [
                        "tot de overtuiging komen",
                        "politieke overtuiging",
                        "religieuze overtuiging",
                        "uit volle overtuiging"
                    ],
                    "target_lang_definitions": {
                        "en": "A fixed opinion or strong belief that something is true.",
                        "ru": "Твердое мнение или сильная вера в истинность чего-либо."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "conviction",
                                "target_lang_sense_clarification": "firmly held belief"
                            },
                            {
                                "target_lang_word": "belief",
                                "target_lang_sense_clarification": "acceptance that something is true"
                            }
                        ],
                        "ru": [
                            {
                                "target_lang_word": "убеждение",
                                "target_lang_sense_clarification": "твердое мнение"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "8e6409a2-0f8d-3641-b6ed-4c475c6edb17",
                    "sense_definition": "De kracht, zekerheid of stelligheid waarmee iemand spreekt of handelt.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "certainty",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "De advocaat sprak met zoveel <w>overtuiging</w> dat de jury hem geloofde.",
                            "target_lang_translations": {
                                "en": "The lawyer spoke with so much <w>conviction</w> that the jury believed him.",
                                "ru": "Адвокат говорил с такой <w>убежденностью</w>, что присяжные ему поверили."
                            }
                        },
                        {
                            "text": "Er klonk weinig <w>overtuiging</w> door in zijn stem toen hij het antwoord gaf.",
                            "target_lang_translations": {
                                "en": "There was little <w>conviction</w> in his voice when he gave the answer.",
                                "ru": "В его голосе звучало мало <w>уверенности</w>, когда он давал ответ."
                            }
                        }
                    ],
                    "synonyms": [
                        "stelligheid",
                        "zekerheid",
                        "vastberadenheid"
                    ],
                    "antonyms": [
                        "aarzeling",
                        "onzekerheid"
                    ],
                    "common_phrases": [
                        "met overtuiging",
                        "gebrek aan overtuiging"
                    ],
                    "target_lang_definitions": {
                        "en": "The power, certainty, or firmness with which someone speaks or acts.",
                        "ru": "Сила, уверенность или твердость, с которой кто-то говорит или действует."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "conviction",
