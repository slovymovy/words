    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "d208dd4a-f6cf-3448-bdc5-0de6cd14f34e",
                    "sense_definition": "Серьёзное разногласие, нарушение единства в группе, партии или обществе.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "disagreement",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "В правящей партии произошёл <w>раскол</w> из-за нового закона.",
                            "target_lang_translations": {
                                "en": "There was a <w>split</w> in the ruling party due to the new law."
                            }
                        },
                        {
                            "text": "Этот вопрос вызвал глубокий <w>раскол</w> в обществе.",
                            "target_lang_translations": {
                                "en": "This issue caused a deep <w>rift</w> in society."
                            }
                        }
                    ],
                    "synonyms": [
                        "разлад",
                        "разногласие",
                        "распря"
                    ],
                    "antonyms": [
                        "единство",
                        "сплочённость",
                        "единение"
                    ],
                    "common_phrases": [
                        "раскол в обществе",
                        "произошёл раскол",
                        "глубокий раскол",
                        "предотвратить раскол"
                    ],
                    "target_lang_definitions": {
                        "en": "A serious disagreement or breach of unity within a group, party, or society."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "split",
                                "target_lang_sense_clarification": "a division into factions or groups"
                            },
                            {
                                "target_lang_word": "rift",
                                "target_lang_sense_clarification": "a serious break in friendly relations"
                            },
                            {
                                "target_lang_word": "division",
                                "target_lang_sense_clarification": "disagreement that separates people"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "38a2e7b6-114b-3a8e-bacd-84a501d5e1db",
                    "sense_definition": "Место, где предмет треснул или разделился на части; большая трещина.",
                    "learner_level": "B2",
                    "frequency": "Low",
                    "semantic_group_id": "physical_split",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Туристы с опаской смотрели на глубокий <w>раскол</w> во льду.",
                            "target_lang_translations": {
                                "en": "The tourists looked warily at the deep <w>fissure</w> in the ice."
                            }
                        },
                        {
                            "text": "Через <w>раскол</w> в старой стене был виден солнечный свет.",
                            "target_lang_translations": {
                                "en": "Sunlight was visible through the <w>crack</w> in the old wall."
                            }
                        }
                    ],
                    "synonyms": [
                        "трещина",
                        "разлом",
                        "щель"
                    ],
                    "common_phrases": [
                        "раскол льда",
                        "раскол в скале"
                    ],
                    "target_lang_definitions": {
                        "en": "A place where an object has cracked or separated into parts; a large crack."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "crack",
                                "target_lang_sense_clarification": "a line on the surface of something along which it has split"
                            },
                            {
                                "target_lang_word": "fissure",
                                "target_lang_sense_clarification": "a long, deep crack in rock or earth"
                            },
                            {
                                "target_lang_word": "split",
                                "target_lang_sense_clarification": "a long crack or tear"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "bf77ceec-a15f-3b2d-a241-64246e6d35ab",
                    "sense_definition": "Отделение части верующих от основной церкви из-за религиозных или обрядовых разногласий.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "religious_schism",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Великий <w>раскол</w> разделил христианство на западную и восточную ветви.",
                            "target_lang_translations": {
                                "en": "The Great <w>Schism</w> divided Christianity into Western and Eastern branches."
                            }
                        },
                        {
                            "text": "Епископ старался всеми силами избежать церковного <w>раскола</w>.",
                            "target_lang_translations": {
                                "en": "The bishop tried with all his might to avoid a church <w>schism</w>."
                            }
                        }
                    ],
                    "synonyms": [
                        "схизма"
                    ],
                    "common_phrases": [
                        "церковный раскол",
                        "учинить раскол"
                    ],
                    "target_lang_definitions": {
                        "en": "The separation of a group of believers from the main church due to religious or ritual disagreements."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "schism",
                                "target_lang_sense_clarification": "formal separation of a church into two churches"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "cc283c4c-cc41-3481-90bd-cdb689c3ac37",
                    "sense_definition": "Историческое религиозно-общественное движение в России XVII века, возникшее как протест против церковных реформ патриарха Никона.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "religious_schism",
                    "name_type": "event_name",
                    "examples": [
                        {
                            "text": "Темой лекции был церковный <w>раскол</w> семнадцатого века.",
                            "target_lang_translations": {
                                "en": "The topic of the lecture was the church <w>schism</w> of the seventeenth century."
                            }
                        },
                        {
                            "text": "После <w>раскола</w> появилось движение старообрядцев.",
                            "target_lang_translations": {
                                "en": "After the <w>Schism</w>, the Old Believer movement appeared."
                            }
                        }
                    ],
                    "common_phrases": [
                        "эпоха раскола",
                        "история раскола"
                    ],
                    "traits": [
                        {
                            "trait_type": "regional",
                            "comment": "Russia"
                        },
                        {
                            "trait_type": "dated",
                            "comment": "historical event"
                        }
                    ],
                    "target_lang_definitions": {
                        "en": "A historical religious and social movement in 17th-century Russia arising as a protest against the church reforms of Patriarch Nikon."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "Schism",
                                "target_lang_sense_clarification": "referring to the specific historical event"
                            },
                            {
                                "target_lang_word": "Raskol",
                                "target_lang_sense_clarification": "transliterated term for the Russian Schism"
                            }
                        ]
                    }
                }
            ]
        }
    ]
