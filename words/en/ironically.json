{
    "word_family": [
        "irony",
        "ironic",
        "ironical"
    ],
    "entries": [
        {
            "pos": "adverb",
            "senses": [
                {
                    "sense_id": "01693bf5-341c-371e-9ed5-9bcbe21c7ab0",
                    "sense_definition": "Used to draw attention to an ironic aspect of a situation being described.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "<w>Ironically</w>, the fire station burned down because the alarm system failed.",
                            "target_lang_translations": {
                                "ru": "<w>По иронии судьбы</w>, пожарная станция сгорела, потому что не сработала сигнализация."
                            }
                        },
                        {
                            "text": "<w>Ironically</w> enough, the doctor fell ill on the day of the health conference.",
                            "target_lang_translations": {
                                "ru": "<w>По иронии судьбы</w>, врач заболел именно в день медицинской конференции."
                            }
                        }
                    ],
                    "synonyms": [
                        "paradoxically",
                        "unexpectedly"
                    ],
                    "antonyms": [
                        "predictably",
                        "expectedly"
                    ],
                    "common_phrases": [
                        "ironically enough",
                        "quite ironically"
                    ],
                    "target_lang_definitions": {
                        "ru": "Используется для привлечения внимания к ироничности или парадоксальности описываемой ситуации."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "по иронии судьбы",
                                "target_lang_sense_clarification": "вводная фраза о стечении обстоятельств"
                            },
                            {
                                "target_lang_word": "иронично",
                                "target_lang_sense_clarification": "оценка ситуации"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "cea202cf-9c3c-3ecc-ac51-30ea0cdc0ea8",
                    "sense_definition": "In an ironic manner; in a way displaying irony.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "He smiled <w>ironically</w> when I asked if he enjoyed the long wait in the rain.",
                            "target_lang_translations": {
                                "ru": "Он <w>иронично</w> улыбнулся, когда я спросил, понравилось ли ему долго ждать под дождем."
                            }
                        },
                        {
                            "text": "The author <w>ironically</w> refers to the chaotic event as a peaceful gathering.",
                            "target_lang_translations": {
                                "ru": "Автор <w>иронически</w> называет это хаотичное событие мирным собранием."
                            }
                        }
                    ],
                    "synonyms": [
                        "sarcastically",
                        "sardonically"
                    ],
                    "antonyms": [
                        "sincerely",
                        "earnestly"
                    ],
                    "common_phrases": [
                        "smile ironically",
                        "speak ironically",
                        "say ironically"
                    ],
                    "target_lang_definitions": {
                        "ru": "С иронией; образом, выражающим насмешку или скрытый смысл."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "иронично",
                                "target_lang_sense_clarification": "с насмешкой"
                            },
                            {
                                "target_lang_word": "иронически",
                                "target_lang_sense_clarification": "заключая в себе иронию"
                            },
                            {
                                "target_lang_word": "с иронией",
                                "target_lang_sense_clarification": "способ действия"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}