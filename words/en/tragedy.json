    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "7a4afa41-730f-3a2e-bc57-968ff9c1d424",
                    "sense_definition": "A disastrous event, especially one involving great loss of life or injury.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "event_disaster",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The car accident was a terrible <w>tragedy</w> for the whole family.",
                            "target_lang_translations": {
                                "ru": "Автомобильная авария стала ужасной <w>трагедией</w> для всей семьи."
                            }
                        },
                        {
                            "text": "<w>Tragedy</w> struck the small town when the flood destroyed many homes.",
                            "target_lang_translations": {
                                "ru": "На маленький город обрушилась <w>трагедия</w>, когда наводнение разрушило множество домов."
                            }
                        }
                    ],
                    "synonyms": [
                        "disaster",
                        "catastrophe",
                        "calamity"
                    ],
                    "common_phrases": [
                        "terrible tragedy",
                        "tragedy struck",
                        "great tragedy",
                        "personal tragedy"
                    ],
                    "target_lang_definitions": {
                        "ru": "Ужасное событие, часто связанное с гибелью людей или серьезными травмами."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "трагедия",
                                "target_lang_sense_clarification": "ужасное происшествие"
                            },
                            {
                                "target_lang_word": "несчастье",
                                "target_lang_sense_clarification": "горестное событие"
                            },
                            {
                                "target_lang_word": "беда",
                                "target_lang_sense_clarification": "тяжёлое событие"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "b69df3ef-fed0-37dc-abfd-7df7a91fe382",
                    "sense_definition": "The genre of dramatic works where the main character suffers extreme sorrow or ruin.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "literary_genre",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "She prefers watching a romantic comedy rather than a <w>tragedy</w>.",
                            "target_lang_translations": {
                                "ru": "Она предпочитает смотреть романтические комедии, а не <w>трагедии</w>."
                            }
                        },
                        {
                            "text": "Greek <w>tragedy</w> is famous for its emotional depth and serious themes.",
                            "target_lang_translations": {
                                "ru": "Греческая <w>трагедия</w> славится своей эмоциональной глубиной и серьезными темами."
                            }
                        }
                    ],
                    "antonyms": [
                        "comedy"
                    ],
                    "common_phrases": [
                        "Greek tragedy",
                        "classical tragedy"
                    ],
                    "target_lang_definitions": {
                        "ru": "Жанр драматических произведений, в которых главный герой страдает от глубокой скорби или погибает."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "трагедия",
                                "target_lang_sense_clarification": "жанр"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "d63a0dd6-01a0-36c2-bdf2-67c5034521f8",
                    "sense_definition": "A play or story in which the main character is brought to ruin or suffers extreme consequences.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "literary_genre",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Hamlet is a famous <w>tragedy</w> written by William Shakespeare.",
                            "target_lang_translations": {
                                "ru": "«Гамлет» — знаменитая <w>трагедия</w>, написанная Уильямом Шекспиром."
                            }
                        },
                        {
                            "text": "The hero dies at the end of the <w>tragedy</w> due to a fatal mistake.",
                            "target_lang_translations": {
                                "ru": "Герой умирает в конце <w>трагедии</w> из-за роковой ошибки."
                            }
                        }
                    ],
                    "antonyms": [
                        "comedy"
                    ],
                    "common_phrases": [
                        "Shakespearean tragedy"
                    ],
                    "target_lang_definitions": {
                        "ru": "Пьеса или история, в которой главный герой погибает или сталкивается с тяжелыми последствиями."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "трагедия",
                                "target_lang_sense_clarification": "пьеса"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}