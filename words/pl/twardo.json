                {
                    "sense_id": "f3f03f40-a899-32fe-abb7-6eed0df73bd2",
                    "sense_definition": "W sposób fizycznie odporny na nacisk lub odkształcenia; nie miękko.",
                    "learner_level": "A2",
                    "frequency": "High",
                    "semantic_group_id": "physical_hardness",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Samolot wylądował bardzo <w>twardo</w> na oblodzonym pasie startowym.",
                            "target_lang_translations": {
                                "ru": "Самолет приземлился очень <w>жестко</w> на обледенелой взлетно-посадочной полосе."
                            }
                        },
                        {
                            "text": "Ziemia w ogrodzie zamarzła <w>twardo</w> podczas mroźnej nocy.",
                            "target_lang_translations": {
                                "ru": "Земля в саду замерзла <w>натвердо</w> морозной ночью."
                            }
                        }
                    ],
                    "synonyms": [
                        "sztywno",
                        "mocno"
                    ],
                    "antonyms": [
                        "miękko"
                    ],
                    "common_phrases": [
                        "lądować twardo"
                    ],
                    "target_lang_definitions": {
                        "ru": "Физически твердо, жестко; устойчиво к давлению или деформации."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "твёрдо",
                                "target_lang_sense_clarification": "о физическом состоянии"
                            },
                            {
                                "target_lang_word": "жёстко",
                                "target_lang_sense_clarification": "о приземлении или ударе"
