    "entries": [
        {
            "pos": "adjective",
            "senses": [
                {
                    "sense_id": "48e479e6-d1a5-3998-9d03-68012cbf118a",
                    "sense_definition": "Extremely self-centred and unaware of the views or needs of others.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "personality",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "He lived in a <w>solipsistic</w> bubble, completely ignoring the problems of those around him.",
                            "target_lang_translations": {
                                "ru": "Он жил в <w>солипсическом</w> пузыре, полностью игнорируя проблемы окружающих."
                            }
                        },
                        {
                            "text": "Her <w>solipsistic</w> attitude made it difficult for her to maintain long-term relationships.",
                            "target_lang_translations": {
                                "ru": "Её <w>эгоцентричное</w> отношение мешало ей поддерживать длительные отношения."
                            }
                        }
                    ],
                    "synonyms": [
                        "self-absorbed",
                        "egocentric",
                        "narcissistic",
                        "self-centered"
                    ],
                    "antonyms": [
                        "altruistic",
                        "selfless"
                    ],
                    "common_phrases": [
                        "solipsistic worldview",
                        "solipsistic bubble",
                        "solipsistic attitude"
                    ],
                    "target_lang_definitions": {
                        "ru": "Крайне эгоцентричный, не замечающий взглядов или потребностей других людей."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "эгоцентричный",
                                "target_lang_sense_clarification": "сосредоточенный исключительно на себе"
                            },
                            {
                                "target_lang_word": "зацикленный на себе",
                                "target_lang_sense_clarification": "игнорирующий окружающих"
                            },
                            {
                                "target_lang_word": "солипсический",
                                "target_lang_sense_clarification": "в переносном смысле: крайне субъективный"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "2dbe31f6-1b96-3f58-ab95-ec0cfbee1e84",
                    "sense_definition": "Of, relating to, or being disposed to <w>solipsism</w>.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "philosophy",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The professor explained the <w>solipsistic</w> argument that only one's own mind is sure to exist.",
                            "target_lang_translations": {
                                "ru": "Профессор объяснил <w>солипсический</w> аргумент о том, что несомненно существует только собственный разум."
                            }
                        },
                        {
                            "text": "Critics dismissed the film as a <w>solipsistic</w> fantasy that ignored objective reality.",
                            "target_lang_translations": {
                                "ru": "Критики отвергли фильм как <w>солипсическую</w> фантазию, игнорирующую объективную реальность."
                            }
                        }
                    ],
                    "common_phrases": [
                        "solipsistic theory",
                        "solipsistic argument"
                    ],
                    "target_lang_definitions": {
                        "ru": "Относящийся к солипсизму; свойственный философскому учению, признающему существование только собственного сознания."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "солипсический",
                                "target_lang_sense_clarification": "относящийся к философии солипсизма"
                            }
                        ]
                    }
                }
            ]
        }
    ]
