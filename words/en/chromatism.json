    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "675ffe94-7621-3711-9d5c-431601f67e34",
                    "sense_definition": "The quality or state of possessing color or coloration.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "color_quality",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The intense <w>chromatism</w> of the autumn leaves created a spectacular view in the valley.",
                            "target_lang_translations": {
                                "ru": "Интенсивный <w>хроматизм</w> осенних листьев создавал захватывающий вид в долине."
                            }
                        },
                        {
                            "text": "Biologists studied the <w>chromatism</w> of the insect's wings to understand its camouflage mechanisms.",
                            "target_lang_translations": {
                                "ru": "Биологи изучали <w>хроматизм</w> крыльев насекомого, чтобы понять механизмы его камуфляжа."
                            }
                        }
                    ],
                    "synonyms": [
                        "coloration",
                        "pigmentation"
                    ],
                    "antonyms": [
                        "achromatism"
                    ],
                    "target_lang_definitions": {
                        "ru": "Качество или состояние, характеризующееся наличием цвета или определенной окраски."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "хроматизм",
                                "target_lang_sense_clarification": "цветовая насыщенность или окраска"
                            },
                            {
                                "target_lang_word": "окраска",
                                "target_lang_sense_clarification": "общее значение"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "37ea1713-e372-3cda-be04-1665215660e6",
                    "sense_definition": "A defect in an optical system where light is dispersed into different colors, preventing a sharp focus.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "optical_defect",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The photographer noticed significant <w>chromatism</w> around the edges of the subject in the image.",
                            "target_lang_translations": {
                                "ru": "Фотограф заметил значительный <w>хроматизм</w> по краям объекта на снимке."
                            }
                        },
                        {
                            "text": "High-quality telescope lenses are designed to correct optical <w>chromatism</w> for a clearer picture.",
                            "target_lang_translations": {
                                "ru": "Линзы высококачественных телескопов разработаны для коррекции оптического <w>хроматизма</w> ради получения более четкого изображения."
                            }
                        }
                    ],
                    "synonyms": [
                        "chromatic aberration"
                    ],
                    "antonyms": [
                        "achromatism"
                    ],
                    "common_phrases": [
                        "optical chromatism",
                        "lens chromatism"
                    ],
                    "target_lang_definitions": {
                        "ru": "Дефект оптической системы, при котором свет разлагается на составные цвета, препятствуя четкой фокусировке изображения."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "хроматизм",
                                "target_lang_sense_clarification": "оптическая погрешность"
                            },
                            {
                                "target_lang_word": "хроматическая аберрация",
                                "target_lang_sense_clarification": "технический термин"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "b2f3530c-9154-38e0-9e4c-353a3a0b5711",
                    "sense_definition": "A condition in which hearing a sound evokes the visualization of a color.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "synesthesia",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Her <w>chromatism</w> allowed her to see flashes of blue whenever the piano was played.",
                            "target_lang_translations": {
                                "ru": "Её <w>хроматизм</w> позволял ей видеть вспышки синего цвета всякий раз, когда звучало фортепиано."
                            }
                        },
                        {
                            "text": "The artist claimed his paintings were inspired by the <w>chromatism</w> he experienced while listening to jazz.",
                            "target_lang_translations": {
                                "ru": "Художник утверждал, что его картины были вдохновлены <w>хроматизмом</w>, который он испытывал при прослушивании джаза."
                            }
                        }
                    ],
                    "synonyms": [
                        "chromesthesia",
                        "color hearing"
                    ],
                    "common_phrases": [
                        "auditory chromatism"
                    ],
                    "target_lang_definitions": {
                        "ru": "Состояние, при котором восприятие звука вызывает непроизвольное зрительное ощущение цвета."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "хроматизм",
                                "target_lang_sense_clarification": "слуховой (редкое)"
                            },
                            {
                                "target_lang_word": "цветной слух",
                                "target_lang_sense_clarification": "синестезия"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}