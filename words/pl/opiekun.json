    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "3276bd82-cca3-3248-b0c2-c1b315f2d87a",
                    "sense_definition": "Osoba, która dba o kogoś lub o coś, zapewniając pomoc, nadzór i bezpieczeństwo.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "general_care",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Nasz nowy <w>opiekun</w> grupy zorganizował nam ciekawą wycieczkę w góry.",
                            "target_lang_translations": {
                                "ru": "Наш новый <w>куратор</w> группы организовал нам интересную экскурсию в горы."
                            }
                        },
                        {
                            "text": "Każdy stażysta w tej firmie ma przydzielonego doświadczonego <w>opiekuna</w>, który służy radą.",
                            "target_lang_translations": {
                                "ru": "У каждого стажера в этой фирме есть назначенный опытный <w>наставник</w>, который помогает советом."
                            }
                        }
                    ],
                    "synonyms": [
                        "obrońca"
                    ],
                    "common_phrases": [
                        "opiekun naukowy",
                        "opiekun roku",
                        "opiekun stażu",
                        "opiekun duchowy"
                    ],
                    "target_lang_definitions": {
                        "ru": "Человек, который заботится о ком-то или чем-то, обеспечивая помощь, надзор и безопасность."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "куратор",
                                "target_lang_sense_clarification": "группы, проекта"
                            },
                            {
                                "target_lang_word": "наставник",
                                "target_lang_sense_clarification": "в обучении, стажировке"
                            },
                            {
                                "target_lang_word": "опекун",
                                "target_lang_sense_clarification": "общий смысл, заботящийся"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "bb2f711e-ecb0-37de-b0ba-623dc2e7930d",
                    "sense_definition": "Osoba wyznaczona przez sąd do sprawowania władzy rodzicielskiej i dbania o interesy dziecka lub osoby ubezwłasnowolnionej.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "legal_care",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Po śmierci rodziców ciocia została ustanowiona prawnym <w>opiekunem</w> dzieci.",
                            "target_lang_translations": {
                                "ru": "После смерти родителей тетя была назначена законным <w>опекуном</w> детей."
                            }
                        },
                        {
                            "text": "Sąd zdecydował, że <w>opiekun</w> będzie zarządzał majątkiem swojego podopiecznego do czasu jego pełnoletności.",
                            "target_lang_translations": {
                                "ru": "Суд решил, что <w>опекун</w> будет управлять имуществом своего подопечного до его совершеннолетия."
                            }
                        }
                    ],
                    "common_phrases": [
                        "opiekun prawny",
                        "ustanowić opiekuna",
                        "wyznaczyć opiekuna"
                    ],
                    "target_lang_definitions": {
                        "ru": "Лицо, назначенное судом для опеки и защиты интересов ребенка или недееспособного лица."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "опекун",
                                "target_lang_sense_clarification": "юридический термин"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "f251dc84-97a3-378e-b2f9-fda8ff605d12",
                    "sense_definition": "Pracownik ogrodu zoologicznego zajmujący się karmieniem i pielęgnacją zwierząt.",
                    "learner_level": "B2",
                    "frequency": "Low",
                    "semantic_group_id": "animal_care",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Doświadczony <w>opiekun</w> wie, jak bezpiecznie zbliżyć się do drapieżnika podczas karmienia.",
                            "target_lang_translations": {
                                "ru": "Опытный <w>смотритель</w> знает, как безопасно приблизиться к хищнику во время кормления."
                            }
                        },
                        {
                            "text": "W zoo poszukują nowego <w>opiekuna</w> do działu gadów i płazów.",
                            "target_lang_translations": {
                                "ru": "В зоопарке ищут нового <w>смотрителя</w> в отдел рептилий и амфибий."
                            }
                        }
                    ],
                    "common_phrases": [
                        "opiekun zwierząt",
                        "opiekun słoni"
                    ],
                    "target_lang_definitions": {
                        "ru": "Работник зоопарка, занимающийся кормлением и уходом за животными."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "смотритель",
                                "target_lang_sense_clarification": "за животными"
                            },
                            {
                                "target_lang_word": "служитель",
                                "target_lang_sense_clarification": "зоопарка"
                            }
                        ]
                    }
                }
            ]
        }
    ]
