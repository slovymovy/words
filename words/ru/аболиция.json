    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "1424b904-2b6d-3bae-8454-7a1efd4a578c",
                    "sense_definition": "Официальная отмена закона, решения или административного акта.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "legal_cancellation",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Полная <w>аболиция</w> устаревшего закона потребовала длительных парламентских слушаний.",
                            "target_lang_translations": {
                                "en": "The complete <w>abolition</w> of the obsolete law required lengthy parliamentary hearings."
                            }
                        },
                        {
                            "text": "В некоторых случаях <w>аболиция</w> является единственным способом исправить правовую ошибку.",
                            "target_lang_translations": {
                                "en": "In some cases, <w>abolition</w> is the only way to correct a legal error."
                            }
                        }
                    ],
                    "synonyms": [
                        "аброгация"
                    ],
                    "common_phrases": [
                        "акт аболиции",
                        "полная аболиция"
                    ],
                    "target_lang_definitions": {
                        "en": "The official cancellation of a law, decision, or administrative act."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "abolition",
                                "target_lang_sense_clarification": "general cancellation of a system or law"
                            },
                            {
                                "target_lang_word": "repeal",
                                "target_lang_sense_clarification": "revocation of a law"
                            },
                            {
                                "target_lang_word": "abrogation",
                                "target_lang_sense_clarification": "formal annulment"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "5ad3e306-fae6-39ae-9ba6-6456ee7a779c",
                    "sense_definition": "Прекращение уголовного дела или судебного разбирательства (обычно вследствие акта верховной власти).",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "legal_pardon",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Объявленная монархом <w>аболиция</w> освободила обвиняемых от дальнейшего преследования.",
                            "target_lang_translations": {
                                "en": "The <w>abolition</w> declared by the monarch freed the accused from further prosecution."
                            }
                        },
                        {
                            "text": "Адвокат надеялся, что к его подзащитному будет применена <w>аболиция</w>.",
                            "target_lang_translations": {
                                "en": "The lawyer hoped that <w>abolition</w> would be applied to his client."
                            }
                        }
                    ],
                    "common_phrases": [
                        "право аболиции"
                    ],
                    "target_lang_definitions": {
                        "en": "The termination of a criminal case or judicial proceeding (usually resulting from an act of supreme authority)."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "abolition",
                                "target_lang_sense_clarification": "termination of proceedings"
                            },
                            {
                                "target_lang_word": "quashing",
                                "target_lang_sense_clarification": "of a case or indictment"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}