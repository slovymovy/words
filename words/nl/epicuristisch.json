                {
                    "sense_id": "139894ef-db84-3af6-8768-8d4908a5f0e6",
                    "sense_definition": "Gericht op het genieten van het leven, met name van lekker eten en drinken en zinnelijk genot.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "levenshouding",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Zij leidden een <w>epicuristisch</w> bestaan in hun prachtige villa aan de kust.",
                            "target_lang_translations": {
                                "ru": "Они вели <w>эпикурейский</w> образ жизни на своей прекрасной вилле на побережье."
                            }
                        },
                        {
                            "text": "Het diner was een waar <w>epicuristisch</w> feestmaal met de fijnste wijnen.",
                            "target_lang_translations": {
                                "ru": "Ужин был настоящим <w>эпикурейским</w> пиршеством с изысканнейшими винами."
                            }
                        }
                    ],
                    "synonyms": [
                        "epicurisch",
                        "epicureïsch"
                    ],
                    "antonyms": [
                        "ascetisch"
                    ],
                    "common_phrases": [
                        "epicuristisch genot",
                        "epicuristische levensstijl"
                    ],
                    "target_lang_definitions": {
                        "ru": "Направленный на получение удовольствия от жизни, особенно от изысканной еды, напитков и чувственных наслаждений."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "эпикурейский",
                                "target_lang_sense_clarification": "склонный к чувственным удовольствиям"
                            },
                            {
                                "target_lang_word": "гедонистический",
                                "target_lang_sense_clarification": "направленный на наслаждение"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "fb35a8dc-9f46-36bd-a1d4-699b8b274075",
                    "sense_definition": "Behorend tot of volgens de leer van de Griekse filosoof Epicurus, waarbij het streven naar geluk door gemoedsrust centraal staat.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "filosofie",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Zijn <w>epicuristische</w> opvattingen hielpen hem om kalm te blijven in moeilijke tijden.",
                            "target_lang_translations": {
                                "ru": "Его <w>эпикурейские</w> взгляды помогали ему сохранять спокойствие в трудные времена."
                            }
                        },
                        {
                            "text": "De professor gaf een lezing over de <w>epicuristische</w> ethiek in de oudheid.",
                            "target_lang_translations": {
                                "ru": "Профессор прочитал лекцию об <w>эпикурейской</w> этике в древности."
                            }
                        }
                    ],
                    "synonyms": [
                        "epicurisch",
                        "epicureïsch"
                    ],
                    "antonyms": [
                        "stoïcijns"
                    ],
                    "common_phrases": [
                        "epicuristische filosofie",
                        "epicuristische school"
                    ],
                    "target_lang_definitions": {
                        "ru": "Относящийся к учению греческого философа Эпикура, согласно которому высшим благом является наслаждение жизнью через отсутствие физической боли и душевных тревог."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "эпикурейский",
                                "target_lang_sense_clarification": "относящийся к философии Эпикура"
                            }
                        ]
                    }
                }
            ]
