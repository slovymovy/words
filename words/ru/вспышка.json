    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "fd9f4a29-e371-3c85-a612-5eb16a43759f",
                    "sense_definition": "Устройство в фотоаппарате или смартфоне для создания кратковременного яркого освещения при съёмке.",
                    "learner_level": "A2",
                    "frequency": "High",
                    "semantic_group_id": "photography",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "В музее запрещено фотографировать со <вспышкой>, чтобы не повредить картины.",
                            "target_lang_translations": {
                                "en": "It is forbidden to take photos with <w>flash</w> in the museum to avoid damaging the paintings."
                            }
                        },
                        {
                            "text": "Камера на телефоне автоматически включает <вспышку> в темноте.",
                            "target_lang_translations": {
                                "en": "The phone camera automatically turns on the <w>flash</w> in the dark."
                            }
                        }
                    ],
                    "synonyms": [
                        "фотовспышка"
                    ],
                    "common_phrases": [
                        "снимать со вспышкой",
                        "яркая вспышка",
                        "фотографировать без вспышки"
                    ],
                    "traits": [
                        {
                            "trait_type": "colloquial",
                            "comment": "often used instead of the full term 'фотовспышка'"
                        }
                    ],
                    "target_lang_definitions": {
                        "en": "A device in a camera or smartphone used to produce a brief bright light for taking photographs."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "flash",
                                "target_lang_sense_clarification": "camera device"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "9a5ebcc3-7f3d-3fa6-b0e9-e18a788ecebc",
                    "sense_definition": "Внезапное и кратковременное появление яркого света.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "light_phenomenon",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Яркая <вспышка> молнии на мгновение осветила всю комнату.",
                            "target_lang_translations": {
                                "en": "A bright <w>flash</w> of lightning illuminated the whole room for an instant."
                            }
                        },
                        {
                            "text": "Вдали были видны <вспышки> праздничного салюта.",
                            "target_lang_translations": {
                                "en": "In the distance, <w>flashes</w> of celebratory fireworks were visible."
                            }
                        }
                    ],
                    "common_phrases": [
                        "вспышка света",
                        "вспышка молнии",
                        "яркая вспышка"
                    ],
                    "target_lang_definitions": {
                        "en": "A sudden and brief burst of bright light."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "flash",
                                "target_lang_sense_clarification": "burst of light"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "3228ed91-72b2-3020-a734-85627be4daac",
                    "sense_definition": "Внезапное и бурное начало или распространение чего-либо (обычно болезни, эпидемии или конфликта).",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "event_occurrence",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Врачи предупреждают о возможной <вспышке> гриппа этой зимой.",
                            "target_lang_translations": {
                                "en": "Doctors warn of a possible flu <w>outbreak</w> this winter."
                            }
                        },
                        {
                            "text": "Внезапная <вспышка> насилия в регионе встревожила местных жителей.",
                            "target_lang_translations": {
                                "en": "The sudden <w>outbreak</w> of violence in the region alarmed the locals."
                            }
                        }
                    ],
                    "common_phrases": [
                        "вспышка эпидемии",
                        "вспышка заболевания",
                        "вспышка насилия"
                    ],
                    "target_lang_definitions": {
                        "en": "A sudden occurrence or increase of something unwelcome, such as war or disease."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "outbreak",
                                "target_lang_sense_clarification": "of disease or conflict"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "63a3968e-c006-3957-93c4-21257bd12d45",
                    "sense_definition": "Внезапное и сильное проявление какой-либо эмоции или чувства (чаще всего гнева).",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "emotion",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Он быстро успокоился после неожиданной <вспышки> гнева.",
                            "target_lang_translations": {
                                "en": "He quickly calmed down after an unexpected <w>outburst</w> of anger."
                            }
                        },
                        {
                            "text": "Её настроение часто менялось от смеха до <вспышек> раздражения.",
                            "target_lang_translations": {
                                "en": "Her mood often changed from laughter to <w>outbursts</w> of irritation."
                            }
                        }
                    ],
                    "common_phrases": [
                        "вспышка гнева",
                        "вспышка ярости",
                        "эмоциональная вспышка"
                    ],
                    "target_lang_definitions": {
                        "en": "A sudden release of strong emotion."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "outburst",
                                "target_lang_sense_clarification": "of emotion"
                            },
                            {
                                "target_lang_word": "fit",
                                "target_lang_sense_clarification": "sudden attack of emotion"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "139a3c5b-a7b7-3a66-b161-37f7b3534174",
                    "sense_definition": "Мощный выброс энергии в атмосфере звезды (обычно Солнца).",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "astronomy",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Учёные зафиксировали мощную <вспышку> на Солнце, которая может вызвать магнитные бури.",
                            "target_lang_translations": {
                                "en": "Scientists recorded a powerful <w>flare</w> on the Sun that could cause magnetic storms."
                            }
                        },
                        {
                            "text": "Эта солнечная <вспышка> привела к перебоям в радиосвязи на Земле.",
                            "target_lang_translations": {
                                "en": "This solar <w>flare</w> led to radio disruptions on Earth."
                            }
                        }
                    ],
                    "common_phrases": [
                        "вспышка на Солнце",
                        "солнечная вспышка"
                    ],
                    "target_lang_definitions": {
                        "en": "A sudden explosion of energy on the surface of a star."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "flare",
                                "target_lang_sense_clarification": "solar phenomenon"
                            }
                        ]
                    }
                }
            ]
        }
    ]
