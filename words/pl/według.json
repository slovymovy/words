            "senses": [
                {
                    "sense_id": "b2a4e1c9-adcc-33e4-bf33-9689c9347ba6",
                    "sense_definition": "Służy do wskazania źródła informacji, autora opinii lub osoby, na której słowach się opieramy.",
                    "learner_level": "A1",
                    "frequency": "High",
                    "semantic_group_id": "opinion_source",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "<w>Według</w> mnie to jest najlepsze rozwiązanie tego problemu.",
                            "target_lang_translations": {
                                "ru": "<w>По</w> моему мнению, это лучшее решение данной проблемы."
                            }
                        },
                        {
                            "text": "<w>Według</w> prognozy pogody jutro będzie padać deszcz.",
                            "target_lang_translations": {
                                "ru": "<w>По</w> прогнозу погоды, завтра будет дождь."
                            }
                        }
                    ],
                    "synonyms": [
                        "wedle",
                        "podług"
                    ],
                    "common_phrases": [
                        "według mnie",
                        "według ciebie",
                        "według niego",
                        "według słów"
                    ],
                    "target_lang_definitions": {
                        "ru": "Используется для указания источника информации, автора мнения или лица, на чьи слова мы опираемся."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "по",
                                "target_lang_sense_clarification": "указывает на чьё-либо мнение или слова (по мнению, по словам)"
                            },
                            {
                                "target_lang_word": "согласно",
                                "target_lang_sense_clarification": "указывает на источник информации"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "11cfb081-ce50-3138-a5c4-c5353fe28b54",
                    "sense_definition": "Wskazuje na wzorzec, regułę, plan lub kryterium, zgodnie z którym coś się odbywa lub jest uporządkowane.",
                    "learner_level": "A2",
                    "frequency": "High",
                    "semantic_group_id": "conformity",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Wszystko poszło dokładnie <w>według</w> ustalonego wcześniej planu.",
                            "target_lang_translations": {
                                "ru": "Всё прошло точно <w>по</w> заранее установленному плану."
                            }
                        },
                        {
                            "text": "Książki w bibliotece są poukładane na półkach <w>według</w> alfabetu.",
                            "target_lang_translations": {
                                "ru": "Книги в библиотеке расставлены на полках <w>по</w> алфавиту."
                            }
                        }
                    ],
                    "synonyms": [
                        "zgodnie z",
                        "wedle",
                        "podług"
                    ],
                    "common_phrases": [
                        "według planu",
                        "według instrukcji",
                        "według kolejności",
                        "według wzoru"
                    ],
                    "target_lang_definitions": {
                        "ru": "Указывает на образец, правило, план или критерий, в соответствии с которым что-либо происходит или упорядочено."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "по",
                                "target_lang_sense_clarification": "указывает на соответствие плану, порядку или признаку"
                            },
                            {
                                "target_lang_word": "согласно",
                                "target_lang_sense_clarification": "в соответствии с правилом или планом"
                            },
                            {
                                "target_lang_word": "в соответствии с",
                                "target_lang_sense_clarification": "указывает на соответствие критерию"
                            }
                        ]
                    }
                }
            ]
        }
    ]
