            "pos": "noun",
            "senses": [
                {
                    "sense_id": "6cca1452-346d-39e2-96f7-f533463302e1",
                    "sense_definition": "A fact, sign, or piece of information that shows that something exists, is true, or is likely to happen.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "There is no <w>indication</w> that the fire was caused by criminals."
                        },
                        {
                            "text": "All the <w>indications</w> point to careless driving as the cause of the accident."
                        },
                        {
                            "text": "Her smile was a clear <w>indication</w> that she agreed with the proposal."
                        }
                    ],
                    "synonyms": [
                        "sign",
                        "evidence",
                        "proof",
                        "signal",
                        "mark",
                        "token"
                    ],
                    "common_phrases": [
                        "clear indication",
                        "give an indication",
                        "every indication",
                        "no indication"
                    ]
                },
                {
                    "sense_id": "dc73c02b-8f98-3cbc-ae60-ce884b26e523",
                    "sense_definition": "The act of pointing something out or making it known.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
