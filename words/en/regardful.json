            "senses": [
                {
                    "sense_id": "36b3ae98-ad30-36d3-afa7-66e9466b98b4",
                    "sense_definition": "Showing attention, care, or consideration for someone or something.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "care_attention",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "He is always <w>regardful</w> of his neighbors' need for quiet in the evening.",
                            "target_lang_translations": {
                                "ru": "Он всегда <w>внимателен</w> к потребности соседей в тишине по вечерам."
                            }
                        },
                        {
                            "text": "The committee was <w>regardful</w> of the budget constraints when planning the event.",
                            "target_lang_translations": {
                                "ru": "Комитет <w>считался</w> с бюджетными ограничениями при планировании мероприятия."
                            }
                        }
                    ],
                    "synonyms": [
                        "mindful",
                        "considerate",
                        "respectful",
                        "attentive"
                    ],
                    "antonyms": [
                        "disregardful",
                        "heedless",
                        "negligent"
                    ],
                    "common_phrases": [
                        "regardful of"
                    ],
                    "target_lang_definitions": {
                        "ru": "Проявляющий внимание, заботу или уважение к кому-либо или чему-либо."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "внимательный",
                                "target_lang_sense_clarification": "проявляющий чуткость и заботу"
                            },
                            {
                                "target_lang_word": "считающийся",
                                "target_lang_sense_clarification": "принимающий во внимание интересы или обстоятельства"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "05ad15eb-4e95-3603-aaa2-d53cce0fd19d",
                    "sense_definition": "Paying close attention to details or surroundings; watchful.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "care_attention",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The security guard kept a <w>regardful</w> eye on the main entrance.",
                            "target_lang_translations": {
                                "ru": "Охранник не спускал <w>бдительного</w> взгляда с главного входа."
                            }
                        },
                        {
                            "text": "She cast a <w>regardful</w> look at the dark clouds gathering on the horizon.",
                            "target_lang_translations": {
                                "ru": "Она бросила <w>пристальный</w> взгляд на темные тучи, собирающиеся на горизонте."
                            }
                        }
                    ],
                    "synonyms": [
                        "observant",
                        "watchful",
                        "vigilant"
                    ],
                    "antonyms": [
                        "inattentive",
                        "unobservant"
                    ],
                    "target_lang_definitions": {
                        "ru": "Уделяющий пристальное внимание деталям или окружению; наблюдательный."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "пристальный",
                                "target_lang_sense_clarification": "о взгляде или внимании"
                            },
                            {
                                "target_lang_word": "бдительный",
                                "target_lang_sense_clarification": "настороженный, внимательный к возможной опасности"
                            }
                        ]
                    }
                }
            ]
        }
