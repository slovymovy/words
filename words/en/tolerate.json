{
    "word_family": [
        "tolerance",
        "tolerant",
        "tolerable",
        "toleration",
        "intolerant",
        "intolerance"
    ],
    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "c2dc29ee-e6d3-3863-8afc-5c0b8c8b8c87",
                    "sense_definition": "To allow or permit something to happen or exist, even if one does not like or agree with it.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "permission",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The school administration will not <w>tolerate</w> bullying on campus.",
                            "target_lang_translations": {
                                "ru": "Администрация школы не <w>потерпит</w> издевательств на территории кампуса."
                            }
                        },
                        {
                            "text": "She refused to <w>tolerate</w> bad behavior from her employees.",
                            "target_lang_translations": {
                                "ru": "Она отказалась <w>терпеть</w> плохое поведение своих сотрудников."
                            }
                        }
                    ],
                    "synonyms": [
                        "allow",
                        "permit",
                        "put up with",
                        "accept",
                        "brook",
                        "countenance"
                    ],
                    "antonyms": [
                        "prohibit"
                    ],
                    "common_phrases": [
                        "tolerate behavior",
                        "tolerate dissent",
                        "will not tolerate"
                    ],
                    "target_lang_definitions": {
                        "ru": "Позволять чему-либо происходить или мириться с чем-либо, даже если это не нравится."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "терпеть",
                                "target_lang_sense_clarification": "мириться с чем-либо неприятным"
                            },
                            {
                                "target_lang_word": "допускать",
                                "target_lang_sense_clarification": "позволять происходить"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "9d618476-55c4-34cd-a01c-9a0ed710f7db",
                    "sense_definition": "To be able to bear, withstand, or endure difficult conditions or unpleasant situations.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "endurance",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Certain plants can <w>tolerate</w> extreme heat and very little water.",
                            "target_lang_translations": {
                                "ru": "Некоторые растения могут <w>переносить</w> сильную жару и недостаток воды."
                            }
                        },
                        {
                            "text": "I cannot <w>tolerate</w> loud noise when I am trying to sleep.",
                            "target_lang_translations": {
                                "ru": "Я не могу <w>терпеть</w> громкий шум, когда пытаюсь уснуть."
                            }
                        }
                    ],
                    "synonyms": [
                        "bear",
                        "endure",
                        "stand",
                        "stomach",
                        "withstand",
                        "live with"
                    ],
                    "common_phrases": [
                        "tolerate pain",
                        "tolerate heat",
                        "tolerate the cold"
                    ],
                    "target_lang_definitions": {
                        "ru": "Быть способным выдерживать трудные условия, боль или неприятные ситуации."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "переносить",
                                "target_lang_sense_clarification": "выдерживать воздействие (о климате, болезни)"
                            },
                            {
                                "target_lang_word": "выносить",
                                "target_lang_sense_clarification": "справляться с чем-либо трудным"
                            },
                            {
                                "target_lang_word": "терпеть",
                                "target_lang_sense_clarification": "стойко переносить"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}