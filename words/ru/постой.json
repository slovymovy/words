                    "traits": [
                        {
                            "trait_type": "dated",
                            "comment": ""
                        }
                    ],
                    "target_lang_definitions": {
                        "en": "Temporary accommodation or overnight stay in someone else's house or rented premises."
                    },
                    "translations": {
