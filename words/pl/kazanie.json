                {
                    "sense_id": "25b3b567-66c2-3f5a-a63c-9a221a229af5",
                    "sense_definition": "Religijna przemowa, której celem jest przekazanie prawd wiary i zasad życia moralnego, w chrześcijaństwie także część mszy lub nabożeństwa.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "religious_speech",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Ksiądz wygłosił poruszające <kazanie> o potrzebie przebaczania bliźnim.",
                            "target_lang_translations": {
                                "ru": "Священник произнес трогательную <проповедь> о необходимости прощать ближних."
                            }
                        },
                        {
                            "text": "Wierni w wielkim skupieniu słuchali niedzielnego <kazania>.",
                            "target_lang_translations": {
                                "ru": "Верующие с большим вниманием слушали воскресную <проповедь>."
                            }
                        }
                    ],
                    "synonyms": [
                        "homilia"
                    ],
                    "common_phrases": [
                        "wygłosić kazanie",
                        "słuchać kazania",
                        "kazanie na górze"
                    ],
                    "target_lang_definitions": {
                        "ru": "Речь религиозно-нравственного содержания, произносимая священнослужителем в церкви."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "проповедь",
                                "target_lang_sense_clarification": "религиозная речь"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "e3480341-5bec-3e33-88be-94b06b808e6d",
                    "sense_definition": "Długa, nudna i umoralniająca mowa, zwykle zawierająca pretensje lub pouczenia.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "reproval",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Ojciec zrobił mi długie <kazanie> za to, że wróciłem późno do domu.",
                            "target_lang_translations": {
                                "ru": "Отец прочитал мне длинную <нотацию> за то, что я поздно вернулся домой."
                            }
                        },
                        {
                            "text": "Nie mam ochoty słuchać kolejnego <kazania> na temat moich ocen w szkole.",
                            "target_lang_translations": {
                                "ru": "У меня нет желания слушать очередное <нравоучение> по поводу моих оценок в школе."
                            }
                        }
                    ],
                    "synonyms": [
                        "reprymenda",
                        "morały",
                        "połajanka",
                        "wykład"
                    ],
                    "antonyms": [
                        "pochwała"
                    ],
                    "common_phrases": [
                        "prawić kazania",
                        "robić kazanie",
                        "dostać kazanie"
                    ],
