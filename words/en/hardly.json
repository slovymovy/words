    "entries": [
        {
            "pos": "adverb",
            "senses": [
                {
                    "sense_id": "f5fbc8ba-d20b-3d6b-95f6-3c109f9b046e",
                    "sense_definition": "Barely; only just; almost not.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "They <w>hardly</w> ever watch television during the week.",
                            "target_lang_translations": {
                                "ru": "Они <w>почти не</w> смотрят телевизор в будние дни."
                            }
                        },
                        {
                            "text": "I can <w>hardly</w> wait for the summer holidays to begin.",
                            "target_lang_translations": {
                                "ru": "Я <w>едва</w> могу дождаться начала летних каникул."
                            }
                        }
                    ],
                    "synonyms": [
                        "barely",
                        "just",
                        "only just",
                        "scarcely"
                    ],
                    "common_phrases": [
                        "hardly ever",
                        "hardly any",
                        "hardly anyone",
                        "hardly anything",
                        "hardly believe"
                    ],
                    "target_lang_definitions": {
                        "ru": "Едва, еле, почти не; в самой малой степени."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "едва",
                                "target_lang_sense_clarification": "с трудом, чуть-чуть"
                            },
                            {
                                "target_lang_word": "еле",
                                "target_lang_sense_clarification": "с трудом, из последних сил"
                            },
                            {
                                "target_lang_word": "почти не",
                                "target_lang_sense_clarification": "практически нет"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "fb68ce87-0e3b-3a33-8b24-940d55e910fc",
                    "sense_definition": "Certainly not; used to suggest that something is unlikely or unreasonable.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "It is <w>hardly</w> surprising that the team lost after playing so poorly.",
                            "target_lang_translations": {
                                "ru": "<w>Едва ли</w> удивительно, что команда проиграла после такой плохой игры."
                            }
                        },
                        {
                            "text": "I <w>hardly</w> think that is a valid excuse for being late.",
                            "target_lang_translations": {
                                "ru": "Я <w>вряд ли</w> сочту это уважительной причиной для опоздания."
                            }
                        }
                    ],
                    "common_phrases": [
                        "hardly surprising",
                        "hardly likely",
                        "hardly fair",
                        "hardly expect"
                    ],
                    "target_lang_definitions": {
                        "ru": "Вряд ли, едва ли; конечно нет (используется для выражения сомнения или невероятности)."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "вряд ли",
                                "target_lang_sense_clarification": "маловероятно"
                            },
                            {
                                "target_lang_word": "едва ли",
                                "target_lang_sense_clarification": "сомнительно"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "pos": "interjection",
            "senses": [
                {
                    "sense_id": "068567fa-54fe-3ea2-8e30-6061d421bd2a",
                    "sense_definition": "Used to express strong disagreement or skepticism.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "\"Do you think he will resign?\" \"<w>Hardly</w>! He loves his job too much.\"",
                            "target_lang_translations": {
                                "ru": "«Ты думаешь, он уволится?» — «<w>Вряд ли</w>! Он слишком любит свою работу»."
                            }
                        },
                        {
                            "text": "I think the movie was boring. — <w>Hardly</w>! It was thrilling.",
                            "target_lang_translations": {
                                "ru": "«Я думаю, фильм был скучным». — «<w>Вовсе нет</w>! Он был захватывающим»."
                            }
                        }
                    ],
                    "traits": [
                        {
                            "trait_type": "colloquial",
                            "comment": "Used as a short, emphatic response."
                        }
                    ],
                    "target_lang_definitions": {
                        "ru": "Вряд ли, совсем нет (используется для выражения сильного несогласия или скептицизма)."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "вряд ли",
