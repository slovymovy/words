    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "691c8ede-2f59-3470-8483-98750efdcda2",
                    "sense_definition": "Процесс перехода вещества (обычно снега, льда или воска) из твёрдого состояния в жидкое под воздействием тепла.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "physical_process",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Весной начинается активное <w>таяние</w> снега в лесах и на полях.",
                            "target_lang_translations": {
                                "en": "In spring, active snow <w>melting</w> begins in the forests and fields."
                            }
                        },
                        {
                            "text": "Глобальное потепление ускоряет <w>таяние</w> ледников по всему миру.",
                            "target_lang_translations": {
                                "en": "Global warming accelerates the <w>melting</w> of glaciers worldwide."
                            }
                        }
                    ],
                    "synonyms": [
                        "плавление"
                    ],
                    "antonyms": [
                        "замерзание",
                        "затвердевание"
                    ],
                    "common_phrases": [
                        "таяние снегов",
                        "таяние льдов",
                        "сезон таяния",
                        "глобальное таяние"
                    ],
                    "target_lang_definitions": {
                        "en": "The process of a substance changing from a solid to a liquid state under the influence of heat."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "melting",
                                "target_lang_sense_clarification": "general process of turning liquid"
                            },
                            {
                                "target_lang_word": "thawing",
                                "target_lang_sense_clarification": "specifically regarding snow or ice"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "f65fd5b6-8215-395c-aed5-5449010f2e39",
                    "sense_definition": "Постепенное исчезновение, уменьшение или утрата чего-либо.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "figurative_disappearance",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Экономический кризис спровоцировал быстрое <w>таяние</w> сбережений граждан.",
                            "target_lang_translations": {
                                "en": "The economic crisis provoked a rapid <w>dwindling</w> of citizens' savings."
                            }
                        },
                        {
                            "text": "Мы с грустью наблюдали за <w>таянием</w> наших надежд на успех.",
                            "target_lang_translations": {
                                "en": "We watched with sadness the <w>melting away</w> of our hopes for success."
                            }
                        }
                    ],
                    "common_phrases": [
                        "таяние надежд",
                        "таяние запасов",
                        "таяние средств"
                    ],
                    "target_lang_definitions": {
                        "en": "The gradual disappearance, reduction, or loss of something."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "dwindling",
                                "target_lang_sense_clarification": "gradual reduction of resources or numbers"
                            },
                            {
                                "target_lang_word": "melting away",
                                "target_lang_sense_clarification": "gradual disappearance"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "a91dfd8a-b19a-35c2-9f1d-966d525d92d1",
                    "sense_definition": "Состояние томления, умиления, нежности или угасания жизненных сил.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "emotional_state",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "От звуков прекрасной музыки в душе возникло сладкое <w>таяние</w>.",
                            "target_lang_translations": {
                                "en": "From the sounds of beautiful music, a sweet <w>languor</w> arose in the soul."
                            }
                        },
                        {
                            "text": "Её охватило приятное <w>таяние</w> от его ласковых слов.",
                            "target_lang_translations": {
                                "en": "She was seized by a pleasant <w>melting sensation</w> from his affectionate words."
                            }
                        }
                    ],
                    "common_phrases": [
                        "сладкое таяние",
                        "сердечное таяние"
                    ],
                    "target_lang_definitions": {
                        "en": "A state of languor, tenderness, or fading vitality."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "languor",
                                "target_lang_sense_clarification": "state of pleasant tiredness or tenderness"
                            },
                            {
                                "target_lang_word": "melting",
                                "target_lang_sense_clarification": "emotional sensation of tenderness"
                            }
                        ]
                    }
                }
            ]
        }
    ]
