{
    "word_family": [
        "вина",
        "виновный",
        "винить",
        "обвинение",
        "обвинитель",
        "обвиняемый"
    ],
    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "29a31396-1c3a-35a0-bffc-ac2f0cfb2d86",
                    "sense_definition": "Посчитать кого-либо виноватым в совершении чего-либо предосудительного; возложить вину.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Ты не можешь просто так <обвинить> друга во лжи.",
                            "target_lang_translations": {
                                "en": "You can't just <accuse> a friend of lying."
                            }
                        },
                        {
                            "text": "Она поспешила <обвинить> себя во всех неудачах команды.",
                            "target_lang_translations": {
                                "en": "She rushed to <blame> herself for all the team's failures."
                            }
                        }
                    ],
                    "synonyms": [
                        "упрекнуть",
                        "осудить"
                    ],
                    "antonyms": [
                        "оправдать",
                        "похвалить"
                    ],
                    "common_phrases": [
                        "обвинить во лжи",
                        "обвинить в предательстве",
                        "обвинить в грехах",
                        "обвинить в равнодушии"
                    ],
                    "target_lang_definitions": {
                        "en": "To claim that someone has done something wrong or is responsible for something bad."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "accuse",
                                "target_lang_sense_clarification": "to say someone is guilty of a fault or wrong"
                            },
                            {
                                "target_lang_word": "blame",
                                "target_lang_sense_clarification": "to hold responsible for something negative"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "820fb41b-4354-3fc4-9007-7bf8f1555fa0",
                    "sense_definition": "Предъявить официальное обвинение в совершении преступления; привлечь к суду.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Следствие решило <обвинить> подозреваемого в мошенничестве.",
                            "target_lang_translations": {
                                "en": "The investigation decided to <charge> the suspect with fraud."
                            }
                        },
                        {
                            "text": "Суд может <обвинить> чиновника в превышении полномочий.",
                            "target_lang_translations": {
                                "en": "The court may <charge> the official with abuse of power."
                            }
                        }
                    ],
                    "synonyms": [
                        "инкриминировать",
                        "осудить"
                    ],
                    "antonyms": [
                        "оправдать",
                        "помиловать"
                    ],
                    "common_phrases": [
                        "обвинить в преступлении",
                        "обвинить в убийстве",
                        "обвинить в краже",
                        "обвинить в коррупции"
                    ],
                    "target_lang_definitions": {
                        "en": "To formally state that someone has committed a crime, usually by the police or in a court."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "charge",
                                "target_lang_sense_clarification": "to formally accuse of a crime"
                            },
                            {
                                "target_lang_word": "accuse",
                                "target_lang_sense_clarification": "to charge with a criminal offense"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}