{
    "word_family": [
        "acerbic",
        "acerbity",
        "exacerbate",
        "exacerbation"
    ],
    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "113bc3bb-ae4d-3f72-8389-1ebe7698275f",
                    "sense_definition": "To make someone feel annoyed, angry, or exasperated.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "verb_irritate",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "She had no desire to <w>acerbate</w> her husband by mentioning her victory.",
                            "target_lang_translations": {
                                "ru": "У нее не было желания <w>раздражать</w> мужа упоминанием о своей победе."
                            }
                        },
                        {
                            "text": "His constant complaints served only to <w>acerbate</w> the tension in the room.",
                            "target_lang_translations": {
                                "ru": "Его постоянные жалобы служили лишь тому, чтобы <w>обострить</w> напряжение в комнате."
                            }
                        }
                    ],
                    "synonyms": [
                        "provoke"
                    ],
                    "common_phrases": [
                        "acerbate the situation",
                        "acerbate his temper"
                    ],
                    "target_lang_definitions": {
                        "ru": "Вызывать у кого-либо раздражение, гнев или досаду."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "раздражать",
                                "target_lang_sense_clarification": "вызывать недовольство"
                            },
                            {
                                "target_lang_word": "озлоблять",
                                "target_lang_sense_clarification": "делать злым или ожесточенным"
                            },
                            {
                                "target_lang_word": "обострять",
                                "target_lang_sense_clarification": "усиливать негативные чувства или напряжение"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "a157b67c-680b-341c-81ed-14fe94941f71",
                    "sense_definition": "To make something taste bitter or sour.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "verb_make_bitter",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Adding too much vinegar will <w>acerbate</w> the flavor of the soup.",
                            "target_lang_translations": {
                                "ru": "Добавление слишком большого количества уксуса <w>сделает кислым</w> вкус супа."
                            }
                        },
                        {
                            "text": "The chef was careful not to <w>acerbate</w> the dish with strong spices.",
                            "target_lang_translations": {
                                "ru": "Шеф-повар старался не <w>портить горечью</w> блюдо сильными специями."
                            }
                        }
                    ],
                    "synonyms": [
                        "sour",
                        "embitter"
                    ],
                    "antonyms": [
                        "sweeten"
                    ],
                    "target_lang_definitions": {
                        "ru": "Делать что-либо горьким или кислым на вкус."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "придавать горечь",
                                "target_lang_sense_clarification": "делать горьким"
                            },
                            {
                                "target_lang_word": "делать кислым",
                                "target_lang_sense_clarification": "повышать кислотность"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "pos": "adjective",
            "senses": [
                {
                    "sense_id": "0035bfd8-1527-3cdc-ac41-27910b2e866a",
                    "sense_definition": "Having a bitter, sour, or sharp nature or disposition.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "His <w>acerbate</w> remarks offended almost everyone at the dinner table.",
                            "target_lang_translations": {
                                "ru": "Его <w>едкие</w> замечания обидели почти всех за обеденным столом."
                            }
                        },
                        {
                            "text": "The critic is known for his <w>acerbate</w> wit and unforgiving reviews.",
                            "target_lang_translations": {
                                "ru": "Критик известен своим <w>язвительным</w> остроумием и беспощадными рецензиями."
                            }
                        }
                    ],
                    "synonyms": [
                        "sour",
                        "embitter"
                    ],
                    "common_phrases": [
                        "acerbate wit",
                        "acerbate tone"
                    ],
                    "target_lang_definitions": {
                        "ru": "Обладающий горьким, едким или резким характером или нравом."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "едкий",
                                "target_lang_sense_clarification": "о словах или замечаниях"
                            },
                            {
                                "target_lang_word": "язвительный",
                                "target_lang_sense_clarification": "насмешливый и злой"
                            },
                            {
                                "target_lang_word": "желчный",
                                "target_lang_sense_clarification": "раздражительный и злобный"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}