    "entries": [
        {
            "pos": "adverb",
            "senses": [
                {
                    "sense_id": "444a0abb-7e1f-3d0b-a23f-fa7259b18a18",
                    "sense_definition": "In a firm, secure, or close manner, leaving little space or room for movement.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "physical_tightness",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "She held the child's hand <w>tightly</w> as they crossed the busy street.",
                            "target_lang_translations": {
                                "ru": "Она <w>крепко</w> держала ребенка за руку, когда они переходили оживленную улицу."
                            }
                        },
                        {
                            "text": "Make sure the lid is screwed on <w>tightly</w> so the water does not leak out.",
                            "target_lang_translations": {
                                "ru": "Убедитесь, что крышка завинчена <w>плотно</w>, чтобы вода не вытекла."
                            }
                        }
                    ],
                    "synonyms": [
                        "firmly",
                        "securely",
                        "closely"
                    ],
                    "antonyms": [
                        "loosely"
                    ],
                    "common_phrases": [
                        "hold tightly",
                        "wrapped tightly",
                        "tightly controlled",
                        "tightly knit"
                    ],
                    "target_lang_definitions": {
                        "ru": "Крепко, надежно или вплотную; так, что остается мало места или свободы движения"
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "крепко",
                                "target_lang_sense_clarification": "о силе захвата или удержания"
                            },
                            {
                                "target_lang_word": "плотно",
                                "target_lang_sense_clarification": "о прилегании, закрытии или соединении частей"
                            },
                            {
                                "target_lang_word": "туго",
                                "target_lang_sense_clarification": "о затягивании, натяжении или завинчивании"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "3fcf2a6b-fedc-3b02-a3e1-b19c6d5aa4cf",
                    "sense_definition": "In a tense or curt manner, often suggesting suppressed anger or emotion.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "emotional_manner",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "He smiled <w>tightly</w> when he heard the bad news, trying to hide his disappointment.",
                            "target_lang_translations": {
                                "ru": "Он <w>натянуто</w> улыбнулся, услышав плохие новости, пытаясь скрыть разочарование."
                            }
                        },
                        {
                            "text": "She spoke <w>tightly</w>, clearly upset by the accusation but refusing to shout.",
                            "target_lang_translations": {
                                "ru": "Она говорила <w>напряжённо</w>, явно расстроенная обвинением, но сдерживаясь от крика."
                            }
                        }
                    ],
                    "synonyms": [
                        "tensely",
                        "stiffly",
                        "curtly"
                    ],
                    "common_phrases": [
                        "smiled tightly",
                        "said tightly"
                    ],
                    "target_lang_definitions": {
                        "ru": "Напряженно или сухо; часто указывает на сдерживаемый гнев или эмоции"
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "напряжённо",
                                "target_lang_sense_clarification": "об эмоциональном состоянии, голосе или позе"
                            },
                            {
                                "target_lang_word": "натянуто",
                                "target_lang_sense_clarification": "об улыбке или неестественном поведении"
