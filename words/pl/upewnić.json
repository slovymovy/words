    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "5d378c9a-4932-3083-89e8-f6c6f5fff77b",
                    "sense_definition": "Sprawdzić coś lub zdobyć dowód na coś, aby pozbyć się wątpliwości i zyskać pewność (używane z zaimkiem „się”).",
                    "learner_level": "A2",
                    "frequency": "High",
                    "semantic_group_id": "verification",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Muszę się <upewnić>, że zamknąłem wszystkie okna przed wyjazdem.",
                            "target_lang_translations": {
                                "ru": "Я должен <убедиться>, что закрыл все окна перед отъездом."
                            }
                        },
                        {
                            "text": "Zadzwoń do biura, aby się <upewnić>, że twoja rezerwacja jest nadal aktualna.",
                            "target_lang_translations": {
                                "ru": "Позвони в офис, чтобы <удостовериться>, что твоя бронь всё ещё действительна."
                            }
                        }
                    ],
                    "synonyms": [
                        "sprawdzić",
                        "przekonać się",
                        "zweryfikować"
                    ],
                    "common_phrases": [
                        "upewnić się, że",
                        "muszę się upewnić",
                        "upewnić się osobiście",
                        "upewnić się co do"
                    ],
                    "traits": [
                        {
                            "trait_type": "form",
                            "comment": "czasownik zwrotny, używany z 'się'"
                        }
                    ],
                    "target_lang_definitions": {
                        "ru": "Проверить что-то или получить доказательства, чтобы избавиться от сомнений и обрести уверенность (используется с возвратной частицей «się»)."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "убедиться",
                                "target_lang_sense_clarification": "проверить, получить подтверждение (самый частый перевод)"
                            },
                            {
                                "target_lang_word": "удостовериться",
                                "target_lang_sense_clarification": "официально проверить, убедиться в истинности"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "622ed7fd-13ba-3500-8e3d-47d8c47e2e23",
                    "sense_definition": "Sprawić, że inna osoba nabierze przekonania o czymś i przestanie mieć wątpliwości.",
                    "learner_level": "B1",
                    "frequency": "Middle",
                    "semantic_group_id": "persuasion",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Lekarz <upewnił> pacjenta, że przepisane leki szybko zadziałają.",
                            "target_lang_translations": {
                                "ru": "Врач <уверил> пациента, что прописанные лекарства быстро подействуют."
                            }
                        },
                        {
                            "text": "Ten sukces <upewnił> go w przekonaniu, że wybrał właściwą drogę kariery.",
                            "target_lang_translations": {
                                "ru": "Этот успех <убедил> его в том, что он выбрал правильный карьерный путь."
                            }
                        }
                    ],
                    "synonyms": [
                        "przekonać",
                        "zapewnić",
                        "utwierdzić"
                    ],
                    "common_phrases": [
                        "upewnić kogoś",
                        "upewnić w przekonaniu",
                        "upewnić wszystkich"
                    ],
                    "target_lang_definitions": {
                        "ru": "Заставить другого человека поверить во что-то, избавить его от сомнений."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "убедить",
                                "target_lang_sense_clarification": "заставить поверить, доказать правоту"
                            },
                            {
                                "target_lang_word": "уверить",
                                "target_lang_sense_clarification": "внушить уверенность"
                            },
                            {
                                "target_lang_word": "утвердить",
                                "target_lang_sense_clarification": "укрепить (в мнении, решении)"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}