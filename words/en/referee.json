{
    "word_family": [
        "refer",
        "reference",
        "referral"
    ],
    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "85bf1f27-1092-3ebf-899f-192aa3114d91",
                    "sense_definition": "An official who controls a sports game and ensures the rules are followed.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The <w>referee</w> blew the whistle to signal the end of the match.",
                            "target_lang_translations": {
                                "ru": "<w>Судья</w> дал свисток, сигнализируя об окончании матча."
                            }
                        },
                        {
                            "text": "Players must respect the decision of the <w>referee</w> even if they disagree.",
                            "target_lang_translations": {
                                "ru": "Игроки должны уважать решение <w>арбитра</w>, даже если они с ним не согласны."
                            }
                        }
                    ],
                    "synonyms": [
                        "umpire",
                        "official",
                        "judge",
                        "ref"
                    ],
                    "common_phrases": [
                        "football referee",
                        "match referee",
                        "assistant referee"
                    ],
                    "target_lang_definitions": {
                        "ru": "Спортивный судья, который контролирует ход игры и следит за соблюдением правил."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "судья",
                                "target_lang_sense_clarification": "в спорте"
                            },
                            {
                                "target_lang_word": "арбитр",
                                "target_lang_sense_clarification": "спортивный"
                            },
                            {
                                "target_lang_word": "рефери",
                                "target_lang_sense_clarification": "заимствование"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "fc2d8b9c-3e9b-3285-a9e9-9de5dbf65225",
                    "sense_definition": "A person willing to testify to someone's character or ability, usually for a job application.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "She listed her former boss as a <w>referee</w> on her resume.",
                            "target_lang_translations": {
                                "ru": "Она указала своего бывшего начальника в качестве <w>рекомендателя</w> в резюме."
                            }
                        },
                        {
                            "text": "The company will contact your <w>referee</w> before making a job offer.",
                            "target_lang_translations": {
                                "ru": "Компания свяжется с вашим <w>рекомендателем</w> перед тем, как сделать предложение о работе."
                            }
                        }
                    ],
                    "synonyms": [
                        "reference"
                    ],
                    "common_phrases": [
                        "name a referee",
                        "academic referee"
                    ],
                    "traits": [
                        {
                            "trait_type": "regional",
                            "comment": "British/Commonwealth"
                        }
                    ],
                    "target_lang_definitions": {
                        "ru": "Человек, готовый подтвердить чью-либо квалификацию или личные качества, обычно при приеме на работу."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "рекомендатель",
                                "target_lang_sense_clarification": "для резюме"
                            },
                            {
                                "target_lang_word": "поручитель",
                                "target_lang_sense_clarification": "гарант"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "d8a5d68b-45a4-3cb6-bb5f-0ce1972ec2cf",
                    "sense_definition": "An expert who evaluates a manuscript or article to decide if it should be published.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The journal sent the paper to a third <w>referee</w> to resolve the conflict.",
                            "target_lang_translations": {
                                "ru": "Журнал отправил статью третьему <w>рецензенту</w> для разрешения противоречий."
                            }
                        },
                        {
                            "text": "Being a <w>referee</w> for academic journals requires significant time and expertise.",
                            "target_lang_translations": {
                                "ru": "Работа <w>рецензентом</w> в научных журналах требует много времени и опыта."
                            }
                        }
                    ],
                    "synonyms": [
                        "reviewer",
                        "peer reviewer"
                    ],
                    "common_phrases": [
                        "anonymous referee",
                        "external referee"
                    ],
                    "target_lang_definitions": {
                        "ru": "Эксперт, оценивающий рукопись или статью для решения вопроса о её публикации."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "рецензент",
                                "target_lang_sense_clarification": "научных работ"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "8978acfc-4d8f-35bd-9a84-fda9b6c586d0",
                    "sense_definition": "A person formally appointed to settle a dispute or controversy.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The government appointed a <w>referee</w> to mediate the strike negotiations.",
                            "target_lang_translations": {
                                "ru": "Правительство назначило <w>арбитра</w> для посредничества в переговорах о забастовке."
                            }
                        },
                        {
                            "text": "He acted as a <w>referee</w> in the argument between his two brothers.",
                            "target_lang_translations": {
                                "ru": "Он выступил в роли <w>судьи</w> в споре между двумя своими братьями."
                            }
                        }
                    ],
                    "synonyms": [
                        "arbitrator",
                        "mediator",
                        "adjudicator"
                    ],
                    "common_phrases": [
                        "act as referee"
                    ],
                    "target_lang_definitions": {
                        "ru": "Лицо, официально назначенное для разрешения спора или конфликта."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "арбитр",
                                "target_lang_sense_clarification": "в споре"
                            },
                            {
                                "target_lang_word": "третейский судья",
                                "target_lang_sense_clarification": "юридический термин"
                            },
                            {
                                "target_lang_word": "посредник",
                                "target_lang_sense_clarification": "медиатор"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "709b372b-3b62-37f4-ab47-d85999e83709",
                    "sense_definition": "To supervise a sports match or adjudicate a dispute to ensure rules are followed.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "He has been asked to <w>referee</w> the championship final next week.",
                            "target_lang_translations": {
                                "ru": "Его попросили <w>судить</w> финал чемпионата на следующей неделе."
                            }
                        },
                        {
                            "text": "It is difficult to <w>referee</w> a game when the crowd is hostile.",
                            "target_lang_translations": {
                                "ru": "Трудно <w>судить</w> игру, когда болельщики настроены враждебно."
                            }
                        }
                    ],
                    "synonyms": [
                        "officiate",
                        "umpire",
                        "judge",
                        "arbitrate"
                    ],
                    "common_phrases": [
                        "referee a match",
                        "referee a game"
                    ],
                    "target_lang_definitions": {
                        "ru": "Судить спортивный матч или разрешать спор, следя за соблюдением правил."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "судить",
                                "target_lang_sense_clarification": "матч или игру"
                            },
                            {
                                "target_lang_word": "быть судьёй",
                                "target_lang_sense_clarification": "выполнять обязанности судьи"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}