                {
                    "sense_id": "fbd06eab-cbf1-3a50-a769-d3699c126190",
                    "sense_definition": "Constant concern over material possessions and wealth; a great or excessive regard for worldly concerns.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Many people feel that modern society is driven too much by <w>materialism</w>.",
                            "target_lang_translations": {
                                "ru": "Многие считают, что современным обществом слишком сильно движет <w>материализм</w>."
                            }
                        },
                        {
                            "text": "He decided to reject <w>materialism</w> and live a simpler life in the countryside.",
                            "target_lang_translations": {
                                "ru": "Он решил отвергнуть <w>материализм</w> и жить более простой жизнью в деревне."
                            }
                        }
                    ],
                    "antonyms": [
                        "spirituality"
                    ],
                    "common_phrases": [
                        "modern materialism",
                        "consumer materialism",
                        "reject materialism",
                        "growing materialism"
                    ],
                    "target_lang_definitions": {
                        "ru": "Постоянная забота о материальных благах и богатстве; чрезмерное внимание к земным интересам в ущерб духовным."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "материализм",
                                "target_lang_sense_clarification": "практицизм, погоня за благами"
                            },
                            {
                                "target_lang_word": "вещизм",
                                "target_lang_sense_clarification": "пристрастие к вещам"
