{
    "word_family": [
        "critic",
        "critical",
        "criticize",
        "critique",
        "critically"
    ],
    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "5f78795f-9d17-3281-aac7-ee04b2eea827",
                    "sense_definition": "The act of expressing disapproval or pointing out faults; a critical judgment passed on someone or something.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "disapproval",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The politician received a lot of public <w>criticism</w> for his controversial stance on the issue.",
                            "target_lang_translations": {
                                "ru": "Политик подвергся широкой общественной <w>критике</w> за свою спорную позицию по этому вопросу."
                            }
                        },
                        {
                            "text": "She accepted the constructive <w>criticism</w> from her manager and used it to improve her work.",
                            "target_lang_translations": {
                                "ru": "Она приняла конструктивную <w>критику</w> от своего руководителя и использовала её для улучшения своей работы."
                            }
                        }
                    ],
                    "synonyms": [
                        "censure",
                        "stricture"
                    ],
                    "antonyms": [
                        "praise",
                        "approval",
                        "compliment"
                    ],
                    "common_phrases": [
                        "constructive criticism",
                        "face criticism",
                        "accept criticism",
                        "sharp criticism"
                    ],
                    "target_lang_definitions": {
                        "ru": "Выражение неодобрения или указание на недостатки; критическое суждение о ком-либо или чем-либо."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "критика",
                                "target_lang_sense_clarification": "указание на недостатки"
                            },
                            {
                                "target_lang_word": "порицание",
                                "target_lang_sense_clarification": "осуждение, строгий выговор"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "f3350fba-f01b-3c2a-88da-728f332a53f5",
                    "sense_definition": "A detailed examination, analysis, and review of something, such as a literary or artistic work.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "analysis",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The professor published a detailed <w>criticism</w> of the new novel in a literary journal.",
                            "target_lang_translations": {
                                "ru": "Профессор опубликовал подробную <w>критику</w> нового романа в литературном журнале."
                            }
                        },
                        {
                            "text": "His <w>criticism</w> of the economic theory was well-founded and sparked a debate among scholars.",
                            "target_lang_translations": {
                                "ru": "Его <w>критика</w> экономической теории была обоснованной и вызвала дебаты среди ученых."
                            }
                        }
                    ],
                    "synonyms": [
                        "critique"
                    ],
                    "common_phrases": [
                        "literary criticism",
                        "art criticism",
                        "social criticism"
                    ],
                    "target_lang_definitions": {
                        "ru": "Детальное изучение, анализ и оценка чего-либо, например, литературного или художественного произведения."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "критика",
                                "target_lang_sense_clarification": "анализ и оценка произведений"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}