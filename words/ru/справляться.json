                    ],
                    "common_phrases": [
                        "справляться в словаре",
                        "справляться по книге"
                    ],
                    "target_lang_definitions": {
                        "en": "To look for information in a reference source to verify details."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "consult",
                                "target_lang_sense_clarification": "to look for information in a book or map"
                            },
                            {
                                "target_lang_word": "check",
                                "target_lang_sense_clarification": "to verify information"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "25a2f4ec-6492-349f-b1bb-bdc6f9858060",
                    "sense_definition": "Страдательный залог от глагола <w>справлять</w> (праздновать или совершать обряд).",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "passive_form",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "В этой деревне до сих пор широко <w>справляется</w> праздник сбора урожая.",
                            "target_lang_translations": {
                                "en": "In this village, the harvest festival is still widely <w>celebrated</w>."
                            }
                        },
                        {
                            "text": "День рождения обычно <w>справляется</w> в кругу самых близких друзей.",
                            "target_lang_translations": {
                                "en": "A birthday is usually <w>celebrated</w> in the circle of closest friends."
                            }
                        }
                    ],
                    "traits": [
                        {
                            "trait_type": "form",
                            "comment": "passive voice"
                        }
                    ],
                    "target_lang_definitions": {
                        "en": "To be performed or held (referring to a celebration or rite)."
                    },
                    "translations": {
