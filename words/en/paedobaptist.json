            "senses": [
                {
                    "sense_id": "40ae21d6-b91a-3681-a425-cb851e5b562a",
                    "sense_definition": "Relating to the baptism of infants or small children.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The denomination maintains a <w>paedobaptist</w> theology that views the family unit as central to the covenant.",
                            "target_lang_translations": {
                                "ru": "Деноминация придерживается <w>педобаптистского</w> богословия, которое рассматривает семью как центр завета."
                            }
                        },
                        {
                            "text": "They attended a church with a <w>paedobaptist</w> tradition, where babies were baptized during the morning service.",
                            "target_lang_translations": {
                                "ru": "Они посещали церковь с <w>педобаптистской</w> традицией, где младенцев крестили во время утренней службы."
                            }
                        }
                    ],
                    "antonyms": [
                        "credobaptist"
                    ],
                    "common_phrases": [
                        "paedobaptist theology",
                        "paedobaptist view",
                        "paedobaptist tradition"
                    ],
                    "target_lang_definitions": {
                        "ru": "Относящийся к крещению младенцев."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "педобаптистский",
                                "target_lang_sense_clarification": "богословский термин"
                            },
                            {
                                "target_lang_word": "относящийся к детокрещению",
