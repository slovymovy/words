                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "светящийся",
                                "target_lang_sense_clarification": "испускающий свет"
                            },
                            {
                                "target_lang_word": "сияющий",
                                "target_lang_sense_clarification": "выражающий счастье (о лице)"
                            }
                        ]
                    }
                }
            ]
        },
        {
