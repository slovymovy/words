                    ],
                    "common_phrases": [
                        "система смазки",
                        "смазка лыж",
                        "автоматическая смазка",
                        "смазка механизма"
                    ],
                    "target_lang_definitions": {
                        "en": "The process of applying oil or grease to mechanisms or surfaces."
                    },
                    "translations": {
                        "en": [
