    "entries": [
        {
            "pos": "adverb",
            "senses": [
                {
                    "sense_id": "df57720f-f2b1-3819-9845-0c34590c83df",
                    "sense_definition": "Gebruikt om aan te geven wie een bepaalde uitspraak heeft gedaan; volgens.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "attribution",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "U kunt gerust zijn, we gaan geen oorlog voeren, <w>aldus</w> de president.",
                            "target_lang_translations": {
                                "en": "You can rest assured, we are not going to wage war, <w>according to</w> the president.",
                                "ru": "Вы можете быть спокойны, мы не будем вести войну, <w>по словам</w> президента."
                            }
                        },
                        {
                            "text": "De nieuwe maatregelen zijn noodzakelijk voor de veiligheid, <w>aldus</w> de burgemeester.",
                            "target_lang_translations": {
                                "en": "The new measures are necessary for safety, <w>according to</w> the mayor.",
                                "ru": "Новые меры необходимы для безопасности, <w>по словам</w> мэра."
                            }
                        }
                    ],
                    "synonyms": [
                        "volgens",
                        "zei",
                        "zegt"
                    ],
                    "common_phrases": [
                        "aldus de politie",
                        "aldus de woordvoerder",
                        "aldus het bericht"
                    ],
                    "target_lang_definitions": {
                        "en": "Used to indicate who made a certain statement; according to.",
                        "ru": "Используется для указания на то, кто сделал определенное заявление; по словам."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "according to",
                                "target_lang_sense_clarification": "indicating the source of information or a statement"
                            },
                            {
                                "target_lang_word": "said",
                                "target_lang_sense_clarification": "used to attribute a quote to a speaker"
                            }
                        ],
                        "ru": [
                            {
                                "target_lang_word": "по словам",
                                "target_lang_sense_clarification": "указывает на источник информации"
                            },
                            {
                                "target_lang_word": "как заявил",
                                "target_lang_sense_clarification": "вводная конструкция при цитировании"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "0d1f1bee-eb8c-39e2-93d4-1e47acd5b06a",
                    "sense_definition": "Op deze manier; zo.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "manner",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Hij erfde het landgoed van zijn vader en werd <w>aldus</w> een man in goeden doen.",
                            "target_lang_translations": {
                                "en": "He inherited the estate from his father and <w>thus</w> became a wealthy man.",
                                "ru": "Он унаследовал поместье от отца и <w>таким образом</w> стал состоятельным человеком."
                            }
                        },
                        {
                            "text": "De koning ondertekende het verdrag en <w>aldus</w> kwam er eindelijk vrede in het land.",
                            "target_lang_translations": {
                                "en": "The king signed the treaty and <w>thus</w> peace finally came to the land.",
                                "ru": "Король подписал договор, и <w>таким образом</w> в стране наконец наступил мир."
                            }
                        }
                    ],
                    "synonyms": [
                        "zo",
                        "zodoende",
                        "bijgevolg",
                        "op deze wijze"
                    ],
                    "common_phrases": [
                        "aldus geschiedde"
                    ],
                    "target_lang_definitions": {
                        "en": "In this way; thus.",
                        "ru": "Этим способом; так; следовательно."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "thus",
                                "target_lang_sense_clarification": "in this manner or as a result (formal)"
                            },
                            {
                                "target_lang_word": "in this way",
                                "target_lang_sense_clarification": "referring to the method or manner described"
                            }
                        ],
                        "ru": [
                            {
                                "target_lang_word": "таким образом",
                                "target_lang_sense_clarification": "указывает на способ или следствие"
                            },
                            {
                                "target_lang_word": "так",
                                "target_lang_sense_clarification": "наречие образа действия"
                            }
                        ]
                    }
                }
            ]
        }
    ]
