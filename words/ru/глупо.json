    "entries": [
        {
            "pos": "adverb",
            "senses": [
                {
                    "sense_id": "96e69160-6a6e-3d02-ac71-7b3897aac344",
                    "sense_definition": "Неразумно, бестолково; образом, свойственным человеку с недостатком ума.",
                    "learner_level": "A2",
                    "frequency": "High",
                    "semantic_group_id": "manner",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Ты поступил очень <w>глупо</w>, когда отказался от помощи друзей.",
                            "target_lang_translations": {
                                "en": "You acted very <w>stupidly</w> when you refused your friends' help."
                            }
                        },
                        {
                            "text": "В этой огромной шапке я выгляжу немного <w>глупо</w>.",
                            "target_lang_translations": {
                                "en": "I look a bit <w>stupid</w> in this huge hat."
                            }
                        }
                    ],
                    "synonyms": [
                        "нелепо",
                        "безумно"
                    ],
                    "antonyms": [
                        "обдуманно",
                        "осмысленно"
                    ],
                    "common_phrases": [
                        "поступить глупо",
                        "выглядеть глупо",
                        "вести себя глупо"
                    ],
                    "target_lang_definitions": {
                        "en": "In a foolish or senseless manner; unreasonably."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "stupidly",
                                "target_lang_sense_clarification": "in a manner showing a lack of good sense or judgment"
                            },
                            {
                                "target_lang_word": "foolishly",
                                "target_lang_sense_clarification": "unwisely; without good judgment"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "5eb83400-8f6f-3e79-8d9c-f45f1aaf38df",
                    "sense_definition": "Оценка ситуации или действий как противоречащих здравому смыслу.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "predicative",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Было бы <w>глупо</w> спорить с очевидными фактами.",
                            "target_lang_translations": {
                                "en": "It would be <w>stupid</w> to argue with obvious facts."
                            }
                        },
                        {
                            "text": "Это звучит <w>глупо</w>, но я забыл свой собственный номер телефона.",
                            "target_lang_translations": {
                                "en": "It sounds <w>stupid</w>, but I forgot my own phone number."
                            }
                        }
                    ],
                    "synonyms": [
                        "нелепо",
                        "безумно"
                    ],
                    "antonyms": [
                        "обдуманно",
                        "осмысленно"
                    ],
                    "common_phrases": [
                        "это глупо",
                        "звучит глупо",
                        "получилось глупо"
                    ],
                    "target_lang_definitions": {
                        "en": "Evaluation of a situation or action as contrary to common sense."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "stupid",
                                "target_lang_sense_clarification": "predicative use (e.g., 'it is stupid')"
                            },
                            {
                                "target_lang_word": "foolish",
                                "target_lang_sense_clarification": "unwise or imprudent"
                            },
                            {
                                "target_lang_word": "silly",
                                "target_lang_sense_clarification": "lacking seriousness or sense"
                            }
                        ]
                    }
                }
            ]
        },
        {
