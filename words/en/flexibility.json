    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "ab44e97b-fa05-3172-b264-ef8171dd3831",
                    "sense_definition": "The quality of being able to bend easily without breaking or to adapt to changing circumstances.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "group_1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Regular yoga practice can significantly improve the <w>flexibility</w> of your joints and muscles.",
                            "target_lang_translations": {
                                "ru": "Регулярные занятия йогой могут значительно улучшить <w>гибкость</w> ваших суставов и мышц."
                            }
                        },
                        {
                            "text": "The manager is not prepared to show any <w>flexibility</w> regarding the new company policies.",
                            "target_lang_translations": {
                                "ru": "Менеджер не готов проявить какую-либо <w>гибкость</w> в отношении новой политики компании."
                            }
                        }
                    ],
                    "synonyms": [
                        "pliability",
                        "suppleness",
                        "versatility"
                    ],
                    "antonyms": [
                        "rigidity",
                        "stiffness",
                        "inflexibility"
                    ],
                    "common_phrases": [
                        "show flexibility",
                        "improve flexibility",
                        "lack of flexibility"
                    ],
                    "target_lang_definitions": {
                        "ru": "Способность легко гнуться, не ломаясь, или приспосабливаться к изменяющимся обстоятельствам."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "гибкость",
                                "target_lang_sense_clarification": "физическая или поведенческая"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "b8361361-fb28-389c-aab7-5887dadd5111",
                    "sense_definition": "The freedom or ability to make choices and change plans according to the situation.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "group_1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "This ticket offers full <w>flexibility</w> to change your travel dates without paying an extra fee.",
                            "target_lang_translations": {
                                "ru": "Этот билет предлагает полную <w>гибкость</w> в изменении дат поездки без уплаты дополнительного сбора."
                            }
                        },
                        {
                            "text": "We need some <w>flexibility</w> in the budget to handle unexpected costs effectively.",
                            "target_lang_translations": {
                                "ru": "Нам нужна некоторая <w>гибкость</w> в бюджете, чтобы эффективно справляться с непредвиденными расходами."
                            }
                        }
                    ],
                    "synonyms": [
                        "pliability",
                        "suppleness",
                        "versatility"
                    ],
                    "antonyms": [
                        "restriction",
                        "constraint"
                    ],
                    "common_phrases": [
                        "flexibility to choose",
                        "offer flexibility",
                        "provide flexibility"
                    ],
                    "target_lang_definitions": {
                        "ru": "Свобода или возможность делать выбор и менять планы в зависимости от ситуации."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "гибкость",
                                "target_lang_sense_clarification": "свобода выбора, вариативность"
                            }
                        ]
                    }
                }
            ]
        }
    ]
