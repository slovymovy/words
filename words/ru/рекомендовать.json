{
    "word_family": [
        "рекомендация",
        "рекомендательный"
    ],
    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "6f8e841b-8edd-3b3e-90c4-5b95ff601963",
                    "sense_definition": "Давать совет, предлагать что-либо сделать или выбрать как полезное, нужное или подходящее.",
                    "learner_level": "A2",
                    "frequency": "High",
                    "semantic_group_id": "advice",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Я вам <рекомендую> прочесть эту книгу.",
                            "target_lang_translations": {
                                "en": "I <recommend> you read this book."
                            }
                        },
                        {
                            "text": "Врачи настоятельно <рекомендуют> больше гулять на свежем воздухе.",
                            "target_lang_translations": {
                                "en": "Doctors strongly <recommend> walking more in the fresh air."
                            }
                        }
                    ],
                    "synonyms": [
                        "советовать",
                        "порекомендовать"
                    ],
                    "common_phrases": [
                        "настоятельно рекомендовать",
                        "рекомендовать книгу",
                        "рекомендовать попробовать"
                    ],
                    "target_lang_definitions": {
                        "en": "To give advice, suggest doing something, or choose something as useful, necessary, or suitable."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "recommend",
                                "target_lang_sense_clarification": "to suggest something as beneficial or suitable"
                            },
                            {
                                "target_lang_word": "advise",
                                "target_lang_sense_clarification": "to give counsel or expert opinion"
                            },
                            {
                                "target_lang_word": "suggest",
                                "target_lang_sense_clarification": "to propose an idea or plan"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "e2caf1ae-e4f6-3be7-95e1-b2909f7262ae",
                    "sense_definition": "Давать положительный отзыв о ком-либо, предлагая его кандидатуру на должность или для выполнения работы.",
                    "learner_level": "B1",
                    "frequency": "Middle",
                    "semantic_group_id": "advice",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Можете ли вы <рекомендовать> мне хорошего секретаря?",
                            "target_lang_translations": {
                                "en": "Can you <recommend> a good secretary to me?"
                            }
                        },
                        {
                            "text": "Директор решил <рекомендовать> этого сотрудника на повышение.",
                            "target_lang_translations": {
                                "en": "The director decided to <recommend> this employee for a promotion."
                            }
                        }
                    ],
                    "synonyms": [
                        "порекомендовать"
                    ],
                    "common_phrases": [
                        "рекомендовать специалиста",
                        "рекомендовать сотрудника"
                    ],
                    "target_lang_definitions": {
                        "en": "To give a positive review of someone, proposing their candidacy for a position or task."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "recommend",
                                "target_lang_sense_clarification": "to endorse someone's skills or character"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "665d3700-6644-31f8-89fd-3957a010a4db",
                    "sense_definition": "Представлять кого-либо кому-либо при знакомстве, называя имя.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Хозяин дома <рекомендовал> гостя своим старым другом.",
                            "target_lang_translations": {
                                "en": "The host <introduced> the guest as his old friend."
                            }
                        },
                        {
                            "text": "Позвольте <рекомендовать> вам моего коллегу, Ивана Петровича.",
                            "target_lang_translations": {
                                "en": "Allow me to <introduce> my colleague to you, Ivan Petrovich."
                            }
                        }
                    ],
                    "common_phrases": [
                        "позвольте рекомендовать"
                    ],
                    "traits": [
                        {
                            "trait_type": "archaic",
                            "comment": "устаревшее значение"
                        }
                    ],
                    "target_lang_definitions": {
                        "en": "To introduce someone to someone else upon meeting, stating their name."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "introduce",
                                "target_lang_sense_clarification": "modern equivalent for this archaic usage"
                            },
                            {
                                "target_lang_word": "present",
                                "target_lang_sense_clarification": "formal introduction"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}