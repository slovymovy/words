    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "440b2369-4952-35f8-894c-78da1ec3a3a4",
                    "sense_definition": "Высказывать мнение о недостатках кого-либо или чего-либо, подвергать отрицательной оценке или разбору.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Начальник начал <критиковать> мой отчет при всех сотрудниках.",
                            "target_lang_translations": {
                                "en": "The boss started to <w>criticize</w> my report in front of all the employees."
                            }
                        },
                        {
                            "text": "Не стоит <критиковать> других людей, если вы не знаете их ситуации.",
                            "target_lang_translations": {
                                "en": "You shouldn't <w>criticize</w> other people if you don't know their situation."
                            }
                        }
                    ],
                    "synonyms": [
                        "порицать",
                        "осуждать"
                    ],
                    "antonyms": [
                        "одобрять",
                        "хвалить"
                    ],
                    "common_phrases": [
                        "критиковать власть",
                        "критиковать решение",
                        "постоянно критиковать",
                        "жестко критиковать"
                    ],
                    "target_lang_definitions": {
                        "en": "To express disapproval or point out faults in someone or something."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "criticize",
                                "target_lang_sense_clarification": "to find fault with"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "4b954851-81ba-3ef4-8b72-2fae1fafbf8d",
                    "sense_definition": "Писать критические статьи, рецензии или отзывы о произведениях искусства или литературы; заниматься профессиональным анализом.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Известный литератор взялся <критиковать> новый роман молодого автора.",
                            "target_lang_translations": {
                                "en": "A famous writer undertook to <w>critique</w> the young author's new novel."
                            }
                        },
                        {
                            "text": "В девятнадцатом веке было престижно <критиковать> театральные постановки в толстых журналах.",
                            "target_lang_translations": {
                                "en": "In the nineteenth century, it was prestigious to <w>critique</w> theatrical productions in thick journals."
                            }
                        }
                    ],
                    "common_phrases": [
                        "критиковать книгу",
                        "критиковать статью"
                    ],
                    "traits": [
                        {
                            "trait_type": "archaic",
                            "comment": "В современном языке чаще используется 'рецензировать' или 'писать критику'."
                        }
                    ],
                    "target_lang_definitions": {
                        "en": "To analyze and evaluate works of art or literature; to write reviews."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "critique",
                                "target_lang_sense_clarification": "to evaluate a work of art or literature"
                            },
                            {
                                "target_lang_word": "review",
                                "target_lang_sense_clarification": "to write a critical appraisal"
                            }
                        ]
                    }
                }
            ]
        }
    ]
