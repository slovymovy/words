            "pos": "adverb",
            "senses": [
                {
                    "sense_id": "3c39df1d-d4aa-3f07-b9b5-5f373b7ef0b8",
                    "sense_definition": "W sposób bardzo mocny i napięty, zazwyczaj trzymając lub ściskając coś fizycznie (często ze strachu, bólu lub wysiłku).",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Przestraszone dziecko <kurczowo> trzymało się ręki matki podczas burzy.",
                            "target_lang_translations": {
                                "ru": "Испуганный ребенок <судорожно> держался за руку матери во время грозы."
                            }
                        },
                        {
                            "text": "Pasażerowie <kurczowo> chwycili za poręcze, gdy autobus gwałtownie zahamował.",
                            "target_lang_translations": {
                                "ru": "Пассажиры <судорожно> схватились за поручни, когда автобус резко затормозил."
                            }
                        }
                    ],
                    "synonyms": [
                        "mocno",
                        "silnie"
                    ],
                    "common_phrases": [
                        "kurczowo trzymać się",
                        "kurczowo ściskać",
                        "kurczowo zaciśnięte palce"
                    ],
                    "target_lang_definitions": {
                        "ru": "Очень сильно и напряженно, обычно физически удерживая или сжимая что-то (часто от страха, боли или напряжения)."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "судорожно",
                                "target_lang_sense_clarification": "о резких, напряженных движениях или хватке"
                            },
                            {
                                "target_lang_word": "крепко",
                                "target_lang_sense_clarification": "о силе удержания"
                            },
                            {
                                "target_lang_word": "мертвой хваткой",
                                "target_lang_sense_clarification": "идиома: очень сильно, не отпуская"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "735290b4-b6f0-3d3f-b68c-90d01f9a0a9f",
                    "sense_definition": "Z wielką determinacją, desperacją lub uporem, starając się za wszelką cenę coś zachować, utrzymać lub nie dopuścić do zmiany (np. stanowiska, poglądów, życia).",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Wielu pracowników <kurczowo> trzyma się swoich posad w obawie przed bezrobociem.",
                            "target_lang_translations": {
                                "ru": "Многие работники <изо всех сил> держатся за свои должности, опасаясь безработицы."
                            }
                        },
                        {
                            "text": "Nie warto <kurczowo> trzymać się starych metod, jeśli nowe rozwiązania są skuteczniejsze.",
                            "target_lang_translations": {
                                "ru": "Не стоит <упорно> держаться за старые методы, если новые решения более эффективны."
                            }
                        }
                    ],
                    "synonyms": [
                        "uparcie"
                    ],
                    "common_phrases": [
                        "kurczowo trzymać się władzy",
                        "kurczowo trzymać się życia",
                        "kurczowo trzymać się zasad"
                    ],
                    "target_lang_definitions": {
                        "ru": "С большой решимостью, отчаянием или упорством, стараясь любой ценой сохранить что-то, удержать или не допустить изменений."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "изо всех сил",
                                "target_lang_sense_clarification": "прилагая максимум усилий для удержания чего-либо"
                            },
                            {
                                "target_lang_word": "отчаянно",
                                "target_lang_sense_clarification": "с чувством безысходности"
                            },
                            {
                                "target_lang_word": "упорно",
                                "target_lang_sense_clarification": "не желая отступать от принципов или привычек"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "c75c4bf7-f467-3e3b-9ac5-5dff2ba37b06",
                    "sense_definition": "W sposób gwałtowny, mimowolny i bolesny, przypominający fizjologiczny skurcz mięśni.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Jego twarz wykrzywiła się <kurczowo> pod wpływem nagłego ataku bólu.",
                            "target_lang_translations": {
                                "ru": "Его лицо <судорожно> исказилось от внезапного приступа боли."
                            }
                        },
                        {
                            "text": "Serce starca ścisnęło się <kurczowo> na widok zniszczonego domu rodzinnego.",
                            "target_lang_translations": {
                                "ru": "Сердце старика <судорожно> сжалось при виде разрушенного родного дома."
                            }
                        }
                    ],
                    "synonyms": [
                        "spastycznie"
                    ],
                    "common_phrases": [
                        "kurczowo drgać",
                        "kurczowo zacisnąć powieki"
                    ],
                    "target_lang_definitions": {
                        "ru": "Резко, непроизвольно и болезненно, напоминая физиологический спазм мышц."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "судорожно",
                                "target_lang_sense_clarification": "напоминает спазм"
                            },
                            {
                                "target_lang_word": "спазматически",
                                "target_lang_sense_clarification": "медицинский или физиологический контекст"
                            }
                        ]
                    }
                }
            ]
        }
    ]
