                    "antonyms": [
                        "separated"
                    ],
                    "common_phrases": [
                        "lotted together",
                        "lotted up"
                    ],
                    "target_lang_definitions": {
                        "ru": "Разделять на партии или лоты (обычно для аукциона или продажи)."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "разбивать на лоты",
                                "target_lang_sense_clarification": "делить предметы на группы для продажи"
                            },
                            {
                                "target_lang_word": "группировать",
                                "target_lang_sense_clarification": "объединять в партии"
                            }
                        ]
                    }
                }
            ]
        },
        {
