    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "27f0bdc2-c87e-346e-95b6-a434fa0086ca",
                    "sense_definition": "A clever argument that seems true at first but is actually false and used to deceive people.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "deceptive_reasoning",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The lawyer's defense relied on a subtle <w>sophism</w> that confused the jury.",
                            "target_lang_translations": {
                                "ru": "Защита адвоката строилась на тонком <w>софизме</w>, который сбил присяжных с толку."
                            }
                        },
                        {
                            "text": "She realized that his explanation was nothing more than a <w>sophism</w> intended to hide his mistake.",
                            "target_lang_translations": {
                                "ru": "Она поняла, что его объяснение было не чем иным, как <w>софизмом</w>, призванным скрыть его ошибку."
                            }
                        }
                    ],
                    "synonyms": [
                        "sophistry"
                    ],
                    "common_phrases": [
                        "mere sophism",
                        "political sophism"
                    ],
                    "target_lang_definitions": {
                        "ru": "Ложное умозаключение, которое кажется правильным, но намеренно используется для обмана."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "софизм",
                                "target_lang_sense_clarification": "ложное умозаключение"
                            },
                            {
                                "target_lang_word": "уловка",
                                "target_lang_sense_clarification": "хитрость в споре"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "ac564dc1-c144-355c-9699-7d82cf1b73a3",
                    "sense_definition": "The philosophy and teaching methods of the Sophists in ancient Greece, often associated with clever but misleading arguments.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "deceptive_reasoning",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Ancient <w>sophism</w> focused heavily on rhetoric and the art of persuasion.",
                            "target_lang_translations": {
                                "ru": "Древняя <w>софистика</w> уделяла большое внимание риторике и искусству убеждения."
                            }
                        },
                        {
                            "text": "The professor explained how Greek <w>sophism</w> influenced the development of moral relativism.",
                            "target_lang_translations": {
                                "ru": "Профессор объяснил, как греческая <w>софистика</w> повлияла на развитие морального релятивизма."
                            }
                        }
                    ],
                    "common_phrases": [
                        "Greek sophism"
                    ],
                    "target_lang_definitions": {
                        "ru": "Философское течение и методы обучения софистов в Древней Греции."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "софистика",
                                "target_lang_sense_clarification": "философское течение"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "6b998fe8-c91c-383f-a455-4aaf70209e43",
                    "sense_definition": "An archaic spelling of <w>Sufism</w>.",
