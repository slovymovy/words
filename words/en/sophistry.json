    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "1c8a90cd-f396-308f-981c-f997f881bdc4",
                    "sense_definition": "The use of reasoning or arguments that sound correct but are actually false, often used to deceive people.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "sophistry_meaning",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The lawyer's closing statement was a masterpiece of <w>sophistry</w> that confused the jury.",
                            "target_lang_translations": {
                                "ru": "Заключительная речь адвоката была шедевром <w>софистики</w>, который запутал присяжных."
                            }
                        },
                        {
                            "text": "We must look past the political <w>sophistry</w> and focus on the actual facts of the case.",
                            "target_lang_translations": {
                                "ru": "Мы должны отбросить политическую <w>софистику</w> и сосредоточиться на реальных фактах дела."
                            }
                        }
                    ],
                    "synonyms": [
                        "casuistry",
                        "chicanery",
                        "deception"
                    ],
                    "antonyms": [
                        "honesty",
                        "candor",
                        "truthfulness"
                    ],
                    "common_phrases": [
                        "sheer sophistry",
                        "political sophistry",
                        "mere sophistry"
                    ],
                    "target_lang_definitions": {
                        "ru": "Использование рассуждений или аргументов, которые кажутся правильными, но на самом деле ложны; часто используется для обмана."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "софистика",
                                "target_lang_sense_clarification": "метод рассуждения"
                            },
                            {
                                "target_lang_word": "словоблудие",
                                "target_lang_sense_clarification": "разг. пустые разговоры"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "305330d2-e228-38b1-b3ce-309ba4952eb5",
                    "sense_definition": "A specific argument that appears plausible but is fallacious or misleading.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "sophistry_meaning",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "His essay was full of clever <w>sophistries</w> that crumbled under close inspection.",
                            "target_lang_translations": {
                                "ru": "Его эссе было полно хитроумных <w>софизмов</w>, которые рассыпались при внимательном рассмотрении."
                            }
                        },
                        {
                            "text": "She dismissed his excuses as mere <w>sophistries</w> designed to avoid responsibility.",
                            "target_lang_translations": {
                                "ru": "Она отвергла его оправдания как сплошные <w>софизмы</w>, придуманные, чтобы избежать ответственности."
                            }
                        }
                    ],
                    "synonyms": [
                        "sophism",
                        "fallacy"
                    ],
                    "antonyms": [
                        "fact",
                        "truth"
                    ],
                    "target_lang_definitions": {
                        "ru": "Конкретный аргумент, который кажется правдоподобным, но является ошибочным или вводящим в заблуждение."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "софизм",
                                "target_lang_sense_clarification": "ложное умозаключение"
                            },
                            {
                                "target_lang_word": "уловка",
                                "target_lang_sense_clarification": "хитрость в споре"
                            }
                        ]
                    }
                }
            ]
        }
    ]
