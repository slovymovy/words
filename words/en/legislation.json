                {
                    "sense_id": "7966f5fc-ca1d-304a-a561-ad834c2692ff",
                    "sense_definition": "A law or a set of laws that has been officially enacted by a governing body.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "laws",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The government passed new <w>legislation</w> to protect the environment from industrial pollution.",
                            "target_lang_translations": {
                                "ru": "Правительство приняло новый <w>закон</w> для защиты окружающей среды от промышленного загрязнения."
                            }
                        },
                        {
                            "text": "Under current <w>legislation</w>, employers must ensure a safe working environment for all staff.",
                            "target_lang_translations": {
                                "ru": "Согласно действующему <w>законодательству</w>, работодатели обязаны обеспечить безопасные условия труда для всех сотрудников."
                            }
                        }
                    ],
                    "common_phrases": [
