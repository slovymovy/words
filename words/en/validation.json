    "entries": [
        {
            "pos": "noun",
            "senses": [
                {
                    "sense_id": "e37b9858-9628-331d-b7ce-54d9188d536c",
                    "sense_definition": "The act of checking or proving that something is accurate, legal, or acceptable.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "action_verification",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The system performs automatic data <w>validation</w> to ensure all fields are correct.",
                            "target_lang_translations": {
                                "ru": "Система выполняет автоматическую <w>валидацию</w> данных, чтобы убедиться в корректности всех полей."
                            }
                        },
                        {
                            "text": "We are waiting for the final <w>validation</w> of the experiment results before publishing.",
                            "target_lang_translations": {
                                "ru": "Мы ждем окончательного <w>подтверждения</w> результатов эксперимента перед публикацией."
                            }
                        }
                    ],
                    "synonyms": [
                        "verification",
                        "confirmation",
                        "authentication",
                        "substantiation"
                    ],
                    "antonyms": [
                        "invalidation",
                        "rejection"
                    ],
                    "common_phrases": [
                        "data validation",
                        "validation process",
                        "validation code"
                    ],
                    "target_lang_definitions": {
                        "ru": "Действие по проверке или доказательству того, что что-либо является точным, законным или приемлемым."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "проверка",
                                "target_lang_sense_clarification": "общий смысл; инспекция данных или фактов"
                            },
                            {
                                "target_lang_word": "подтверждение",
                                "target_lang_sense_clarification": "доказательство правильности или истинности"
                            },
                            {
                                "target_lang_word": "валидация",
                                "target_lang_sense_clarification": "технический термин; проверка соответствия требованиям (IT, производство)"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "bf75207d-4984-3bdf-8d8d-0c521984973e",
                    "sense_definition": "The recognition or affirmation that a person's feelings, opinions, or experiences are valid and worthwhile.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "emotional_support",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "She constantly seeks <w>validation</w> from her peers on social media platforms.",
                            "target_lang_translations": {
                                "ru": "Она постоянно ищет <w>одобрения</w> от своих сверстников в социальных сетях."
                            }
                        },
                        {
                            "text": "Emotional <w>validation</w> is crucial for building a strong and trusting relationship.",
                            "target_lang_translations": {
                                "ru": "Эмоциональное <w>признание</w> важно для построения крепких и доверительных отношений."
                            }
                        }
                    ],
                    "synonyms": [
                        "affirmation",
                        "acceptance",
                        "recognition"
                    ],
                    "antonyms": [
                        "dismissal",
                        "rejection"
                    ],
                    "common_phrases": [
                        "seek validation",
                        "external validation",
                        "emotional validation",
                        "need validation"
                    ],
                    "target_lang_definitions": {
                        "ru": "Признание или подтверждение того, что чувства, мнения или опыт человека обоснованны и ценны."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "признание",
                                "target_lang_sense_clarification": "признание ценности или значимости"
                            },
                            {
                                "target_lang_word": "одобрение",
                                "target_lang_sense_clarification": "положительная оценка действий или чувств"
                            },
                            {
                                "target_lang_word": "поддержка",
                                "target_lang_sense_clarification": "эмоциональное принятие"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "d6dd9f5d-8594-3111-ab40-f2fd132978fc",
                    "sense_definition": "Something, such as a document, mark, or certificate, that serves as proof or confirmation.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "proof_object",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Please ask the receptionist for parking <w>validation</w> before you leave the building.",
                            "target_lang_translations": {
                                "ru": "Пожалуйста, попросите у администратора <w>отметку</w> о парковке, прежде чем покинуть здание."
                            }
                        },
                        {
                            "text": "The certificate serves as <w>validation</w> of his professional qualifications.",
                            "target_lang_translations": {
                                "ru": "Сертификат служит <w>подтверждением</w> его профессиональной квалификации."
                            }
                        }
                    ],
                    "synonyms": [
                        "proof",
                        "certificate",
                        "attestation"
                    ],
                    "common_phrases": [
                        "parking validation",
                        "ticket validation"
                    ],
                    "target_lang_definitions": {
                        "ru": "Что-либо, например документ, отметка или сертификат, служащее доказательством или подтверждением."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "подтверждение",
                                "target_lang_sense_clarification": "документ или факт, служащий доказательством"
                            },
                            {
                                "target_lang_word": "отметка",
                                "target_lang_sense_clarification": "печать или штамп (например, на парковочном талоне)"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "4add52ed-0758-39c4-a083-1cb862820e78",
                    "sense_definition": "The formal process of identifying a prisoner as a member of a specific gang.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "prison_classification",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The officer completed the <w>validation</w> of the new inmate to determine his housing unit.",
                            "target_lang_translations": {
                                "ru": "Офицер завершил <w>идентификацию</w> нового заключенного для определения его блока размещения."
                            }
                        },
                        {
                            "text": "Gang <w>validation</w> protocols are strictly followed to maintain safety within the facility.",
                            "target_lang_translations": {
                                "ru": "Протоколы <w>установления принадлежности</w> к бандам строго соблюдаются для обеспечения безопасности в учреждении."
                            }
                        }
                    ],
                    "synonyms": [
                        "identification",
                        "classification"
                    ],
                    "target_lang_definitions": {
                        "ru": "Официальный процесс идентификации заключенного как члена определенной банды."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "идентификация",
                                "target_lang_sense_clarification": "установление личности или статуса"
                            },
                            {
                                "target_lang_word": "установление принадлежности",
                                "target_lang_sense_clarification": "процесс определения связи с группировкой"
                            }
                        ]
                    }
                }
            ]
        }
