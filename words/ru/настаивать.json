                            {
                                "target_lang_word": "infuse",
                                "target_lang_sense_clarification": "herbs or alcohol"
                            },
                            {
                                "target_lang_word": "steep",
                                "target_lang_sense_clarification": "tea or herbs"
                            },
                            {
                                "target_lang_word": "brew",
                                "target_lang_sense_clarification": "tea"
                            },
                            {
                                "target_lang_word": "draw",
                                "target_lang_sense_clarification": "tea (to let steep)"
                            }
                        ]
                    }
                }
            ]
        }
