    "entries": [
        {
            "pos": "adjective",
            "senses": [
                {
                    "sense_id": "5cfbe179-0b4f-3060-b6d4-0acb32cad326",
                    "sense_definition": "Относящийся к собору — главному или большому христианскому храму в городе или монастыре.",
                    "learner_level": "B1",
                    "frequency": "Middle",
                    "semantic_group_id": "cathedral_rel",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Туристы вышли на широкую <w>соборную</w> площадь в центре города.",
                            "target_lang_translations": {
                                "en": "The tourists walked out onto the wide <w>cathedral</w> square in the city center."
                            }
                        },
                        {
                            "text": "Громкий <w>соборный</w> звон был слышен во всей округе.",
                            "target_lang_translations": {
                                "en": "The loud <w>cathedral</w> ringing was heard throughout the district."
                            }
                        }
                    ],
                    "common_phrases": [
                        "соборная площадь",
                        "соборный храм",
                        "соборный звон",
                        "соборный протодиакон"
                    ],
                    "target_lang_definitions": {
                        "en": "Relating to a cathedral — the main or large Christian church in a city or monastery."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "cathedral",
                                "target_lang_sense_clarification": "attributive use, relating to the church building"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "ad74e3e3-9c43-390f-91ed-bebd4810d069",
                    "sense_definition": "Относящийся к собранию высшего духовенства (собору) для решения церковных вопросов; принятый на таком собрании.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "council_rel",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Епископы подписали итоговое <w>соборное</w> постановление после долгих споров.",
                            "target_lang_translations": {
                                "en": "The bishops signed the final <w>conciliar</w> decree after long disputes."
                            }
                        },
                        {
                            "text": "В библиотеке хранится старое <w>соборное</w> уложение семнадцатого века.",
                            "target_lang_translations": {
                                "en": "The library houses an old <w>Council</w> Code of the seventeenth century."
                            }
                        }
                    ],
                    "common_phrases": [
                        "соборное уложение",
                        "соборное решение",
                        "соборное мнение",
                        "соборный старец"
                    ],
                    "target_lang_definitions": {
                        "en": "Relating to an assembly of high clergy (a council) for deciding church matters; adopted at such an assembly."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "conciliar",
                                "target_lang_sense_clarification": "relating to an ecclesiastical council"
                            },
                            {
                                "target_lang_word": "council",
                                "target_lang_sense_clarification": "attributive use, e.g., Council Code"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "e3b23f4b-fd49-317f-a4b3-8544b05ec3fe",
                    "sense_definition": "Вселенский, всеобщий, единый; обладающий духовной целостностью (преимущественно в религиозном контексте).",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "universal_rel",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Верующие исповедуют единую святую <w>соборную</w> и апостольскую Церковь.",
                            "target_lang_translations": {
                                "en": "Believers confess One Holy <w>Catholic</w> and Apostolic Church."
                            }
                        },
                        {
                            "text": "Русские философы часто писали про <w>соборное</w> сознание народа.",
                            "target_lang_translations": {
                                "en": "Russian philosophers often wrote about the people's <w>conciliar</w> consciousness."
                            }
                        }
                    ],
                    "synonyms": [
                        "вселенский",
                        "всеобщий"
                    ],
                    "common_phrases": [
                        "соборная церковь",
                        "соборное послание",
                        "соборное единство",
                        "соборная личность"
                    ],
                    "target_lang_definitions": {
                        "en": "Universal, general, unified; possessing spiritual integrity (primarily in a religious context)."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "catholic",
                                "target_lang_sense_clarification": "universal (used in the Nicene Creed)"
                            },
                            {
                                "target_lang_word": "conciliar",
                                "target_lang_sense_clarification": "relating to spiritual unity or 'sobornost'"
                            },
                            {
                                "target_lang_word": "collective",
                                "target_lang_sense_clarification": "possessing spiritual togetherness"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}