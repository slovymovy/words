{
    "word_family": [
        "niechaj",
        "niechże"
    ],
    "entries": [
        {
            "pos": "interjection",
            "senses": [
                {
                    "sense_id": "3e9317b2-246e-3303-aa28-27da762543b3",
                    "sense_definition": "Służy do tworzenia form trybu rozkazującego dla trzeciej osoby liczby pojedynczej i mnogiej oraz dla form grzecznościowych.",
                    "learner_level": "A1",
                    "frequency": "High",
                    "semantic_group_id": "imperative",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "<w>Niech</w> pan usiądzie i chwilę odpocznie.",
                            "target_lang_translations": {
                                "ru": "Присядьте и немного отдохните."
                            }
                        },
                        {
                            "text": "<w>Niech</w> dzieci idą już spać, bo jest późno.",
                            "target_lang_translations": {
                                "ru": "<w>Пусть</w> дети уже идут спать, потому что поздно."
                            }
                        }
                    ],
                    "common_phrases": [
                        "niech będzie",
                        "niech pan",
                        "niech państwo"
                    ],
                    "target_lang_definitions": {
                        "ru": "Служит для образования повелительного наклонения 3-го лица (ед. и мн. ч.) и вежливых форм."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "пусть",
                                "target_lang_sense_clarification": "частица"
                            },
                            {
                                "target_lang_word": "пускай",
                                "target_lang_sense_clarification": "разговорная частица"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "27518c26-d7ce-3196-8c39-a85ddb61774b",
                    "sense_definition": "Służy do tworzenia form trybu rozkazującego dla pierwszej osoby liczby pojedynczej, wyrażając zastanowienie, wahanie lub zachętę do własnego działania.",
                    "learner_level": "A2",
                    "frequency": "Middle",
                    "semantic_group_id": "imperative",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "<w>Niech</w> no pomyślę, gdzie położyłem te klucze.",
                            "target_lang_translations": {
                                "ru": "<w>Дай-ка</w> я подумаю, куда я положил эти ключи."
                            }
                        },
                        {
                            "text": "<w>Niech</w> zgadnę, znowu zapomniałeś o moich urodzinach?",
                            "target_lang_translations": {
                                "ru": "<w>Дай</w> угадаю, ты снова забыл о моем дне рождения?"
                            }
                        }
                    ],
                    "common_phrases": [
                        "niech no",
                        "niech zgadnę"
                    ],
                    "traits": [
                        {
                            "trait_type": "colloquial",
                            "comment": "często używane z partykułą 'no'"
                        }
                    ],
                    "target_lang_definitions": {
                        "ru": "Используется с глаголами 1-го лица для выражения раздумья, нерешительности или побуждения к собственному действию."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "дай-ка",
                                "target_lang_sense_clarification": "побуждение к действию"
                            },
                            {
                                "target_lang_word": "ну-ка",
                                "target_lang_sense_clarification": "раздумье"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "660d0ce1-8148-3fb6-9d80-a21e03d9c727",
                    "sense_definition": "Służy do wyrażania życzeń, pragnień, toastów lub haseł.",
                    "learner_level": "B1",
                    "frequency": "Middle",
                    "semantic_group_id": "wish",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "<w>Niech</w> moc będzie z tobą!",
                            "target_lang_translations": {
                                "ru": "<w>Да</w> пребудет с тобой сила!"
                            }
                        },
                        {
                            "text": "<w>Niech</w> żyje młoda para!",
                            "target_lang_translations": {
                                "ru": "<w>Да</w> здравствуют молодожёны!"
                            }
                        }
                    ],
                    "synonyms": [
                        "aby",
                        "żeby"
                    ],
                    "common_phrases": [
                        "niech żyje",
                        "niech spoczywa w pokoju"
                    ],
                    "target_lang_definitions": {
                        "ru": "Выражает пожелания, тосты или торжественные призывы."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "да",
                                "target_lang_sense_clarification": "торжественная частица"
                            },
                            {
                                "target_lang_word": "пусть",
                                "target_lang_sense_clarification": "пожелание"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "f44ec699-ad36-32c2-b186-2da073ba1fdf",
                    "sense_definition": "Wyraża silne niezadowolenie, zniecierpliwienie, złość lub rezygnację.",
                    "learner_level": "B2",
                    "frequency": "Low",
                    "semantic_group_id": "emotion",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "A <w>niech</w> to wszystko szlag trafi!",
                            "target_lang_translations": {
                                "ru": "Да <w>пошло</w> оно всё к чёрту!"
                            }
                        },
                        {
                            "text": "<w>Niech</w> to licho, znowu uciekł mi autobus.",
                            "target_lang_translations": {
                                "ru": "<w>Чёрт</w> побери, опять автобус ушёл."
                            }
                        }
                    ],
                    "common_phrases": [
                        "niech to",
                        "a niech to"
                    ],
                    "traits": [
                        {
                            "trait_type": "colloquial",
                            "comment": ""
                        }
                    ],
                    "target_lang_definitions": {
                        "ru": "Выражает сильное недовольство, злость, нетерпение или смирение с ситуацией."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "чёрт",
                                "target_lang_sense_clarification": "в составе ругательств"
                            },
                            {
                                "target_lang_word": "будь",
                                "target_lang_sense_clarification": "в проклятиях"
                            },
                            {
                                "target_lang_word": "пусть",
                                "target_lang_sense_clarification": "смирение"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "fea05212-367e-3368-91d8-78789e0938ba",
                    "sense_definition": "Służy do wprowadzania definicji, założenia lub hipotetycznej sytuacji, często w kontekście naukowym.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "definition",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "<w>Niech</w> x będzie dowolną liczbą rzeczywistą dodatnią.",
                            "target_lang_translations": {
                                "ru": "<w>Пусть</w> x будет произвольным положительным вещественным числом."
                            }
                        },
                        {
                            "text": "<w>Niech</w> dany będzie trójkąt o bokach długości a, b i c.",
                            "target_lang_translations": {
                                "ru": "<w>Пусть</w> дан треугольник со сторонами длиной a, b и c."
                            }
                        }
                    ],
                    "common_phrases": [
                        "niech x oznacza",
                        "niech dany będzie"
                    ],
                    "target_lang_definitions": {
                        "ru": "Вводит определение, допущение или гипотетическую ситуацию (обычно в математике)."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "пусть",
                                "target_lang_sense_clarification": "допущение"
                            },
                            {
                                "target_lang_word": "допустим",
                                "target_lang_sense_clarification": "предположение"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "pos": "conjunction",
            "senses": [
                {
                    "sense_id": "02125147-cb22-3383-a67f-c46b44e6d76a",
                    "sense_definition": "Wprowadza zdanie podrzędne wyrażające cel, życzenie lub polecenie (funkcjonuje podobnie do spójnika 'żeby').",
                    "learner_level": "B2",
                    "frequency": "Low",
                    "semantic_group_id": "conjunction",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Powiedz mu, <w>niech</w> natychmiast do mnie przyjdzie.",
                            "target_lang_translations": {
                                "ru": "Скажи ему, <w>пусть</w> немедленно придёт ко мне."
                            }
                        },
                        {
                            "text": "Módlmy się, <w>niech</w> ten trudny czas szybko minie.",
                            "target_lang_translations": {
                                "ru": "Помолимся, <w>чтобы</w> это трудное время быстро прошло."
                            }
                        }
                    ],
                    "synonyms": [
                        "żeby",
                        "aby"
                    ],
                    "target_lang_definitions": {
                        "ru": "Вводит придаточное предложение, выражающее цель, желание или приказ."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "пусть",
                                "target_lang_sense_clarification": "частица/союз"
                            },
                            {
                                "target_lang_word": "чтобы",
                                "target_lang_sense_clarification": "союз цели"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "12910155-f285-355d-bdc4-d5bfc0453dbd",
                    "sense_definition": "Wprowadza zdanie warunkowe wyrażające groźbę lub ostrzeżenie, często w połączeniu z partykułą 'tylko'.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "threat",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "<w>Niech</w> ja go tylko dorwę, to popamięta!",
                            "target_lang_translations": {
                                "ru": "<w>Пусть</w> я только до него доберусь, он у меня получит!"
                            }
                        },
                        {
                            "text": "<w>Niech</w> tylko spróbuje mnie oszukać, a pożałuje.",
                            "target_lang_translations": {
                                "ru": "<w>Пусть</w> только попробует меня обмануть, он пожалеет."
                            }
                        }
                    ],
                    "common_phrases": [
                        "niech tylko"
                    ],
                    "traits": [
                        {
                            "trait_type": "colloquial",
                            "comment": ""
                        }
                    ],
                    "target_lang_definitions": {
                        "ru": "Вводит условное предложение, содержащее угрозу или предупреждение."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "пусть только",
                                "target_lang_sense_clarification": "угроза"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}