{
    "word_family": [
        "вешать",
        "висеть",
        "повешение",
        "вешалка",
        "виселица",
        "подвесить",
        "взвесить",
        "навесить",
        "развесить"
    ],
    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "12b2b5df-49e0-3e29-a1b6-2bd3df201117",
                    "sense_definition": "Поместить предмет в висячее положение, закрепив его на чём-либо сверху, чтобы он не касался пола.",
                    "learner_level": "A2",
                    "frequency": "High",
                    "semantic_group_id": "physical_action",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Гости могут <повесить> свои куртки и пальто в шкаф в прихожей.",
                            "target_lang_translations": {
                                "en": "Guests can <w>hang up</w> their jackets and coats in the closet in the hallway."
                            }
                        },
                        {
                            "text": "Я хочу <повесить> эту красивую картину на стену над диваном.",
                            "target_lang_translations": {
                                "en": "I want to <w>hang</w> this beautiful picture on the wall above the sofa."
                            }
                        }
                    ],
                    "synonyms": [
                        "подвесить"
                    ],
                    "antonyms": [
                        "снять"
                    ],
                    "common_phrases": [
                        "повесить одежду",
                        "повесить картину",
                        "повесить на гвоздь",
                        "повесить трубку"
                    ],
                    "target_lang_definitions": {
                        "en": "To place an object in a suspended position by fastening it to something above so that it does not touch the floor."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "hang",
                                "target_lang_sense_clarification": "general action of suspending an object"
                            },
                            {
                                "target_lang_word": "hang up",
                                "target_lang_sense_clarification": "specifically for clothes or ending a phone call"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "fd898b6c-1960-3c8a-8787-fd2eca3c6875",
                    "sense_definition": "Подвергнуть смертной казни через удушение верёвкой на виселице.",
                    "learner_level": "B2",
                    "frequency": "Low",
                    "semantic_group_id": "execution",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "В историческом романе описывалось, как преступника решили <повесить> на городской площади.",
                            "target_lang_translations": {
                                "en": "The historical novel described how they decided to <w>hang</w> the criminal in the town square."
                            }
                        },
                        {
                            "text": "Пленных предупредили, что их могут <повесить>, если они попытаются сбежать.",
                            "target_lang_translations": {
                                "en": "The prisoners were warned that they could <w>be hanged</w> if they tried to escape."
                            }
                        }
                    ],
                    "common_phrases": [
                        "приговорить повесить",
                        "повесить на площади"
                    ],
                    "target_lang_definitions": {
                        "en": "To execute someone by suspending them by the neck with a rope."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "hang",
                                "target_lang_sense_clarification": "method of execution"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "cb8577ed-97f0-3bc7-b337-1d03ed4a8e41",
                    "sense_definition": "Переложить на кого-либо ответственность, вину или неприятные обязанности (обычно несправедливо).",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "figurative_blame",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Начальник пытается <повесить> ответственность за провал проекта на своего заместителя.",
                            "target_lang_translations": {
                                "en": "The boss is trying to <w>pin</w> the responsibility for the project's failure on his deputy."
                            }
                        },
                        {
                            "text": "Они хотели <повесить> на меня чужой долг, но я отказался платить.",
                            "target_lang_translations": {
                                "en": "They wanted to <w>dump</w> someone else's debt on me, but I refused to pay."
                            }
                        }
                    ],
                    "common_phrases": [
                        "повесить долг",
                        "повесить вину",
                        "повесить всех собак"
                    ],
                    "traits": [
                        {
                            "trait_type": "colloquial",
                            "comment": "used in informal speech"
                        }
                    ],
                    "target_lang_definitions": {
                        "en": "To shift responsibility, guilt, or unpleasant duties onto someone else, usually unfairly."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "pin",
                                "target_lang_sense_clarification": "blame, crime, or responsibility"
                            },
                            {
                                "target_lang_word": "dump",
                                "target_lang_sense_clarification": "unwanted tasks or debts (colloquial)"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}