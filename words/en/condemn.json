{
    "word_family": [
        "condemnation",
        "condemnatory",
        "condemnable",
        "condemner"
    ],
    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "4db9cfbf-fce3-30fa-8370-5b70679c882b",
                    "sense_definition": "To express strong disapproval of someone or something, often publicly.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The president <w>condemned</w> the terrorists for their violent actions."
                        },
                        {
                            "text": "Most people strongly <w>condemn</w> cruelty to animals."
                        }
                    ],
                    "synonyms": [
                        "convict",
                        "damn",
                        "convict"
                    ],
                    "antonyms": [
                        "save",
                        "acquit"
                    ],
                    "common_phrases": [
                        "strongly condemn",
                        "condemn violence",
                        "condemn the attack"
                    ]
                },
                {
                    "sense_id": "062d9e4c-dc49-3929-871e-99b477926739",
                    "sense_definition": "To give a legal sentence to someone, especially a severe punishment like death or life imprisonment.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "2",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The judge <w>condemned</w> him to death for his terrible crimes."
                        },
                        {
                            "text": "After the trial, the prisoner was <w>condemned</w> to life in prison."
                        }
                    ],
                    "synonyms": [
                        "convict"
                    ],
                    "antonyms": [
                        "acquit"
                    ],
                    "common_phrases": [
                        "condemn to death",
                        "condemn to prison"
                    ]
                },
                {
                    "sense_id": "257e410f-8936-314c-b3ea-f81d266eb7bc",
                    "sense_definition": "To force someone into a difficult or unpleasant situation that cannot be avoided.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "3",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Too many people are <w>condemned</w> to a life of poverty due to lack of opportunity."
                        },
                        {
                            "text": "His serious injury <w>condemned</w> him to a wheelchair for the rest of his life."
                        }
                    ],
                    "antonyms": [
                        "save"
                    ],
                    "common_phrases": [
                        "condemned to poverty",
                        "condemned to failure"
                    ]
                },
                {
                    "sense_id": "12ce1967-ff9c-3c56-b25f-040f058ae52e",
                    "sense_definition": "To officially declare that a building or structure is not safe for people to use or live in.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "4",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The old house was <w>condemned</w> after it was badly damaged by the fire."
                        },
                        {
                            "text": "City officials decided to <w>condemn</w> the bridge because it was no longer stable."
                        }
                    ],
                    "common_phrases": [
                        "condemn a building",
                        "condemned house"
                    ]
                },
                {
                    "sense_id": "abe52025-a205-3470-87ff-a783b278222c",
                    "sense_definition": "To punish someone eternally in hell.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "2",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The preacher warned that sinners would be <w>condemned</w> to eternal fire."
                        },
                        {
                            "text": "He believed that his bad deeds would <w>condemn</w> his soul."
                        }
                    ],
                    "synonyms": [
                        "damn"
                    ],
                    "antonyms": [
                        "save"
                    ],
                    "common_phrases": [
                        "condemn to hell"
                    ]
                }
            ]
        }
    ]
}