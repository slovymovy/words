            "senses": [
                {
                    "sense_id": "bf6b8d0a-dbcf-3601-ab5f-03631a6d5cf0",
                    "sense_definition": "Oznajmić coś w sposób oficjalny, stanowczy lub uroczysty; przekazać ważną informację.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "communication",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Premier <oświadczył>, że rząd nie planuje podwyżki podatków w przyszłym roku.",
                            "target_lang_translations": {
                                "ru": "Премьер-министр <заявил>, что правительство не планирует повышения налогов в следующем году."
                            }
                        },
                        {
                            "text": "Świadek <oświadczył> przed sądem, że widział całe zdarzenie na własne oczy.",
                            "target_lang_translations": {
                                "ru": "Свидетель <заявил> в суде, что видел все происшествие своими глазами."
                            }
                        }
                    ],
                    "synonyms": [
                        "wyświadczyć",
                        "wyświadczyć"
                    ],
                    "antonyms": [
                        "zataić",
                        "przemilczeć"
                    ],
                    "common_phrases": [
                        "oświadczyć uroczyście",
                        "oświadczyć publicznie",
                        "oświadczyć wprost",
                        "oświadczyć przed sądem"
                    ],
                    "target_lang_definitions": {
                        "ru": "Объявить о чем-либо официально, твердо или торжественно; сообщить важную информацию."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "заявить",
                                "target_lang_sense_clarification": "сделать официальное сообщение"
                            },
                            {
                                "target_lang_word": "объявить",
                                "target_lang_sense_clarification": "сообщить во всеуслышание"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "6c4e318e-ff50-394b-a97d-7829cca144d7",
                    "sense_definition": "Poprosić kogoś o rękę, proponując zawarcie małżeństwa (używane z zaimkiem „się”).",
                    "learner_level": "B1",
                    "frequency": "Middle",
                    "semantic_group_id": "relationships",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Marek kupił piękny pierścionek i <oświadczył> się swojej dziewczynie podczas wakacji.",
                            "target_lang_translations": {
                                "ru": "Марек купил красивое кольцо и <сделал предложение> своей девушке во время отпуска."
                            }
                        },
                        {
                            "text": "Czy on ci się już <oświadczył>, czy nadal czekasz na ten moment?",
                            "target_lang_translations": {
                                "ru": "Он тебе уже <сделал предложение>, или ты все еще ждешь этого момента?"
                            }
                        }
                    ],
                    "common_phrases": [
                        "oświadczyć się dziewczynie",
                        "oświadczyć się niespodziewanie"
                    ],
                    "target_lang_definitions": {
                        "ru": "Попросить чьей-либо руки, предлагая вступить в брак."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "сделать предложение",
                                "target_lang_sense_clarification": "предложить вступить в брак"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "035d986b-093c-3431-b4a4-528d5e8e7897",
                    "sense_definition": "Wyrazić swoje stanowisko, poparcie lub sprzeciw w jakiejś sprawie (używane z zaimkiem „się”).",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "opinion",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Większość zgromadzonych posłów <oświadczyła> się za przyjęciem nowej ustawy.",
                            "target_lang_translations": {
                                "ru": "Большинство собравшихся депутатов <высказалось> за принятие нового закона."
                            }
                        },
                        {
                            "text": "Musisz jasno <oświadczyć> się po jednej ze stron tego konfliktu.",
                            "target_lang_translations": {
                                "ru": "Ты должен четко <высказаться> в пользу одной из сторон этого конфликта."
                            }
                        }
                    ],
                    "common_phrases": [
                        "oświadczyć się za czymś",
                        "oświadczyć się przeciwko czemuś"
                    ],
                    "target_lang_definitions": {
                        "ru": "Выразить свою позицию, поддержку или несогласие по какому-либо вопросу."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "высказаться",
                                "target_lang_sense_clarification": "выразить мнение за или против"
                            },
                            {
                                "target_lang_word": "выразить позицию",
                                "target_lang_sense_clarification": "обозначить свое отношение"
                            }
                        ]
                    }
                }
            ]
        }
