                },
                {
                    "sense_id": "28bf2cbc-138a-3e85-ab7f-28c8d1bf3d38",
                    "sense_definition": "Extremely foolish behavior or a chaotic situation.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "It is absolute <w>madness</w> to spend all your money on lottery tickets.",
                            "target_lang_translations": {
                                "ru": "Тратить все свои деньги на лотерейные билеты — это абсолютное <w>безумие</w>."
                            }
                        },
                        {
                            "text": "We need to stop the <w>madness</w> of shouting at each other.",
                            "target_lang_translations": {
                                "ru": "Нам нужно прекратить это <w>безумие</w> и перестать кричать друг на друга."
                            }
                        }
                    ],
                    "synonyms": [
                        "craziness",
                        "lunacy",
                        "craze"
                    ],
                    "antonyms": [
                        "sanity"
                    ],
                    "common_phrases": [
                        "sheer madness",
                        "stop the madness",
                        "absolute madness"
                    ],
                    "target_lang_definitions": {
                        "ru": "Крайне безрассудное поведение или хаотичная ситуация."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "безумие",
                                "target_lang_sense_clarification": "крайнее безрассудство"
                            },
                            {
                                "target_lang_word": "сумасшествие",
                                "target_lang_sense_clarification": "нелепый или безрассудный поступок"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "0a61686e-11f0-3bcc-b18b-e7d7ac834ff2",
