    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "f031a1d4-eef8-3321-9ecf-3430bea0e79f",
                    "sense_definition": "Мысленно сосредоточиваться на чём-либо, обрабатывать информацию в уме, размышлять.",
                    "learner_level": "A1",
                    "frequency": "High",
                    "semantic_group_id": "mental_process",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Я часто <думаю> о нашей первой встрече в парке.",
                            "target_lang_translations": {
                                "en": "I often <think> about our first meeting in the park."
                            }
                        },
                        {
                            "text": "Студент долго <думал> над решением сложной математической задачи.",
                            "target_lang_translations": {
                                "en": "The student <thought> for a long time about the solution to the complex math problem."
                            }
                        }
                    ],
                    "synonyms": [
                        "размышлять",
                        "мы́слить",
                        "обдумывать"
                    ],
                    "common_phrases": [
                        "думать о будущем",
                        "долго думать",
                        "думать головой"
                    ],
                    "target_lang_definitions": {
                        "en": "To mentally focus on something, process information in the mind, or reflect."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "think",
                                "target_lang_sense_clarification": "to use the mind to consider ideas or solve problems"
                            },
                            {
                                "target_lang_word": "ponder",
                                "target_lang_sense_clarification": "to think about something carefully and for a long time"
                            },
                            {
                                "target_lang_word": "reflect",
                                "target_lang_sense_clarification": "to think deeply or carefully about something"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "947cd58c-1d65-3c18-887c-46ea211f03e7",
                    "sense_definition": "Иметь определённое мнение, верить или полагать.",
                    "learner_level": "A1",
                    "frequency": "High",
                    "semantic_group_id": "opinion",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Я <думаю>, что этот фильм будет очень интересным.",
                            "target_lang_translations": {
                                "en": "I <think> that this movie will be very interesting."
                            }
                        },
                        {
                            "text": "Как ты <думаешь>, мы успеем на последний автобус?",
                            "target_lang_translations": {
                                "en": "Do you <think> we will catch the last bus?"
                            }
                        }
                    ],
                    "synonyms": [
                        "счита́ть",
                        "полагать"
                    ],
                    "common_phrases": [
                        "я думаю, что",
                        "как ты думаешь",
                        "кто бы мог подумать"
                    ],
                    "target_lang_definitions": {
                        "en": "To have a specific opinion, believe, or suppose."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "think",
                                "target_lang_sense_clarification": "to have an opinion or belief about something"
                            },
                            {
                                "target_lang_word": "believe",
                                "target_lang_sense_clarification": "to accept as true or hold as an opinion"
                            },
                            {
                                "target_lang_word": "suppose",
                                "target_lang_sense_clarification": "to assume or consider to be probable"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "8b6f6ac2-8b5f-3ecc-ba20-0a5272bdedc0",
                    "sense_definition": "Иметь намерение, планировать или собираться что-то сделать.",
                    "learner_level": "B1",
                    "frequency": "Middle",
                    "semantic_group_id": "intention",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Мы <думаем> поехать в отпуск на море этим летом.",
                            "target_lang_translations": {
                                "en": "We are <thinking> of going on vacation to the sea this summer."
                            }
                        },
                        {
                            "text": "Она <думала> купить новую машину, но потом передумала.",
                            "target_lang_translations": {
                                "en": "She <thought> of buying a new car, but then changed her mind."
                            }
                        }
                    ],
                    "synonyms": [
                        "намереваться",
                        "планировать",
                        "задумывать"
                    ],
                    "common_phrases": [
                        "думать сделать",
                        "не думал обидеть"
                    ],
                    "traits": [
                        {
                            "trait_type": "colloquial",
                            "comment": "used in the sense of intending or planning"
                        }
                    ],
                    "target_lang_definitions": {
                        "en": "To have an intention, plan, or prepare to do something."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "plan",
                                "target_lang_sense_clarification": "to decide on and arrange for something in advance"
                            },
                            {
                                "target_lang_word": "intend",
                                "target_lang_sense_clarification": "to have a course of action as one's purpose"
                            },
                            {
                                "target_lang_word": "think",
                                "target_lang_sense_clarification": "to consider doing something (usually used with 'of' or 'about')"
                            }
                        ]
                    }
                }
            ]
        }
