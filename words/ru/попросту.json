    "entries": [
        {
            "pos": "adverb",
            "senses": [
                {
                    "sense_id": "3f357bdd-efcc-36d0-993b-fa7835e26aa7",
                    "sense_definition": "Употребляется для усиления утверждения, подчеркивая, что дело обстоит именно так и не иначе; то же, что «просто», «всего лишь».",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "emphasis",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "У нас <w>попросту</w> нет места для вас.",
                            "target_lang_translations": {
                                "en": "We <w>simply</w> have no room for you."
                            }
                        },
                        {
                            "text": "Кручинину <w>попросту</w> было совестно за вчерашнее поведение.",
                            "target_lang_translations": {
                                "en": "Kruchinin was <w>simply</w> ashamed of his behavior yesterday."
                            }
                        },
                        {
                            "text": "Вы <w>попросту</w> следовали инструкциям и ни в чем не виноваты.",
                            "target_lang_translations": {
                                "en": "You <w>simply</w> followed instructions and are not to blame for anything."
                            }
                        }
                    ],
                    "synonyms": [
                        "просто",
                        "просто-напросто"
                    ],
                    "common_phrases": [
                        "попросту говоря",
                        "попросту невозможно",
                        "попросту нет"
                    ],
                    "target_lang_definitions": {
                        "en": "Used to strengthen a statement, emphasizing that the situation is exactly as stated; equivalent to \"simply\" or \"merely\"."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "simply",
                                "target_lang_sense_clarification": "used for emphasis"
                            },
                            {
                                "target_lang_word": "just",
                                "target_lang_sense_clarification": "used for emphasis"
                            },
                            {
                                "target_lang_word": "merely",
                                "target_lang_sense_clarification": "nothing more than"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "625ab0c4-5622-3582-8379-85f68b525a63",
                    "sense_definition": "Простым образом, без затей, сложностей или вычурности; понятным языком.",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "manner",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Его звали Александр, или <w>попросту</w> Саша.",
                            "target_lang_translations": {
                                "en": "His name was Alexander, or <w>simply</w> Sasha."
                            }
                        },
                        {
                            "text": "Если рассуждать <w>попросту</w>, то это решение кажется верным.",
                            "target_lang_translations": {
                                "en": "If one reasons <w>plainly</w>, then this decision seems correct."
                            }
                        }
                    ],
                    "synonyms": [
                        "просто",
                        "по-простому"
                    ],
                    "antonyms": [
                        "сложно"
                    ],
                    "common_phrases": [
                        "называть попросту",
                        "рассуждать попросту"
                    ],
                    "traits": [
                        {
                            "trait_type": "colloquial",
                            "comment": "разговорное"
                        }
                    ],
                    "target_lang_definitions": {
                        "en": "In a simple manner, without frills, complexity, or pretentiousness; in plain language."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "simply",
                                "target_lang_sense_clarification": "in a plain or uncomplicated way"
                            },
                            {
                                "target_lang_word": "plainly",
                                "target_lang_sense_clarification": "in simple terms"
                            },
                            {
                                "target_lang_word": "for short",
                                "target_lang_sense_clarification": "used when shortening names or terms"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "5aaa6a01-5eec-31b8-a9af-d079d1bd162e",
                    "sense_definition": "Без излишних формальностей, стеснения или церемоний; по-свойски, по-домашнему.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "manner",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Милости просим, приходите к нам <w>попросту</w>, без чинов.",
                            "target_lang_translations": {
                                "en": "You are welcome, come visit us <w>without ceremony</w>, without rank."
                            }
                        },
                        {
                            "text": "Мы сидели на кухне и общались <w>попросту</w>, как старые друзья.",
                            "target_lang_translations": {
                                "en": "We sat in the kitchen and chatted <w>informally</w>, like old friends."
                            }
                        }
                    ],
                    "synonyms": [
                        "запросто",
                        "по-простому"
                    ],
                    "common_phrases": [
                        "принимать попросту",
                        "общаться попросту"
                    ],
                    "traits": [
                        {
                            "trait_type": "colloquial",
                            "comment": "разговорное"
                        }
                    ],
                    "target_lang_definitions": {
                        "en": "Without unnecessary formalities, shyness, or ceremonies; in a familiar or home-like way."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "informally",
                                "target_lang_sense_clarification": "without formal rules or protocol"
                            },
                            {
                                "target_lang_word": "without ceremony",
                                "target_lang_sense_clarification": "without formal etiquette"
                            }
                        ]
                    }
                }
