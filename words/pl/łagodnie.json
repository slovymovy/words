    "entries": [
        {
            "pos": "adverb",
            "senses": [
                {
                    "sense_id": "93f76051-beb7-3dbd-b223-e75191332309",
                    "sense_definition": "W sposób spokojny, delikatny i życzliwy, pozbawiony gwałtowności lub surowości.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "behavior_manner",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Nauczyciel wytłumaczył uczniowi błąd bardzo <w>łagodnie</w>, nie podnosząc głosu.",
                            "target_lang_translations": {
                                "ru": "Учитель объяснил ученику ошибку очень <w>мягко</w>, не повышая голоса."
                            }
                        },
                        {
                            "text": "Matka uśmiechnęła się <w>łagodnie</w>, patrząc na bawiące się dzieci.",
                            "target_lang_translations": {
                                "ru": "Мать <w>ласково</w> улыбнулась, глядя на играющих детей."
                            }
                        }
                    ],
                    "synonyms": [
                        "delikatnie"
                    ],
                    "antonyms": [
                        "ostro",
                        "gwałtownie",
                        "surowo"
                    ],
                    "common_phrases": [
                        "uśmiechać się łagodnie",
                        "mówić łagodnie",
                        "traktować łagodnie"
                    ],
                    "target_lang_definitions": {
                        "ru": "Спокойно, деликатно и доброжелательно, без резкости или суровости."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "мягко",
                                "target_lang_sense_clarification": "спокойно, без резкости"
                            },
                            {
                                "target_lang_word": "кротко",
                                "target_lang_sense_clarification": "смиренно, беззлобно"
                            },
                            {
                                "target_lang_word": "ласково",
                                "target_lang_sense_clarification": "с нежностью и добротой"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "45bc7496-b28b-3a03-933e-54253e285752",
                    "sense_definition": "W sposób przyjemny dla zmysłów, niezbyt intensywny lub ostry (np. o smaku, zapachu).",
                    "learner_level": "B2",
                    "frequency": "Middle",
                    "semantic_group_id": "sensory_taste",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "To danie jest przyprawione <w>łagodnie</w>, więc będzie odpowiednie dla dzieci.",
                            "target_lang_translations": {
                                "ru": "Это блюдо приправлено <w>не остро</w>, поэтому подойдёт детям."
                            }
                        },
                        {
                            "text": "Kawa smakuje dziś wyjątkowo <w>łagodnie</w> i nie jest kwaśna.",
                            "target_lang_translations": {
                                "ru": "У кофе сегодня исключительно <w>мягкий</w> вкус, и он не кислый."
                            }
                        }
                    ],
                    "synonyms": [
                        "delikatnie"
                    ],
                    "antonyms": [
                        "ostro",
                        "pikantnie"
                    ],
                    "common_phrases": [
                        "smakować łagodnie",
                        "przyprawić łagodnie"
                    ],
                    "target_lang_definitions": {
                        "ru": "Приятно для органов чувств, не слишком интенсивно или резко (о вкусе, запахе)."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "мягко",
                                "target_lang_sense_clarification": "о вкусе, климате или воздействии"
                            },
                            {
                                "target_lang_word": "не остро",
                                "target_lang_sense_clarification": "о приправах в еде"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}