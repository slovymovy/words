            "senses": [
                {
                    "sense_id": "9ef75426-6752-3199-bae0-410d11f2e52f",
                    "sense_definition": "Legal protection granted by a country to someone who has left their home country as a political refugee.",
                    "learner_level": "B2",
                    "frequency": "High",
                    "semantic_group_id": "protection_status",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The family crossed the border to apply for political <w>asylum</w>.",
                            "target_lang_translations": {
                                "ru": "Семья пересекла границу, чтобы попросить политического <w>убежища</w>."
                            }
                        },
                        {
                            "text": "The government refused to grant <w>asylum</w> to the foreign diplomat.",
                            "target_lang_translations": {
                                "ru": "Правительство отказалось предоставить <w>убежище</w> иностранному дипломату."
                            }
                        }
                    ],
                    "synonyms": [
                        "sanctuary",
                        "shelter"
                    ],
                    "common_phrases": [
                        "political asylum",
                        "seek asylum",
                        "grant asylum",
                        "apply for asylum"
                    ],
                    "target_lang_definitions": {
                        "ru": "Правовая защита, предоставляемая страной человеку, покинувшему родину в качестве политического беженца."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "убежище",
                                "target_lang_sense_clarification": "правовая защита"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "847f123e-03e8-312f-8878-a3c4436f4ecb",
                    "sense_definition": "A place of safety, retreat, or refuge from danger.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "place_of_safety",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "The embassy served as an <w>asylum</w> for those fleeing the violence.",
                            "target_lang_translations": {
                                "ru": "Посольство послужило <w>убежищем</w> для тех, кто спасался от насилия."
                            }
                        },
                        {
                            "text": "She found a quiet <w>asylum</w> in the library away from the noise of the city.",
                            "target_lang_translations": {
                                "ru": "Она нашла тихое <w>убежище</w> в библиотеке, вдали от городского шума."
                            }
                        }
                    ],
                    "synonyms": [
                        "sanctuary",
                        "shelter"
                    ],
                    "common_phrases": [
                        "place of asylum",
                        "find asylum"
                    ],
                    "target_lang_definitions": {
