            "senses": [
                {
                    "sense_id": "e0674653-d95b-3360-95b9-a51722db9b0d",
                    "sense_definition": "Сделать более простым, несложным по устройству, составу или форме; сделать более доступным для понимания или выполнения.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Новая компьютерная программа позволила значительно <упростить> работу бухгалтера.",
                            "target_lang_translations": {
                                "en": "The new computer program made it possible to significantly <w>simplify</w> the accountant's work."
                            }
                        },
                        {
                            "text": "Мы решили <упростить> задачу и разделили её на несколько этапов.",
                            "target_lang_translations": {
                                "en": "We decided to <w>simplify</w> the task and divided it into several stages."
                            }
                        }
                    ],
                    "synonyms": [
                        "облегчить"
                    ],
                    "antonyms": [
                        "усложнить"
                    ],
                    "common_phrases": [
                        "упростить задачу",
                        "упростить жизнь",
                        "упростить процедуру",
                        "упростить процесс"
                    ],
                    "target_lang_definitions": {
                        "en": "To make something simpler, less complex, or easier to understand or do."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "simplify",
                                "target_lang_sense_clarification": "general meaning"
                            },
                            {
                                "target_lang_word": "make easier",
                                "target_lang_sense_clarification": "to reduce difficulty"
                            },
                            {
                                "target_lang_word": "streamline",
                                "target_lang_sense_clarification": "to make a process more efficient"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "7df61e93-ff64-378c-a0e8-8a3d1477210f",
                    "sense_definition": "Представить слишком примитивно, лишив глубины и богатства содержания; обеднить смысл.",
                    "learner_level": "C1",
                    "frequency": "Low",
                    "semantic_group_id": "",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Автор сценария решил <упростить> сюжет книги, убрав важные детали.",
                            "target_lang_translations": {
                                "en": "The scriptwriter decided to <w>simplify</w> the book's plot by removing important details."
                            }
                        },
                        {
                            "text": "Нельзя так <упростить> эту философскую идею, иначе она потеряет смысл.",
                            "target_lang_translations": {
                                "en": "One cannot <w>oversimplify</w> this philosophical idea so much, otherwise it will lose its meaning."
                            }
                        }
                    ],
                    "synonyms": [
                        "облегчить",
                        "облегчить"
                    ],
                    "antonyms": [
                        "усложнить"
                    ],
                    "common_phrases": [
                        "упростить смысл",
                        "упростить суть",
                        "упростить понимание"
                    ],
                    "target_lang_definitions": {
                        "en": "To present something in an overly primitive way, losing depth or meaning."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "oversimplify",
                                "target_lang_sense_clarification": "to simplify to the point of distortion"
                            },
                            {
                                "target_lang_word": "dumb down",
                                "target_lang_sense_clarification": "informal; to make too simple"
                            }
                        ]
                    }
                }
            ]
        }
