    "entries": [
        {
            "pos": "adverb",
            "senses": [
                {
                    "sense_id": "663093a2-bce2-39c3-945d-c7ab4aa8b38d",
                    "sense_definition": "Употребляется как вводное слово для подведения итога сказанному, вывода или перехода к сути дела; одним словом.",
                    "learner_level": "B1",
                    "frequency": "High",
                    "semantic_group_id": "parenthetic",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Короче, <w>короче</w>, мы решили не ехать в этот отпуск.",
                            "target_lang_translations": {
                                "en": "Anyway, <w>long story short</w>, we decided not to go on this vacation."
                            }
                        },
                        {
                            "text": "Ну, <w>короче</w>, фильм мне совсем не понравился, зря потратил время.",
                            "target_lang_translations": {
                                "en": "Well, <w>basically</w>, I didn't like the movie at all, I wasted my time."
                            }
                        }
                    ],
                    "synonyms": [
                        "короче говоря"
                    ],
                    "common_phrases": [
                        "ну короче",
                        "если короче"
                    ],
                    "traits": [
                        {
                            "trait_type": "colloquial",
                            "comment": "very common in spoken language"
                        }
                    ],
                    "target_lang_definitions": {
                        "en": "Used as a filler word to summarize, conclude, or get to the point; in a word."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "anyway",
                                "target_lang_sense_clarification": "transition to the main point"
                            },
                            {
                                "target_lang_word": "long story short",
                                "target_lang_sense_clarification": "summarizing"
                            },
                            {
                                "target_lang_word": "basically",
                                "target_lang_sense_clarification": "simplifying the explanation"
                            },
                            {
                                "target_lang_word": "in short",
                                "target_lang_sense_clarification": "formal summary"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "92af3156-816e-332f-a1cb-a1acb459483b",
                    "sense_definition": "Форма сравнительной степени наречия <w>коротко</w>; более кратко, с меньшими подробностями.",
                    "learner_level": "A2",
                    "frequency": "Middle",
                    "semantic_group_id": "comparative_adv",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Пожалуйста, пиши <w>короче</w>, у меня нет времени читать длинные письма.",
                            "target_lang_translations": {
                                "en": "Please write <w>more briefly</w>, I don't have time to read long letters."
                            }
                        },
                        {
                            "text": "Парикмахер постриг меня слишком <w>короче</w>, чем я просил.",
                            "target_lang_translations": {
                                "en": "The hairdresser cut my hair much <w>shorter</w> than I asked."
                            }
                        }
                    ],
                    "synonyms": [
                        "покоро́че"
                    ],
                    "common_phrases": [
                        "стричь короче",
                        "говорить короче"
                    ],
                    "target_lang_definitions": {
                        "en": "Comparative form of the adverb 'shortly'; more briefly, with fewer details."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "more briefly",
                                "target_lang_sense_clarification": "speaking or writing"
                            },
                            {
                                "target_lang_word": "shorter",
                                "target_lang_sense_clarification": "colloquial adverb"
                            },
                            {
                                "target_lang_word": "more concisely",
                                "target_lang_sense_clarification": "formal"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "pos": "adjective",
            "senses": [
                {
                    "sense_id": "f0f5c735-32bd-3c4a-a08e-a6e64713e0ef",
                    "sense_definition": "Форма сравнительной степени прилагательного <w>короткий</w>; имеющий меньшую длину или длительность.",
                    "learner_level": "A1",
                    "frequency": "High",
                    "semantic_group_id": "comparative_adj",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Зимой дни становятся заметно <w>короче</w>, а ночи длиннее.",
                            "target_lang_translations": {
                                "en": "In winter, the days become noticeably <w>shorter</w>, and the nights longer."
                            }
                        },
                        {
                            "text": "Эта дорога <w>короче</w>, но она проходит через лес.",
                            "target_lang_translations": {
                                "en": "This road is <w>shorter</w>, but it goes through the forest."
                            }
                        }
                    ],
                    "synonyms": [
                        "покоро́че"
                    ],
                    "antonyms": [
                        "длиннее"
                    ],
                    "common_phrases": [
                        "стать короче",
                        "намного короче",
                        "еще короче"
                    ],
                    "target_lang_definitions": {
                        "en": "Comparative form of the adjective 'short'; having less length or duration."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "shorter",
                                "target_lang_sense_clarification": "length or time"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "66886a83-4abc-30c3-87f7-95a1f4f40d6e",
                    "sense_definition": "Находящийся в более близких, дружеских отношениях.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "archaic_closer",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "За время путешествия они сошлись <w>короче</w> и стали друзьями.",
                            "target_lang_translations": {
                                "en": "During the trip, they became <w>closer</w> and became friends."
                            }
                        },
                        {
                            "text": "Я хотел бы узнать его <w>короче</w>, прежде чем доверять дела.",
                            "target_lang_translations": {
                                "en": "I would like to get to know him <w>better</w> before trusting him with business."
                            }
                        }
                    ],
                    "traits": [
                        {
                            "trait_type": "archaic",
                            "comment": "meaning 'closer' in relationships"
                        }
                    ],
                    "target_lang_definitions": {
                        "en": "Being in closer, more friendly relations."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "closer",
                                "target_lang_sense_clarification": "in relationships"
                            },
                            {
                                "target_lang_word": "better",
                                "target_lang_sense_clarification": "to know someone"
                            }
                        ]
                    }
                }
            ]
        },
        {
            "pos": "interjection",
            "senses": [
                {
                    "sense_id": "0cf1a618-63bf-3cd0-9b4c-fb88e4e529f4",
                    "sense_definition": "Выражает требование говорить кратко, не вдаваясь в лишние подробности.",
                    "learner_level": "B2",
                    "frequency": "Low",
                    "semantic_group_id": "imperative",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "<w>Короче</w>! У нас совсем нет времени слушать эти истории.",
                            "target_lang_translations": {
                                "en": "<w>Make it short</w>! We have absolutely no time to listen to these stories."
                            }
                        },
                        {
                            "text": "Не тяни время, <w>короче</w>, говори сразу суть дела.",
                            "target_lang_translations": {
                                "en": "Don't stall, <w>cut to the chase</w>, get straight to the point."
                            }
                        }
                    ],
                    "synonyms": [
                        "покоро́че"
                    ],
                    "traits": [
                        {
                            "trait_type": "colloquial",
                            "comment": ""
                        }
                    ],
                    "target_lang_definitions": {
                        "en": "Expresses a demand to speak briefly, without unnecessary details."
                    },
                    "translations": {
                        "en": [
                            {
                                "target_lang_word": "make it short",
                                "target_lang_sense_clarification": "imperative"
                            },
                            {
                                "target_lang_word": "cut to the chase",
                                "target_lang_sense_clarification": "idiom"
                            },
                            {
                                "target_lang_word": "be brief",
                                "target_lang_sense_clarification": "formal imperative"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}