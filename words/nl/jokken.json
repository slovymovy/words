    "entries": [
        {
            "pos": "verb",
            "senses": [
                {
                    "sense_id": "0d63fea1-9551-32ad-acbb-f4c2bdc16895",
                    "sense_definition": "Een kleine onwaarheid vertellen, vaak over iets onschuldigs of om straf te ontlopen (vooral gebruikt in de context van kinderen).",
                    "learner_level": "B1",
                    "frequency": "Middle",
                    "semantic_group_id": "lying",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "Je mag niet <w>jokken</w> over wie de laatste koekjes heeft opgegeten.",
                            "target_lang_translations": {
                                "ru": "Нельзя <w>врать</w> о том, кто съел последнее печенье."
                            }
                        },
                        {
                            "text": "Volgens mij zat jij net een beetje te <w>jokken</w> toen je dat verhaal vertelde.",
                            "target_lang_translations": {
                                "ru": "Мне кажется, ты немного <w>привирал</w>, когда рассказывал эту историю."
                            }
                        }
                    ],
                    "synonyms": [
                        "liegen",
                        "fantaseren",
                        "verzinnen"
                    ],
                    "common_phrases": [
                        "niet jokken",
                        "zitten te jokken",
                        "staan te jokken"
                    ],
                    "target_lang_definitions": {
                        "ru": "Говорить небольшую неправду, часто о чем-то безобидном или чтобы избежать наказания (преимущественно используется в разговоре с детьми)."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "врать",
                                "target_lang_sense_clarification": "говорить неправду (разговорное)"
                            },
                            {
                                "target_lang_word": "обманывать",
                                "target_lang_sense_clarification": "вводить в заблуждение"
                            },
                            {
                                "target_lang_word": "привирать",
                                "target_lang_sense_clarification": "немного преувеличивать или искажать факты"
                            },
                            {
                                "target_lang_word": "выдумывать",
                                "target_lang_sense_clarification": "сочинять небылицы"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "d6a7abd1-ccdb-3059-b6bf-4239bf0f691b",
                    "sense_definition": "Plezier maken, stoeien of grappen maken.",
                    "learner_level": "C2",
                    "frequency": "VeryLow",
                    "semantic_group_id": "jesting",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "In oude verhalen lees je hoe de kinderen op het plein met elkaar <w>jokten</w>.",
                            "target_lang_translations": {
                                "ru": "В старых рассказах можно прочитать, как дети на площади <w>резвились</w> друг с другом."
                            }
                        },
                        {
                            "text": "De nar <w>jokte</w> om de koning aan het lachen te maken.",
                            "target_lang_translations": {
                                "ru": "Шут <w>шутил</w>, чтобы рассмешить короля."
                            }
                        }
                    ],
                    "synonyms": [
                        "schertsen",
                        "grappen"
                    ],
                    "traits": [
                        {
                            "trait_type": "archaic",
                            "comment": "deze betekenis is verouderd en wordt in modern Nederlands niet meer gebruikt"
                        }
                    ],
                    "target_lang_definitions": {
                        "ru": "Веселиться, дурачиться или шутить (устаревшее значение)."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "шутить",
                                "target_lang_sense_clarification": "говорить или делать что-то смешное"
                            },
                            {
                                "target_lang_word": "дурачиться",
                                "target_lang_sense_clarification": "вести себя несерьезно, играть"
                            },
                            {
                                "target_lang_word": "резвиться",
                                "target_lang_sense_clarification": "играть, бегать (о детях)"
                            }
                        ]
                    }
                }
            ]
        }
    ]
}