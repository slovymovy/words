            "pos": "noun",
            "senses": [
                {
                    "sense_id": "16c8f05a-61d6-34c9-97c0-37b4ac8452c4",
                    "sense_definition": "A statement that is obviously true and says nothing new or interesting.",
                    "learner_level": "C1",
                    "frequency": "Middle",
                    "semantic_group_id": "1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "It is a <w>truism</w> that money cannot buy happiness.",
                            "target_lang_translations": {
                                "ru": "То, что за деньги счастья не купишь, — это <w>прописная истина</w>."
                            }
                        },
                        {
                            "text": "The manager repeated the old <w>truism</w> that the customer is always right.",
                            "target_lang_translations": {
                                "ru": "Менеджер повторил старую <w>избитую истину</w> о том, что клиент всегда прав."
                            }
                        }
                    ],
                    "synonyms": [
                        "platitude#English:_truism"
                    ],
                    "common_phrases": [
                        "accepted truism",
                        "become a truism",
                        "old truism"
                    ],
                    "target_lang_definitions": {
                        "ru": "Утверждение, которое является очевидной истиной и не содержит ничего нового или интересного."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "прописная истина",
                                "target_lang_sense_clarification": "очевидный, общеизвестный факт"
                            },
                            {
                                "target_lang_word": "труизм",
                                "target_lang_sense_clarification": "книжн. общеизвестная истина"
                            },
                            {
                                "target_lang_word": "избитая истина",
                                "target_lang_sense_clarification": "банальное утверждение"
                            }
                        ]
                    }
                },
                {
                    "sense_id": "76330d39-baaf-3130-acb9-d09305228d58",
                    "sense_definition": "A phrase or opinion that is overused, boring, and lacks original thought.",
                    "learner_level": "C2",
                    "frequency": "Low",
                    "semantic_group_id": "1",
                    "name_type": "no",
                    "examples": [
                        {
                            "text": "His speech was full of empty <w>truisms</w> that offered no real solutions.",
                            "target_lang_translations": {
                                "ru": "Его речь была полна пустых <w>банальностей</w>, не предлагающих никаких реальных решений."
                            }
                        },
                        {
                            "text": "She avoided using <w>truisms</w> in her writing to keep it fresh and engaging.",
                            "target_lang_translations": {
                                "ru": "Она избегала использования <w>клише</w> в своих текстах, чтобы сохранить их свежесть и увлекательность."
                            }
                        }
                    ],
                    "synonyms": [
                        "platitude#English:_hackneyed saying"
                    ],
                    "common_phrases": [
                        "weary truism",
                        "empty truism"
                    ],
                    "target_lang_definitions": {
                        "ru": "Фраза или мнение, которые слишком часто используются, скучны и лишены оригинальности."
                    },
                    "translations": {
                        "ru": [
                            {
                                "target_lang_word": "банальность",
                                "target_lang_sense_clarification": "высказывание, лишенное оригинальности"
                            },
                            {
                                "target_lang_word": "клише",
                                "target_lang_sense_clarification": "речевой штамп, избитое выражение"
                            },
                            {
                                "target_lang_word": "штамп",
                                "target_lang_sense_clarification": "надоевший образец речи"
                            }
                        ]
                    }
                }
            ]
        }
